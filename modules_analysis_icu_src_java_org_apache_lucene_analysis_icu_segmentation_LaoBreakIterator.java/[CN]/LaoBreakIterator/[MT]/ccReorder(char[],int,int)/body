{
  boolean reordered;
  do {
    int prevCC=0;
    reordered=false;
    for (int i=start; i < start + length; i++) {
      final char c=text[i];
      final int cc=UCharacter.getCombiningClass(c);
      if (cc > 0 && cc < prevCC) {
        text[i]=text[i - 1];
        text[i - 1]=c;
        reordered=true;
      }
 else {
        prevCC=cc;
      }
    }
  }
 while (reordered == true);
}
