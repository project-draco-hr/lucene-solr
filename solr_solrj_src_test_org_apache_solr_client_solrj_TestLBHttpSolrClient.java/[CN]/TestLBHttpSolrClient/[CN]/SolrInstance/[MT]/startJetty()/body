{
  jetty=new JettySolrRunner(getHomeDir(),"bad_solrconfig.xml",null,JettyConfig.builder().setContext("/solr").stopAtShutdown(true).setPort(port).withSSLConfig(sslConfig).build());
  jetty.setDataDir(getDataDir());
  jetty.start();
  int newPort=jetty.getLocalPort();
  if (port != 0 && newPort != port) {
    fail("TESTING FAILURE: could not grab requested port.");
  }
  this.port=newPort;
}
