{
  final int globalBitPos=numBits * pos;
  final int localBitPos=globalBitPos & 31;
  int intPos=HEADER_INT_SIZE + globalBitPos / 32;
  setBufferIntBits(intBuffer,intPos,localBitPos,numBits,value);
  if ((localBitPos + numBits) > 32) {
    setBufferIntBits(intBuffer,intPos + 1,0,(localBitPos + numBits - 32),(value >>> (32 - localBitPos)));
  }
}
