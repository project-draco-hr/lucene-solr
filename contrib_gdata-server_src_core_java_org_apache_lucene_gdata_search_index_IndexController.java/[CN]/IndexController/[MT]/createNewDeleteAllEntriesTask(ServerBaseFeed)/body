{
  checkDestroyed();
  checkInitialized();
  if (LOG.isInfoEnabled())   LOG.info("Deleting all entries for feed dispatch new IndexDocumentBuilder -- " + feed.getId());
  String serviceName=feed.getServiceConfig().getName();
  ServiceIndex bean=this.indexerMap.get(serviceName);
  if (bean == null)   throw new RuntimeException("no indexer for service " + serviceName + " registered");
  Lock lock=bean.getLock();
  lock.lock();
  try {
    IndexDocumentBuilder<IndexDocument> callable=new IndexFeedDeleteTask(feed.getId());
    sumbitTask(callable,bean.getIndexer());
  }
  finally {
    lock.unlock();
  }
}
