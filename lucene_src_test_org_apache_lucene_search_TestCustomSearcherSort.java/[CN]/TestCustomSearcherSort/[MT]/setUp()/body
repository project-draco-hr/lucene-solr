{
  super.setUp();
  INDEX_SIZE=atLeast(2000);
  index=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random,index);
  RandomGen random=new RandomGen(this.random);
  for (int i=0; i < INDEX_SIZE; ++i) {
    Document doc=new Document();
    if ((i % 5) != 0) {
      doc.add(newField("publicationDate_",random.getLuceneDate(),Field.Store.YES,Field.Index.NOT_ANALYZED));
    }
    if ((i % 7) == 0) {
      doc.add(newField("content","test",Field.Store.YES,Field.Index.ANALYZED));
    }
    doc.add(newField("mandant",Integer.toString(i % 3),Field.Store.YES,Field.Index.NOT_ANALYZED));
    writer.addDocument(doc);
  }
  reader=writer.getReader();
  writer.close();
  query=new TermQuery(new Term("content","test"));
}
