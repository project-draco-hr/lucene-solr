{
  boolean success=false;
  IndexWriter w=new IndexWriter(target,new IndexWriterConfig(Version.LUCENE_CURRENT,null).setOpenMode(OpenMode.CREATE));
  try {
    w.addIndexes(new DocumentFilteredIndexReader(reader,preserveFilter,negateFilter));
    success=true;
  }
  finally {
    IOUtils.closeSafely(!success,w);
  }
}
