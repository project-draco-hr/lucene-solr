{
  this.entry=entry;
  this.operation=operation;
  this.entryId=entry.getId();
  this.feedId=entry.getFeedId();
  if (operation != StorageOperation.DELETE) {
    this.config=entry.getServiceConfig();
    this.content=buildContent();
  }
  this.timestamp=new Long(this.entry.getUpdated() != null ? this.entry.getUpdated().getValue() : System.currentTimeMillis());
}
