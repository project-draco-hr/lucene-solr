{
  Preconditions.checkNotNull(location);
  URI result=null;
  try {
    result=new URI(location);
    if (!result.isAbsolute()) {
      result=resolve(this.baseHdfsPath.toUri(),location);
    }
  }
 catch (  URISyntaxException ex) {
    result=resolve(this.baseHdfsPath.toUri(),location);
  }
  return result;
}
