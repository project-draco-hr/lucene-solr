{
  initCore("solr/conf/solrconfig.xml","solr/conf/schema-minimal.xml");
  assertNull("UniqueKey Field isn't null",h.getCore().getSchema().getUniqueKeyField());
  lrf.args.put(CommonParams.VERSION,"2.2");
  assertNull("Simple assertion that adding a document works",h.validateUpdate(adoc("id","4055","subject","Hoss","project","Solr")));
  assertNull(h.validateUpdate(adoc("id","4056","subject","Yonik","project","Solr")));
  assertNull(h.validateUpdate(commit()));
  assertNull(h.validateUpdate(optimize()));
}
