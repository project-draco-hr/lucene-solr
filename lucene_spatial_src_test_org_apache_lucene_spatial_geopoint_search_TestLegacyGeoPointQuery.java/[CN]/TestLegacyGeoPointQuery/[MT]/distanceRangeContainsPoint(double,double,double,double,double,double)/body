{
  if (radiusQueryCanBeWrong(centerLat,centerLon,pointLon,pointLat,minRadiusMeters) || radiusQueryCanBeWrong(centerLat,centerLon,pointLon,pointLat,radiusMeters)) {
    return null;
  }
 else {
    final double d=SloppyMath.haversinMeters(centerLat,centerLon,pointLat,pointLon);
    return d >= minRadiusMeters && d <= radiusMeters;
  }
}
