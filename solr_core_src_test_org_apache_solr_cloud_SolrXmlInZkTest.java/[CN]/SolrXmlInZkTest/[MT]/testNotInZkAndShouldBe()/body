{
  try {
    setUpZkAndDiskXml(false,true);
    fail("Should have gotten an exception here!");
  }
 catch (  InvocationTargetException ite) {
    SolrException se=(SolrException)ite.getTargetException();
    assertEquals("Should have an exception here, file not in ZK.","Could not load solr.xml from zookeeper",se.getMessage());
  }
 finally {
    closeZK();
  }
}
