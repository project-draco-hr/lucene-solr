{
  final int targetInBlock=target & 0xFFFF;
  if (target == disi.doc) {
    return disi.exists;
  }
  for (; disi.index < disi.nextBlockIndex; ) {
    int doc=Short.toUnsignedInt(disi.slice.readShort());
    disi.index++;
    if (doc >= targetInBlock) {
      if (doc != targetInBlock) {
        disi.index--;
        disi.slice.seek(disi.slice.getFilePointer() - Short.BYTES);
        break;
      }
      disi.exists=true;
      return true;
    }
  }
  disi.exists=false;
  return false;
}
