{
  if (size == Integer.MAX_VALUE) {
    throw new IllegalStateException("cannot support more than Integer.MAX_VALUE doc/value entries");
  }
  Long val=(Long)value;
  if (docs.size() == size) {
    docs=docs.grow(size + 1);
    values=values.grow(size + 1);
  }
  docs.set(size,doc);
  values.set(size,val.longValue());
  ++size;
}
