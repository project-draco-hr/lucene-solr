{
  final int oldBytesUsed=bytesUsed;
  if (value == null) {
    throw new IllegalArgumentException("null sortedValue not allowed (field=" + fieldInfo.name + ")");
  }
  while (pending.size() < docID) {
    addOneValue(EMPTY);
  }
  addOneValue(value);
  iwBytesUsed.addAndGet(bytesUsed - oldBytesUsed);
}
