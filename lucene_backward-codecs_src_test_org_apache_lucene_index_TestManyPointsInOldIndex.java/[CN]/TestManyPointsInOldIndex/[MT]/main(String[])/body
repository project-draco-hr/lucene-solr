{
  Directory dir=FSDirectory.open(Paths.get("manypointsindex"));
  IndexWriter w=new IndexWriter(dir,new IndexWriterConfig());
  for (int i=0; i < 1025; i++) {
    Document doc=new Document();
    doc.add(new IntPoint("intpoint",1025 - i));
    w.addDocument(doc);
  }
  w.close();
  dir.close();
}
