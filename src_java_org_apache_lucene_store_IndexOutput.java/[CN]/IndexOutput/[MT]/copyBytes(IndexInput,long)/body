{
  long left=numBytes;
  if (copyBuffer == null)   copyBuffer=new byte[COPY_BUFFER_SIZE];
  while (left > 0) {
    final int toCopy;
    if (left > COPY_BUFFER_SIZE)     toCopy=COPY_BUFFER_SIZE;
 else     toCopy=(int)left;
    input.readBytes(copyBuffer,0,toCopy);
    writeBytes(copyBuffer,0,toCopy);
    left-=toCopy;
  }
}
