{
  final String aMode=ScoreMode.values()[random().nextInt(ScoreMode.values().length)].name();
  final String wrongMode=rarely() ? "" : (rarely() ? " " : rarely() ? aMode.substring(1) : aMode.toUpperCase(Locale.ROOT));
  assertQEx("wrong score mode",req("q","{!parent which=\"parent_s:[* TO *]\" score=" + wrongMode + "}child_s:l","fl","score"),SolrException.ErrorCode.BAD_REQUEST.code);
}
