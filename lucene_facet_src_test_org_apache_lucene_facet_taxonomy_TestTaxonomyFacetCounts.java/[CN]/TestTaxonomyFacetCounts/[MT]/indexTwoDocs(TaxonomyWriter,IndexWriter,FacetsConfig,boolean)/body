{
  for (int i=0; i < 2; i++) {
    Document doc=new Document();
    if (withContent) {
      doc.add(new StringField("f","a",Field.Store.NO));
    }
    if (config != null) {
      doc.add(new FacetField("A",Integer.toString(i)));
      indexWriter.addDocument(config.build(taxoWriter,doc));
    }
 else {
      indexWriter.addDocument(doc);
    }
  }
  indexWriter.commit();
}
