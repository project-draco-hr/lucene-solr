{
  for (  EngineInfo engine : engines) {
    try {
      Object result=engine.getEngine().invokeFunction(name,cmd);
      if (null != result && result instanceof Boolean) {
        if (!((Boolean)result).booleanValue()) {
          return false;
        }
      }
    }
 catch (    ScriptException e) {
      throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"Unable to invoke function " + name + " in script: "+ engine.getScriptFile().getFileName()+ ": "+ e.getMessage(),e);
    }
catch (    NoSuchMethodException e) {
      throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"Unable to invoke function " + name + " in script: "+ engine.getScriptFile().getFileName()+ ": "+ e.getMessage(),e);
    }
  }
  return true;
}
