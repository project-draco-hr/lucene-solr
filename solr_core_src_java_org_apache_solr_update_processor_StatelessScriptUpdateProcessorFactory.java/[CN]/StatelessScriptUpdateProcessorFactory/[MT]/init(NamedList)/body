{
  Collection<String> scripts=FieldMutatingUpdateProcessorFactory.oneOrMany(args,SCRIPT_ARG);
  if (scripts.isEmpty()) {
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"StatelessScriptUpdateProcessorFactory must be " + "initialized with at least one " + SCRIPT_ARG);
  }
  scriptFiles=new ArrayList<ScriptFile>();
  for (  String script : scripts) {
    scriptFiles.add(new ScriptFile(script));
  }
  params=args.remove(PARAMS_ARG);
  Object engine=args.remove(ENGINE_NAME_ARG);
  if (engine != null) {
    if (engine instanceof String) {
      engineName=(String)engine;
    }
 else {
      throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"'" + ENGINE_NAME_ARG + "' init param must be a String (found: "+ engine.getClass()+ ")");
    }
  }
  super.init(args);
}
