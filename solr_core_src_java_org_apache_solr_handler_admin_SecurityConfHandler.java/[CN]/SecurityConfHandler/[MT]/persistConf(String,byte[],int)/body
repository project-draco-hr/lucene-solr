{
  try {
    cores.getZkController().getZkClient().setData(path,buf,version,true);
    return true;
  }
 catch (  KeeperException.BadVersionException bdve) {
    return false;
  }
catch (  Exception e) {
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR," Unable to persist conf",e);
  }
}
