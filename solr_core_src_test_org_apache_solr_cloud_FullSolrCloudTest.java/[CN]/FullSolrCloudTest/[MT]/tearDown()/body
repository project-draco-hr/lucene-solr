{
  if (VERBOSE || printLayoutOnTearDown) {
    super.printLayout();
  }
  ((HttpSolrServer)controlClient).shutdown();
  if (cloudClient != null) {
    cloudClient.close();
  }
  if (zkStateReader != null) {
    zkStateReader.close();
  }
  super.tearDown();
  System.clearProperty("zkHost");
  System.clearProperty("numShards");
}
