    chaosMonkey.stopShardExcept(SHARD2,nodeName);
    SolrServer client=getClient(nodeName);
    index_specific(client,"id",docId + 1,t1,"what happens here?");
    CloudJettyRunner cloudJetty=shardToJetty.get("shard1").get(0);
