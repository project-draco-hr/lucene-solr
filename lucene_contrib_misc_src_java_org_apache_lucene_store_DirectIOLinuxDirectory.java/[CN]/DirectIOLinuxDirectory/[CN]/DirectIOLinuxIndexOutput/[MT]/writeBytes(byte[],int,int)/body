{
  int toWrite=len;
  while (true) {
    final int left=bufferSize - bufferPos;
    if (left <= toWrite) {
      buffer.put(src,offset,left);
      toWrite-=left;
      offset+=left;
      bufferPos=bufferSize;
      dump();
    }
 else {
      buffer.put(src,offset,toWrite);
      bufferPos+=toWrite;
      break;
    }
  }
}
