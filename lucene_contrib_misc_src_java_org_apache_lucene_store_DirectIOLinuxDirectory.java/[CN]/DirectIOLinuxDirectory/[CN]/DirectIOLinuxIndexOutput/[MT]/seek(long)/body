{
  if (pos != getFilePointer()) {
    dump();
    final long alignedPos=pos & ALIGN_NOT_MASK;
    filePos=alignedPos;
    int n=(int)NativePosixUtil.pread(fos.getFD(),filePos,buffer);
    if (n < bufferSize) {
      buffer.limit(n);
    }
    final int delta=(int)(pos - alignedPos);
    buffer.position(delta);
    bufferPos=delta;
  }
}
