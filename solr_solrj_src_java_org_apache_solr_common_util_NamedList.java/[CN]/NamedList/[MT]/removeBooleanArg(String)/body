{
  Boolean bool;
  List<T> values=getAll(name);
  if (0 == values.size()) {
    return null;
  }
  if (values.size() > 1) {
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"Only one '" + name + "' is allowed");
  }
  Object o=get(name);
  if (o instanceof Boolean) {
    bool=(Boolean)o;
  }
 else   if (o instanceof CharSequence) {
    bool=Boolean.parseBoolean(o.toString());
  }
 else {
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"'" + name + "' must have type 'bool' or 'str'; found "+ o.getClass());
  }
  remove(name);
  return bool;
}
