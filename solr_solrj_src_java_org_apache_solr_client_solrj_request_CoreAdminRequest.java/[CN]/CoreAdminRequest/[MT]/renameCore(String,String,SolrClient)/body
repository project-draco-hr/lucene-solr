{
  if (!SolrIdentifierValidator.validateCoreName(newName)) {
    throw new IllegalArgumentException("Invalid collection: " + newName + ". Core names must consist entirely of periods, underscores, and alphanumerics");
  }
  CoreAdminRequest req=new CoreAdminRequest();
  req.setCoreName(coreName);
  req.setOtherCoreName(newName);
  req.setAction(CoreAdminAction.RENAME);
  return req.process(client);
}
