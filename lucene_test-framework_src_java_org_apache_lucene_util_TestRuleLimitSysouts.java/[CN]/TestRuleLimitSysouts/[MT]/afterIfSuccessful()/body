{
  if (isEnforced()) {
    checkCaptureStreams();
    capturedSystemOut.printStream.flush();
    capturedSystemErr.printStream.flush();
    int limit=RandomizedTest.getContext().getTargetClass().getAnnotation(Limit.class).bytes();
    if (bytesWritten.get() >= limit && failureMarker.wasSuccessful()) {
      throw new AssertionError(String.format(Locale.ENGLISH,"The test or suite printed %d bytes to stdout and stderr," + " even though the limit was set to %d bytes. Increase the limit with @%s, ignore it completely" + " with @%s or run with -Dtests.verbose=true",bytesWritten.get(),limit,Limit.class.getSimpleName(),SuppressSysoutChecks.class.getSimpleName()));
    }
  }
}
