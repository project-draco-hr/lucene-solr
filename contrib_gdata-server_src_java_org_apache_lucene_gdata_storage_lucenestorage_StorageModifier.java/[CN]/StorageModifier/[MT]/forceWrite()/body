{
  this.writeLock.lock();
  try {
    if (LOG.isInfoEnabled())     LOG.info("ForceWrite called -- current modifiedCounter: " + this.modifiedCounter + " - persisting changes");
    writePersistentIndex(true);
    requestNewIndexModifier();
    this.modifiedCounter=0;
  }
  finally {
    this.writeLock.unlock();
  }
}
