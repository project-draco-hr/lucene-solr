{
  SolrQueryRequest req=req("myField","field_b","myTrue","true");
  try {
    for (    final String type : new String[]{"and","or","xor"}) {
      assertFuncEquals(req,type + "(field_b,true)",type + "(field_b,$myTrue)",type + "(field('field_b'),true)",type + "(field($myField),$myTrue)",type + "($myField,$myTrue)");
    }
  }
  finally {
    req.close();
  }
}
