{
  SolrQueryRequest req=req("myBoolField","foo_b","myIntField","bar_i","myTrue","true");
  try {
    assertFuncEquals(req,"if(foo_b,bar_i,25)","if($myBoolField,bar_i,25)","if(field('foo_b'),$myIntField,25)","if(field($myBoolField),field('bar_i'),25)");
    assertFuncEquals(req,"if(true,37,field($myIntField))","if($myTrue,37,$myIntField)");
  }
  finally {
    req.close();
  }
}
