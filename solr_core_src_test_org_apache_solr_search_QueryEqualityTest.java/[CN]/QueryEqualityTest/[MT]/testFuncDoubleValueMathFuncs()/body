{
  SolrQueryRequest req=req("myVal","45","myOtherVal","27","myField","foo_i");
  for (  final String func : new String[]{"pow","hypot","atan2"}) {
    try {
      assertFuncEquals(req,func + "(field(foo_i),$myVal)",func + "(foo_i,$myVal)",func + "($myField,45)");
      assertFuncEquals(req,func + "(45,$myOtherVal)",func + "($myVal,27)",func + "($myVal,$myOtherVal)");
    }
  finally {
      req.close();
    }
  }
}
