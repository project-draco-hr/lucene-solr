{
  dataDir=new File(System.getProperty("java.io.tmpdir") + System.getProperty("file.separator") + getClass().getName()+ "-"+ getName()+ "-"+ System.currentTimeMillis());
  dataDir.mkdirs();
  try {
    h=new TestHarness(dataDir.getAbsolutePath(),getSolrConfigFile(),getSchemaFile());
    fail("Exception should have been thrown");
  }
 catch (  Exception e) {
    assertTrue(e.getMessage().contains("unset.sys.property"));
  }
}
