{
  dataDir=new File(System.getProperty("java.io.tmpdir") + System.getProperty("file.separator") + getClass().getName());
  dataDir.mkdirs();
  try {
    solrConfig=new SolrConfig(getSolrConfigFile());
    h=new TestHarness(dataDir.getAbsolutePath(),solrConfig,getSchemaFile());
    fail("Exception should have been thrown");
  }
 catch (  Exception e) {
    assertTrue(e.getMessage().contains("unset.sys.property"));
  }
}
