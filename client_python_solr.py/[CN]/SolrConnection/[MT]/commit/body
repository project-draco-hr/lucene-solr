def commit(self, waitFlush=True, waitSearcher=True, optimize=False):
    xstr = '<commit'
    if optimize:
        xstr = '<optimize'
    if (not waitSearcher):
        if (not waitFlush):
            xstr += ' waitFlush="false" waitSearcher="false"'
        else:
            xstr += 'waitSearcher="false"'
    xstr += '/>'
    return self.doUpdateXML(xstr)
