def doPost(self, url, body, headers):
    try:
        self.conn.request('POST', url, body, headers)
        return self.__errcheck(self.conn.getresponse())
    except (socket.error, httplib.CannotSendRequest):
        self.__reconnect()
        self.conn.request('POST', url, body, headers)
        return self.__errcheck(self.conn.getresponse())
