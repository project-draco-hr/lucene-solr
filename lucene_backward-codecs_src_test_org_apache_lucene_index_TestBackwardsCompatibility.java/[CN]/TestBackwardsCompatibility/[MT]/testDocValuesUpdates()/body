{
  Path oldIndexDir=createTempDir("dvupdates");
  TestUtil.unzip(getDataPath(dvUpdatesIndex),oldIndexDir);
  Directory dir=newFSDirectory(oldIndexDir);
  verifyDocValues(dir);
  IndexWriterConfig conf=new IndexWriterConfig(new MockAnalyzer(random()));
  IndexWriter writer=new IndexWriter(dir,conf);
  updateNumeric(writer,"1","ndv1","ndv1_c",300L);
  updateNumeric(writer,"1","ndv2","ndv2_c",300L);
  updateBinary(writer,"1","bdv1","bdv1_c",300L);
  updateBinary(writer,"1","bdv2","bdv2_c",300L);
  writer.commit();
  verifyDocValues(dir);
  writer.forceMerge(1);
  writer.commit();
  verifyDocValues(dir);
  writer.close();
  dir.close();
}
