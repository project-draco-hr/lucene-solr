{
  DirectoryReader r=DirectoryReader.open(dir);
  for (  AtomicReaderContext context : r.leaves()) {
    SegmentReader air=(SegmentReader)context.reader();
    Codec codec=air.getSegmentInfo().info.getCodec();
    assertTrue("codec used in " + name + " ("+ codec.getName()+ ") is not a default codec (does not begin with Lucene)",codec.getName().startsWith("Lucene"));
  }
  r.close();
}
