{
  Directory dir=new MockRAMDirectory();
  IndexWriter writer=null;
  IndexReader reader=null;
  Term searchTerm=new Term("content","aaa");
  writer=new IndexWriter(dir,new WhitespaceAnalyzer(TEST_VERSION_CURRENT),true,IndexWriter.MaxFieldLength.LIMITED);
  writer.setUseCompoundFile(false);
  addDoc(writer,searchTerm.text());
  writer.close();
  reader=IndexReader.open(dir,false);
  reader.setNorm(0,"content",(float)2.0);
  reader.close();
  reader=IndexReader.open(dir,false);
  reader.setNorm(0,"content",(float)2.0);
  reader.close();
  assertFalse("failed to remove first generation norms file on writing second generation",dir.fileExists("_0_1.s0"));
  dir.close();
}
