{
  File dirFile=new File(System.getProperty("tempDir"),"deletetest");
  Directory dir=FSDirectory.open(dirFile);
  try {
    IndexReader.open(dir);
    fail("expected FileNotFoundException");
  }
 catch (  FileNotFoundException e) {
  }
  dirFile.delete();
  try {
    IndexReader.open(dir);
    fail("expected FileNotFoundException");
  }
 catch (  FileNotFoundException e) {
  }
}
