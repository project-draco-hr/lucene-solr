{
  TermDocs tdocs=null;
  try {
    tdocs=reader.termDocs(term);
    assertNotNull(msg + ", null TermDocs",tdocs);
    int count=0;
    while (tdocs.next()) {
      count++;
    }
    assertEquals(msg + ", count mismatch",expected,count);
  }
  finally {
    if (tdocs != null)     tdocs.close();
  }
}
