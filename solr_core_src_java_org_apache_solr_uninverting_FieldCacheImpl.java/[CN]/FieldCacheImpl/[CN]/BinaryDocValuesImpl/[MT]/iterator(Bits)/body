{
  return new BinaryDocValues(){
    final BytesRef term=new BytesRef();
    int docID=-1;
    @Override public int docID(){
      return docID;
    }
    @Override public int nextDoc(){
      while (true) {
        docID++;
        if (docID >= docToOffset.size()) {
          docID=NO_MORE_DOCS;
          return docID;
        }
        if (docsWithField.get(docID)) {
          return docID;
        }
      }
    }
    @Override public int advance(    int target){
      if (target < docToOffset.size()) {
        docID=target;
        if (docsWithField.get(docID)) {
          return docID;
        }
 else {
          return nextDoc();
        }
      }
 else {
        docID=NO_MORE_DOCS;
        return docID;
      }
    }
    @Override public boolean advanceExact(    int target) throws IOException {
      docID=target;
      return docsWithField.get(docID);
    }
    @Override public long cost(){
      return 0;
    }
    @Override public BytesRef binaryValue(){
      final long pointer=docToOffset.get(docID);
      if (pointer == 0) {
        term.length=0;
      }
 else {
        bytes.fill(term,pointer);
      }
      return term;
    }
  }
;
}
