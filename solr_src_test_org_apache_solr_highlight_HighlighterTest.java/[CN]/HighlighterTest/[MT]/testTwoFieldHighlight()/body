{
  HashMap<String,String> args=new HashMap<String,String>();
  args.put("hl","true");
  args.put("hl.fl","t_text tv_text");
  TestHarness.LocalRequestFactory sumLRF=h.getRequestFactory("standard",0,200,args);
  assertU(adoc("t_text","a long day's night","id","1","tv_text","a long night's day"));
  assertU(commit());
  assertU(optimize());
  assertQ("Basic summarization",sumLRF.makeRequest("t_text:long"),"//lst[@name='highlighting']/lst[@name='1']","//lst[@name='1']/arr[@name='t_text']/str","//lst[@name='1']/arr[@name='tv_text']/str");
}
