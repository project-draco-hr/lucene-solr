{
  byte[] buf=new byte[4096];
  FileOutputStream fos=new FileOutputStream(out);
  int len=0;
  long total=0L;
  long time=System.currentTimeMillis();
  long delta=time;
  while ((len=is.read(buf)) > 0) {
    fos.write(buf,0,len);
    total+=len;
    time=System.currentTimeMillis();
    if (time - delta > 5000) {
      System.err.println(" - copied " + total / 1024 + " kB...");
      delta=time;
    }
  }
  fos.flush();
  fos.close();
  if (closeInput) {
    is.close();
  }
}
