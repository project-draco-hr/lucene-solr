{
  if (latitude > Math.PI * 0.5 || latitude < -Math.PI * 0.5)   throw new IllegalArgumentException("Latitude out of range");
  if (longitude < -Math.PI || longitude > Math.PI)   throw new IllegalArgumentException("Longitude out of range");
  final GeoPoint p=new GeoPoint(latitude,longitude);
  isInternalEdges.set(points.size(),isInternalEdge);
  points.add(p);
}
