{
  OutputStream os=new BufferedOutputStream(new FileOutputStream(dst));
  for (int i=0; i < image.length() - 1; i++) {
    char c=image.charAt(i);
    int n=(int)c & 0xff;
    os.write(n);
    os.write((int)(c >> 8));
  }
  char c=image.charAt(image.length() - 1);
  if (c != '\u00ff')   os.write((int)(c >> 8));
  os.close();
}
