{
  SolrParams params=req.getParams();
  String cname=params.get(CoreAdminParams.CORE);
  boolean doPersist=false;
  NamedList<Object> status=new SimpleOrderedMap<Object>();
  try {
    if (cname == null) {
      for (      String name : coreContainer.getCoreNames()) {
        status.add(name,getCoreStatus(coreContainer,name));
      }
    }
 else {
      status.add(cname,getCoreStatus(coreContainer,cname));
    }
    rsp.add("status",status);
    doPersist=false;
    return doPersist;
  }
 catch (  Exception ex) {
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"Error handling 'status' action ",ex);
  }
}
