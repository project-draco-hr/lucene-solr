{
  directory=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random,directory,newIndexWriterConfig(TEST_VERSION_CURRENT,simplePayloadAnalyzer).setMaxBufferedDocs(_TestUtil.nextInt(random,100,1000)).setMergePolicy(newLogMergePolicy()));
  for (int i=0; i < 2000; i++) {
    Document doc=new Document();
    doc.add(newField("field",English.intToEnglish(i),TextField.TYPE_STORED));
    writer.addDocument(doc);
  }
  reader=writer.getReader();
  searcher=newSearcher(reader);
  writer.close();
}
