{
  try {
    if (debug) {
      log.debug("Closing tlog" + this);
    }
synchronized (this) {
      fos.flush();
      fos.close();
    }
    if (deleteOnClose) {
      try {
        Files.deleteIfExists(tlogFile.toPath());
      }
 catch (      IOException e) {
      }
    }
  }
 catch (  IOException e) {
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,e);
  }
}
