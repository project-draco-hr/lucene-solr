{
  InputStream stream=SmartChineseAnalyzer.class.getResourceAsStream(DEFAULT_STOPWORD_FILE);
  try {
    InputStreamReader reader=new InputStreamReader(stream,"UTF-8");
    return CharArraySet.unmodifiableSet(WordlistLoader.getWordSet(reader,STOPWORD_FILE_COMMENT,Version.LUCENE_CURRENT));
  }
  finally {
    stream.close();
  }
}
