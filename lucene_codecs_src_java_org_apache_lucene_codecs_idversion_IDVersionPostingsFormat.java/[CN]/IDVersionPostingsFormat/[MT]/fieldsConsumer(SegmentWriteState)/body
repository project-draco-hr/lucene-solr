{
  PostingsWriterBase postingsWriter=new IDVersionPostingsWriter(state);
  boolean success=false;
  try {
    FieldsConsumer ret=new VersionBlockTreeTermsWriter(state,postingsWriter,minTermsInBlock,maxTermsInBlock);
    success=true;
    return ret;
  }
  finally {
    if (!success) {
      IOUtils.closeWhileHandlingException(postingsWriter);
    }
  }
}
