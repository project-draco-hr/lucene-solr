{
  long currTime=System.currentTimeMillis();
  if (currTime - connLastUsed > CONN_TIME_OUT) {
synchronized (this) {
      Connection tmpConn=factory.call();
      closeConnection();
      connLastUsed=System.currentTimeMillis();
      return conn=tmpConn;
    }
  }
 else {
    connLastUsed=currTime;
    return conn;
  }
}
