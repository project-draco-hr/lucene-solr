{
  if (scratch == null) {
    return null;
  }
  boolean success=false;
  try {
    if (reader.read(scratch) == false) {
      IOUtils.close(reader);
      scratch=null;
    }
    success=true;
    if (scratch == null) {
      return null;
    }
    return scratch.get();
  }
  finally {
    if (!success) {
      IOUtils.closeWhileHandlingException(reader);
    }
  }
}
