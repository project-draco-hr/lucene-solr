{
  if (wrapper.getOperation() != StorageOperation.INSERT)   throw new StorageException("Illegal method call -- insertEntry does not accept other storage operations than insert");
  this.lock.lock();
  try {
    this.documentMap.put(wrapper.getEntryId(),wrapper.getLuceneDocument());
    storageModified();
    if (this.modifiedCounter != 0)     try {
      this.controller.writeRecoverEntry(wrapper);
      this.buffer.addEntry(wrapper);
    }
 catch (    Exception e) {
      this.documentMap.remove(wrapper.getEntryId());
    }
  }
  finally {
    this.lock.unlock();
  }
}
