{
  Directory dir=newDirectory();
  final Document doc=new Document();
  doc.add(newStringField("content","aaa",Field.Store.NO));
  LogDocMergePolicy ldmp=new LogDocMergePolicy();
  ldmp.setMinMergeDocs(1);
  ldmp.setMergeFactor(4);
  IndexWriter writer=new IndexWriter(dir,newIndexWriterConfig(new MockAnalyzer(random())).setMaxBufferedDocs(2).setMergePolicy(ldmp).setMergeScheduler(new ConcurrentMergeScheduler()));
  for (int iter=0; iter < 10; iter++) {
    for (int i=0; i < 19; i++)     writer.addDocument(doc);
    writer.commit();
    writer.waitForMerges();
    writer.commit();
    SegmentInfos sis=new SegmentInfos();
    sis.read(dir);
    final int segCount=sis.size();
    writer.forceMerge(7);
    writer.commit();
    writer.waitForMerges();
    sis=new SegmentInfos();
    sis.read(dir);
    final int optSegCount=sis.size();
    if (segCount < 7)     assertEquals(segCount,optSegCount);
 else     assertEquals("seg: " + segCount,7,optSegCount);
  }
  writer.close();
  dir.close();
}
