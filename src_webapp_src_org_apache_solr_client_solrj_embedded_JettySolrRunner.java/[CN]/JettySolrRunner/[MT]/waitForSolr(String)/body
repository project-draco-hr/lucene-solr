{
  int port=getLocalPort();
  URL url=new URL("http://localhost:" + port + context+ "/select?q={!raw+f=junit_test_query}ping");
  Exception ex=null;
  for (int i=0; i < 100; i++) {
    try {
      InputStream stream=url.openStream();
      stream.close();
    }
 catch (    IOException e) {
      e.printStackTrace();
      ex=e;
      Thread.sleep(200);
      continue;
    }
    return;
  }
  throw new RuntimeException("Jetty/Solr unresponsive",ex);
}
