{
  StandardQueryParser qp=getParser(null);
  qp.setAllowLeadingWildcard(true);
  assertEquals(WildcardQuery.class,qp.parse("t*erm*","field").getClass());
  assertEquals(WildcardQuery.class,qp.parse("?term*","field").getClass());
  assertEquals(WildcardQuery.class,qp.parse("*term*","field").getClass());
}
