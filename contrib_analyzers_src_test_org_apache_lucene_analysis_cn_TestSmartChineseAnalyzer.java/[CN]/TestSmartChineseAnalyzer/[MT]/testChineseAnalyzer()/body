{
  Token nt=new Token();
  Analyzer ca=new SmartChineseAnalyzer(true);
  Reader sentence=new StringReader("??????????????????????????????");
  String[] result={"???","??????","???","??????","???","??????"};
  TokenStream ts=ca.tokenStream("sentence",sentence);
  int i=0;
  nt=ts.next(nt);
  while (nt != null) {
    assertEquals(result[i],nt.term());
    i++;
    nt=ts.next(nt);
  }
  ts.close();
}
