{
  this.bkd=bkd;
  state=new BKDReader.IntersectState(bkd.in.clone(),bkd.numDims,bkd.packedBytesLength,bkd.maxPointsInLeafNode,null);
  this.docMap=docMap;
  this.docIDBase=docIDBase;
  long minFP=Long.MAX_VALUE;
  for (  long fp : bkd.leafBlockFPs) {
    minFP=Math.min(minFP,fp);
  }
  state.in.seek(minFP);
}
