{
  String input="aabfooaabfooabfoob ab caaaaaaaaab";
  TokenStream ts=new PatternReplaceFilter(new WhitespaceTokenizer(new StringReader(input)),Pattern.compile("a*b"),"-",true);
  assertEquals("-foo-foo-foo-",ts.next().termText());
  assertEquals("-",ts.next().termText());
  assertEquals("c-",ts.next().termText());
  assertNull(ts.next());
}
