{
  final Map<String,Object> params=new HashMap<String,Object>();
  params.put("std","-1f");
  final NormalizerException expectedException=new NormalizerException("Standard Normalizer standard deviation must be positive " + "| avg = 0.0,std = -1.0");
  try {
    implTestStandard(params,0.0f,-1f);
    fail("testInvalidSTD2 failed to throw exception: " + expectedException);
  }
 catch (  NormalizerException actualException) {
    assertEquals(expectedException.toString(),actualException.toString());
  }
}
