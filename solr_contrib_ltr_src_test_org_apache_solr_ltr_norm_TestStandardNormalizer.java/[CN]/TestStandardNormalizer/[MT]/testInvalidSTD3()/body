{
  final Map<String,Object> params=new HashMap<String,Object>();
  params.put("avg","1f");
  params.put("std","0f");
  final NormalizerException expectedException=new NormalizerException("Standard Normalizer standard deviation must be positive " + "| avg = 1.0,std = 0.0");
  try {
    implTestStandard(params,1f,0f);
    fail("testInvalidSTD3 failed to throw exception: " + expectedException);
  }
 catch (  NormalizerException actualException) {
    assertEquals(expectedException.toString(),actualException.toString());
  }
}
