{
  if (doFail) {
    StackTraceElement[] trace=new Exception().getStackTrace();
    boolean sawAppend=false;
    boolean sawFlush=false;
    for (int i=0; i < trace.length; i++) {
      if ("org.apache.lucene.index.FreqProxTermsWriter".equals(trace[i].getClassName()) && "appendPostings".equals(trace[i].getMethodName()))       sawAppend=true;
      if ("doFlush".equals(trace[i].getMethodName()))       sawFlush=true;
    }
    if (sawAppend && sawFlush && count++ >= 30) {
      doFail=false;
      throw new IOException("now failing during flush");
    }
  }
}
