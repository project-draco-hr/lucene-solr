{
  while (!this.isClosed) {
    log.debug("do " + this.getClass().getSimpleName() + " work loop");
    try {
      doWork();
    }
 catch (    Exception e) {
      SolrException.log(log,this.getClass().getSimpleName() + " had an error in its thread work loop.",e);
    }
    if (!this.isClosed) {
      try {
        Thread.sleep(workLoopDelay);
      }
 catch (      InterruptedException e) {
        Thread.currentThread().interrupt();
      }
    }
  }
}
