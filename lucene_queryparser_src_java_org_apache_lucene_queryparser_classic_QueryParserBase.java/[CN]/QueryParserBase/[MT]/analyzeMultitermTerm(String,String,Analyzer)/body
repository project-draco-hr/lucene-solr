{
  if (analyzerIn == null)   analyzerIn=getAnalyzer();
  try (TokenStream source=analyzerIn.tokenStream(field,part)){
    source.reset();
    TermToBytesRefAttribute termAtt=source.getAttribute(TermToBytesRefAttribute.class);
    BytesRef bytes=termAtt.getBytesRef();
    if (!source.incrementToken())     throw new IllegalArgumentException("analyzer returned no terms for multiTerm term: " + part);
    termAtt.fillBytesRef();
    if (source.incrementToken())     throw new IllegalArgumentException("analyzer returned too many terms for multiTerm term: " + part);
    source.end();
    return BytesRef.deepCopyOf(bytes);
  }
 catch (  IOException e) {
    throw new RuntimeException("Error analyzing multiTerm term: " + part,e);
  }
}
