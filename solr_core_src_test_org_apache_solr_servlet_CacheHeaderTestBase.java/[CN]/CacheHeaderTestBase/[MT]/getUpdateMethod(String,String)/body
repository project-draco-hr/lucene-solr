{
  HttpSolrServer httpserver=(HttpSolrServer)getSolrServer();
  HttpRequestBase m=null;
  ArrayList<BasicNameValuePair> qparams=new ArrayList<BasicNameValuePair>();
  for (int i=0; i < params.length / 2; i++) {
    qparams.add(new BasicNameValuePair(params[i * 2],params[i * 2 + 1]));
  }
  java.net.URI uri=URIUtils.createURI("http",new URI(httpserver.getBaseURL()).getHost(),new URI(httpserver.getBaseURL()).getPort(),"/solr/update/csv",URLEncodedUtils.format(qparams,"UTF-8"),null);
  if ("GET".equals(method)) {
    m=new HttpGet(uri);
  }
 else   if ("POST".equals(method)) {
    m=new HttpPost(uri);
  }
 else   if ("HEAD".equals(method)) {
    m=new HttpHead(uri);
  }
  return m;
}
