{
  final Set<String> requiredParamsSet=Sets.newHashSet(requiredParams);
  final Set<String> solrParamsSet=Sets.newHashSet();
  for (Iterator<String> iter=solrParams.getParameterNamesIterator(); iter.hasNext(); ) {
    solrParamsSet.add(iter.next());
  }
  assertTrue("required params missing: required=" + requiredParamsSet + ", params="+ solrParamsSet,solrParamsSet.containsAll(requiredParamsSet));
  assertTrue("extra parameters included in request: required=" + requiredParamsSet + ", params="+ solrParams,Sets.difference(solrParamsSet,requiredParamsSet).isEmpty());
}
