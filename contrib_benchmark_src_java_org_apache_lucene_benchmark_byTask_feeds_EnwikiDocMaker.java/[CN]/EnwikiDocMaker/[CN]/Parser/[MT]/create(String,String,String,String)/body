{
  String[] t=new String[LENGTH];
  t[TITLE]=title.replace('\t',' ');
  t[DATE]=time.replace('\t',' ');
  t[BODY]=body.replaceAll("[\t\n]"," ");
  t[ID]=id;
synchronized (this) {
    while (tuple != null) {
      try {
        wait();
      }
 catch (      InterruptedException ie) {
      }
    }
    tuple=t;
    notify();
  }
}
