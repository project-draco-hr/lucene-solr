{
  if (r.nextBoolean()) {
    params.set("distrib","true");
  }
 else {
    StringBuilder sb=new StringBuilder();
    for (int i=0; i < shardCount; i++) {
      if (i > 0)       sb.append(',');
      sb.append("shard" + (i + 3));
    }
    params.set("shards",sb.toString());
    params.set("distrib","true");
  }
}
