{
  try {
    HttpSolrServer s=new HttpSolrServer(baseUrl + "/" + collection);
    s.setConnectionTimeout(DEFAULT_CONNECTION_TIMEOUT);
    s.setDefaultMaxConnectionsPerHost(100);
    s.setMaxTotalConnections(100);
    return s;
  }
 catch (  Exception ex) {
    throw new RuntimeException(ex);
  }
}
