{
  List<SolrServer> collectionClients=new ArrayList<SolrServer>();
  otherCollectionClients.put(collection,collectionClients);
  for (  SolrServer client : clients) {
    CommonsHttpSolrServer server=new CommonsHttpSolrServer(((CommonsHttpSolrServer)client).getBaseURL());
    Create createCmd=new Create();
    createCmd.setCoreName(collection);
    createCmd.setDataDir(dataDir.getAbsolutePath() + File.separator + collection);
    server.request(createCmd);
    collectionClients.add(createNewSolrServer(collection,((CommonsHttpSolrServer)client).getBaseURL()));
  }
}
