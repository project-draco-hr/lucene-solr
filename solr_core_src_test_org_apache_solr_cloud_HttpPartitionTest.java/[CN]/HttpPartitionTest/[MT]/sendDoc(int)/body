{
  try {
    doSendDoc(docId);
  }
 catch (  SolrServerException e) {
    if (e.getRootCause() instanceof NoHttpResponseException) {
      Thread.sleep(100);
      try {
        doSendDoc(docId);
      }
 catch (      SolrServerException e2) {
        if (e2.getRootCause() instanceof NoHttpResponseException) {
          Thread.sleep(3000);
          doSendDoc(docId);
        }
      }
    }
  }
}
