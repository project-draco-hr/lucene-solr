{
  if (pathString.length() == 0) {
    ncomponents=0;
    chars=new char[0];
    ends=new short[0];
    return;
  }
  int nparts=1;
  for (int i=pathString.indexOf(delimiter); i >= 0; i=pathString.indexOf(delimiter,i + 1)) {
    nparts++;
  }
  ends=new short[nparts];
  chars=new char[pathString.length() - nparts + 1];
  ncomponents=0;
  add(pathString,delimiter);
}
