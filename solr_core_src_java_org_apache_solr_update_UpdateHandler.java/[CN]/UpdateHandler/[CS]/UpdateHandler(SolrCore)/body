{
  this.core=core;
  schema=core.getSchema();
  idField=schema.getUniqueKeyField();
  idFieldType=idField != null ? idField.getType() : null;
  parseEventListeners();
  initLog();
  if (!core.isReloaded() && !core.getDirectoryFactory().isPersistent()) {
    try {
      clearLog();
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
}
