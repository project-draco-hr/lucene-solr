{
  PostingsReaderBase postings=new Lucene40PostingsReader(state.dir,state.segmentInfo,state.context,state.segmentSuffix);
  boolean success=false;
  try {
    FieldsProducer ret=new BlockTreeTermsReader(state.dir,state.fieldInfos,state.segmentInfo.name,postings,state.context,state.segmentSuffix,state.termsIndexDivisor);
    success=true;
    return ret;
  }
  finally {
    if (!success) {
      postings.close();
    }
  }
}
