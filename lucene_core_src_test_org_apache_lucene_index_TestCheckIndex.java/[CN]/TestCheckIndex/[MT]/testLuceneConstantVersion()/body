{
  final String version=System.getProperty("lucene.version");
  assertNotNull("null version",version);
  assertTrue("Invalid version: " + version,version.equals(Constants.LUCENE_MAIN_VERSION + "-SNAPSHOT") || version.equals(Constants.LUCENE_MAIN_VERSION));
  assertTrue(Constants.LUCENE_VERSION + " should start with: " + version,Constants.LUCENE_VERSION.startsWith(version));
}
