{
  ensureOpen();
  if (bufferedDeletesStream.any()) {
    return true;
  }
  if (docWriter.anyDeletions()) {
    return true;
  }
  if (readerPool.anyPendingDeletes()) {
    return true;
  }
  for (  final SegmentInfoPerCommit info : segmentInfos) {
    if (info.hasDeletions()) {
      return true;
    }
  }
  return false;
}
