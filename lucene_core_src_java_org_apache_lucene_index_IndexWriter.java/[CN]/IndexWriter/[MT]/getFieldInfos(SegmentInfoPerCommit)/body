{
  Directory cfsDir=null;
  try {
    if (info.info.getUseCompoundFile()) {
      cfsDir=new CompoundFileDirectory(directory,IndexFileNames.segmentFileName(info.info.name,"",IndexFileNames.COMPOUND_FILE_EXTENSION),IOContext.READONCE,false);
    }
 else {
      cfsDir=directory;
    }
    return info.info.getCodec().fieldInfosFormat().getFieldInfosReader().read(cfsDir,info.info.name,IOContext.READONCE);
  }
  finally {
    if (info.info.getUseCompoundFile() && cfsDir != null) {
      cfsDir.close();
    }
  }
}
