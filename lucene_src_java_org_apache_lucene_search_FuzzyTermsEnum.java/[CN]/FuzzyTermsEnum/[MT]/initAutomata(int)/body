{
  if (runAutomata == null && maxDistance <= LevenshteinAutomata.MAXIMUM_SUPPORTED_DISTANCE) {
    LevenshteinAutomata builder=new LevenshteinAutomata(new String(termText,realPrefixLength,termText.length - realPrefixLength));
    runAutomata=new ArrayList<ByteRunAutomaton>(maxDistance);
    for (int i=0; i <= maxDistance; i++) {
      Automaton a=builder.toAutomaton(i);
      if (realPrefixLength > 0) {
        Automaton prefix=BasicAutomata.makeString(new String(termText,0,realPrefixLength));
        a=BasicOperations.concatenate(prefix,a);
      }
      runAutomata.add(new ByteRunAutomaton(a));
    }
  }
}
