{
  Directory dir=new RAMDirectory();
  IndexWriter writer=new IndexWriter(dir,new IndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer()).setMaxBufferedDocs(101).setMergePolicy(new LogDocMergePolicy()));
  for (int i=1; i <= 100; i++) {
    for (int j=0; j < i; j++) {
      addDoc(writer);
      checkInvariants(writer);
    }
    writer.close();
    writer=new IndexWriter(dir,new IndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer()).setOpenMode(OpenMode.APPEND).setMaxBufferedDocs(101).setMergePolicy(new LogDocMergePolicy()));
  }
  writer.close();
  LogDocMergePolicy ldmp=new LogDocMergePolicy();
  ldmp.setMergeFactor(10);
  writer=new IndexWriter(dir,new IndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer()).setOpenMode(OpenMode.APPEND).setMaxBufferedDocs(10).setMergePolicy(ldmp));
  for (int i=0; i < 100; i++) {
    addDoc(writer);
  }
  checkInvariants(writer);
  for (int i=100; i < 1000; i++) {
    addDoc(writer);
  }
  writer.commit();
  ((ConcurrentMergeScheduler)writer.getConfig().getMergeScheduler()).sync();
  writer.commit();
  checkInvariants(writer);
  writer.close();
}
