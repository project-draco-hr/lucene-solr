{
  Directory dir=new RAMDirectory();
  IndexWriter writer=new IndexWriter(dir,new IndexWriterConfig(TEST_VERSION_CURRENT,new WhitespaceAnalyzer(TEST_VERSION_CURRENT)).setMaxBufferedDocs(10).setMergePolicy(new LogDocMergePolicy()));
  for (int i=0; i < 100; i++) {
    addDoc(writer);
    checkInvariants(writer);
  }
  writer.close();
}
