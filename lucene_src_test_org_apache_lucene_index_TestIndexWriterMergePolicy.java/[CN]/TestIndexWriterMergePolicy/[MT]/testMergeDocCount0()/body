{
  Directory dir=newDirectory(random);
  LogDocMergePolicy ldmp=new LogDocMergePolicy();
  ldmp.setMergeFactor(100);
  IndexWriter writer=new IndexWriter(dir,newIndexWriterConfig(random,TEST_VERSION_CURRENT,new MockAnalyzer()).setMaxBufferedDocs(10).setMergePolicy(ldmp));
  for (int i=0; i < 250; i++) {
    addDoc(writer);
    checkInvariants(writer);
  }
  writer.close();
  IndexReader reader=IndexReader.open(dir,false);
  reader.deleteDocuments(new Term("content","aaa"));
  reader.close();
  ldmp=new LogDocMergePolicy();
  ldmp.setMergeFactor(5);
  writer=new IndexWriter(dir,newIndexWriterConfig(random,TEST_VERSION_CURRENT,new MockAnalyzer()).setOpenMode(OpenMode.APPEND).setMaxBufferedDocs(10).setMergePolicy(ldmp).setMergeScheduler(new ConcurrentMergeScheduler()));
  for (int i=0; i < 10; i++) {
    addDoc(writer);
  }
  writer.commit();
  ((ConcurrentMergeScheduler)writer.getConfig().getMergeScheduler()).sync();
  writer.commit();
  checkInvariants(writer);
  assertEquals(10,writer.maxDoc());
  writer.close();
  dir.close();
}
