{
  final int termIndexInterval=this.nextInt(13,27);
  final SegmentWriteState state=new SegmentWriteState(null,dir,SEGMENT,fieldInfos,10000,termIndexInterval,CodecProvider.getDefault());
  final FieldsConsumer consumer=state.codec.fieldsConsumer(state);
  Arrays.sort(fields);
  for (  final FieldData field : fields) {
    field.write(consumer);
  }
  consumer.close();
}
