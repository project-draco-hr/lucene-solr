{
  for (  CoreDescriptor cd : coreDescriptors) {
    Path propertiesFile=this.rootDirectory.resolve(cd.getInstanceDir()).resolve(PROPERTIES_FILENAME);
    if (Files.exists(propertiesFile))     throw new SolrException(SolrException.ErrorCode.BAD_REQUEST,"Could not create a new core in " + cd.getInstanceDir() + "as another core is already defined there");
    writePropertiesFile(cd,propertiesFile);
  }
}
