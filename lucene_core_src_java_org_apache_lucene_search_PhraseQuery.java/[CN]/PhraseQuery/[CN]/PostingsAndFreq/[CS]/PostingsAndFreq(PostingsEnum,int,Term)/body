{
  this.postings=postings;
  this.position=position;
  nTerms=terms == null ? 0 : terms.length;
  if (nTerms > 0) {
    if (terms.length == 1) {
      this.terms=terms;
    }
 else {
      Term[] terms2=new Term[terms.length];
      System.arraycopy(terms,0,terms2,0,terms.length);
      Arrays.sort(terms2);
      this.terms=terms2;
    }
  }
 else {
    this.terms=null;
  }
}
