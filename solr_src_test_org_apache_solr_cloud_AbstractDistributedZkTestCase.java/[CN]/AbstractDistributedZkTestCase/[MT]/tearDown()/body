{
  if (DEBUG) {
    printLayout();
  }
  zkServer.shutdown();
  System.clearProperty("zkHost");
  System.clearProperty("collection");
  System.clearProperty("solr.test.sys.prop1");
  System.clearProperty("solr.test.sys.prop2");
  super.tearDown();
  resetExceptionIgnores();
  SolrConfig.severeErrors.clear();
}
