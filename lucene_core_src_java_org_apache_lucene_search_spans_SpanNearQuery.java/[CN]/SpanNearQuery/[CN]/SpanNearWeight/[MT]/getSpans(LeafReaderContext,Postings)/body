{
  Terms terms=context.reader().terms(field);
  if (terms == null) {
    return null;
  }
  ArrayList<Spans> subSpans=new ArrayList<>(clauses.size());
  for (  SpanWeight w : subWeights) {
    Spans subSpan=w.getSpans(context,requiredPostings);
    if (subSpan != null) {
      subSpans.add(subSpan);
    }
 else {
      return null;
    }
  }
  return (!inOrder) ? new NearSpansUnordered(this,slop,subSpans,getSimScorer(context)) : new NearSpansOrdered(this,slop,subSpans,getSimScorer(context));
}
