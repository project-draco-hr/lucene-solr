{
  if (clauses.size() == 0)   return new SpanOrQuery(getClauses()).getSpans(context,acceptDocs,termContexts);
  if (clauses.size() == 1)   return clauses.get(0).getSpans(context,acceptDocs,termContexts);
  return inOrder ? (Spans)new NearSpansOrdered(this,context,acceptDocs,termContexts,collectPayloads) : (Spans)new NearSpansUnordered(this,context,acceptDocs,termContexts);
}
