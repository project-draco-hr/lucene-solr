{
  try {
    SolrRequestInfo info=threadLocal.get();
    if (info != null && info.closeHooks != null) {
      for (      Closeable hook : info.closeHooks) {
        try {
          hook.close();
        }
 catch (        Throwable throwable) {
          SolrException.log(SolrCore.log,"Exception during close hook",throwable);
        }
      }
    }
  }
  finally {
    threadLocal.remove();
  }
}
