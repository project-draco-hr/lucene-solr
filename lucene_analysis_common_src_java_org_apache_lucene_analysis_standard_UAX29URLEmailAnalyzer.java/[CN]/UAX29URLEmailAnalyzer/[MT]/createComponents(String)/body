{
  final UAX29URLEmailTokenizer src=new UAX29URLEmailTokenizer(matchVersion);
  src.setMaxTokenLength(maxTokenLength);
  TokenStream tok=new StandardFilter(matchVersion,src);
  tok=new LowerCaseFilter(matchVersion,tok);
  tok=new StopFilter(matchVersion,tok,stopwords);
  return new TokenStreamComponents(src,tok){
    @Override protected void setReader(    final Reader reader) throws IOException {
      src.setMaxTokenLength(UAX29URLEmailAnalyzer.this.maxTokenLength);
      super.setReader(reader);
    }
  }
;
}
