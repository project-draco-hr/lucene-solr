{
  String key;
  Object field=doc.get(idFieldName);
  if (field instanceof NumericField) {
    key=((Field)field).stringValue();
    key=ft.readableToIndexed(key);
  }
 else   if (field instanceof Field) {
    key=((Field)field).stringValue();
  }
 else {
    key=field.toString();
  }
  return key;
}
