{
  String key;
  Object field=doc.get(idFieldName);
  final Number n;
  if (field instanceof Field) {
    n=((Field)field).numericValue();
  }
 else {
    n=null;
  }
  if (n != null) {
    key=n.toString();
    key=ft.readableToIndexed(key);
  }
 else   if (field instanceof Field) {
    key=((Field)field).stringValue();
  }
 else {
    key=field.toString();
  }
  return key;
}
