{
  try {
    String debug=(String)initArgs.get(ENABLE_DEBUG);
    if (debug != null && "no".equals(debug))     debugEnabled=false;
    NamedList defaults=(NamedList)initArgs.get("defaults");
    if (defaults != null) {
      String configLoc=(String)defaults.get("config");
      if (configLoc != null && configLoc.length() != 0) {
        processConfiguration(defaults);
        importer=new DataImporter(SolrWriter.getResourceAsString(core.getResourceLoader().openResource(configLoc)),core,dataSources);
      }
    }
  }
 catch (  Throwable e) {
    SolrConfig.severeErrors.add(e);
    LOG.error(DataImporter.MSG.LOAD_EXP,e);
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,DataImporter.MSG.INVALID_CONFIG,e);
  }
}
