{
  Directory dir1=newDirectory();
  IndexWriter w1=new IndexWriter(dir1,newIndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer(random)).setMergePolicy(NoMergePolicy.NO_COMPOUND_FILES));
  Document d1=new Document();
  d1.add(newField("f1","v1",TextField.TYPE_STORED));
  d1.add(newField("f2","v1",TextField.TYPE_STORED));
  w1.addDocument(d1);
  w1.commit();
  Document d2=new Document();
  d2.add(newField("f1","v2",TextField.TYPE_STORED));
  d2.add(newField("f2","v2",TextField.TYPE_STORED));
  w1.addDocument(d2);
  w1.close();
  return dir1;
}
