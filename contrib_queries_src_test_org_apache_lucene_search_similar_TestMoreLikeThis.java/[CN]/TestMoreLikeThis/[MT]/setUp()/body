{
  directory=new RAMDirectory();
  IndexWriter writer=new IndexWriter(directory,new StandardAnalyzer(org.apache.lucene.util.Version.LUCENE_CURRENT),true,MaxFieldLength.UNLIMITED);
  addDoc(writer,"lucene");
  addDoc(writer,"lucene release");
  writer.close();
  reader=IndexReader.open(directory,true);
  searcher=new IndexSearcher(reader);
}
