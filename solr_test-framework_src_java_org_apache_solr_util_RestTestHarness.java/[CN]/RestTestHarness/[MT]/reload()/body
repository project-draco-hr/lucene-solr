{
  String coreName=(String)evaluateXPath(adminQuery("/admin/cores?action=STATUS"),"//lst[@name='status']/lst[1]/str[@name='name']",XPathConstants.STRING);
  String xml=checkAdminResponseStatus("/admin/cores?action=RELOAD&core=" + coreName,"0");
  if (null != xml) {
    throw new RuntimeException("RELOAD failed:\n" + xml);
  }
}
