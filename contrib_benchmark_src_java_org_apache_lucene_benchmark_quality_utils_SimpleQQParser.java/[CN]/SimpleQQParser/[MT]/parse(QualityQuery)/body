{
  QueryParser qp=queryParser.get();
  if (qp == null) {
    qp=new QueryParser(Version.LUCENE_CURRENT,indexField,new StandardAnalyzer(Version.LUCENE_CURRENT));
    queryParser.set(qp);
  }
  BooleanQuery bq=new BooleanQuery();
  for (int i=0; i < qqNames.length; i++)   bq.add(qp.parse(QueryParser.escape(qq.getValue(qqNames[i]))),BooleanClause.Occur.SHOULD);
  return bq;
}
