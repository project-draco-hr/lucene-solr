{
  OpenBitSet bits=new OpenBitSet(1);
  int bit=random().nextInt(100) + 10;
  bits.ensureCapacity(bit);
  bits.fastSet(bit - 1);
  assertTrue(bits.fastGet(bit - 1));
  bits.ensureCapacity(bit + 1);
  bits.fastSet(bit);
  assertTrue(bits.fastGet(bit));
  bits.ensureCapacity(3);
  bits.fastSet(3);
  assertTrue(bits.fastGet(3));
  bits.fastSet(bit - 1);
  assertTrue(bits.fastGet(bit - 1));
  int numWords=random().nextInt(10) + 2;
  bits.ensureCapacityWords(numWords);
  bit=_TestUtil.nextInt(random(),127,(numWords << 6) - 1);
  bits.fastSet(bit);
  assertTrue(bits.fastGet(bit));
  bits.fastClear(bit);
  assertFalse(bits.fastGet(bit));
  bits.fastFlip(bit);
  assertTrue(bits.fastGet(bit));
  bits.ensureCapacityWords(2);
  bits.fastSet(3);
  assertTrue(bits.fastGet(3));
  bits.fastSet(bit - 1);
  assertTrue(bits.fastGet(bit - 1));
}
