{
  IndexWriter iw=getRunData().getIndexWriter();
  if (iw != null) {
    InfoStream infoStream=iw.getConfig().getInfoStream();
    if (infoStream != null) {
      infoStream.close();
    }
    if (doWait == false) {
      iw.abortMerges();
    }
    iw.shutdown();
    getRunData().setIndexWriter(null);
  }
  return 1;
}
