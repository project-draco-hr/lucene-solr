{
  int ord=children[TaxonomyReader.ROOT_ORDINAL];
  List<SimpleFacetResult> results=new ArrayList<SimpleFacetResult>();
  while (ord != TaxonomyReader.INVALID_ORDINAL) {
    SimpleFacetResult result=getTopChildren(taxoReader.getPath(ord),ord,topN);
    if (result != null) {
      results.add(result);
    }
    ord=siblings[ord];
  }
  Collections.sort(results,new Comparator<SimpleFacetResult>(){
    @Override public int compare(    SimpleFacetResult a,    SimpleFacetResult b){
      if (a.value.intValue() > b.value.intValue()) {
        return -1;
      }
 else       if (b.value.intValue() > a.value.intValue()) {
        return 1;
      }
 else {
        return a.path.components[0].compareTo(b.path.components[0]);
      }
    }
  }
);
  return results;
}
