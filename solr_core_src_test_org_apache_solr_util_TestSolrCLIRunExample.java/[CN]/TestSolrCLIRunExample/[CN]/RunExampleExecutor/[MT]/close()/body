{
  if (solrCloudCluster != null) {
    try {
      solrCloudCluster.shutdown();
    }
 catch (    Exception e) {
      log.warn("Failed to shutdown MiniSolrCloudCluster due to: " + e);
    }
  }
  if (standaloneSolr != null) {
    try {
      standaloneSolr.stop();
    }
 catch (    Exception exc) {
      log.warn("Failed to shutdown standalone Solr due to: " + exc);
    }
    standaloneSolr=null;
  }
}
