{
  for (int a=0; a < args.length; a++) {
    if (arg.equals(args[a])) {
      if (a + 1 >= args.length)       throw new IllegalArgumentException("Missing required value for the " + arg + " option!");
      return args[a + 1];
    }
  }
  throw new IllegalArgumentException("Missing required arg " + arg + " needed to execute command: "+ commandsExecuted.get(commandsExecuted.size() - 1));
}
