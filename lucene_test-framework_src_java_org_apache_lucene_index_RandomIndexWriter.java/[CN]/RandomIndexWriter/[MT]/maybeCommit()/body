{
  if (docCount++ == flushAt) {
    if (LuceneTestCase.VERBOSE) {
      System.out.println("RIW.add/updateDocument: now doing a commit at docCount=" + docCount);
    }
    w.commit();
    flushAt+=TestUtil.nextInt(r,(int)(flushAtFactor * 10),(int)(flushAtFactor * 1000));
    if (flushAtFactor < 2e6) {
      flushAtFactor*=1.05;
    }
  }
}
