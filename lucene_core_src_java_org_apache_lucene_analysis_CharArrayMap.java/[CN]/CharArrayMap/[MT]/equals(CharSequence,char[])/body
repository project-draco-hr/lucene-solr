{
  int len=text1.length();
  if (len != text2.length)   return false;
  if (ignoreCase) {
    for (int i=0; i < len; ) {
      final int codePointAt=Character.codePointAt(text1,i);
      if (Character.toLowerCase(codePointAt) != Character.codePointAt(text2,i,text2.length))       return false;
      i+=Character.charCount(codePointAt);
    }
  }
 else {
    for (int i=0; i < len; i++) {
      if (text1.charAt(i) != text2[i])       return false;
    }
  }
  return true;
}
