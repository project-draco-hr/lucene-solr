{
  Query query=this.container.query();
  query.constrain(DB4oEntry.class);
  query.descend("entry").descend("id").constrain(id).equal();
  ObjectSet<DB4oEntry> resultSet=query.execute();
  if (resultSet.size() > 1)   throw new StorageException("Entry query returned not a unique result");
  if (resultSet.hasNext())   return resultSet.next();
  throw new StorageException("no entry with entryID: " + id + " stored -- query returned no result");
}
