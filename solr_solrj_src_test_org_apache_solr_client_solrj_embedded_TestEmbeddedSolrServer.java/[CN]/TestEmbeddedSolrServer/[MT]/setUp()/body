  File origSolrXml=new File(home,getOrigSolrXml());
  File solrXml=new File(home,getSolrXml());
  FileUtils.copyFile(origSolrXml,solrXml);
  cores=new CoreContainer(home.getAbsolutePath(),solrXml);
}
