{
  final String line;
  final int myID;
synchronized (this) {
    line=reader.readLine();
    if (line == null) {
      if (!forever) {
        throw new NoMoreDataException();
      }
      openFile();
      return getNextDocData(docData);
    }
    if (docDataLineReader == null) {
      docDataLineReader=createDocDataLineReader(line);
      if (skipHeaderLine) {
        return getNextDocData(docData);
      }
    }
    myID=readCount++;
  }
  docData.clear();
  docData.setID(myID);
  docDataLineReader.parseLine(docData,line);
  return docData;
}
