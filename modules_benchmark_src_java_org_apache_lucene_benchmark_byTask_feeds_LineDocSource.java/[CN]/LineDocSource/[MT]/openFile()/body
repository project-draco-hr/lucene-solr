{
  try {
    if (reader != null) {
      reader.close();
    }
    InputStream is=StreamUtils.inputStream(file);
    reader=new BufferedReader(new InputStreamReader(is,encoding),StreamUtils.BUFFER_SIZE);
    if (skipHeaderLine) {
      reader.readLine();
    }
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
