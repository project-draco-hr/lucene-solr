{
  doSearching(new SpanNearQuery(new SpanQuery[]{new SpanTermQuery(new Term(FIELD_NAME,"beginning")),new SpanTermQuery(new Term(FIELD_NAME,"kennedy"))},3,false));
  TestHighlightRunner helper=new TestHighlightRunner(){
