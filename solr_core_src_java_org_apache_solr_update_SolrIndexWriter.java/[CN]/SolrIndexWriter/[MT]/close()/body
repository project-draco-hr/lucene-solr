{
  log.debug("Closing Writer " + name);
  Directory directory=getDirectory();
  final InfoStream infoStream=isClosed ? null : getConfig().getInfoStream();
  try {
    super.close();
    if (infoStream != null) {
      infoStream.close();
    }
  }
  finally {
    isClosed=true;
    directoryFactory.release(directory);
    numCloses.incrementAndGet();
  }
}
