{
  super(getDirectory(path,dirFactory,config),config.toIndexWriterConfig(schema).setOpenMode(create ? IndexWriterConfig.OpenMode.CREATE : IndexWriterConfig.OpenMode.APPEND).setIndexDeletionPolicy(delPolicy).setCodecProvider(codecProvider));
  log.debug("Opened Writer " + name);
  this.name=name;
  setInfoStream(config);
  numOpens.incrementAndGet();
}
