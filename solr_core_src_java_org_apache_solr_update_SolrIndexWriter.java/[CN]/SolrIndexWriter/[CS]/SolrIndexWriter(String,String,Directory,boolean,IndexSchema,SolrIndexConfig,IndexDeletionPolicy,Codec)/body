{
  super(directory,config.toIndexWriterConfig(schema).setOpenMode(create ? IndexWriterConfig.OpenMode.CREATE : IndexWriterConfig.OpenMode.APPEND).setIndexDeletionPolicy(delPolicy).setCodec(codec).setInfoStream(toInfoStream(config)));
  log.debug("Opened Writer " + name);
  this.name=name;
  numOpens.incrementAndGet();
}
