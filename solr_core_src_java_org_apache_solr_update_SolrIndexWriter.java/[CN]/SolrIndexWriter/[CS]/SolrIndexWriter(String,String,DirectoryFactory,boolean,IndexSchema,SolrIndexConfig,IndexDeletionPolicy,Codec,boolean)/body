{
  super(directoryFactory.get(path,config.lockType,forceNewDirectory),config.toIndexWriterConfig(schema).setOpenMode(create ? IndexWriterConfig.OpenMode.CREATE : IndexWriterConfig.OpenMode.APPEND).setIndexDeletionPolicy(delPolicy).setCodec(codec));
  log.debug("Opened Writer " + name);
  this.name=name;
  this.directoryFactory=directoryFactory;
  setInfoStream(config);
  numOpens.incrementAndGet();
}
