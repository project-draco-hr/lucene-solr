{
  super.setUp();
  directory=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random,directory,newIndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer(MockTokenizer.SIMPLE,true)).setMergePolicy(newInOrderLogMergePolicy()));
  for (int i=0; i < 1000; i++) {
    Document doc=new Document();
    Field.TermVector termVector;
    int mod3=i % 3;
    int mod2=i % 2;
    if (mod2 == 0 && mod3 == 0) {
      termVector=Field.TermVector.WITH_POSITIONS_OFFSETS;
    }
 else     if (mod2 == 0) {
      termVector=Field.TermVector.WITH_POSITIONS;
    }
 else     if (mod3 == 0) {
      termVector=Field.TermVector.WITH_OFFSETS;
    }
 else {
      termVector=Field.TermVector.YES;
    }
    doc.add(new Field("field",English.intToEnglish(i),Field.Store.YES,Field.Index.ANALYZED,termVector));
    doc.add(new Field("noTV",English.intToEnglish(i),Field.Store.YES,Field.Index.ANALYZED));
    writer.addDocument(doc);
  }
  reader=writer.getReader();
  writer.close();
  searcher=newSearcher(reader);
}
