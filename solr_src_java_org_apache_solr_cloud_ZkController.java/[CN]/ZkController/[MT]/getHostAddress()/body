{
  if (localHost == null) {
    localHost="http://" + InetAddress.getLocalHost().getHostName();
  }
 else {
    Matcher m=URL_PREFIX.matcher(localHost);
    if (m.matches()) {
      String prefix=m.group(1);
      localHost=prefix + localHost;
    }
 else {
      localHost="http://" + localHost;
    }
  }
  return localHost;
}
