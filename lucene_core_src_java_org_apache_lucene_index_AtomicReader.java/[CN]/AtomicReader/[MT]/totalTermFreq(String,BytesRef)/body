{
  final InvertedFields fields=fields();
  if (fields == null) {
    return 0;
  }
  final Terms terms=fields.terms(field);
  if (terms == null) {
    return 0;
  }
  final TermsEnum termsEnum=terms.iterator(null);
  if (termsEnum.seekExact(term,true)) {
    return termsEnum.totalTermFreq();
  }
 else {
    return 0;
  }
}
