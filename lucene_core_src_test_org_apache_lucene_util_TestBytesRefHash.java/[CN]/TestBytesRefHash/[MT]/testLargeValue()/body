{
  int[] sizes=new int[]{random.nextInt(5),ByteBlockPool.BYTE_BLOCK_SIZE - 33 + random.nextInt(31),ByteBlockPool.BYTE_BLOCK_SIZE - 1 + random.nextInt(37)};
  BytesRef ref=new BytesRef();
  for (int i=0; i < sizes.length; i++) {
    ref.bytes=new byte[sizes[i]];
    ref.offset=0;
    ref.length=sizes[i];
    try {
      assertEquals(i,hash.add(ref));
    }
 catch (    MaxBytesLengthExceededException e) {
      if (i < sizes.length - 1)       fail("unexpected exception at size: " + sizes[i]);
      throw e;
    }
  }
}
