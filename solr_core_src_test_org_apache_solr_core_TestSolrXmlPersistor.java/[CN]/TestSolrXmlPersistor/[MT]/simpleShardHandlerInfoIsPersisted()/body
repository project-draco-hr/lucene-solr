{
  final String solrxml="<solr>" + "<cores adminHandler=\"whatever\">" + "<core name=\"testcore\" instanceDir=\"instance/dir/\"/>"+ "<shardHandlerFactory name=\"shardHandlerFactory\" class=\"HttpShardHandlerFactory\"/>"+ "</cores>"+ "</solr>";
  SolrXMLCoresLocator locator=new SolrXMLCoresLocator(solrxml,null);
  assertTrue(locator.getTemplate().contains("{{CORES_PLACEHOLDER}}"));
  assertTrue(locator.getTemplate().contains("<shardHandlerFactory "));
}
