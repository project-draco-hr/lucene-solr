{
  if (clauses.size() == 0)   return new SpanOrQuery(getClauses()).getSpans(context,acceptDocs);
  if (clauses.size() == 1)   return clauses.get(0).getSpans(context,acceptDocs);
  return inOrder ? (Spans)new NearSpansOrdered(this,context,acceptDocs,collectPayloads) : (Spans)new NearSpansUnordered(this,context,acceptDocs);
}
