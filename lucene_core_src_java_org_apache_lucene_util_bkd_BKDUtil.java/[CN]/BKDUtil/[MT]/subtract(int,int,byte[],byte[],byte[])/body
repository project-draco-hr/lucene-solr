{
  int start=dim * bytesPerDim;
  int end=start + bytesPerDim;
  int borrow=0;
  for (int i=end - 1; i >= start; i--) {
    int diff=(a[i] & 0xff) - (b[i] & 0xff) - borrow;
    if (diff < 0) {
      diff+=256;
      borrow=1;
    }
 else {
      borrow=0;
    }
    result[i - start]=(byte)diff;
  }
  if (borrow != 0) {
    throw new IllegalArgumentException("a < b?");
  }
}
