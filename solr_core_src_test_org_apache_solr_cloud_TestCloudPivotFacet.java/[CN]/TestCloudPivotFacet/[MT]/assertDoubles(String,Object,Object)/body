{
  if (null == expected || null == actual) {
    assertEquals(msg,expected,actual);
  }
 else {
    assertTrue(msg + " ... expected not a double: " + expected+ "=>"+ expected.getClass(),expected instanceof Number);
    assertTrue(msg + " ... actual not a double: " + actual+ "=>"+ actual.getClass(),actual instanceof Number);
    double expect=((Number)expected).doubleValue();
    double epsilon=expect * 0.1E-7D;
    assertEquals(msg,expect,((Number)actual).doubleValue(),epsilon);
  }
}
