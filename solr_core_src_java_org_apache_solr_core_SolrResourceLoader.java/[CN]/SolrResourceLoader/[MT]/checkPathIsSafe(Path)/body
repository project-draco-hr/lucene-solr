{
  if (Boolean.getBoolean("solr.allow.unsafe.resourceloading"))   return pathToCheck;
  pathToCheck=pathToCheck.normalize();
  if (pathToCheck.startsWith(instanceDir))   return pathToCheck;
  throw new IOException("File " + pathToCheck + " is outside resource loader dir "+ instanceDir+ "; set -Dsolr.allow.unsafe.resourceloading=true to allow unsafe loading");
}
