{
  Document d=new Document();
  Fieldable f;
  int scoreAndID=i + 1;
  f=newField(ID_FIELD,id2String(scoreAndID),Field.Store.YES,Field.Index.NOT_ANALYZED);
  f.setOmitNorms(true);
  d.add(f);
  f=newField(TEXT_FIELD,"text of doc" + scoreAndID + textLine(i),Field.Store.NO,Field.Index.ANALYZED);
  f.setOmitNorms(true);
  d.add(f);
  f=newField(INT_FIELD,"" + scoreAndID,Field.Store.NO,Field.Index.NOT_ANALYZED);
  f.setOmitNorms(true);
  d.add(f);
  f=newField(FLOAT_FIELD,scoreAndID + ".000",Field.Store.NO,Field.Index.NOT_ANALYZED);
  f.setOmitNorms(true);
  d.add(f);
  iw.addDocument(d);
  log("added: " + d);
}
