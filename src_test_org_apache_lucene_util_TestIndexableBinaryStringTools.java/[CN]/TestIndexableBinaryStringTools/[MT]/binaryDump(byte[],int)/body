{
  StringBuilder buf=new StringBuilder();
  for (int byteNum=0; byteNum < numBytes; ++byteNum) {
    String hex=Integer.toHexString((int)binary[byteNum] & 0xFF);
    if (hex.length() == 1) {
      buf.append('0');
    }
    buf.append(hex.toUpperCase());
    if (byteNum < numBytes - 1) {
      buf.append(' ');
    }
  }
  return buf.toString();
}
