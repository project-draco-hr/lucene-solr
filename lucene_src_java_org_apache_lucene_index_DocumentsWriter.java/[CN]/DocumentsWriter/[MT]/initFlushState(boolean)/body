{
  initSegmentName(onlyDocStore);
  final SegmentCodecs info=SegmentCodecs.build(docFieldProcessor.fieldInfos,writer.codecs);
  flushState=new SegmentWriteState(infoStream,directory,segment,docFieldProcessor.fieldInfos,docStoreSegment,numDocsInRAM,numDocsInStore,writer.getConfig().getTermIndexInterval(),info);
}
