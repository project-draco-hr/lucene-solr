{
  Iterator<ThreadState> threadsIterator=perThreadPool.getActivePerThreadsIterator();
  boolean deleted=false;
  while (threadsIterator.hasNext()) {
    deleted=true;
    ThreadState state=threadsIterator.next();
    if (state != exclude) {
      state.lock();
      try {
        state.perThread.deleteTerms(term);
      }
  finally {
        state.unlock();
      }
    }
  }
  return deleted;
}
