{
  if (infoStream != null) {
    message("docWriter: abort");
  }
  boolean success=false;
  try {
    threadPool.abort();
    success=true;
  }
  finally {
    notifyAll();
    if (infoStream != null) {
      message("docWriter: done abort; abortedFiles=" + abortedFiles + " success="+ success);
    }
  }
}
