{
  threadPool.abort(new DocumentsWriterThreadPool.AbortTask(){
    @Override void abort() throws IOException {
      try {
        abortedFiles=openFiles();
      }
 catch (      Throwable t) {
        abortedFiles=null;
      }
      deletesInRAM.clear();
      openFiles.clear();
      deletesInRAM.clear();
    }
  }
);
}
