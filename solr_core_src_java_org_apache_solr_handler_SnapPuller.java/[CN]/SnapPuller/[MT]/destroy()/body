{
  try {
    if (executorService != null)     executorService.shutdown();
  }
 catch (  Throwable e) {
    SolrException.log(LOG,e);
  }
  try {
    abortPull();
  }
 catch (  Throwable e) {
    SolrException.log(LOG,e);
  }
  try {
    if (executorService != null)     ExecutorUtil.shutdownNowAndAwaitTermination(executorService);
  }
 catch (  Throwable e) {
    SolrException.log(LOG,e);
  }
}
