{
  InputStream input=null;
  NamedList<?> result=null;
  try {
    HttpResponse response=myHttpClient.execute(method);
    int status=response.getStatusLine().getStatusCode();
    if (status != HttpStatus.SC_OK) {
      throw new SolrException(SolrException.ErrorCode.SERVICE_UNAVAILABLE,"Request failed for the url " + method);
    }
    input=response.getEntity().getContent();
    result=(NamedList<?>)new JavaBinCodec().unmarshal(input);
  }
  finally {
    try {
      if (input != null) {
        input.close();
      }
    }
 catch (    Exception e) {
    }
  }
  return result;
}
