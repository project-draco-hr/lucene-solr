{
  if (atomUri == null)   throw new IllegalArgumentException("atomUri must not be null");
  if (atomUri.startsWith("www."))   atomUri="http://" + atomUri;
  URI aUri=new URI(atomUri);
  if (xmlBase == null || xmlBase.length() == 0) {
    if (!aUri.isAbsolute()) {
      throw new URISyntaxException(atomUri," -- no xml:base specified atom uri must be an absolute url");
    }
  }
  return atomUri;
}
