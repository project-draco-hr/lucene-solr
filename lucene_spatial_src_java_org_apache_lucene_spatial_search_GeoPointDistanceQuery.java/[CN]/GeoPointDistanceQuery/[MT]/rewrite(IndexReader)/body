{
  if (maxLon < minLon) {
    BooleanQuery.Builder bqb=new BooleanQuery.Builder();
    double unwrappedLon=centerLon;
    if (unwrappedLon > maxLon) {
      unwrappedLon+=-360.0D;
    }
    GeoPointDistanceQueryImpl left=new GeoPointDistanceQueryImpl(field,termEncoding,this,unwrappedLon,new GeoRect(GeoUtils.MIN_LON_INCL,maxLon,minLat,maxLat));
    bqb.add(new BooleanClause(left,BooleanClause.Occur.SHOULD));
    if (unwrappedLon < maxLon) {
      unwrappedLon+=360.0D;
    }
    GeoPointDistanceQueryImpl right=new GeoPointDistanceQueryImpl(field,termEncoding,this,unwrappedLon,new GeoRect(minLon,GeoUtils.MAX_LON_INCL,minLat,maxLat));
    bqb.add(new BooleanClause(right,BooleanClause.Occur.SHOULD));
    return bqb.build();
  }
  return new GeoPointDistanceQueryImpl(field,termEncoding,this,centerLon,new GeoRect(this.minLon,this.maxLon,this.minLat,this.maxLat));
}
