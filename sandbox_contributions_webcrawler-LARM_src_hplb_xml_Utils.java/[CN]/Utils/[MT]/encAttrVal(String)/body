{
  if (val.indexOf('"') > -1) {
    StringBuffer sbuf=new StringBuffer();
    int offset=0, i;
    while ((i=val.indexOf('"',offset)) > -1) {
      sbuf.append(val.substring(offset,i));
      sbuf.append("&quote;");
      offset=i + 1;
    }
    sbuf.append(val.substring(offset));
    return sbuf.toString();
  }
  return val;
}
