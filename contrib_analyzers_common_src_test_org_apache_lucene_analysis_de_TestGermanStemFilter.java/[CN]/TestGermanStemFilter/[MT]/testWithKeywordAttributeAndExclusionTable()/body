{
  CharArraySet set=new CharArraySet(Version.LUCENE_CURRENT,1,true);
  set.add("fischen");
  CharArraySet set1=new CharArraySet(Version.LUCENE_CURRENT,1,true);
  set1.add("trinken");
  set1.add("fischen");
  GermanStemFilter filter=new GermanStemFilter(new KeywordMarkerTokenFilter(new LowerCaseTokenizer(new StringReader("Fischen Trinken")),set));
  filter.setExclusionSet(set1);
  assertTokenStreamContents(filter,new String[]{"fischen","trinken"});
}
