{
  if (c0 == null || c1 == null) {
    throw new RuntimeException("Can not swap a null core.");
  }
synchronized (cores) {
    String n0=c0.getName();
    String n1=c1.getName();
    cores.put(n0,c1);
    cores.put(n1,c0);
    c0.setName(n1);
    if (c0.getCore() != null)     c0.getCore().setName(n1);
    c1.setName(n0);
    if (c1.getCore() != null)     c1.getCore().setName(n0);
  }
  log.info("swaped: " + c0.getName() + " with "+ c1.getName());
}
