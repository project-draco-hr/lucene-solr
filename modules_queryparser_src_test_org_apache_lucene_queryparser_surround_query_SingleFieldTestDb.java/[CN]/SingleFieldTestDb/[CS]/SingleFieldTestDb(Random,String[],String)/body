{
  try {
    db=new MockDirectoryWrapper(random,new RAMDirectory());
    docs=documents;
    fieldName=fName;
    IndexWriter writer=new IndexWriter(db,new IndexWriterConfig(Version.LUCENE_CURRENT,new MockAnalyzer(random)));
    for (int j=0; j < docs.length; j++) {
      Document d=new Document();
      d.add(new TextField(fieldName,docs[j]));
      writer.addDocument(d);
    }
    writer.close();
  }
 catch (  java.io.IOException ioe) {
    throw new Error(ioe);
  }
}
