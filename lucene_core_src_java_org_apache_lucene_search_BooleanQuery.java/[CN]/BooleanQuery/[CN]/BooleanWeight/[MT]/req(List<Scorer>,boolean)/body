{
  Scorer req;
  if (required.size() == 1) {
    req=required.get(0);
    if (!disableCoord && maxCoord > 1) {
      req=new BoostedScorer(req,coord(required.size(),maxCoord));
    }
  }
 else {
    req=new ConjunctionScorer(this,required.toArray(new Scorer[required.size()]),disableCoord ? 1.0F : coord(required.size(),maxCoord));
  }
  return req;
}
