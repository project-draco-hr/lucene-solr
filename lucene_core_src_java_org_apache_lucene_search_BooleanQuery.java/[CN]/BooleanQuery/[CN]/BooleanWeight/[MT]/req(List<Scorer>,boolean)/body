{
  if (required.size() == 1) {
    Scorer req=required.get(0);
    if (!disableCoord && maxCoord > 1) {
      return new BoostedScorer(req,coord(1,maxCoord));
    }
 else {
      return req;
    }
  }
 else {
    return new ConjunctionScorer(this,required.toArray(new Scorer[required.size()]),disableCoord ? 1.0F : coord(required.size(),maxCoord));
  }
}
