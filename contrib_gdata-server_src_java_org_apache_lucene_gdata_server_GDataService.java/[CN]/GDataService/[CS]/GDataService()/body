{
  try {
    this.storage=StorageFactory.getStorage();
  }
 catch (  StorageException e) {
    LOGGER.fatal("Can't get Storage Instance -- can't serve any requests",e);
    ServiceException ex=new ServiceException("Can't get Storage instance" + e.getMessage(),e);
    ex.setStackTrace(e.getStackTrace());
    throw ex;
  }
}
