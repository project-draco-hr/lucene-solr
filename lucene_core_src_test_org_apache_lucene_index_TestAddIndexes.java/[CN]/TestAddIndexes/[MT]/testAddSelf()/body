{
  Directory dir=newDirectory();
  Directory aux=newDirectory();
  IndexWriter writer=null;
  writer=newWriter(dir,newIndexWriterConfig(new MockAnalyzer(random())));
  addDocs(writer,100);
  assertEquals(100,writer.maxDoc());
  writer.close();
  writer=newWriter(aux,newIndexWriterConfig(new MockAnalyzer(random())).setOpenMode(OpenMode.CREATE).setMaxBufferedDocs(1000).setMergePolicy(newLogMergePolicy(false)));
  addDocs(writer,40);
  writer.close();
  writer=newWriter(aux,newIndexWriterConfig(new MockAnalyzer(random())).setOpenMode(OpenMode.CREATE).setMaxBufferedDocs(1000).setMergePolicy(newLogMergePolicy(false)));
  addDocs(writer,100);
  writer.close();
  writer=newWriter(dir,newIndexWriterConfig(new MockAnalyzer(random())).setOpenMode(OpenMode.APPEND));
  try {
    writer.addIndexes(aux,dir);
    assertTrue(false);
  }
 catch (  IllegalArgumentException e) {
    assertEquals(100,writer.maxDoc());
  }
  writer.close();
  verifyNumDocs(dir,100);
  dir.close();
  aux.close();
}
