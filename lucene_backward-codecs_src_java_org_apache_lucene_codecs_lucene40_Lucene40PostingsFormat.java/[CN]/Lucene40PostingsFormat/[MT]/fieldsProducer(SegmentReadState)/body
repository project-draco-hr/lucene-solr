{
  PostingsReaderBase postings=new Lucene40PostingsReader(state.directory,state.fieldInfos,state.segmentInfo,state.context,state.segmentSuffix);
  boolean success=false;
  try {
    FieldsProducer ret=new BlockTreeTermsReader(state.directory,state.fieldInfos,state.segmentInfo,postings,state.context,state.segmentSuffix);
    success=true;
    return ret;
  }
  finally {
    if (!success) {
      postings.close();
    }
  }
}
