{
  this.solrClient=new Builder(originalShardResponse.getShardAddress()).withHttpClient(getHttpClient()).build();
  this.req=req;
  this.originalShardResponse=originalShardResponse;
  req.setMethod(SolrRequest.METHOD.POST);
  ModifiableSolrParams params=(ModifiableSolrParams)req.getParams();
  params.add("distrib","false");
}
