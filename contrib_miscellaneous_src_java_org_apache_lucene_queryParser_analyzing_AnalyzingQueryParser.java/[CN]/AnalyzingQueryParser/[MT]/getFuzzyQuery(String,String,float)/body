{
  TokenStream source=getAnalyzer().tokenStream(field,new StringReader(termStr));
  final Token reusableToken=new Token();
  Token nextToken;
  boolean multipleTokens=false;
  try {
    nextToken=source.next(reusableToken);
    multipleTokens=source.next(reusableToken) != null;
  }
 catch (  IOException e) {
    nextToken=null;
  }
  try {
    source.close();
  }
 catch (  IOException e) {
  }
  if (multipleTokens) {
    throw new ParseException("Cannot build FuzzyQuery with analyzer " + getAnalyzer().getClass() + " - tokens were added");
  }
  return (nextToken == null) ? null : super.getFuzzyQuery(field,nextToken.term(),minSimilarity);
}
