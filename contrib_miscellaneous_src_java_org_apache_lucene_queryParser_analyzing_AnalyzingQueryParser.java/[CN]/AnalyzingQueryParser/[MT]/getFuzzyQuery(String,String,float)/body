{
  TokenStream source=getAnalyzer().tokenStream(field,new StringReader(termStr));
  org.apache.lucene.analysis.Token t;
  boolean multipleTokens=false;
  try {
    t=source.next();
    multipleTokens=source.next() != null;
  }
 catch (  IOException e) {
    t=null;
  }
  try {
    source.close();
  }
 catch (  IOException e) {
  }
  if (multipleTokens) {
    throw new ParseException("Cannot build FuzzyQuery with analyzer " + getAnalyzer().getClass() + " - tokens were added");
  }
  return (t == null) ? null : super.getFuzzyQuery(field,t.termText(),minSimilarity);
}
