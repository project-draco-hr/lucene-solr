{
  if (a == null)   a=new SimpleAnalyzer(Version.LUCENE_CURRENT);
  QueryParser qp=extensions == null ? new ExtendableQueryParser(Version.LUCENE_CURRENT,"field",a) : new ExtendableQueryParser(Version.LUCENE_CURRENT,"field",a,extensions);
  qp.setDefaultOperator(QueryParser.OR_OPERATOR);
  return qp;
}
