{
synchronized (SolrCore.class) {
    core=this;
    try {
      if (index_path == null) {
        index_path=SolrConfig.config.get("indexDir","index");
      }
      log.info("Opening new SolrCore at " + index_path);
      if (schema == null) {
        schema=new IndexSchema("schema.xml");
      }
      this.schema=schema;
      this.index_path=index_path;
      parseListeners();
      initIndex();
      try {
        getSearcher(false,false,null);
        updateHandler=createUpdateHandler(SolrConfig.config.get("updateHandler/@class",DirectUpdateHandler.class.getName()));
      }
 catch (      IOException e) {
        throw new RuntimeException(e);
      }
    }
  finally {
    }
  }
}
