{
  if (name != null && name.length() == 0)   name=null;
synchronized (cores) {
    SolrCore core=cores.get(name);
    if (core == null && name == null)     try {
      core=new SolrCore(null,new SolrConfig(),null);
    }
 catch (    Exception xany) {
      log.throwing("SolrCore","getSolrCore",xany);
      return null;
    }
    return core;
  }
}
