{
synchronized (SolrCore.class) {
    if (instance == null) {
      try {
        instance=new SolrCore("default",null,new SolrConfig(),null);
      }
 catch (      Exception xany) {
        throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"error creating core",xany);
      }
    }
  }
  return instance;
}
