{
  String xpath="indexReaderFactory";
  Node node=(Node)solrConfig.evaluate(xpath,XPathConstants.NODE);
  IndexReaderFactory indexReaderFactory;
  if (node != null) {
    Map<String,IndexReaderFactory> registry=new HashMap<String,IndexReaderFactory>();
    NamedListPluginLoader<IndexReaderFactory> indexReaderFactoryLoader=new NamedListPluginLoader<IndexReaderFactory>("[solrconfig.xml] " + xpath,registry);
    indexReaderFactory=indexReaderFactoryLoader.loadSingle(solrConfig.getResourceLoader(),node);
  }
 else {
    indexReaderFactory=new StandardIndexReaderFactory();
  }
  this.indexReaderFactory=indexReaderFactory;
}
