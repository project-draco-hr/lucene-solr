{
synchronized (searcherLock) {
    try {
      if (_searcher != null) {
        _searcher.decref();
        _searcher=null;
      }
      _searcher=newSearcherHolder;
      SolrIndexSearcher newSearcher=newSearcherHolder.get();
      newSearcher.register();
      log.info("[" + name + "] Registered new searcher "+ newSearcher);
    }
 catch (    Throwable e) {
      log(e);
    }
 finally {
      onDeckSearchers--;
      searcherLock.notifyAll();
    }
  }
}
