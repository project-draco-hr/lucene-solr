{
  log.info(logid + " CLOSING SolrCore!");
  try {
    closeSearcher();
  }
 catch (  Exception e) {
    SolrException.log(log,e);
  }
  try {
    searcherExecutor.shutdown();
  }
 catch (  Exception e) {
    SolrException.log(log,e);
  }
  try {
    updateHandler.close();
  }
 catch (  Exception e) {
    SolrException.log(log,e);
  }
  if (closeHooks != null) {
    for (    CloseHook hook : closeHooks) {
      hook.close(this);
    }
  }
}
