{
  super.setUp();
  String str;
  File dataDir=new File(System.getProperty("dataDir","./bin"));
  BufferedReader inWords=new BufferedReader(new InputStreamReader(new FileInputStream(new File(dataDir,"/org/apache/lucene/analysis/ru/wordsUnicode.txt")),"Unicode"));
  while ((str=inWords.readLine()) != null) {
    words.add(str);
  }
  inWords.close();
  BufferedReader inStems=new BufferedReader(new InputStreamReader(new FileInputStream(new File(dataDir,"/org/apache/lucene/analysis/ru/stemsUnicode.txt")),"Unicode"));
  while ((str=inStems.readLine()) != null) {
    stems.add(str);
  }
  inStems.close();
}
