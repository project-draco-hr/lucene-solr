{
  HashMap<String,String> args=new HashMap<>();
  args.put("hl","true");
  args.put("hl.fl","tv_no_off_text");
  TestHarness.LocalRequestFactory sumLRF=h.getRequestFactory("standard",0,200,args);
  assertU(adoc("tv_no_off_text","Crackerjack Cameron","id","1"));
  assertU(commit());
  assertU(optimize());
  assertQ("Fields with term vectors switched on but no offsets should be correctly highlighted",sumLRF.makeRequest("tv_no_off_text:cameron"),"//arr[@name='tv_no_off_text']/str[.='Crackerjack <em>Cameron</em>']");
}
