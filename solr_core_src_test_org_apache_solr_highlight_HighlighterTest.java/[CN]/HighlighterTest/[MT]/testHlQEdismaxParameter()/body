{
  assertU(adoc("title","Apache Software Foundation","id","1"));
  assertU(commit());
  assertQ("hl.q parameter overrides q parameter",req("q","title:Apache","hl","true","hl.fl","title","hl.q","{!edismax qf=title v=Software}"),"//lst[@name='highlighting']/lst[@name='1']" + "/arr[@name='title']/str='Apache <em>Software</em> Foundation'");
  assertQ("hl.q parameter overrides q parameter",req("q","title:Apache","hl","true","hl.fl","title","hl.q","{!v=$qq}","qq","title:Foundation"),"//lst[@name='highlighting']/lst[@name='1']" + "/arr[@name='title']/str='Apache Software <em>Foundation</em>'");
}
