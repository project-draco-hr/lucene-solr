{
  if (directory != null) {
    try {
      close();
    }
 catch (    IOException ignored) {
    }
    try {
      directory.deleteFile(IndexFileNames.segmentFileName(segment,"",FIELDS_EXTENSION));
    }
 catch (    IOException ignored) {
    }
    try {
      directory.deleteFile(IndexFileNames.segmentFileName(segment,"",FIELDS_INDEX_EXTENSION));
    }
 catch (    IOException ignored) {
    }
  }
}
