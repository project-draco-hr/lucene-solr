  String mid=(new Double(((double)Float.MAX_VALUE) * 2D)).toString();
  assertQ(f + ": checking counts for lower",req("q","id:[30 TO 60]","rows","0","facet","true","facet.range",f,"facet.range.method",method.toString(),"facet.range.start",start,"facet.range.end",end,"facet.range.gap",gap,"facet.range.other","all","facet.range.include","lower"),"*[count(" + pre + "/int)=3]",pre + "/int[@name='" + start+ "'][.='6'  ]",pre + "/int[@name='" + mid+ "'][.='0'  ]",meta + "/double[@name='end' ][.='" + end+ "']",meta + "/int[@name='before' ][.='0']",meta + "/int[@name='after'  ][.='0']",meta + "/int[@name='between'][.='6']");
}
