{
  final String f=fieldName;
  final String pre="//lst[@name='facet_ranges']/lst[@name='" + f + "']/lst[@name='counts']";
  final String meta=pre + "/../";
  String start="0.0";
  String gap=(new Double((double)Float.MAX_VALUE)).toString();
