{
  boolean success=false;
  final Source source;
  IndexInput input=null;
  try {
    input=(IndexInput)datIn.clone();
    if (values == null) {
      source=new PackedIntsSource(input,false);
    }
 else {
      source=values.newFromInput(input,numDocs);
    }
    success=true;
    return source;
  }
  finally {
    if (!success) {
      IOUtils.closeWhileHandlingException(input,datIn);
    }
  }
}
