{
  String conf="<dataConfig>" + "  <dataSource type=\"BinFileDataSource\"/>" + "  <document>"+ "    <entity processor=\"TikaEntityProcessor\" url=\"" + getFile("solr-word.pdf").getAbsolutePath() + "\" >"+ "      <field column=\"Author\" meta=\"true\" name=\"author\"/>"+ "      <field column=\"title\" meta=\"true\" name=\"title\"/>"+ "      <field column=\"text\"/>"+ "     </entity>"+ "  </document>"+ "</dataConfig>";
  runFullImport(conf);
  assertQ(req("*:*"),"//*[@numFound='1']","//str[@name='author'][.='Grant Ingersoll']","//str[@name='title'][.='solr-word']","//str[@name='text']");
}
