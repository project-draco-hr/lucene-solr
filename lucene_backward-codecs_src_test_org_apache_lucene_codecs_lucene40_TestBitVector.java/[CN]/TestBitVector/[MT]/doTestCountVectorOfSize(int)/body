{
  BitVector bv=new BitVector(n);
  for (int i=0; i < bv.size(); i++) {
    assertFalse(bv.get(i));
    assertEquals(i,bv.count());
    bv.set(i);
    assertTrue(bv.get(i));
    assertEquals(i + 1,bv.count());
  }
  bv=new BitVector(n);
  for (int i=0; i < bv.size(); i++) {
    assertFalse(bv.get(i));
    assertEquals(0,bv.count());
    bv.set(i);
    assertTrue(bv.get(i));
    assertEquals(1,bv.count());
    bv.clear(i);
    assertFalse(bv.get(i));
    assertEquals(0,bv.count());
  }
}
