{
  if (listener != null) {
    boolean wasRemoved;
synchronized (reconnectListeners) {
      wasRemoved=reconnectListeners.remove(listener);
    }
    if (wasRemoved) {
      log.info("Removed OnReconnect listener " + listener);
    }
 else {
      log.warn("Was asked to remove OnReconnect listener " + listener + ", but remove operation did not find it in the list of registered listeners.");
    }
  }
}
