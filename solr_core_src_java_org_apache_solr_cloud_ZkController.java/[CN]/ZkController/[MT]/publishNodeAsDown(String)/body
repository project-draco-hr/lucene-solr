{
  log.info("Publish node={} as DOWN",nodeName);
  ZkNodeProps m=new ZkNodeProps(Overseer.QUEUE_OPERATION,OverseerAction.DOWNNODE.toLower(),ZkStateReader.NODE_NAME_PROP,nodeName);
  try {
    Overseer.getInQueue(getZkClient()).offer(Utils.toJSON(m));
  }
 catch (  KeeperException e) {
    log.info("Could not publish node as down: " + e.getMessage());
  }
catch (  RuntimeException e) {
    Throwable rootCause=SolrException.getRootCause(e);
    if (rootCause instanceof KeeperException) {
      log.info("Could not publish node as down: " + e.getMessage());
    }
 else {
      throw e;
    }
  }
catch (  InterruptedException e) {
    Thread.interrupted();
    log.info("",e);
  }
}
