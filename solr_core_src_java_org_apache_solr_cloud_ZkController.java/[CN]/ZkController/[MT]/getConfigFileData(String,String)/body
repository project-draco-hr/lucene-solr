{
  String zkPath=ZkConfigManager.CONFIGS_ZKNODE + "/" + zkConfigName+ "/"+ fileName;
  byte[] bytes=zkClient.getData(zkPath,null,null,true);
  if (bytes == null) {
    log.error("Config file contains no data:" + zkPath);
    throw new ZooKeeperException(SolrException.ErrorCode.SERVER_ERROR,"Config file contains no data:" + zkPath);
  }
  return bytes;
}
