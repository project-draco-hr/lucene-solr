{
  if (input.incrementToken()) {
    char[] termBuffer=termAtt.termBuffer();
    String termText=new String(termBuffer,0,termAtt.termLength());
    collator.getRawCollationKey(termText,reusableKey);
    int encodedLength=IndexableBinaryStringTools.getEncodedLength(reusableKey.bytes,0,reusableKey.size);
    if (encodedLength > termBuffer.length) {
      termAtt.resizeTermBuffer(encodedLength);
    }
    termAtt.setTermLength(encodedLength);
    IndexableBinaryStringTools.encode(reusableKey.bytes,0,reusableKey.size,termAtt.termBuffer(),0,encodedLength);
    return true;
  }
 else {
    return false;
  }
}
