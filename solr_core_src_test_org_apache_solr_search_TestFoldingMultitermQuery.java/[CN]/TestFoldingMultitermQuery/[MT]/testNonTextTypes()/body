{
  String[] intTypes={"int_f","float_f","long_f","double_f","byte_f","short_f"};
  for (  String str : intTypes) {
    assertQ(req("q",str + ":" + "0"),"//result[@numFound='1']","//*[@name='id'][.='0']");
    assertQ(req("q",str + ":" + "[0 TO 2]"),"//result[@numFound='3']","//*[@name='id'][.='0']","//*[@name='id'][.='1']","//*[@name='id'][.='2']");
  }
  assertQ(req("q","bool_f:true"),"//result[@numFound='2']","//*[@name='id'][.='0']","//*[@name='id'][.='2']");
  assertQ(req("q","bool_f:[false TO true]"),"//result[@numFound='3']","//*[@name='id'][.='0']","//*[@name='id'][.='1']","//*[@name='id'][.='2']");
  assertQ(req("q","date_f:2000-01-01T00\\:00\\:00Z"),"//result[@numFound='1']","//*[@name='id'][.='0']");
  assertQ(req("q","date_f:[2000-12-31T23:59:59.999Z TO 2002-01-02T00:00:01Z]"),"//result[@numFound='2']","//*[@name='id'][.='1']","//*[@name='id'][.='2']");
}
