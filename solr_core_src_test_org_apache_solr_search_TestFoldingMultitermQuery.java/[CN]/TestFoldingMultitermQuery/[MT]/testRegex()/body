{
  assertQ(req("q","content:/Zill[a-z]/"),"//result[@numFound='1']");
  assertQ(req("q","content:/Zill[A-Z]/"),"//result[@numFound='1']");
  assertQ(req("q","content_keyword:/.*Zill[A-Z]/"),"//result[@numFound='1']");
  assertQ(req("q","content_straight:/Zill[a-z]/"),"//result[@numFound='0']");
  assertQ(req("q","content_folding:/Zill[a-z]/"),"//result[@numFound='0']");
  assertQ(req("q","content_keyword:/Abcdefg1 Finger/"),"//result[@numFound='1']");
}
