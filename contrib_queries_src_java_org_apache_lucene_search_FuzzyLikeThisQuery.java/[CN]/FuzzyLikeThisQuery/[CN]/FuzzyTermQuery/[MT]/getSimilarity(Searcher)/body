{
  Similarity result=super.getSimilarity(searcher);
  result=new SimilarityDelegator(result){
    public float tf(    float freq){
      if (ignoreTF) {
        return 1;
      }
      return super.tf(freq);
    }
    public float idf(    int docFreq,    int numDocs){
      return 1;
    }
  }
;
  return result;
}
