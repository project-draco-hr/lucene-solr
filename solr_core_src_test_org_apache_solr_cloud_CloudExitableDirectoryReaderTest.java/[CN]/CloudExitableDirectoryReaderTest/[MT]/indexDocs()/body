{
  int counter=1;
  UpdateRequest req=new UpdateRequest();
  for (; (counter % NUM_DOCS_PER_TYPE) != 0; counter++)   req.add(sdoc("id",Integer.toString(counter),"name","a" + counter));
  counter++;
  for (; (counter % NUM_DOCS_PER_TYPE) != 0; counter++)   req.add(sdoc("id",Integer.toString(counter),"name","b" + counter));
  counter++;
  for (; counter % NUM_DOCS_PER_TYPE != 0; counter++)   req.add(sdoc("id",Integer.toString(counter),"name","dummy term doc" + counter));
  req.commit(cluster.getSolrClient(),COLLECTION);
}
