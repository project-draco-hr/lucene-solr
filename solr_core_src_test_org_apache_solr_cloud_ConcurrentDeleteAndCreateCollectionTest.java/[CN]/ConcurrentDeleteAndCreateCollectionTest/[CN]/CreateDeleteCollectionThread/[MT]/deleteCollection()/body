{
  try {
    final CollectionAdminRequest.Delete deleteCollectionRequest=new CollectionAdminRequest.Delete().setCollectionName(collectionName);
    final CollectionAdminResponse response=deleteCollectionRequest.process(solrClient);
    if (response.getStatus() != 0) {
      addFailure(new RuntimeException("failed to delete collection " + collectionName));
    }
  }
 catch (  Exception e) {
    addFailure(e);
  }
}
