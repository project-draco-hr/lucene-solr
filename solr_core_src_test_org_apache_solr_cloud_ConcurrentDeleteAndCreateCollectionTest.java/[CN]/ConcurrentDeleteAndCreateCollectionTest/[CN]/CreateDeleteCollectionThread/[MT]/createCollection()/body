{
  try {
    final CollectionAdminResponse response=new CollectionAdminRequest.Create().setCollectionName(collectionName).setNumShards(1).setReplicationFactor(1).setConfigName(configName).process(solrClient);
    if (response.getStatus() != 0) {
      addFailure(new RuntimeException("failed to create collection " + collectionName));
    }
  }
 catch (  Exception e) {
    addFailure(e);
  }
}
