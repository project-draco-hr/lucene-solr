{
  try {
    solrClient.query(collectionName,new SolrQuery("*"));
  }
 catch (  Exception e) {
    if (!e.getMessage().contains("not found") && !e.getMessage().contains("Can not find")) {
synchronized (failure) {
        if (failure.get() != null) {
          failure.get().addSuppressed(e);
        }
 else {
          failure.set(e);
        }
      }
    }
  }
}
