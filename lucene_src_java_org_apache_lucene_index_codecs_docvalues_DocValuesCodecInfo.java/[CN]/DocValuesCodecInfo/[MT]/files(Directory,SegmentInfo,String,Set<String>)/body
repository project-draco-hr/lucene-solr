{
  final String file=IndexFileNames.segmentFileName(segmentInfo.name,codecId,INFO_FILE_EXT);
  files.add(file);
  for (int i=0; i < pos; i++) {
    int field=docValuesFields[i];
    String docValuesID=docValuesId(segmentInfo.name,codecId,"" + field);
    files.add(IndexFileNames.segmentFileName(docValuesID,"",org.apache.lucene.index.values.Writer.DATA_EXTENSION));
    String idxFile=IndexFileNames.segmentFileName(docValuesID,"",org.apache.lucene.index.values.Writer.INDEX_EXTENSION);
    if (dir.fileExists(idxFile)) {
      files.add(idxFile);
    }
  }
}
