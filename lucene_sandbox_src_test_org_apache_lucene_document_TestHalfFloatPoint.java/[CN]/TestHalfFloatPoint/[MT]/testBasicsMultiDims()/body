{
  Directory dir=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random(),dir);
  Document document=new Document();
  document.add(new HalfFloatPoint("field",1.25f,-2f));
  writer.addDocument(document);
  IndexReader reader=writer.getReader();
  IndexSearcher searcher=newSearcher(reader);
  assertEquals(1,searcher.count(HalfFloatPoint.newRangeQuery("field",new float[]{0,-5},new float[]{1.25f,-1})));
  assertEquals(0,searcher.count(HalfFloatPoint.newRangeQuery("field",new float[]{0,0},new float[]{2,2})));
  assertEquals(0,searcher.count(HalfFloatPoint.newRangeQuery("field",new float[]{-10,-10},new float[]{1,2})));
  reader.close();
  writer.close();
  dir.close();
}
