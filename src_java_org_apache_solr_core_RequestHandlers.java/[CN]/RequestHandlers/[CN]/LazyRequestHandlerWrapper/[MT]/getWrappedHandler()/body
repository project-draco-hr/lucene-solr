{
  if (_handler == null) {
    try {
      Class clazz=Config.findClass(_className,new String[]{});
      _handler=(SolrRequestHandler)clazz.newInstance();
      _handler.init(_args);
    }
 catch (    Exception ex) {
      throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"lazy loading error",ex);
    }
  }
  return _handler;
}
