{
  int pos=0;
  for (Iterator iter=lst.iterator(); iter.hasNext(); ) {
    Token tok=(Token)iter.next();
    pos+=tok.getPositionIncrement();
    if (pos == tokPos && new String(tok.termBuffer(),0,tok.termLength()).equals(val) && (startOff == -1 || tok.startOffset() == startOff) && (endOff == -1 || tok.endOffset() == endOff)) {
      return true;
    }
  }
  return false;
}
