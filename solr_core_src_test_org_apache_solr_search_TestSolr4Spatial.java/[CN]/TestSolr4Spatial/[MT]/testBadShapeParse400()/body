{
  assertQEx(null,req("fl","id," + fieldName,"q","*:*","rows","1000","fq","{!field f=" + fieldName + "}Intersects(NonexistentShape(89.9,-130 d=9))"),400);
  assertQEx(null,req("fl","id," + fieldName,"q","*:*","rows","1000","fq","{!field f=" + fieldName + "}Intersects(NonexistentShape(89.9,-130 d=9"),400);
  assertQEx(null,req("fl","id," + fieldName,"q","*:*","rows","1000","fq","{!field f=" + fieldName + "}Intersectssss"),400);
  try {
    assertU(adoc("id","-1",fieldName,"NonexistentShape"));
    fail();
  }
 catch (  SolrException e) {
    assertEquals(400,e.code());
  }
}
