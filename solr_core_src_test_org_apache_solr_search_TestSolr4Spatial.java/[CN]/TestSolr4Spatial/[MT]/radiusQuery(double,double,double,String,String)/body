{
  if (random().nextBoolean()) {
    return "{!geofilt " + "sfield=" + fieldName + " "+ (score != null ? "score=" + score : "")+ " "+ (filter != null ? "filter=" + filter : "")+ " "+ "pt="+ lat+ ","+ lon+ " d="+ (dDEG * DistanceUtils.DEG_TO_KM)+ "}";
  }
 else {
    return "{! " + (score != null ? "score=" + score : "") + " "+ (filter != null ? "filter=" + filter : "")+ " "+ "}"+ fieldName+ ":\"Intersects(BUFFER(POINT("+ lon+ " "+ lat+ "),"+ dDEG+ "))\"";
  }
}
