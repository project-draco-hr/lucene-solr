{
  if (ROOT_NAME.equals(category)) {
    category="";
  }
  Logger log=LogManager.getLogManager().getLogger(category);
  if (level == null || "unset".equals(level) || "null".equals(level)) {
    if (log != null) {
      log.setLevel(null);
    }
  }
 else {
    if (log == null) {
      log=Logger.getLogger(category);
    }
    log.setLevel(Level.parse(level));
  }
}
