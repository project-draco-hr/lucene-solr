{
  SolrInputDocument d=null;
  d=processAdd("convert-ttl-defaults",params("NOW","1394059630042"),doc(f("id","1111"),f("_ttl_","+5MINUTES")));
  assertNotNull(d);
  assertEquals(new Date(1394059930042L),d.getFieldValue("_expire_at_tdt"));
  d=processAdd("convert-ttl-defaults",params("NOW","1394059630042","_ttl_","+5MINUTES"),doc(f("id","1111")));
  assertNotNull(d);
  assertEquals(new Date(1394059930042L),d.getFieldValue("_expire_at_tdt"));
}
