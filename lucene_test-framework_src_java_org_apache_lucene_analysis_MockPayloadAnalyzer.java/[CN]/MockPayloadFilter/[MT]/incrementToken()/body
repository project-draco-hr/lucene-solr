{
  if (input.incrementToken()) {
    payloadAttr.setPayload(new BytesRef(("pos: " + pos).getBytes("UTF-8")));
    int posIncr;
    if (pos == 0 || i % 2 == 1) {
      posIncr=1;
    }
 else {
      posIncr=0;
    }
    posIncrAttr.setPositionIncrement(posIncr);
    pos+=posIncr;
    i++;
    return true;
  }
 else {
    return false;
  }
}
