{
  if (termBuffer != null) {
    if (termBuffer.length >= newSize)     return null;
 else     return new char[ArrayUtil.getNextSize(newSize)];
  }
 else {
    if (newSize < MIN_BUFFER_SIZE) {
      newSize=MIN_BUFFER_SIZE;
    }
    if (termText != null) {
      int ttLength=termText.length();
      if (newSize < ttLength) {
        newSize=ttLength;
      }
    }
    return new char[newSize];
  }
}
