{
  StringBuffer sb=new StringBuffer();
  sb.append('(');
  initTermBuffer();
  if (termBuffer == null)   sb.append("null");
 else   sb.append(termBuffer,0,termLength);
  sb.append(',').append(startOffset).append(',').append(endOffset);
  if (!type.equals("word"))   sb.append(",type=").append(type);
  if (positionIncrement != 1)   sb.append(",posIncr=").append(positionIncrement);
  sb.append(')');
  return sb.toString();
}
