{
  try {
    if (debug) {
      log.debug("Closing tlog" + this);
    }
synchronized (this) {
      fos.flushBuffer();
    }
    tlogOutStream.hflush();
    tlogOutStream.close();
  }
 catch (  IOException e) {
    log.error("Exception closing tlog.",e);
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,e);
  }
 finally {
    if (deleteOnClose) {
      try {
        fs.delete(tlogFile,true);
      }
 catch (      IOException e) {
        throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,e);
      }
    }
  }
}
