{
  org.apache.hadoop.security.Groups hGroups=new org.apache.hadoop.security.Groups(new Configuration());
  String group="*";
  try {
    List<String> g=hGroups.getGroups(System.getProperty("user.name"));
    if (g != null && g.size() > 0) {
      group=g.get(0);
    }
  }
 catch (  NullPointerException npe) {
  }
  return group;
}
