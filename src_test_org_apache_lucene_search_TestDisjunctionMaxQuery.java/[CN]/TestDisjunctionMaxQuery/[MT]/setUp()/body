{
  super.setUp();
  index=new RAMDirectory();
  IndexWriter writer=new IndexWriter(index,new WhitespaceAnalyzer(),true,IndexWriter.MaxFieldLength.LIMITED);
  writer.setSimilarity(sim);
{
    Document d1=new Document();
    d1.add(new Field("id","d1",Field.Store.YES,Field.Index.UN_TOKENIZED));
    d1.add(new Field("hed","elephant",Field.Store.YES,Field.Index.TOKENIZED));
    d1.add(new Field("dek","elephant",Field.Store.YES,Field.Index.TOKENIZED));
    writer.addDocument(d1);
  }
{
    Document d2=new Document();
    d2.add(new Field("id","d2",Field.Store.YES,Field.Index.UN_TOKENIZED));
    d2.add(new Field("hed","elephant",Field.Store.YES,Field.Index.TOKENIZED));
    d2.add(new Field("dek","albino",Field.Store.YES,Field.Index.TOKENIZED));
    d2.add(new Field("dek","elephant",Field.Store.YES,Field.Index.TOKENIZED));
    writer.addDocument(d2);
  }
{
    Document d3=new Document();
    d3.add(new Field("id","d3",Field.Store.YES,Field.Index.UN_TOKENIZED));
    d3.add(new Field("hed","albino",Field.Store.YES,Field.Index.TOKENIZED));
    d3.add(new Field("hed","elephant",Field.Store.YES,Field.Index.TOKENIZED));
    writer.addDocument(d3);
  }
{
    Document d4=new Document();
    d4.add(new Field("id","d4",Field.Store.YES,Field.Index.UN_TOKENIZED));
    d4.add(new Field("hed","albino",Field.Store.YES,Field.Index.TOKENIZED));
    d4.add(new Field("hed","elephant",Field.Store.YES,Field.Index.TOKENIZED));
    d4.add(new Field("dek","albino",Field.Store.YES,Field.Index.TOKENIZED));
    writer.addDocument(d4);
  }
  writer.close();
  r=IndexReader.open(index);
  s=new IndexSearcher(r);
  s.setSimilarity(sim);
}
