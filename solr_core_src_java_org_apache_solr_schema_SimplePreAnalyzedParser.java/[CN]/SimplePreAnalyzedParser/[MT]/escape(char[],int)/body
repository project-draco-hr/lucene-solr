{
  if (val == null || len == 0) {
    return "";
  }
  StringBuilder sb=new StringBuilder();
  for (int i=0; i < len; i++) {
switch (val[i]) {
case '\\':
case '=':
case ',':
case ' ':
      sb.append('\\');
    sb.append(val[i]);
  break;
case '\n':
sb.append('\\');
sb.append('n');
break;
case '\r':
sb.append('\\');
sb.append('r');
break;
case '\t':
sb.append('\\');
sb.append('t');
break;
default :
sb.append(val[i]);
}
}
return sb.toString();
}
