{
  try {
    return charsetDecoder.decode(ByteBuffer.wrap(bytes)).toString();
  }
 catch (  CharacterCodingException cce) {
    throw new SolrException(ErrorCode.BAD_REQUEST,"URLDecoder: Invalid character encoding detected after position " + position + " of query string / form data (while parsing as "+ charsetDecoder.charset().name()+ ")");
  }
}
