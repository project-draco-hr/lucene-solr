{
  for (int i=0; i < 2; i++) {
    Document doc=new Document();
    if (withContent) {
      doc.add(new StringField("f","a",Store.NO));
    }
    if (facetFields != null) {
      facetFields.addFields(doc,Collections.singletonList(new CategoryPath("A",Integer.toString(i))));
    }
    indexWriter.addDocument(doc);
  }
  indexWriter.commit();
}
