{
  super.setUp();
  searcher.setSimilarityProvider(new DefaultSimilarityProvider(){
    @Override public Similarity get(    String field){
      return new DefaultSimilarity(){
        @Override public float scorePayload(        int doc,        int start,        int end,        BytesRef payload){
          return 1 + (payload.hashCode() % 10);
        }
      }
;
    }
  }
);
}
