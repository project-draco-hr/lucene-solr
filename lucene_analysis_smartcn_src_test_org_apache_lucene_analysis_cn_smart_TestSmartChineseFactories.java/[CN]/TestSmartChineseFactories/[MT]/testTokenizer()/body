  SmartChineseWordTokenFilterFactory factory=new SmartChineseWordTokenFilterFactory(new HashMap<String,String>());
  stream=factory.create(stream);
  assertTokenStreamContents(stream,new String[]{"???","??????","???","??????","???","??????",",","???","??????","???","??????","???","??????",","});
}
