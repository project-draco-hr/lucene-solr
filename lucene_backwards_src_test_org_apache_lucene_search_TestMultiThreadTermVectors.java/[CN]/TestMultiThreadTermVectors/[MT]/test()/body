{
  IndexReader reader=null;
  try {
    reader=IndexReader.open(directory,true);
    for (int i=1; i <= numThreads; i++)     testTermPositionVectors(reader,i);
  }
 catch (  IOException ioe) {
    fail(ioe.getMessage());
  }
 finally {
    if (reader != null) {
      try {
        reader.close();
      }
 catch (      IOException ioe) {
        ioe.printStackTrace();
      }
    }
  }
}
