{
  Map<String,Integer> shardToDocCount=new TreeMap<>();
  for (  Slice slice : docCollection.getActiveSlices()) {
    String shardName=slice.getName();
    long docsInShard=client.query(docCollection.getName(),new SolrQuery("*:*").setParam(_ROUTE_,shardName)).getResults().getNumFound();
    shardToDocCount.put(shardName,(int)docsInShard);
  }
  return shardToDocCount;
}
