{
  if (newBuffers.length == 1) {
    newBuffers[0].position(offset);
    return new SingleBufferImpl(newResourceDescription,newBuffers[0].slice(),length,chunkSizePower,this.cleaner,this.clones);
  }
 else {
    return (offset == 0) ? new DefaultImpl(newResourceDescription,newBuffers,length,chunkSizePower,cleaner,clones) : new WithOffsetImpl(newResourceDescription,newBuffers,offset,length,chunkSizePower,cleaner,clones);
  }
}
