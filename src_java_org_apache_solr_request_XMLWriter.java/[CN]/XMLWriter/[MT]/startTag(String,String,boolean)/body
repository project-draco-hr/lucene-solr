{
  if (doIndent)   indent();
  writer.write('<');
  writer.write(tag);
  if (name != null) {
    writer.write(" name=\"");
    writer.write(name);
    if (closeTag) {
      writer.write("\"/>");
    }
 else {
      writer.write("\">");
    }
  }
 else {
    if (closeTag) {
      writer.write("/>");
    }
 else {
      writer.write('>');
    }
  }
}
