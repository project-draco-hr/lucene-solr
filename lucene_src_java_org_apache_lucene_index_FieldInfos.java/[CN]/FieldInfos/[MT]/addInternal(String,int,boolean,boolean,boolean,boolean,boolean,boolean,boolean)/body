{
  name=StringHelper.intern(name);
  if (globalFieldNumbers != null) {
    globalFieldNumbers.setIfNotSet(fieldNumber,name);
  }
  final FieldInfo fi=new FieldInfo(name,isIndexed,fieldNumber,storeTermVector,storePositionWithTermVector,storeOffsetWithTermVector,omitNorms,storePayloads,omitTermFreqAndPositions);
  putInternal(fi);
  return fi;
}
