{
  if (value == null)   value=EMPTY_STRING;
  if (type.equalsIgnoreCase(SearchConfiguration.TEXT_FIELD_TYPE))   doc.add(Field.Text(field,value));
 else   if (type.equalsIgnoreCase(SearchConfiguration.KEYWORD_FIELD_TYPE))   doc.add(Field.Keyword(field,value));
 else   if (type.equalsIgnoreCase(SearchConfiguration.UNINDEXED_FIELD_TYPE))   doc.add(Field.UnIndexed(field,value));
 else   if (type.equalsIgnoreCase(SearchConfiguration.UNSTORED_FIELD_TYPE))   doc.add(Field.UnStored(field,value));
}
