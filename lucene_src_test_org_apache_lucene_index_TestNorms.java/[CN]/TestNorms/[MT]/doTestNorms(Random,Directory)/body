{
  int num=(TEST_NIGHTLY ? 5 : 1) * RANDOM_MULTIPLIER;
  for (int i=0; i < num; i++) {
    addDocs(random,dir,12,true);
    verifyIndex(dir);
    modifyNormsForF1(dir);
    verifyIndex(dir);
    addDocs(random,dir,12,false);
    verifyIndex(dir);
    modifyNormsForF1(dir);
    verifyIndex(dir);
  }
}
