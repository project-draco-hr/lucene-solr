{
  IndexWriter iw=new IndexWriter(dir,new IndexWriterConfig(TEST_VERSION_CURRENT,anlzr).setOpenMode(OpenMode.APPEND).setMaxBufferedDocs(5).setSimilarity(similarityOne));
  LogMergePolicy lmp=(LogMergePolicy)iw.getConfig().getMergePolicy();
  lmp.setMergeFactor(3);
  lmp.setUseCompoundFile(compound);
  for (int i=0; i < ndocs; i++) {
    iw.addDocument(newDoc());
  }
  iw.close();
}
