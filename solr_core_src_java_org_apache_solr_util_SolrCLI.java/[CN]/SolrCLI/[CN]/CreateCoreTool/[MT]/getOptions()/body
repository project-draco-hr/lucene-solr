{
  return new Option[]{OptionBuilder.withArgName("URL").hasArg().isRequired(false).withDescription("Base Solr URL, default is http://localhost:8983/solr").create("solrUrl"),OptionBuilder.withArgName("NAME").hasArg().isRequired(true).withDescription("Name of the core to create.").create("name"),OptionBuilder.withArgName("CONFIG").hasArg().isRequired(false).withDescription("Configuration directory to copy when creating the new core; default is " + DEFAULT_CONFIG_SET).create("confdir"),OptionBuilder.withArgName("DIR").hasArg().isRequired(true).withDescription("Path to configsets directory on the local system.").create("configsetsDir")};
}
