{
  return new Option[]{OptionBuilder.withArgName("URL").hasArg().isRequired(false).withDescription("Address of the Solr Web application, defaults to: " + DEFAULT_SOLR_URL).create("solr"),OptionBuilder.withArgName("SECS").hasArg().isRequired(false).withDescription("Wait up to the specified number of seconds to see Solr running.").create("maxWaitSecs")};
