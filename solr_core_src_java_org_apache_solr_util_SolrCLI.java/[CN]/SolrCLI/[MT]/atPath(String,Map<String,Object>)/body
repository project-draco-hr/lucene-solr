{
  if ("/".equals(jsonPath))   return json;
  if (!jsonPath.startsWith("/"))   throw new IllegalArgumentException("Invalid JSON path: " + jsonPath + "! Must start with a /");
  Map<String,Object> parent=json;
  Object result=null;
  String[] path=jsonPath.split("/");
  for (int p=1; p < path.length; p++) {
    Object child=parent.get(path[p]);
    if (child == null)     break;
    if (p == path.length - 1) {
      result=child;
    }
 else {
      if (child instanceof Map) {
        parent=(Map)child;
      }
 else {
        break;
      }
    }
  }
  return result;
}
