{
  super(similarity);
  this.weight=weight;
  this.termDocs=td;
  this.norms=norms;
  this.weightValue=weight.getValue();
  for (int i=0; i < SCORE_CACHE_SIZE; i++)   scoreCache[i]=getSimilarity().tf(i) * weightValue;
  pointerMax=termDocs.read(docs,freqs);
  if (pointerMax != 0)   doc=docs[0];
 else {
    termDocs.close();
    doc=Integer.MAX_VALUE;
  }
}
