{
  String[] data=new String[]{"A 1 2 3 4 5 6","Z       4 5 6",null,"B   2   4 5 6","Y     3   5 6",null,"C     3     6","X       4 5 6"};
  index=newDirectory();
  RandomIndexWriter w=new RandomIndexWriter(random(),index);
  for (int i=0; i < data.length; i++) {
    Document doc=new Document();
    doc.add(newField("id",String.valueOf(i),StringField.TYPE_STORED));
    doc.add(newField("all","all",StringField.TYPE_STORED));
    if (null != data[i]) {
      doc.add(newField("data",data[i],TextField.TYPE_STORED));
    }
    w.addDocument(doc);
  }
  r=w.getReader();
  s=newSearcher(r);
  w.close();
}
