{
  String solrXml="<solr>" + "<solrcloud><bool name=\"genericCoreNodeNames\">true</bool></solrcloud>" + "<solrcloud><bool name=\"genericCoreNodeNames\">false</bool></solrcloud>"+ "</solr>";
  expectedException.expect(SolrException.class);
  expectedException.expectMessage("Multiple instances of solrcloud section found in solr.xml");
  SolrXmlConfig.fromString(loader,solrXml);
}
