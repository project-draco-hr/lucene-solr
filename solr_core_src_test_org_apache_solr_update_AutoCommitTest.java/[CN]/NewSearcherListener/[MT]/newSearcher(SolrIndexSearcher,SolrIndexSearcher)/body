{
  if (triggerOnType == TriggerOn.Soft && lastType == TriggerOn.Soft) {
    triggered=true;
  }
 else   if (triggerOnType == TriggerOn.Hard && lastType == TriggerOn.Hard) {
    triggered=true;
  }
 else   if (triggerOnType == TriggerOn.Both) {
    triggered=true;
  }
  this.newSearcher=newSearcher;
}
