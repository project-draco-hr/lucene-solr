{
  final IndexInput input=(IndexInput)datIn.clone();
  boolean success=false;
  try {
    final Source source=packed ? new PackedIntsSource(input) : new FixedIntsSource(input);
    success=true;
    return source;
  }
  finally {
    if (!success) {
      IOUtils.closeSafely(true,datIn);
    }
  }
}
