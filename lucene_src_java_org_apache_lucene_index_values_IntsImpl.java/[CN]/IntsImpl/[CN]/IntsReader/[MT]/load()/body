{
  boolean success=false;
  final Source source;
  IndexInput input=null;
  try {
    input=(IndexInput)datIn.clone();
    input.seek(CodecUtil.headerLength(CODEC_NAME) + 1);
    source=loadFixedSource(type,input,numDocs);
    success=true;
    return source;
  }
  finally {
    if (!success) {
      IOUtils.closeSafely(true,input,datIn);
    }
  }
}
