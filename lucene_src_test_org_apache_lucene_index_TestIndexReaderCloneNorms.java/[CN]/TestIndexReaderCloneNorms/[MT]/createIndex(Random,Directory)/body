{
  IndexWriter iw=new IndexWriter(dir,newIndexWriterConfig(TEST_VERSION_CURRENT,anlzr).setOpenMode(OpenMode.CREATE).setMaxBufferedDocs(5).setSimilarityProvider(similarityOne).setMergePolicy(newLogMergePolicy()));
  LogMergePolicy lmp=(LogMergePolicy)iw.getConfig().getMergePolicy();
  lmp.setMergeFactor(3);
  lmp.setUseCompoundFile(true);
  iw.close();
}
