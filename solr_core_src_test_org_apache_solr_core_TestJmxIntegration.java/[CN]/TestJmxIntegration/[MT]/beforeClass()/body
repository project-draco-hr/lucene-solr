{
  MBeanServer platformServer=ManagementFactory.getPlatformMBeanServer();
  initCore("solrconfig.xml","schema.xml");
  assertTrue("JMX not enabled",h.getCore().getSolrConfig().jmxConfig.enabled);
  Map registry=h.getCore().getInfoRegistry();
  assertTrue("info registry is not a JMX monitored map",registry instanceof JmxMonitoredMap);
  mbeanServer=((JmxMonitoredMap)registry).getServer();
  assertNotNull("No JMX server found by monitor map",mbeanServer);
}
