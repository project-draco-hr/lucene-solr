{
  if (idx > 0) {
    writeArraySeparator();
  }
  indent();
  writeMapOpener(doc.size());
  incLevel();
  boolean first=true;
  for (  String fname : doc.getFieldNames()) {
    if (!returnFields.wantsField(fname)) {
      continue;
    }
    if (first) {
      first=false;
    }
 else {
      writeMapSeparator();
    }
    indent();
    writeKey(fname,true);
    Object val=doc.getFieldValue(fname);
    if (val instanceof Collection) {
      writeVal(fname,val);
    }
 else {
      SchemaField sf=schema.getFieldOrNull(fname);
      if (sf != null && sf.multiValued()) {
        writeArrayOpener(-1);
        writeVal(fname,val);
        writeArrayCloser();
      }
 else {
        writeVal(fname,val);
      }
    }
  }
  decLevel();
  writeMapCloser();
}
