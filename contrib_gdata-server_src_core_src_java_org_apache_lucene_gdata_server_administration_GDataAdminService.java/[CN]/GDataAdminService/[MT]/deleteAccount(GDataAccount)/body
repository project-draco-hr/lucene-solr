{
  if (account == null)   throw new ServiceException("Can not delete null account",GDataResponse.BAD_REQUEST);
  try {
    this.storage.deleteAccount(account.getName());
  }
 catch (  StorageException e) {
    if (LOG.isInfoEnabled())     LOG.info("Can not save account -- " + e.getMessage(),e);
    throw new ServiceException("Can not save account",e,GDataResponse.BAD_REQUEST);
  }
}
