{
  StringBuffer buffer=new StringBuffer();
  if (!field.equals(f)) {
    buffer.append(field);
    buffer.append(":");
  }
  buffer.append("\"");
  for (int i=0; i < terms.size(); i++) {
    buffer.append(((Term)terms.elementAt(i)).text());
    if (i != terms.size() - 1)     buffer.append(" ");
  }
  buffer.append("\"");
  if (boost != 1.0f) {
    buffer.append("^");
    buffer.append(Float.toString(boost));
  }
  return buffer.toString();
}
