{
  StringBuffer buffer=new StringBuffer();
  if (!field.equals(f)) {
    buffer.append(field);
    buffer.append(":");
  }
  buffer.append("\"");
  for (int i=0; i < terms.size(); i++) {
    buffer.append(((Term)terms.get(i)).text());
    if (i != terms.size() - 1)     buffer.append(" ");
  }
  buffer.append("\"");
  if (slop != 0) {
    buffer.append("~");
    buffer.append(slop);
  }
  buffer.append(ToStringUtils.boost(getBoost()));
  return buffer.toString();
}
