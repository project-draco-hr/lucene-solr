{
  String[] splits=forEachXpath.split("\\|");
  for (  String split : splits) {
    split=split.trim();
    if (split.startsWith("//"))     throw new RuntimeException("forEach cannot start with '//': " + split);
    if (split.length() == 0)     continue;
    addField0(split,split,false,true,0);
  }
}
