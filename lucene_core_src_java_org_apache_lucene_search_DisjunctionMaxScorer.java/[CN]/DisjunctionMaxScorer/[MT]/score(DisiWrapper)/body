{
  float scoreSum=0;
  float scoreMax=Float.NEGATIVE_INFINITY;
  for (DisiWrapper w=topList; w != null; w=w.next) {
    final float subScore=w.scorer.score();
    scoreSum+=subScore;
    if (subScore > scoreMax) {
      scoreMax=subScore;
    }
  }
  return scoreMax + (scoreSum - scoreMax) * tieBreakerMultiplier;
}
