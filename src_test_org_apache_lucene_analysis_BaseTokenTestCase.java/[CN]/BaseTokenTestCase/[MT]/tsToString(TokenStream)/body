{
  final TermAttribute termAtt=(TermAttribute)in.addAttribute(TermAttribute.class);
  final StringBuffer out=new StringBuffer();
  in.reset();
  while (in.incrementToken()) {
    if (out.length() > 0)     out.append(' ');
    out.append(termAtt.term());
  }
  in.close();
  return out.toString();
}
