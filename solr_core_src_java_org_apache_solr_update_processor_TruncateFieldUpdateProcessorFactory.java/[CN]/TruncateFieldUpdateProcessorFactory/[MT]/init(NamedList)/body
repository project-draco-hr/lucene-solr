{
  Object lengthParam=args.remove(MAX_LENGTH_PARAM);
  if (null == lengthParam) {
    throw new SolrException(ErrorCode.SERVER_ERROR,"Missing required init parameter: " + MAX_LENGTH_PARAM);
  }
  if (!(lengthParam instanceof Number)) {
    throw new SolrException(ErrorCode.SERVER_ERROR,"Init param " + MAX_LENGTH_PARAM + "must be a number; found: \""+ lengthParam.toString());
  }
  maxLength=((Number)lengthParam).intValue();
  if (maxLength < 0) {
    throw new SolrException(ErrorCode.SERVER_ERROR,"Init param " + MAX_LENGTH_PARAM + "must be >= 0; found: "+ maxLength);
  }
  super.init(args);
}
