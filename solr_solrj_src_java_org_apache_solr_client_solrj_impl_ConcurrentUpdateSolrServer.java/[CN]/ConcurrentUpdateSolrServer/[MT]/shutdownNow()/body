{
  server.shutdown();
  if (shutdownExecutor) {
    scheduler.shutdownNow();
    try {
      if (!scheduler.awaitTermination(30,TimeUnit.SECONDS))       log.error("ExecutorService did not terminate");
    }
 catch (    InterruptedException ie) {
      scheduler.shutdownNow();
      Thread.currentThread().interrupt();
    }
  }
}
