{
  ensureOpen();
  if (!autoCommit) {
    segmentInfos.clear();
    segmentInfos.addAll(rollbackSegmentInfos);
    docWriter.abort();
    deleter.checkpoint(segmentInfos,false);
    deleter.refresh();
    commitPending=false;
    docWriter.abort();
    close();
  }
 else {
    throw new IllegalStateException("abort() can only be called when IndexWriter was opened with autoCommit=false");
  }
}
