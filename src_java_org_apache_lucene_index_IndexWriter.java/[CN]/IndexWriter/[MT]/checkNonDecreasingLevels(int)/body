{
  int lowerBound=-1;
  int upperBound=minMergeDocs;
  for (int i=segmentInfos.size() - 1; i >= start; i--) {
    int docCount=segmentInfos.info(i).docCount;
    if (docCount <= lowerBound) {
      return false;
    }
    while (docCount > upperBound) {
      lowerBound=upperBound;
      upperBound*=mergeFactor;
    }
  }
  return true;
}
