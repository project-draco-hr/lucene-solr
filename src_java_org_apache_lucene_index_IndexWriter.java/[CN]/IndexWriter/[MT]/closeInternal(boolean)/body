{
  docWriter.pauseAllThreads();
  try {
    if (infoStream != null)     message("now flush at close");
    docWriter.close();
    if (!hitOOM) {
      flush(waitForMerges,true,true);
    }
    if (waitForMerges)     mergeScheduler.merge(this);
    mergePolicy.close();
    finishMerges(waitForMerges);
    mergeScheduler.close();
    if (infoStream != null)     message("now call final commit()");
    if (!hitOOM) {
      commit(0);
    }
    if (infoStream != null)     message("at close: " + segString());
synchronized (this) {
      readerPool.close();
      docWriter=null;
      deleter.close();
    }
    if (closeDir)     directory.close();
    if (writeLock != null) {
      writeLock.release();
      writeLock=null;
    }
synchronized (this) {
      closed=true;
    }
  }
 catch (  OutOfMemoryError oom) {
    handleOOM(oom,"closeInternal");
  }
 finally {
synchronized (this) {
      closing=false;
      notifyAll();
      if (!closed) {
        if (docWriter != null)         docWriter.resumeAllThreads();
        if (infoStream != null)         message("hit exception while closing");
      }
    }
  }
}
