{
  if (!closed) {
    flush(true,true);
    if (commitPending) {
      segmentInfos.write(directory);
      deleter.checkpoint(segmentInfos,true);
      commitPending=false;
      rollbackSegmentInfos=null;
    }
    if (writeLock != null) {
      writeLock.release();
      writeLock=null;
    }
    closed=true;
    docWriter=null;
    if (closeDir)     directory.close();
  }
}
