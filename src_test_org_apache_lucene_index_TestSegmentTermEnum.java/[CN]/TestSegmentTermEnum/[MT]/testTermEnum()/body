{
  IndexWriter writer=null;
  try {
    writer=new IndexWriter(dir,new WhitespaceAnalyzer(),true);
    for (int i=0; i < 100; i++) {
      addDoc(writer,"aaa");
      addDoc(writer,"aaa bbb");
    }
    writer.close();
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
  try {
    verifyDocFreq();
    writer=new IndexWriter(dir,new WhitespaceAnalyzer(),false);
    writer.optimize();
    writer.close();
    verifyDocFreq();
  }
 catch (  IOException e2) {
    e2.printStackTrace();
  }
}
