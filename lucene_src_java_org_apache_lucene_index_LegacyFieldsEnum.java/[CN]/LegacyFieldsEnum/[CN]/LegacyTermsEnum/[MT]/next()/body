{
  if (terms == null) {
    terms=r.terms(new Term(field,""));
    final Term t=terms.term();
    if (t == null || t.field != field) {
      return null;
    }
 else {
      tr.copy(terms.term().text());
      return current=tr;
    }
  }
 else   if (terms.next()) {
    if (terms.term().field == field) {
      tr.copy(terms.term().text());
      return current=tr;
    }
 else {
      return null;
    }
  }
 else {
    return null;
  }
}
