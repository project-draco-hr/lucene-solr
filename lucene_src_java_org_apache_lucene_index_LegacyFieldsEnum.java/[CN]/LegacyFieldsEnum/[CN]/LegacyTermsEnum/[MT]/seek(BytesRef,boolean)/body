{
  if (terms != null) {
    terms.close();
  }
  terms=r.terms(new Term(field,text.utf8ToString()));
  final Term t=terms.term();
  if (t == null) {
    current=null;
    return SeekStatus.END;
  }
 else   if (t.field() == field) {
    tr.copy(t.text());
    current=tr;
    if (text.bytesEquals(tr)) {
      return SeekStatus.FOUND;
    }
 else {
      return SeekStatus.NOT_FOUND;
    }
  }
 else {
    return SeekStatus.END;
  }
}
