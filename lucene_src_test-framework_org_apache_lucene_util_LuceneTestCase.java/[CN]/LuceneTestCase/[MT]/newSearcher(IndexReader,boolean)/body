{
  if (random.nextBoolean()) {
    if (maybeWrap && rarely()) {
      r=new SlowMultiReaderWrapper(r);
    }
    IndexSearcher ret=random.nextBoolean() ? new AssertingIndexSearcher(r) : new AssertingIndexSearcher(r.getTopReaderContext());
    ret.setSimilarityProvider(similarityProvider);
    return ret;
  }
 else {
    int threads=0;
    final ExecutorService ex=(random.nextBoolean()) ? null : Executors.newFixedThreadPool(threads=_TestUtil.nextInt(random,1,8),new NamedThreadFactory("LuceneTestCase"));
    if (ex != null && VERBOSE) {
      System.out.println("NOTE: newSearcher using ExecutorService with " + threads + " threads");
    }
    IndexSearcher ret=random.nextBoolean() ? new AssertingIndexSearcher(r,ex){
      @Override public void close() throws IOException {
        super.close();
        shutdownExecutorService(ex);
      }
    }
 : new AssertingIndexSearcher(r.getTopReaderContext(),ex){
      @Override public void close() throws IOException {
        super.close();
        shutdownExecutorService(ex);
      }
    }
;
    ret.setSimilarityProvider(similarityProvider);
    return ret;
  }
}
