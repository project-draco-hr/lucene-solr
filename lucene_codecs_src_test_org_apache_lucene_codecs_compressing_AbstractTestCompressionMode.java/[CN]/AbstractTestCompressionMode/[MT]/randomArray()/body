{
  final int max=random().nextBoolean() ? random().nextInt(4) : random().nextInt(256);
  final int length=random().nextBoolean() ? random().nextInt(20) : random().nextInt(192 * 1024);
  final byte[] arr=new byte[length];
  for (int i=0; i < arr.length; ++i) {
    arr[i]=(byte)RandomInts.randomIntBetween(random(),0,max);
  }
  return arr;
}
