{
  if (this.searcher != null) {
    throw new IllegalStateException("highlightWithoutSearcher should only be called on a " + getClass().getSimpleName() + " without an IndexSearcher.");
  }
  Objects.requireNonNull(content,"content is required");
  SortedSet<Term> queryTerms=extractTerms(query);
  return getFieldHighlighter(field,query,queryTerms,maxPassages).highlightFieldForDoc(null,-1,content);
}
