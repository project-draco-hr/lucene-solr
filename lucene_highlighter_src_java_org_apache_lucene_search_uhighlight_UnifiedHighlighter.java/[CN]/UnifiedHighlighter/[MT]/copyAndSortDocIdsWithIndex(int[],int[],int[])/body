{
  System.arraycopy(docIdsIn,0,docIds,0,docIdsIn.length);
  for (int i=0; i < docInIndexes.length; i++) {
    docInIndexes[i]=i;
  }
  new InPlaceMergeSorter(){
    @Override protected void swap(    int i,    int j){
      int tmp=docIds[i];
      docIds[i]=docIds[j];
      docIds[j]=tmp;
      tmp=docInIndexes[i];
      docInIndexes[i]=docInIndexes[j];
      docInIndexes[j]=tmp;
    }
    @Override protected int compare(    int i,    int j){
      return Integer.compare(docIds[i],docIds[j]);
    }
  }
.sort(0,docIds.length);
}
