{
synchronized (modifyLock) {
    if (cores.containsKey(name)) {
      return true;
    }
    if (transientCores.containsKey(name)) {
      for (      SolrCore core : pendingCloses) {
        if (core.getName().equals(name)) {
          return false;
        }
      }
      return true;
    }
  }
  return false;
}
