{
  Directory directory=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random(),directory,newIndexWriterConfig(analyzer).setMaxBufferedDocs(TestUtil.nextInt(random(),100,1000)).setMergePolicy(newLogMergePolicy()));
  for (  String s : vals) {
    Document d=new Document();
    d.add(newTextField(FIELD,s,Field.Store.YES));
    writer.addDocument(d);
  }
  writer.shutdown();
  return directory;
}
