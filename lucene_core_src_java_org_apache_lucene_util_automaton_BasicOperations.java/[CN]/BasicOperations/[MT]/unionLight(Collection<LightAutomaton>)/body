{
  LightAutomaton result=new LightAutomaton();
  result.createState();
  LightAutomaton.Transition t=new LightAutomaton.Transition();
  for (  LightAutomaton a : l) {
    result.copy(a);
  }
  int stateOffset=1;
  for (  LightAutomaton a : l) {
    result.addEpsilon(0,stateOffset);
    stateOffset+=a.getNumStates();
  }
  result.finish();
  return result;
}
