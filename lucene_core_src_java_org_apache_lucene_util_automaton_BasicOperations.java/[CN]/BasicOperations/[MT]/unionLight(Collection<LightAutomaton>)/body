{
  LightAutomaton result=new LightAutomaton();
  result.createState();
  Transition t=new Transition();
  for (  LightAutomaton a : l) {
    result.copy(a);
  }
  int stateOffset=1;
  for (  LightAutomaton a : l) {
    if (a.getNumStates() == 0) {
      continue;
    }
    result.addEpsilon(0,stateOffset);
    stateOffset+=a.getNumStates();
  }
  result.finish();
  return result;
}
