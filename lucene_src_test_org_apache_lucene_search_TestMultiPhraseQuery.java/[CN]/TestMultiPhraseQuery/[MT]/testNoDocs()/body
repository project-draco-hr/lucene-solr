{
  MockRAMDirectory indexStore=new MockRAMDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(newRandom(),indexStore,new IndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer()));
  add("a note","note",writer);
  IndexReader reader=writer.getReader();
  IndexSearcher searcher=new IndexSearcher(reader);
  MultiPhraseQuery q=new MultiPhraseQuery();
  q.add(new Term("body","a"));
  q.add(new Term[]{new Term("body","nope"),new Term("body","nope")});
  assertEquals("Wrong number of hits",0,searcher.search(q,null,1).totalHits);
  searcher.explain(q,0);
  writer.close();
  searcher.close();
  reader.close();
  indexStore.close();
}
