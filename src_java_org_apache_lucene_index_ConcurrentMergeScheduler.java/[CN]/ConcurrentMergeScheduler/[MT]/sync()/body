{
  while (mergeThreadCount() > 0) {
    if (VERBOSE) {
      message("now wait for threads; currently " + mergeThreads.size() + " still running");
      for (int i=0; i < mergeThreads.size(); i++)       message("    " + i + ": "+ ((MergeThread)mergeThreads.get(i)));
    }
    try {
      wait();
    }
 catch (    InterruptedException e) {
    }
  }
}
