{
  StandardPostingsReader docsReader=new StandardPostingsReaderImpl(state.dir,state.segmentInfo,state.readBufferSize);
  StandardPostingsReader pulsingReader=new PulsingPostingsReaderImpl(docsReader);
  StandardTermsIndexReader indexReader;
  boolean success=false;
  try {
    indexReader=new SimpleStandardTermsIndexReader(state.dir,state.fieldInfos,state.segmentInfo.name,state.termsIndexDivisor,BytesRef.getUTF8SortedAsUTF16Comparator());
    success=true;
  }
  finally {
    if (!success) {
      pulsingReader.close();
    }
  }
  success=false;
  try {
    FieldsProducer ret=new StandardTermsDictReader(indexReader,state.dir,state.fieldInfos,state.segmentInfo.name,pulsingReader,state.readBufferSize,BytesRef.getUTF8SortedAsUTF16Comparator(),StandardCodec.TERMS_CACHE_SIZE);
    success=true;
    return ret;
  }
  finally {
    if (!success) {
      try {
        pulsingReader.close();
      }
  finally {
        indexReader.close();
      }
    }
  }
}
