{
  if (shift > 31 || shift < 0)   throw new IllegalArgumentException("Illegal shift value, must be 0..31");
  int nChars=(31 - shift) / 7 + 1;
  final char[] arr=new char[nChars + 1];
  arr[0]=(char)(SHIFT_START_INT + shift);
  int sortableBits=val ^ 0x80000000;
  sortableBits>>>=shift;
  while (nChars >= 1) {
    arr[nChars--]=(char)(sortableBits & 0x7f);
    sortableBits>>>=7;
  }
  return new String(arr);
}
