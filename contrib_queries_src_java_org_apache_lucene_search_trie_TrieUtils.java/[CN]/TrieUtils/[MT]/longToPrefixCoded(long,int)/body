{
  if (shift > 63 || shift < 0)   throw new IllegalArgumentException("Illegal shift value, must be 0..63");
  int nChars=(63 - shift) / 7 + 1;
  final char[] arr=new char[nChars + 1];
  arr[0]=(char)(SHIFT_START_LONG + shift);
  long sortableBits=val ^ 0x8000000000000000L;
  sortableBits>>>=shift;
  while (nChars >= 1) {
    arr[nChars--]=(char)(sortableBits & 0x7f);
    sortableBits>>>=7;
  }
  return new String(arr);
}
