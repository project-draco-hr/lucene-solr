{
  super(directory,fileName,readBufferSize);
  if (!writeable) {
    try {
      stream=directory.openInput(fileName,readBufferSize);
      initForRead(CompoundFileDirectory.readEntries(stream,directory,fileName));
    }
 catch (    IOException e) {
      IOUtils.closeSafely(e,stream);
    }
  }
 else {
    initForWrite();
  }
}
