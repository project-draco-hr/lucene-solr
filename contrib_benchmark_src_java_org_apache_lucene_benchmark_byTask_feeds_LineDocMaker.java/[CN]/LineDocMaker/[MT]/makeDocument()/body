{
  String line;
synchronized (this) {
    while (true) {
      line=fileIn.readLine();
      if (line == null) {
        if (!forever)         throw new NoMoreDataException();
 else {
          openFile();
        }
      }
 else {
        break;
      }
    }
  }
  return getDocState().setFields(line);
}
