{
  String line;
synchronized (this) {
    while (true) {
      line=fileIn.readLine();
      if (line == null) {
        openFile();
        if (!forever)         throw new NoMoreDataException();
      }
 else {
        break;
      }
    }
  }
  if (doReuseFields)   return getDocState().setFields(line);
 else   return localDocState.setFields(line);
}
