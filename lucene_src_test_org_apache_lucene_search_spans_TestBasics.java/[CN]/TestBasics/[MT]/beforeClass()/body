{
  directory=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random,directory,newIndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer(MockTokenizer.SIMPLE,true,true)).setMaxBufferedDocs(_TestUtil.nextInt(random,50,1000)));
  for (int i=0; i < 2000; i++) {
    Document doc=new Document();
    doc.add(newField("field",English.intToEnglish(i),Field.Store.YES,Field.Index.ANALYZED));
    writer.addDocument(doc);
  }
  reader=writer.getReader();
  searcher=new IndexSearcher(SlowMultiReaderWrapper.wrap(reader));
  writer.close();
}
