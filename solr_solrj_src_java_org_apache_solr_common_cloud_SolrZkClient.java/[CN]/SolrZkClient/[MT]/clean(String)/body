{
  List<String> children;
  try {
    children=getChildren(path,null,true);
  }
 catch (  NoNodeException r) {
    return;
  }
  for (  String string : children) {
    if (path.equals("/")) {
      clean(path + string);
    }
 else {
      clean(path + "/" + string);
    }
  }
  try {
    if (!path.equals("/")) {
      delete(path,-1,true);
    }
  }
 catch (  NoNodeException r) {
    return;
  }
}
