{
  if (retryOnConnLoss) {
    return zkCmdExecutor.retryOperation(new ZkOperation(){
      @Override public List<String> execute() throws KeeperException, InterruptedException {
        return keeper.getChildren(path,watcher);
      }
    }
);
  }
 else {
    return keeper.getChildren(path,watcher);
  }
}
