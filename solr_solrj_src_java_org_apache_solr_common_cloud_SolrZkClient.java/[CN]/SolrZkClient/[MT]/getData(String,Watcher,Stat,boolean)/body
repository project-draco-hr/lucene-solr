{
  if (retryOnConnLoss) {
    return zkCmdExecutor.retryOperation(new ZkOperation(){
      @Override public byte[] execute() throws KeeperException, InterruptedException {
        return keeper.getData(path,wrapWatcher(watcher),stat);
      }
    }
);
  }
 else {
    return keeper.getData(path,wrapWatcher(watcher),stat);
  }
}
