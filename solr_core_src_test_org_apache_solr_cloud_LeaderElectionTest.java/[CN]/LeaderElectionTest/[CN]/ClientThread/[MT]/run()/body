{
  try {
    setupOnConnect();
  }
 catch (  InterruptedException e) {
    log.error("setup failed",e);
    if (this.zkClient != null) {
      this.zkClient.close();
    }
    return;
  }
catch (  Throwable e) {
    log.error("setup failed",e);
    if (this.zkClient != null) {
      this.zkClient.close();
    }
    return;
  }
  while (!stop) {
    try {
      Thread.sleep(100);
    }
 catch (    InterruptedException e) {
      return;
    }
  }
}
