{
  monkeyLog("kill shard! " + jetty.getLocalPort());
  FilterHolder fh=jetty.getDispatchFilter();
  SolrDispatchFilter sdf=null;
  if (fh != null) {
    sdf=(SolrDispatchFilter)fh.getFilter();
  }
  jetty.stop();
  if (sdf != null) {
    sdf.destroy();
  }
  if (!jetty.isStopped()) {
    throw new RuntimeException("could not kill jetty");
  }
}
