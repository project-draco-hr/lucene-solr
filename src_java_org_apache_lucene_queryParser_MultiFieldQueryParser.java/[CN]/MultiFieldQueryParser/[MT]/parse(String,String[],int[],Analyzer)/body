{
  BooleanQuery bQuery=new BooleanQuery();
  for (int i=0; i < fields.length; i++) {
    Query q=parse(query,fields[i],analyzer);
    int flag=flags[i];
switch (flag) {
case REQUIRED_FIELD:
      bQuery.add(q,true,false);
    break;
case PROHIBITED_FIELD:
  bQuery.add(q,false,true);
break;
default :
bQuery.add(q,false,false);
break;
}
}
return bQuery;
}
