{
  if (queries.length != fields.length)   throw new ParseException("queries.length != fields.length");
  BooleanQuery bQuery=new BooleanQuery();
  for (int i=0; i < fields.length; i++) {
    Query q=parse(queries[i],fields[i],analyzer);
    int flag=flags[i];
switch (flag) {
case REQUIRED_FIELD:
      bQuery.add(q,BooleanClause.Occur.MUST);
    break;
case PROHIBITED_FIELD:
  bQuery.add(q,BooleanClause.Occur.MUST_NOT);
break;
default :
bQuery.add(q,BooleanClause.Occur.SHOULD);
break;
}
}
return bQuery;
}
