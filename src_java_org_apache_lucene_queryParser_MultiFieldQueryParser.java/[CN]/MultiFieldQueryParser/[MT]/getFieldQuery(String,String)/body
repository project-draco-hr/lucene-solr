{
  if (field == null) {
    Vector clauses=new Vector();
    for (int i=0; i < fields.length; i++)     clauses.add(new BooleanClause(super.getFieldQuery(fields[i],queryText),BooleanClause.Occur.SHOULD));
    return getBooleanQuery(clauses,true);
  }
  return super.getFieldQuery(field,queryText);
}
