{
  final Weight w=super.createNormalizedWeight(query,needsScores);
  return new AssertingWeight(random,w){
    @Override public void normalize(    float norm,    float topLevelBoost){
      throw new IllegalStateException("Weight already normalized.");
    }
    @Override public float getValueForNormalization(){
      throw new IllegalStateException("Weight already normalized.");
    }
  }
;
}
