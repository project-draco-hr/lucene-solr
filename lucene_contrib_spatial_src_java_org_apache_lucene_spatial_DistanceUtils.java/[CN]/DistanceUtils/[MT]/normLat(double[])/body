{
  if (latLng[0] > DEG_90) {
    latLng[0]=DEG_90 - (latLng[0] - DEG_90);
    if (latLng[1] < 0) {
      latLng[1]=latLng[1] + DEG_180;
    }
 else {
      latLng[1]=latLng[1] - DEG_180;
    }
  }
 else   if (latLng[0] < -DEG_90) {
    latLng[0]=-DEG_90 - (latLng[0] + DEG_90);
    if (latLng[1] < 0) {
      latLng[1]=latLng[1] + DEG_180;
    }
 else {
      latLng[1]=latLng[1] - DEG_180;
    }
  }
}
