{
  final String aliasName=req.getParams().get(NAME);
  if (!SolrIdentifierValidator.validateCollectionName(aliasName)) {
    throw new SolrException(ErrorCode.BAD_REQUEST,"Invalid alias: " + aliasName + ". Aliases must consist entirely of periods, underscores, and alphanumerics");
  }
  return req.getParams().required().getAll(null,NAME,"collections");
}
