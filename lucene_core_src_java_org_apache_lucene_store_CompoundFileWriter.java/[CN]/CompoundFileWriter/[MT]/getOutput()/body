{
  if (dataOut == null) {
    boolean success=false;
    try {
      dataOut=directory.createOutput(dataFileName,IOContext.DEFAULT);
      dataOut.writeVInt(FORMAT_CURRENT);
      success=true;
    }
  finally {
      if (!success) {
        IOUtils.closeWhileHandlingException(dataOut);
      }
    }
  }
  return dataOut;
}
