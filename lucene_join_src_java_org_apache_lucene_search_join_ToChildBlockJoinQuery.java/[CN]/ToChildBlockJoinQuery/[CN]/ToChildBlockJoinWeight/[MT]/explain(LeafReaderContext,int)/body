{
  ToChildBlockJoinScorer scorer=(ToChildBlockJoinScorer)scorer(context);
  if (scorer != null && scorer.iterator().advance(doc) == doc) {
    int parentDoc=scorer.getParentDoc();
    return Explanation.match(scorer.score(),String.format(Locale.ROOT,"Score based on parent document %d",parentDoc + context.docBase),parentWeight.explain(context,parentDoc));
  }
  return Explanation.noMatch("Not a match");
}
