{
  Logger tst=Logger.getLogger("org.apache.solr.SolrTestCaseJ4");
  tst.setLevel(Level.INFO);
  Log4jInfo wrap=new Log4jInfo(tst.getName(),tst);
  assertQ("Show Log Levels OK",req(CommonParams.QT,"/admin/logging"),"//arr[@name='loggers']/lst/str[.='" + wrap.getName() + "']/../str[@name='level'][.='"+ wrap.getLevel()+ "']","//arr[@name='loggers']/lst/str[.='org.apache']/../null[@name='level']");
  assertQ("Set and remove a level",req(CommonParams.QT,"/admin/logging","set","org.xxx.yyy.abc:null","set","org.xxx.yyy.zzz:TRACE"),"//arr[@name='loggers']/lst/str[.='org.xxx.yyy.zzz']/../str[@name='level'][.='TRACE']");
}
