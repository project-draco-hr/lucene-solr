{
  try {
    r=new Random(base + range + seed);
    for (int i=0; i < iterations; i++) {
      int what=nextInt(100);
      if (what < 5) {
        deleteDoc();
      }
 else       if (what < 10) {
        deleteByQuery();
      }
 else {
        indexDoc();
      }
    }
  }
 catch (  Throwable e) {
    throw new RuntimeException(e);
  }
synchronized (this) {
    docs.size();
  }
}
