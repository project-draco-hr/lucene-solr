{
  super(args);
  pattern=getPattern(args,"pattern");
  replacement=args.remove("replacement");
  String v=args.remove("replace");
  if (v == null || v.equals("all")) {
    replaceAll=true;
  }
 else   if (v.equals("first")) {
    replaceAll=false;
  }
 else {
    throw new IllegalArgumentException("Configuration Error: " + "'replace' must be 'first' or 'all' in " + getClass().getName());
  }
  if (!args.isEmpty()) {
    throw new IllegalArgumentException("Unknown parameters: " + args);
  }
}
