{
  super.init(args);
  p=getPattern("pattern");
  replacement=args.get("replacement");
  String r=args.get("replace");
  if (null != r) {
    if (r.equals("all")) {
      all=true;
    }
 else {
      if (r.equals("first")) {
        all=false;
      }
 else {
        throw new IllegalArgumentException("Configuration Error: 'replace' must be 'first' or 'all' in " + this.getClass().getName());
      }
    }
  }
}
