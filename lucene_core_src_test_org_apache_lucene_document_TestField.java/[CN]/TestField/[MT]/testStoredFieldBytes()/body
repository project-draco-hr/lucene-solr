{
  Field fields[]=new Field[]{new StoredField("foo","bar".getBytes("UTF-8")),new StoredField("foo","bar".getBytes("UTF-8"),0,3),new StoredField("foo",new BytesRef("bar"))};
  for (  Field field : fields) {
    trySetBoost(field);
    trySetByteValue(field);
    field.setBytesValue("baz".getBytes("UTF-8"));
    field.setBytesValue(new BytesRef("baz"));
    trySetDoubleValue(field);
    trySetIntValue(field);
    trySetFloatValue(field);
    trySetLongValue(field);
    trySetReaderValue(field);
    trySetShortValue(field);
    trySetStringValue(field);
    trySetTokenStreamValue(field);
    assertEquals(new BytesRef("baz"),field.binaryValue());
  }
}
