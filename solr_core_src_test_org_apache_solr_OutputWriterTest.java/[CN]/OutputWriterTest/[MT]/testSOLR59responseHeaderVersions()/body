{
  lrf.args.remove(CommonParams.VERSION);
  lrf.args.put("wt","standard");
  assertQ(req("foo"),"/response/lst[@name='responseHeader']/int[@name='status'][.='0']");
  lrf.args.remove("wt");
  assertQ(req("foo"),"/response/lst[@name='responseHeader']/int[@name='QTime']");
  lrf.args.put("wt","standard");
  assertQ(req("foo"),"/response/lst[@name='responseHeader']/int[@name='status'][.='0']");
  lrf.args.remove("wt");
  assertQ(req("foo"),"/response/lst[@name='responseHeader']/int[@name='QTime']");
}
