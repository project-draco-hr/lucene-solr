{
  SolrQuery q=new SolrQuery("dog");
  q.set("sort","price asc,date desc,qty desc");
  q.removeSortField("date",SolrQuery.ORDER.desc);
  Assert.assertEquals(2,q.getSortFields().length);
  q.set("sort","price asc, date desc, qty desc");
  q.removeSortField("date",SolrQuery.ORDER.desc);
  Assert.assertEquals(2,q.getSortFields().length);
}
