{
  String[] files;
  try {
    files=directory.listAll();
  }
 catch (  NoSuchDirectoryException nsde) {
    return false;
  }
  if (files != null) {
    String prefix=IndexFileNames.SEGMENTS + "_";
    for (    String file : files) {
      if (file.startsWith(prefix) || file.equals(IndexFileNames.SEGMENTS_GEN)) {
        return true;
      }
    }
  }
  return false;
}
