{
  LOG.info("reload()");
  if (dictionary == null && storeDir != null) {
    FileInputStream is=new FileInputStream(new File(storeDir,factory.storeFileName()));
    try {
      if (lookup.load(is)) {
        return;
      }
    }
  finally {
      IOUtils.closeWhileHandlingException(is);
    }
    LOG.debug("load failed, need to build Lookup again");
  }
  build(core,searcher);
}
