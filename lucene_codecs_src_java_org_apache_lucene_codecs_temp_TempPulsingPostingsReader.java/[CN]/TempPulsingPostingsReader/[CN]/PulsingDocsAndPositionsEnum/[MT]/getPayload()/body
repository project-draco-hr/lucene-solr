{
  if (payloadRetrieved) {
    return payload;
  }
 else   if (storePayloads && payloadLength > 0) {
    payloadRetrieved=true;
    if (payload == null) {
      payload=new BytesRef(payloadLength);
    }
 else {
      payload.grow(payloadLength);
    }
    postings.readBytes(payload.bytes,0,payloadLength);
    payload.length=payloadLength;
    return payload;
  }
 else {
    return null;
  }
}
