{
  Directory dir=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random,dir,new MockAnalyzer(random,MockTokenizer.WHITESPACE,true));
  Document doc=new Document();
  doc.add(new Field("hasMaybepayload","here we go",Field.Store.YES,Field.Index.ANALYZED));
  writer.addDocument(doc);
  writer.close();
  writer=new RandomIndexWriter(random,dir,new MockAnalyzer(random,MockTokenizer.WHITESPACE,true));
  doc=new Document();
  doc.add(new Field("hasMaybepayload2","here we go",Field.Store.YES,Field.Index.ANALYZED));
  writer.addDocument(doc);
  writer.addDocument(doc);
  writer.optimize();
  writer.close();
  _TestUtil.checkIndex(dir);
  dir.close();
}
