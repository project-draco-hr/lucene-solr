{
  Directory dir=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random,dir,new MockAnalyzer(MockTokenizer.WHITESPACE,true,true));
  Document doc=new Document();
  doc.add(new Field("haspayload","here we go",Field.Store.YES,Field.Index.ANALYZED));
  writer.addDocument(doc);
  writer.close();
  writer=new RandomIndexWriter(random,dir,new MockAnalyzer(MockTokenizer.WHITESPACE,true,false));
  doc=new Document();
  doc.add(new Field("nopayload","here we go",Field.Store.YES,Field.Index.ANALYZED));
  writer.addDocument(doc);
  writer.addDocument(doc);
  writer.optimize();
  writer.close();
  _TestUtil.checkIndex(dir);
  dir.close();
}
