{
  String recoverDirectory=null;
  if (this.storageDirectory.endsWith("/") || this.storageDirectory.endsWith("\\"))   recoverDirectory=this.storageDirectory.substring(0,this.storageDirectory.length() - 1) + System.getProperty("file.separator") + RECOVERDIRECTORY;
 else   recoverDirectory=this.storageDirectory + System.getProperty("file.separator") + RECOVERDIRECTORY;
  File recoverDirectoryFile=new File(recoverDirectory);
  return new RecoverController(recoverDirectoryFile,doRecover,keepfiles);
}
