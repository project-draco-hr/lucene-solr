{
  for (; ; ) {
    advanceHead:     for (; ; ) {
      for (int i=1; i < docsAndFreqs.length; i++) {
        if (docsAndFreqs[i].doc < doc) {
          docsAndFreqs[i].doc=docsAndFreqs[i].scorer.advance(doc);
          if (docsAndFreqs[i].doc > doc) {
            doc=docsAndFreqs[i].doc;
            break advanceHead;
          }
        }
      }
      return doc;
    }
    doc=lead.doc=lead.scorer.advance(doc);
  }
}
