{
  if (!(core.getResourceLoader() instanceof ZkSolrResourceLoader))   return;
  final ZkSolrResourceLoader zkSolrResourceLoader=(ZkSolrResourceLoader)core.getResourceLoader();
  if (zkSolrResourceLoader != null)   zkSolrResourceLoader.getZkController().registerConfListenerForCore(zkSolrResourceLoader.getConfigSetZkPath(),core,getListener(core,zkSolrResourceLoader));
}
