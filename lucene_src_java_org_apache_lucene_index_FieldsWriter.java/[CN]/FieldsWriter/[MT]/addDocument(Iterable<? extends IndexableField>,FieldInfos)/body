{
  indexStream.writeLong(fieldsStream.getFilePointer());
  int storedCount=0;
  for (  IndexableField field : doc) {
    if (field.fieldType().stored()) {
      storedCount++;
    }
  }
  fieldsStream.writeVInt(storedCount);
  for (  IndexableField field : doc) {
    if (field.fieldType().stored()) {
      writeField(fieldInfos.fieldNumber(field.name()),field);
    }
  }
}
