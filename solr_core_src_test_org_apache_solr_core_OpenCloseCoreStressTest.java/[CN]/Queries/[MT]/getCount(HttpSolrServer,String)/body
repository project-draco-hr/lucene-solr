{
  ModifiableSolrParams params=new ModifiableSolrParams();
  params.set("qt","/select");
  params.set("q","*:*");
  long numFound=0;
  try {
    QueryResponse response=server.query(params);
    numFound=response.getResults().getNumFound();
  }
 catch (  SolrServerException e) {
    e.printStackTrace();
  }
  return numFound;
}
