{
  ModifiableSolrParams params=new ModifiableSolrParams();
  params.set("qt","/select");
  params.set("q","*:*");
  long numFound=0;
  client.setBaseURL(baseUrl + core);
  try {
    QueryResponse response=client.query(params);
    numFound=response.getResults().getNumFound();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  return numFound;
}
