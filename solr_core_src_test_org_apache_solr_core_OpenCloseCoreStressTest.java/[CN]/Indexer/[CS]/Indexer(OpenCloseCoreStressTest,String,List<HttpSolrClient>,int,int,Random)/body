{
  stopTime=System.currentTimeMillis() + (secondsToRun * 1000);
  nextTime=System.currentTimeMillis() + 60000;
  docsThisCycle.set(0);
  qTimesAccum.set(0);
  updateCounts.set(0);
  for (int idx=0; idx < numThreads; ++idx) {
    OneIndexer one=new OneIndexer(OCCST,url,clients.get(idx),random.nextLong());
    _threads.add(one);
    one.start();
  }
}
