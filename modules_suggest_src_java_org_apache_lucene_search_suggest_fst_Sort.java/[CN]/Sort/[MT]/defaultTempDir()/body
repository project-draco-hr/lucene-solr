{
  String tempDirPath=System.getProperty("java.io.tmpdir");
  if (tempDirPath == null)   throw new IOException("Java has no temporary folder property (java.io.tmpdir)?");
  File tempDirectory=new File(tempDirPath);
  if (!tempDirectory.exists() || !tempDirectory.canWrite()) {
    throw new IOException("Java's temporary folder not present or writeable?: " + tempDirectory.getAbsolutePath());
  }
  return tempDirectory;
}
