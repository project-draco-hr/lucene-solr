{
  String collection=DEFAULT_COLLECTION;
  String connectionString="jdbc:solr://" + zkServer.getZkAddress() + "?collection="+ collection+ "&username=&password=&testKey1=testValue&testKey2";
  try (Connection con=DriverManager.getConnection(connectionString)){
    assertEquals(collection,con.getCatalog());
    DatabaseMetaData databaseMetaData=con.getMetaData();
    assertNotNull(databaseMetaData);
    assertEquals(connectionString,databaseMetaData.getURL());
    try (Statement statement=con.createStatement()){
      assertEquals(con,statement.getConnection());
    }
   }
 }
