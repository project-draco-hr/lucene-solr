{
  final Number number=super.numericValue();
  if (number == null)   return null;
  if (fieldType().numericType() == FieldType.LegacyNumericType.DOUBLE)   return Double.doubleToLongBits(number.doubleValue());
  if (fieldType().numericType() == FieldType.LegacyNumericType.FLOAT)   return Float.floatToIntBits(number.floatValue());
  return number.longValue();
}
