{
  Thread t=new Thread(){
    @Override public void run(){
      try {
        new SimpleRateLimiter(1).pause((long)(1.5 * Integer.MAX_VALUE * 1024* 1024 / 1000));
        fail("should have been interrupted");
      }
 catch (      ThreadInterruptedException tie) {
      }
    }
  }
;
  t.start();
  Thread.sleep(10);
  t.interrupt();
}
