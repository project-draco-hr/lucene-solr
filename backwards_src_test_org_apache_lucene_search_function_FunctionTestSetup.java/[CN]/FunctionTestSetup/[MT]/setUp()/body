{
  super.setUp();
  super.setUp();
  dir=new RAMDirectory();
  anlzr=new StandardAnalyzer(org.apache.lucene.util.Version.LUCENE_CURRENT);
  IndexWriter iw=new IndexWriter(dir,anlzr,IndexWriter.MaxFieldLength.LIMITED);
  int remaining=N_DOCS;
  boolean done[]=new boolean[N_DOCS];
  int i=0;
  while (remaining > 0) {
    if (done[i]) {
      throw new Exception("to set this test correctly N_DOCS=" + N_DOCS + " must be primary and greater than 2!");
    }
    addDoc(iw,i);
    done[i]=true;
    i=(i + 4) % N_DOCS;
    remaining--;
  }
  iw.close();
}
