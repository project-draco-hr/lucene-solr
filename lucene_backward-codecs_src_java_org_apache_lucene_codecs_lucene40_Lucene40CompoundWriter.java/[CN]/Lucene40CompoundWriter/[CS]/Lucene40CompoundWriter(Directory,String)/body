{
  if (dir == null)   throw new NullPointerException("directory cannot be null");
  if (name == null)   throw new NullPointerException("name cannot be null");
  directory=dir;
  entryTableName=IndexFileNames.segmentFileName(IndexFileNames.stripExtension(name),"",Lucene40CompoundFormat.COMPOUND_FILE_ENTRIES_EXTENSION);
  dataFileName=name;
}
