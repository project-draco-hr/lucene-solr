{
  NormsConsumer consumer=codec.normsFormat().normsConsumer(segmentWriteState);
  boolean success=false;
  try {
    consumer.merge(mergeState);
    success=true;
  }
  finally {
    if (success) {
      IOUtils.close(consumer);
    }
 else {
      IOUtils.closeWhileHandlingException(consumer);
    }
  }
}
