{
  if (maxLon < minLon) {
    BooleanQuery.Builder bqb=new BooleanQuery.Builder();
    GeoPointDistanceQueryImpl left=new GeoPointDistanceQueryImpl(field,this,new GeoRect(GeoUtils.MIN_LON_INCL,maxLon,minLat,maxLat));
    bqb.add(new BooleanClause(left,BooleanClause.Occur.SHOULD));
    GeoPointDistanceQueryImpl right=new GeoPointDistanceQueryImpl(field,this,new GeoRect(minLon,GeoUtils.MAX_LON_INCL,minLat,maxLat));
    bqb.add(new BooleanClause(right,BooleanClause.Occur.SHOULD));
    return bqb.build();
  }
  return new GeoPointDistanceQueryImpl(field,this,new GeoRect(this.minLon,this.maxLon,this.minLat,this.maxLat));
}
