{
  if (maxLon < minLon) {
    BooleanQuery.Builder bqb=new BooleanQuery.Builder();
    GeoPointDistanceQueryImpl left=new GeoPointDistanceQueryImpl(field,this,new GeoBoundingBox(-180.0D,maxLon,minLat,maxLat));
    bqb.add(new BooleanClause(left,BooleanClause.Occur.SHOULD));
    GeoPointDistanceQueryImpl right=new GeoPointDistanceQueryImpl(field,this,new GeoBoundingBox(minLon,180.0D,minLat,maxLat));
    bqb.add(new BooleanClause(right,BooleanClause.Occur.SHOULD));
    return bqb.build();
  }
  return new GeoPointDistanceQueryImpl(field,this,new GeoBoundingBox(this.minLon,this.maxLon,this.minLat,this.maxLat));
}
