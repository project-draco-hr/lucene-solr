{
  final double lonDistDeg=GeoDistanceUtils.distanceToDegreesLon(centerLat,radius);
  final double latDistDeg=GeoDistanceUtils.distanceToDegreesLat(centerLat,radius);
  return new GeoBoundingBox(GeoUtils.normalizeLon(centerLon - lonDistDeg),GeoUtils.normalizeLon(centerLon + lonDistDeg),GeoUtils.normalizeLat(centerLat - latDistDeg),GeoUtils.normalizeLat(centerLat + latDistDeg));
}
