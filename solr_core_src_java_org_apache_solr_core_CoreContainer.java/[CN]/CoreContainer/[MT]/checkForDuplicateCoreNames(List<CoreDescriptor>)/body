{
  Map<String,Path> addedCores=Maps.newHashMap();
  for (  CoreDescriptor cd : cds) {
    final String name=cd.getName();
    if (addedCores.containsKey(name))     throw new SolrException(ErrorCode.SERVER_ERROR,String.format(Locale.ROOT,"Found multiple cores with the name [%s], with instancedirs [%s] and [%s]",name,addedCores.get(name),cd.getInstanceDir()));
    addedCores.put(name,cd.getInstanceDir());
  }
}
