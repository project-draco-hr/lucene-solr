{
  SolrCore core;
synchronized (locker) {
    core=cores.get(name);
    if (core != null) {
      core.open();
      return core;
    }
    if (dynamicDescriptors.size() == 0) {
      return null;
    }
    core=transientCores.get(name);
    if (core != null) {
      core.open();
      return core;
    }
  }
  return null;
}
