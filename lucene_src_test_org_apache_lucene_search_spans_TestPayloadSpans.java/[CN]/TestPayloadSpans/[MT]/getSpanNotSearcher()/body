{
  MockRAMDirectory directory=new MockRAMDirectory();
  IndexWriter writer=new IndexWriter(directory,new IndexWriterConfig(TEST_VERSION_CURRENT,new PayloadAnalyzer()).setSimilarity(similarity));
  Document doc=new Document();
  doc.add(new Field(PayloadHelper.FIELD,"one two three one four three",Field.Store.YES,Field.Index.ANALYZED));
  writer.addDocument(doc);
  writer.close();
  IndexSearcher searcher=new IndexSearcher(directory,true);
  searcher.setSimilarity(similarity);
  return searcher;
}
