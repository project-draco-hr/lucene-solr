{
  for (int towait=timeout; towait > 0; towait-=250) {
    try {
      if (triggered) {
        RefCounted<SolrIndexSearcher> holder=core.getSearcher();
        SolrIndexSearcher s=holder.get();
        holder.decref();
        if (s != currentSearcher)         return true;
        Thread.sleep(250);
        break;
      }
      Thread.sleep(250);
    }
 catch (    InterruptedException e) {
    }
  }
  return false;
}
