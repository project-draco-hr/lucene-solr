{
synchronized (lock) {
    ensureOpen();
    if (off < 0 || off > cbuf.length || len < 0 || off + len > cbuf.length) {
      throw new IndexOutOfBoundsException("off=" + off + " len="+ len+ " cbuf.length="+ cbuf.length);
    }
    if (len == 0) {
      return 0;
    }
    if (next >= length) {
      return -1;
    }
    int n=Math.min(length - next,len);
    sb.getChars(next,next + n,cbuf,off);
    next+=n;
    return n;
  }
}
