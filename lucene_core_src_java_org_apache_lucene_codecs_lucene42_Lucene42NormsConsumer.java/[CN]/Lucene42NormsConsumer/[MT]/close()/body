{
  boolean success=false;
  try {
    if (meta != null) {
      meta.writeVInt(-1);
      CodecUtil.writeFooter(meta);
    }
    if (data != null) {
      CodecUtil.writeFooter(data);
    }
    success=true;
  }
  finally {
    if (success) {
      IOUtils.close(data,meta);
    }
 else {
      IOUtils.closeWhileHandlingException(data,meta);
    }
    meta=data=null;
  }
}
