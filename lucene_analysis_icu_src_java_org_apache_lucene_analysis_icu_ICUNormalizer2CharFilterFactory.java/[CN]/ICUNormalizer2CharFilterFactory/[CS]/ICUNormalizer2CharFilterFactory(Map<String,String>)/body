{
  super(args);
  String name=get(args,"name","nfkc_cf");
  String mode=get(args,"mode",Arrays.asList("compose","decompose"),"compose");
  Normalizer2 normalizer=Normalizer2.getInstance(null,name,"compose".equals(mode) ? Normalizer2.Mode.COMPOSE : Normalizer2.Mode.DECOMPOSE);
  String filter=get(args,"filter");
  if (filter != null) {
    UnicodeSet set=new UnicodeSet(filter);
    if (!set.isEmpty()) {
      set.freeze();
      normalizer=new FilteredNormalizer2(normalizer,set);
    }
  }
  if (!args.isEmpty()) {
    throw new IllegalArgumentException("Unknown parameters: " + args);
  }
  this.normalizer=normalizer;
}
