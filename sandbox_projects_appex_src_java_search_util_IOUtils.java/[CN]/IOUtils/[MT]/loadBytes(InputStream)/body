{
  int count=0;
  byte[] buffer=new byte[0];
  byte[] chunk=new byte[4096];
  while ((count=is.read(chunk)) >= 0) {
    byte[] t=new byte[buffer.length + count];
    System.arraycopy(buffer,0,t,0,buffer.length);
    System.arraycopy(chunk,0,t,buffer.length,count);
    buffer=t;
  }
  return buffer;
}
