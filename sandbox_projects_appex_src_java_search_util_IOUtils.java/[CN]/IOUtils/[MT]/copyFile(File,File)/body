{
  if (!from_file.exists())   throw new IOException("FileCopy: no such source file: " + from_file.getName());
  if (!from_file.isFile())   throw new IOException("FileCopy: can't copy directory: " + from_file.getName());
  if (!from_file.canRead())   throw new IOException("FileCopy: source file is unreadable: " + from_file.getName());
  FileInputStream from=null;
  FileOutputStream to=null;
  try {
    from=new FileInputStream(from_file);
    to=new FileOutputStream(to_file);
    byte[] buffer=new byte[8192];
    int bytes_read;
    while ((bytes_read=from.read(buffer)) != -1)     to.write(buffer,0,bytes_read);
  }
  finally {
    if (from != null)     try {
      from.close();
    }
 catch (    IOException e) {
      ;
    }
    if (to != null)     try {
      to.close();
    }
 catch (    IOException e) {
      ;
    }
  }
}
