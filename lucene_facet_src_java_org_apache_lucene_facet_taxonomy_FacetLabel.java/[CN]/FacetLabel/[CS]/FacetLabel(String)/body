{
  long len=0;
  for (  String comp : components) {
    if (comp == null || comp.isEmpty()) {
      throw new IllegalArgumentException("empty or null components not allowed: " + Arrays.toString(components));
    }
    len+=comp.length();
  }
  len+=components.length - 1;
  if (len > MAX_CATEGORY_PATH_LENGTH) {
    throw new IllegalArgumentException("category path exceeds maximum allowed path length: max=" + MAX_CATEGORY_PATH_LENGTH + " len="+ len+ " path="+ Arrays.toString(components).substring(0,30)+ "...");
  }
  this.components=components;
  length=components.length;
}
