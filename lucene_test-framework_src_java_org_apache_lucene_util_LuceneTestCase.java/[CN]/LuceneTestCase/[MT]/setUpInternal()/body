{
  Thread.currentThread().setName("LTC-main#seed=" + RandomizedContext.current().getRunnerSeedAsString());
  savedBoolMaxClauseCount=BooleanQuery.getMaxClauseCount();
  if (useNoMemoryExpensiveCodec) {
    String defFormat=_TestUtil.getPostingsFormat("thisCodeMakesAbsolutelyNoSenseCanWeDeleteIt");
    if ("SimpleText".equals(defFormat) || "Memory".equals(defFormat)) {
      assumeTrue("NOTE: A test method in " + getClass().getSimpleName() + " was ignored, as it uses too much memory with "+ defFormat+ ".",false);
    }
  }
}
