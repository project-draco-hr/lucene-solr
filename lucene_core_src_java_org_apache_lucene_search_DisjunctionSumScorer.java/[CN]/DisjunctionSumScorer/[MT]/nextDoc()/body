{
  while (true) {
    while (subScorers[0].docID() == doc) {
      if (subScorers[0].nextDoc() != NO_MORE_DOCS) {
        heapAdjust(0);
      }
 else {
        heapRemoveRoot();
        if (numScorers < minimumNrMatchers) {
          return doc=NO_MORE_DOCS;
        }
      }
    }
    afterNext();
    if (nrMatchers >= minimumNrMatchers) {
      break;
    }
  }
  return doc;
}
