{
  PostingsWriterBase docsWriter=new Lucene40PostingsWriter(state);
  PostingsWriterBase pulsingWriterInner=new PulsingPostingsWriter(2,docsWriter);
  PostingsWriterBase pulsingWriter=new PulsingPostingsWriter(1,pulsingWriterInner);
  boolean success=false;
  try {
    InvertedFieldsConsumer ret=new BlockTreeTermsWriter(state,pulsingWriter,BlockTreeTermsWriter.DEFAULT_MIN_BLOCK_SIZE,BlockTreeTermsWriter.DEFAULT_MAX_BLOCK_SIZE);
    success=true;
    return ret;
  }
  finally {
    if (!success) {
      pulsingWriter.close();
    }
  }
}
