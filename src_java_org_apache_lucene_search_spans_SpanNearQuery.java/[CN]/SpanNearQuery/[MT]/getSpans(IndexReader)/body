{
  if (clauses.size() == 0)   return new SpanOrQuery(getClauses()).getPayloadSpans(reader);
  if (clauses.size() == 1)   return ((SpanQuery)clauses.get(0)).getPayloadSpans(reader);
  return inOrder ? (PayloadSpans)new NearSpansOrdered(this,reader,collectPayloads) : (PayloadSpans)new NearSpansUnordered(this,reader);
}
