{
  ArrayList<String> result=null;
  for (int i=0; i < 10; i++) {
    result=new ArrayList<>(CLOUD_CLIENT.getZkStateReader().getClusterState().getLiveNodes());
    if (expectedCount != result.size()) {
      log.info("sleeping #{} to give watchers a chance to finish: {} != {}",i,expectedCount,result.size());
      Thread.sleep(200);
    }
 else {
      break;
    }
  }
  if (expectedCount != result.size()) {
    log.error("gave up waiting for live nodes to match expected size: {} != {}",expectedCount,result.size());
  }
  Collections.sort(result);
  return result;
}
