{
  running=true;
  for (int i=0; running && i < numNodesToAdd; i++) {
    final String nodePath=ZkStateReader.LIVE_NODES_ZKNODE + "/thrasher-" + id+ "-"+ i;
    try {
      client.makePath(nodePath,CreateMode.EPHEMERAL,true);
      numAdded++;
    }
 catch (    Exception e) {
      log.error("failed to create: " + nodePath,e);
    }
  }
  return numAdded;
}
