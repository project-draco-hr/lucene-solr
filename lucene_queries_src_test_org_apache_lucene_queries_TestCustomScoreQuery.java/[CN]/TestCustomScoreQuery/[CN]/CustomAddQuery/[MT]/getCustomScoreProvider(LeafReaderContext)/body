{
  return new CustomScoreProvider(context){
    @Override public float customScore(    int doc,    float subQueryScore,    float valSrcScore){
      return subQueryScore + valSrcScore;
    }
    @Override public Explanation customExplain(    int doc,    Explanation subQueryExpl,    Explanation valSrcExpl){
      List<Explanation> subs=new ArrayList<>();
      subs.add(subQueryExpl);
      if (valSrcExpl != null) {
        subs.add(valSrcExpl);
      }
      float valSrcScore=valSrcExpl == null ? 0 : valSrcExpl.getValue();
      return Explanation.match(valSrcScore + subQueryExpl.getValue(),"custom score: sum of:",subs);
    }
  }
;
}
