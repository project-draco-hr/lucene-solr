{
  NumberFormat format=new DecimalFormat("000000000",DecimalFormatSymbols.getInstance(Locale.ROOT));
  Directory dir=newDirectory();
  IndexWriter w=new IndexWriter(dir,newIndexWriterConfig(new MockAnalyzer(random(),MockTokenizer.WHITESPACE,false)).setOpenMode(OpenMode.CREATE).setMergePolicy(NoMergePolicy.INSTANCE));
  for (int x=0; x < 11; x++) {
    Document doc=createDocument(x,"1",3,format);
    w.addDocument(doc);
    if (x % 3 == 0)     w.commit();
  }
  for (int x=11; x < 20; x++) {
    Document doc=createDocument(x,"2",3,format);
    w.addDocument(doc);
    if (x % 3 == 0)     w.commit();
  }
  w.shutdown();
  final Term midTerm=new Term("id",format.format(11));
  checkSplitting(dir,midTerm,11,9);
  w=new IndexWriter(dir,newIndexWriterConfig(new MockAnalyzer(random(),MockTokenizer.WHITESPACE,false)).setOpenMode(OpenMode.APPEND).setMergePolicy(NoMergePolicy.INSTANCE));
  w.deleteDocuments(midTerm);
  w.deleteDocuments(new Term("id",format.format(2)));
  w.shutdown();
  checkSplitting(dir,midTerm,10,8);
  dir.close();
}
