{
  final IndexInput slice=slice("randomaccess",offset,length);
  return new RandomAccessInput(){
    @Override public byte readByte(    long pos) throws IOException {
      slice.seek(pos);
      return slice.readByte();
    }
    @Override public short readShort(    long pos) throws IOException {
      slice.seek(pos);
      return slice.readShort();
    }
    @Override public int readInt(    long pos) throws IOException {
      slice.seek(pos);
      return slice.readInt();
    }
    @Override public long readLong(    long pos) throws IOException {
      slice.seek(pos);
      return slice.readLong();
    }
  }
;
}
