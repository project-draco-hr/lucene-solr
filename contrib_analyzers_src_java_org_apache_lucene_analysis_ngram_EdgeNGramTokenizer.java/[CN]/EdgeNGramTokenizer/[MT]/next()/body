{
  if (!started) {
    started=true;
    char[] chars=new char[1024];
    input.read(chars);
    inStr=new String(chars).trim();
    inLen=inStr.length();
    gramSize=minGram;
  }
  if (gramSize > inLen) {
    return null;
  }
  if (gramSize > maxGram) {
    return null;
  }
  Token tok;
  if (side == Side.FRONT) {
    tok=new Token(inStr.substring(0,gramSize),0,gramSize);
  }
 else {
    tok=new Token(inStr.substring(inLen - gramSize),inLen - gramSize,inLen);
  }
  gramSize++;
  return tok;
}
