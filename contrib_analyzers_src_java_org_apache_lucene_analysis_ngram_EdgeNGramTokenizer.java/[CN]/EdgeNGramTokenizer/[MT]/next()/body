{
  if (started)   return null;
  if (!started) {
    started=true;
    char[] chars=new char[1024];
    input.read(chars);
    inStr=new String(chars).trim();
    inLen=inStr.length();
  }
  if (gramSize > inLen)   return null;
  if (side == Side.FRONT)   return new Token(inStr.substring(0,gramSize),0,gramSize);
 else   return new Token(inStr.substring(inLen - gramSize),inLen - gramSize,inLen);
}
