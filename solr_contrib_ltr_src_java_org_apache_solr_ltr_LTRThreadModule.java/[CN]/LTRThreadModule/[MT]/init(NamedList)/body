{
  if (args != null) {
    SolrPluginUtils.invokeSetters(this,args);
  }
  validate();
  if (this.totalPoolThreads > 1) {
    ltrSemaphore=new Semaphore(totalPoolThreads);
  }
 else {
    ltrSemaphore=null;
  }
  createWeightScoreExecutor=new ExecutorUtil.MDCAwareThreadPoolExecutor(0,maxPoolSize,keepAliveTimeSeconds,TimeUnit.SECONDS,new SynchronousQueue<Runnable>(),new DefaultSolrThreadFactory(threadNamePrefix));
}
