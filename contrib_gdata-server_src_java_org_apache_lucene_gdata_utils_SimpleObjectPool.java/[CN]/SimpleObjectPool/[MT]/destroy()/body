{
  this.writeLock.lock();
  try {
    if (this.isDestroyed)     return;
    this.isDestroyed=true;
    LOG.info("Destroy all elements in the pool -- poolsize: " + this.pool.size());
    for (    Type type : this.pool) {
      this.factory.destroyInstance(type);
    }
    this.pool.clear();
  }
  finally {
    this.writeLock.unlock();
  }
}
