{
  Map<String,String> args=new HashMap<String,String>(DEFAULT_VERSION_PARAM);
  args.put(CapitalizationFilterFactory.MAX_WORD_COUNT,"2");
  CapitalizationFilterFactory factory=new CapitalizationFilterFactory();
  factory.init(args);
  Tokenizer tokenizer=new MockTokenizer(new StringReader("one two three four"),MockTokenizer.WHITESPACE,false);
  TokenStream ts=factory.create(tokenizer);
  assertTokenStreamContents(ts,new String[]{"One","Two","Three","Four"});
}
