{
  String algLines[]={"# ----- properties ","content.source=" + Reuters20ContentSource.class.getName(),"content.source.log.step=3","doc.term.vector=false","content.source.forever=false","directory=RAMDirectory","doc.stored=false","doc.tokenized=false","task.max.depth.log=1","# ----- alg ","CreateIndex","{ [ AddDoc]: 4} : * ","ResetInputs ","{ [ AddDoc]: 4} : * ","CloseIndex"};
  Benchmark benchmark=execBenchmark(algLines);
  IndexReader ir=IndexReader.open(benchmark.getRunData().getDirectory(),true);
  int ndocsExpected=2 * 20;
  assertEquals("wrong number of docs in the index!",ndocsExpected,ir.numDocs());
  ir.close();
}
