{
  String algLines[]={"# ----- properties ","content.source=" + Reuters20ContentSource.class.getName(),"content.source.log.step=3","doc.term.vector=false","content.source.forever=false","directory=FSDirectory","doc.stored=false","doc.tokenized=false","# ----- alg ","CreateIndex","[ { AddDoc } : * ] : 4 ","CloseIndex"};
  Benchmark benchmark=execBenchmark(algLines);
  IndexReader ir=IndexReader.open(benchmark.getRunData().getDirectory());
  int ndocsExpected=20;
  assertEquals("wrong number of docs in the index!",ndocsExpected,ir.numDocs());
  ir.close();
}
