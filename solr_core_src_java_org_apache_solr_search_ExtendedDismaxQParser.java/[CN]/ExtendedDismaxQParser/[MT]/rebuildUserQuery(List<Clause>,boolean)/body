{
  StringBuilder sb=new StringBuilder();
  for (int i=0; i < clauses.size(); i++) {
    Clause clause=clauses.get(i);
    String s=clause.raw;
    if (lowercaseOperators && i > 0 && i + 1 < clauses.size()) {
      if ("AND".equalsIgnoreCase(s)) {
        s="AND";
      }
 else       if ("OR".equalsIgnoreCase(s)) {
        s="OR";
      }
    }
    sb.append(s);
    sb.append(' ');
  }
  return sb.toString();
}
