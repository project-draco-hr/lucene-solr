{
  StandardAnalyzer oneStopAnalyzer=new StandardAnalyzer(TEST_VERSION_CURRENT,Collections.singleton("on"));
  QueryParserWrapper qp=new QueryParserWrapper("field",oneStopAnalyzer);
  Query q=qp.parse("on^1.0");
  assertNotNull(q);
  q=qp.parse("\"hello\"^2.0");
  assertNotNull(q);
  assertEquals(q.getBoost(),(float)2.0,(float)0.5);
  q=qp.parse("hello^2.0");
  assertNotNull(q);
  assertEquals(q.getBoost(),(float)2.0,(float)0.5);
  q=qp.parse("\"on\"^1.0");
  assertNotNull(q);
  QueryParserWrapper qp2=new QueryParserWrapper("field",new StandardAnalyzer(TEST_VERSION_CURRENT));
  q=qp2.parse("the^3");
  assertNotNull(q);
  assertEquals("",q.toString());
  assertEquals(1.0f,q.getBoost(),0.01f);
}
