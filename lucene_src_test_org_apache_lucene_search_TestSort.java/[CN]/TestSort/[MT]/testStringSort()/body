{
  sort.setSort(new SortField("string",SortField.Type.STRING),new SortField("string2",SortField.Type.STRING,true),SortField.FIELD_DOC);
  verifyStringSort(sort);
  sort.setSort(new SortField("string_fixed",SortField.Type.STRING),new SortField("string2_fixed",SortField.Type.STRING,true),SortField.FIELD_DOC);
  verifyStringSort(sort);
  assumeFalse("cannot work with preflex codec","Lucene3x".equals(Codec.getDefault().getName()));
  sort.setSort(useDocValues(new SortField("string",getDVStringSortType())),useDocValues(new SortField("string2",getDVStringSortType(),true)),SortField.FIELD_DOC);
  verifyStringSort(sort);
  sort.setSort(useDocValues(new SortField("string_fixed",getDVStringSortType())),useDocValues(new SortField("string2_fixed",getDVStringSortType(),true)),SortField.FIELD_DOC);
  verifyStringSort(sort);
}
