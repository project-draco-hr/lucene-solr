{
  boolean isSuccess=true;
  String contents[];
  try {
    contents=dir.listAll();
    if (contents != null) {
      for (      String file : contents) {
        dir.deleteFile(file);
      }
    }
  }
 catch (  IOException e) {
    SolrException.log(log,"Error deleting files from Directory",e);
    isSuccess=false;
  }
  return isSuccess;
}
