{
  boolean isSuccess=true;
  String contents[];
  try {
    contents=dir.listAll();
    if (contents != null) {
      dir.deleteFiles(Arrays.asList(contents));
    }
  }
 catch (  IOException e) {
    SolrException.log(log,"Error deleting files from Directory",e);
    isSuccess=false;
  }
  return isSuccess;
}
