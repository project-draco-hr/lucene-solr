{
  if (pendingMerges.size() == 0)   return null;
 else {
    Iterator<MergePolicy.OneMerge> it=pendingMerges.iterator();
    while (it.hasNext()) {
      MergePolicy.OneMerge merge=it.next();
      if (merge.isExternal) {
        it.remove();
        runningMerges.add(merge);
        return merge;
      }
    }
    return null;
  }
}
