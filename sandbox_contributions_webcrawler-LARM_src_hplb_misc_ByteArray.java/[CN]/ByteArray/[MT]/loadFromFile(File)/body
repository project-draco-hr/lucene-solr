{
  int n, nread=0, len=(int)file.length();
  FileInputStream fin=new FileInputStream(file);
  byte[] content=new byte[len];
  while (nread < len) {
    if ((n=fin.read(content,nread,len - nread)) == -1)     throw new IOException("Error loading Compound from file");
    nread+=n;
  }
  return content;
}
