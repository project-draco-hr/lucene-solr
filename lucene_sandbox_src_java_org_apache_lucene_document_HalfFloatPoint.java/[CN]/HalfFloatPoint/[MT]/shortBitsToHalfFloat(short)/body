{
  int sign=s >>> 15;
  int exp=(s >>> 10) & 0x1f;
  int mantissa=s & 0x3ff;
  if (exp == 0x1f) {
    exp=0xff;
    mantissa<<=(23 - 10);
  }
 else   if (mantissa == 0 && exp == 0) {
  }
 else {
    if (exp == 0) {
      int shift=Integer.numberOfLeadingZeros(mantissa) - (32 - 11);
      mantissa=(mantissa << shift) & 0x3ff;
      exp=exp - shift + 1;
    }
    exp=exp + 127 - 15;
    mantissa<<=(23 - 10);
  }
  return Float.intBitsToFloat((sign << 31) | (exp << 23) | mantissa);
}
