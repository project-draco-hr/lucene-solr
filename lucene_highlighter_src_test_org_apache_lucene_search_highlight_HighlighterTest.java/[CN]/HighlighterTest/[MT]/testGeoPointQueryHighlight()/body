{
  BooleanQuery boolQuery=new BooleanQuery.Builder().add(new BooleanClause(new GeoPointInBBoxQuery("geo_point",-64.92354174306496,61.10078883158897,-170.15625,118.47656249999999),BooleanClause.Occur.SHOULD)).add(new BooleanClause(new TermQuery(new Term(FIELD_NAME,"instances")),BooleanClause.Occur.SHOULD)).build();
  CustomScoreQuery query=new CustomScoreQuery(boolQuery);
  searcher=newSearcher(reader);
  TopDocs hits=searcher.search(query,10);
  QueryScorer scorer=new QueryScorer(query,FIELD_NAME);
  Highlighter highlighter=new Highlighter(scorer);
  final int docId0=hits.scoreDocs[0].doc;
  Document doc=searcher.doc(docId0);
  String storedField=doc.get(FIELD_NAME);
  TokenStream stream=getAnyTokenStream(FIELD_NAME,docId0);
  Fragmenter fragmenter=new SimpleSpanFragmenter(scorer);
  highlighter.setTextFragmenter(fragmenter);
  highlighter.getBestFragment(stream,storedField);
}
