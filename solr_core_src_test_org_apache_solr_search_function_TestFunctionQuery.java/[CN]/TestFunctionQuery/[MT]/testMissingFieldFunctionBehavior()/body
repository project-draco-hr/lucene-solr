{
  clearIndex();
  assertU(adoc("id","1"));
  assertU(commit());
  for (  String suffix : new String[]{"s","b","dt","tdt","i","l","f","d","pi","pl","pf","pd","ti","tl","tf","td"}) {
    final String field="no__vals____" + suffix;
    assertQ(req("q","id:1","fl","noval_if:if(" + field + ",42,-99)","fl","noval_def:def(" + field + ",-99)","fl","noval_not:not(" + field + ")","fl","noval_exists:exists(" + field + ")"),"//long[@name='noval_if']='-99'","//long[@name='noval_def']='-99'","//bool[@name='noval_not']='true'","//bool[@name='noval_exists']='false'");
  }
}
