{
  assertU(adoc("id","0"));
  assertU(adoc("id","1","floatdv","-1.3"));
  assertU(adoc("id","2","floatdv","4.2"));
  assertU(commit());
  assertQ(req("q","*:*","sort","floatdv asc"),"//result/doc[1]/str[@name='id'][.=1]","//result/doc[2]/str[@name='id'][.=0]","//result/doc[3]/str[@name='id'][.=2]");
  assertQ(req("q","*:*","sort","floatdv desc"),"//result/doc[1]/str[@name='id'][.=2]","//result/doc[2]/str[@name='id'][.=0]","//result/doc[3]/str[@name='id'][.=1]");
}
