{
  assertU(adoc("id","0"));
  assertU(adoc("id","1","stringdv","a"));
  assertU(adoc("id","2","stringdv","z"));
  assertU(commit());
  assertQ(req("q","*:*","sort","stringdv asc"),"//result/doc[1]/str[@name='id'][.=0]","//result/doc[2]/str[@name='id'][.=1]","//result/doc[3]/str[@name='id'][.=2]");
  assertQ(req("q","*:*","sort","stringdv desc"),"//result/doc[1]/str[@name='id'][.=2]","//result/doc[2]/str[@name='id'][.=1]","//result/doc[3]/str[@name='id'][.=0]");
}
