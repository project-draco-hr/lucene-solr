{
  assertU(adoc("id","0"));
  assertU(adoc("id","1","datedv_missinglast","1900-12-31T23:59:59.999Z"));
  assertU(adoc("id","2","datedv_missinglast","2005-12-31T23:59:59.999Z"));
  assertU(commit());
  assertQ(req("q","*:*","sort","datedv_missinglast asc"),"//result/doc[1]/str[@name='id'][.=1]","//result/doc[2]/str[@name='id'][.=2]","//result/doc[3]/str[@name='id'][.=0]");
  assertQ(req("q","*:*","sort","datedv_missinglast desc"),"//result/doc[1]/str[@name='id'][.=2]","//result/doc[2]/str[@name='id'][.=1]","//result/doc[3]/str[@name='id'][.=0]");
}
