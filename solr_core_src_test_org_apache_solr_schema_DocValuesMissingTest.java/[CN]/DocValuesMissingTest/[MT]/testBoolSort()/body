{
  for (  String field : new String[]{"booldv","dyn_booldv"}) {
    assertU(adoc("id","0"));
    assertU(adoc("id","1",field,"false"));
    assertU(adoc("id","2",field,"true"));
    assertU(commit());
    assertQ(req("q","*:*","sort",field + " asc"),"//result/doc[1]/str[@name='id'][.=0]","//result/doc[2]/str[@name='id'][.=1]","//result/doc[3]/str[@name='id'][.=2]");
    assertQ(req("q","*:*","sort",field + " desc"),"//result/doc[1]/str[@name='id'][.=2]","//result/doc[2]/str[@name='id'][.=1]","//result/doc[3]/str[@name='id'][.=0]");
  }
}
