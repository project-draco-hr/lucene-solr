{
  boolean inPoly=false;
  for (int i=1; i < polyLons.length; i++) {
    if (polyLons[i] <= lon && polyLons[i - 1] > lon || polyLons[i - 1] <= lon && polyLons[i] > lon) {
      if (polyLats[i] + (lon - polyLons[i]) / (polyLons[i - 1] - polyLons[i]) * (polyLats[i - 1] - polyLats[i]) <= lat) {
        inPoly=!inPoly;
      }
    }
  }
  return inPoly;
}
