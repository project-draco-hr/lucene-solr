{
  del("*:*");
  commit();
  handle.clear();
  handle.put("timestamp",SKIPVAL);
  handle.put("grouped",UNORDERED);
  int docid=1;
  int group=5;
  for (int shard=0; shard < shardCount; ++shard) {
    addDoc(docid,group,shard);
    clients.get(shard).commit();
  }
  QueryResponse rsp=queryServer(params("q",id_s1 + ":" + docid,"shards",shards,"group","true","group.field",id_s1,"group.limit",Integer.toString(shardCount),"hl","true","hl.fl",id_s1));
  assertEquals(1,rsp.getHighlighting().values().size());
}
