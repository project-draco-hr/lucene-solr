{
  for (int docId=1; docId <= numDocs; docId++) {
    SolrInputDocument doc=new SolrInputDocument();
    doc.addField("id",docId);
    doc.addField("text","shard" + docId % 5);
    cloudClient.setDefaultCollection(collection);
    cloudClient.add(doc);
  }
  if (commit) {
    cloudClient.commit();
  }
}
