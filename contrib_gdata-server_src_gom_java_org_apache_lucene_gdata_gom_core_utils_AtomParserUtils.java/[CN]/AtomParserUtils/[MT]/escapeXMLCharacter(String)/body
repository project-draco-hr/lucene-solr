{
  StringBuilder builder=new StringBuilder();
  char[] cs=aString.toCharArray();
  for (int i=0; i < cs.length; i++) {
switch (cs[i]) {
case '<':
      builder.append("&lt;");
    break;
case '>':
  builder.append("&gt;");
break;
case '"':
builder.append("&quot;");
break;
case '\'':
builder.append("&apos;");
break;
case '&':
builder.append("&amp;");
break;
case '\0':
break;
default :
builder.append(cs[i]);
}
}
return builder.toString();
}
