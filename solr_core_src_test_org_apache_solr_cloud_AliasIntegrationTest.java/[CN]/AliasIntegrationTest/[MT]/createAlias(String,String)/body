{
  if (random().nextBoolean()) {
    ModifiableSolrParams params=new ModifiableSolrParams();
    params.set("collections",collections);
    params.set("name",alias);
    params.set("action",CollectionAction.CREATEALIAS.toString());
    QueryRequest request=new QueryRequest(params);
    request.setPath("/admin/collections");
    NamedList<Object> result=createNewSolrServer("",getBaseUrl((HttpSolrServer)clients.get(0))).request(request);
  }
 else {
    CollectionAdminResponse resp=CollectionAdminRequest.CreateAlias.createAlias(alias,collections,createNewSolrServer("",getBaseUrl((HttpSolrServer)clients.get(0))));
  }
}
