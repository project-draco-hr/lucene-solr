{
  if (pendingCount > 0) {
    flushBlock();
  }
  out.writeVInt(0);
  fieldIndexWriter.finish(out.getFilePointer());
  if (numTerms > 0) {
    fields.add(new FieldMetaData(fieldInfo,numTerms,termsStartPointer,fieldInfo.getIndexOptions().compareTo(IndexOptions.DOCS_AND_FREQS) >= 0 ? sumTotalTermFreq : -1,sumDocFreq,docsSeen.cardinality(),longsSize));
  }
}
