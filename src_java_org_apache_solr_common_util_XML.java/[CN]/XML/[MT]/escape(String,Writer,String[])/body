{
  int start=0;
  for (int i=start; i < str.length(); i++) {
    char ch=str.charAt(i);
    String subst=null;
    if (ch < escapes.length) {
      subst=escapes[ch];
    }
    if (subst != null) {
      if (start < i) {
        out.write(str.substring(start,i));
      }
      out.write(subst);
      start=i + 1;
    }
  }
  if (start == 0) {
    out.write(str);
  }
 else   if (start < str.length()) {
    out.write(str.substring(start));
  }
}
