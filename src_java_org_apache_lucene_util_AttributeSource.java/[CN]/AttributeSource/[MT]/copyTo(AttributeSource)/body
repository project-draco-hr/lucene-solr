{
  if (hasAttributes()) {
    if (currentState == null) {
      computeCurrentState();
    }
    for (State state=currentState; state != null; state=state.next) {
      final AttributeImpl targetImpl=target.attributeImpls.get(state.attribute.getClass());
      if (targetImpl == null) {
        throw new IllegalArgumentException("This AttributeSource contains AttributeImpl of type " + state.attribute.getClass() + " that is not in the target");
      }
      state.attribute.copyTo(targetImpl);
    }
  }
}
