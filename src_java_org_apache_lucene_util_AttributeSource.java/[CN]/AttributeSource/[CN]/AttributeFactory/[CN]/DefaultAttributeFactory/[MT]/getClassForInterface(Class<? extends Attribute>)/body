{
synchronized (attClassImplMap) {
    Class<? extends AttributeImpl> clazz=attClassImplMap.get(attClass);
    if (clazz == null) {
      try {
        attClassImplMap.put(attClass,clazz=Class.forName(attClass.getName() + "Impl",true,attClass.getClassLoader()).asSubclass(AttributeImpl.class));
      }
 catch (      ClassNotFoundException e) {
        throw new IllegalArgumentException("Could not find implementing class for " + attClass.getName());
      }
    }
    return clazz;
  }
}
