{
  String wordFiles=args.get("words");
  ignoreCase=getBoolean("ignoreCase",false);
  if (wordFiles != null) {
    if (words == null)     words=new HashSet<String>();
    try {
      java.io.File keepWordsFile=new File(wordFiles);
      if (keepWordsFile.exists()) {
        List<String> wlist=loader.getLines(wordFiles);
        words=StopFilter.makeStopSet((String[])wlist.toArray(new String[0]),ignoreCase);
      }
 else {
        List<String> files=StrUtils.splitFileNames(wordFiles);
        for (        String file : files) {
          List<String> wlist=loader.getLines(file.trim());
          words.addAll(StopFilter.makeStopSet((String[])wlist.toArray(new String[0]),ignoreCase));
        }
      }
    }
 catch (    IOException e) {
      throw new RuntimeException(e);
    }
  }
}
