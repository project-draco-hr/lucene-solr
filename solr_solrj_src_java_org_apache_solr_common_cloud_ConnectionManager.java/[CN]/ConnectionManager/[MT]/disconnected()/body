{
  cancelTimer();
  if (!isClosed) {
    disconnectedTimer=new Timer(true);
    disconnectedTimer.schedule(new TimerTask(){
      @Override public void run(){
        likelyExpired=true;
      }
    }
,(long)(client.getZkClientTimeout() * 0.90));
    if (isClosed) {
      cancelTimer();
    }
  }
  connected=false;
  notifyAll();
}
