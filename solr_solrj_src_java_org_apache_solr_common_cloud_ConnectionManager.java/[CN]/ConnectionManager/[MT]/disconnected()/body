{
  cancelTimer();
  if (!isClosed) {
    Timer newDcTimer=new Timer(true);
    newDcTimer.schedule(new TimerTask(){
      @Override public void run(){
        likelyExpired=true;
      }
    }
,(long)(client.getZkClientTimeout() * 0.90));
    if (isClosed) {
      newDcTimer.cancel();
    }
 else {
      disconnectedTimer=newDcTimer;
      if (isClosed) {
        cancelTimer();
      }
    }
  }
  connected=false;
  notifyAll();
}
