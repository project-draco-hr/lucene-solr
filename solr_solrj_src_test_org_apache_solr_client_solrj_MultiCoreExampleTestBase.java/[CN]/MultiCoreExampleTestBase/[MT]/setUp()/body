{
  super.setUp();
  setupCoreContainer();
  SolrCore.log.info("CORES=" + cores + " : "+ cores.getCoreNames());
  cores.setPersistent(false);
  dataDir1=new File(TEMP_DIR,getClass().getName() + "-core0-" + System.currentTimeMillis());
  dataDir1.mkdirs();
  dataDir2=new File(TEMP_DIR,getClass().getName() + "-core1-" + System.currentTimeMillis());
  dataDir2.mkdirs();
  System.setProperty("solr.core0.data.dir",this.dataDir1.getCanonicalPath());
  System.setProperty("solr.core1.data.dir",this.dataDir2.getCanonicalPath());
}
