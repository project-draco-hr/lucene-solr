{
  Directory dir=newDirectory();
  IndexWriter writer=new IndexWriter(dir,newIndexWriterConfig(new MockAnalyzer(random(),MockTokenizer.WHITESPACE,false)).setMaxBufferedDeleteTerms(1));
  writer.addDocument(new Document());
  writer.deleteDocuments(new Term("foobar","1"));
  writer.deleteDocuments(new Term("foobar","1"));
  writer.deleteDocuments(new Term("foobar","1"));
  assertEquals(3,writer.getFlushDeletesCount());
  writer.shutdown();
  dir.close();
}
