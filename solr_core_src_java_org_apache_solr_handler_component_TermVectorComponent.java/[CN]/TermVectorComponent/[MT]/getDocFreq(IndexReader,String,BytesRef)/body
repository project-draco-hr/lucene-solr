{
  int result=1;
  try {
    Terms terms=MultiFields.getTerms(reader,field);
    if (terms != null) {
      TermsEnum termsEnum=terms.iterator(null);
      if (termsEnum.seekExact(term,true)) {
        result=termsEnum.docFreq();
      }
    }
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
  return result;
}
