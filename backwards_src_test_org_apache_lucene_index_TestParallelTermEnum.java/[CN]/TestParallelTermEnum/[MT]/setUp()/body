{
  super.setUp();
  Document doc;
  RAMDirectory rd1=new RAMDirectory();
  IndexWriter iw1=new IndexWriter(rd1,new SimpleAnalyzer(),true,IndexWriter.MaxFieldLength.LIMITED);
  doc=new Document();
  doc.add(new Field("field1","the quick brown fox jumps",Store.YES,Index.ANALYZED));
  doc.add(new Field("field2","the quick brown fox jumps",Store.YES,Index.ANALYZED));
  doc.add(new Field("field4","",Store.NO,Index.ANALYZED));
  iw1.addDocument(doc);
  iw1.close();
  RAMDirectory rd2=new RAMDirectory();
  IndexWriter iw2=new IndexWriter(rd2,new SimpleAnalyzer(),true,IndexWriter.MaxFieldLength.LIMITED);
  doc=new Document();
  doc.add(new Field("field0","",Store.NO,Index.ANALYZED));
  doc.add(new Field("field1","the fox jumps over the lazy dog",Store.YES,Index.ANALYZED));
  doc.add(new Field("field3","the fox jumps over the lazy dog",Store.YES,Index.ANALYZED));
  iw2.addDocument(doc);
  iw2.close();
  this.ir1=IndexReader.open(rd1,true);
  this.ir2=IndexReader.open(rd2,true);
}
