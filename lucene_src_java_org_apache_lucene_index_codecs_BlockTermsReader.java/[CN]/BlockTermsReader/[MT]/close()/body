{
  try {
    try {
      if (indexReader != null) {
        indexReader.close();
      }
    }
  finally {
      indexReader=null;
      if (in != null) {
        in.close();
      }
    }
  }
  finally {
    try {
      if (postingsReader != null) {
        postingsReader.close();
      }
    }
  finally {
      for (      FieldReader field : fields.values()) {
        field.close();
      }
    }
  }
}
