{
  Polygon hole=new Polygon(new double[]{-10,-10,10,10,-10},new double[]{-10,10,10,-10,-10});
  Polygon outer=new Polygon(new double[]{-50,-50,50,50,-50},new double[]{-50,50,50,-50,-50},hole);
  Polygon island=new Polygon(new double[]{-5,-5,5,5,-5},new double[]{-5,5,5,-5,-5});
  Polygon polygons[]=new Polygon[]{outer,island};
  assertTrue(Polygon.contains(polygons,-2,2));
  assertFalse(Polygon.contains(polygons,-6,6));
  assertTrue(Polygon.contains(polygons,-25,25));
  assertFalse(Polygon.contains(polygons,-51,51));
  assertTrue(Polygon.contains(polygons,-2,2,-2,2));
  assertFalse(Polygon.contains(polygons,6,7,6,7));
  assertTrue(Polygon.contains(polygons,24,25,24,25));
  assertFalse(Polygon.contains(polygons,51,52,51,52));
  assertFalse(Polygon.contains(polygons,-60,60,-60,60));
  assertFalse(Polygon.contains(polygons,49,51,49,51));
  assertFalse(Polygon.contains(polygons,9,11,9,11));
  assertFalse(Polygon.contains(polygons,5,6,5,6));
  assertTrue(Polygon.crosses(polygons,-60,60,-60,60));
  assertTrue(Polygon.crosses(polygons,49,51,49,51));
  assertTrue(Polygon.crosses(polygons,9,11,9,11));
  assertTrue(Polygon.crosses(polygons,5,6,5,6));
}
