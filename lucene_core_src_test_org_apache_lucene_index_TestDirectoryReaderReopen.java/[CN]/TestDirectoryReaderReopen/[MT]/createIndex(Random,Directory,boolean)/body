{
  IndexWriter w=new IndexWriter(dir,LuceneTestCase.newIndexWriterConfig(random,new MockAnalyzer(random)).setMergePolicy(new LogDocMergePolicy()));
  for (int i=0; i < 100; i++) {
    w.addDocument(createDocument(i,4));
    if (multiSegment && (i % 10) == 0) {
      w.commit();
    }
  }
  if (!multiSegment) {
    w.forceMerge(1);
  }
  w.close();
  DirectoryReader r=DirectoryReader.open(dir);
  if (multiSegment) {
    assertTrue(r.leaves().size() > 1);
  }
 else {
    assertTrue(r.leaves().size() == 1);
  }
  r.close();
}
