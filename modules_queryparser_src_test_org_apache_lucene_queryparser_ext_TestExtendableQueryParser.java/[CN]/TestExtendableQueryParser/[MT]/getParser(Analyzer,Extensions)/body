{
  if (a == null)   a=new MockAnalyzer(random(),MockTokenizer.SIMPLE,true);
  QueryParser qp=extensions == null ? new ExtendableQueryParser(TEST_VERSION_CURRENT,"field",a) : new ExtendableQueryParser(TEST_VERSION_CURRENT,"field",a,extensions);
  qp.setDefaultOperator(QueryParserBase.OR_OPERATOR);
  return qp;
}
