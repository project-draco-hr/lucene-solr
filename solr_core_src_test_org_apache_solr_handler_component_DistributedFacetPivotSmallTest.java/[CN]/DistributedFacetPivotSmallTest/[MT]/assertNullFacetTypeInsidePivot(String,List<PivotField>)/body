{
  for (  PivotField pivot : pivots) {
    if (facetType == FacetParams.FACET_QUERY) {
      assertNull("pivot=" + pivot + " facetType="+ facetType+ " should've been null. Found: "+ pivot.getFacetQuery(),pivot.getFacetQuery());
    }
 else     if (facetType == FacetParams.FACET_RANGE) {
      assertNull("pivot=" + pivot + " facetType="+ facetType+ " should've been null. Found: "+ pivot.getFacetRanges(),pivot.getFacetRanges());
    }
    if (pivot.getPivot() != null) {
      assertNullFacetTypeInsidePivot(facetType,pivot.getPivot());
    }
  }
}
