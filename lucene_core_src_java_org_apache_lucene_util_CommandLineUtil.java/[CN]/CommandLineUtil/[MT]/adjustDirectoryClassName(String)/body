{
  if (clazzName == null || clazzName.trim().length() == 0) {
    throw new IllegalArgumentException("The " + FSDirectory.class.getSimpleName() + " implementation must not be null or empty");
  }
  if (clazzName.indexOf(".") == -1) {
    clazzName=Directory.class.getPackage().getName() + "." + clazzName;
  }
  return clazzName;
}
