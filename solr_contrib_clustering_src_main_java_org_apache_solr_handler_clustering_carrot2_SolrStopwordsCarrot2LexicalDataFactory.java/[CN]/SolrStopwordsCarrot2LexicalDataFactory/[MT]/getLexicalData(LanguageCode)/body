{
  final ILexicalData carrot2LexicalData=carrot2LexicalDataFactory.getLexicalData(languageCode);
  return new ILexicalData(){
    @Override public boolean isStopLabel(    CharSequence word){
      return carrot2LexicalData.isStopLabel(word);
    }
    @Override public boolean isCommonWord(    MutableCharArray word){
      for (      String fieldName : fieldNames) {
        for (        CharArraySet stopWords : getSolrStopWordsForField(fieldName)) {
          if (stopWords.contains(word)) {
            return true;
          }
        }
      }
      return carrot2LexicalData.isCommonWord(word);
    }
  }
;
}
