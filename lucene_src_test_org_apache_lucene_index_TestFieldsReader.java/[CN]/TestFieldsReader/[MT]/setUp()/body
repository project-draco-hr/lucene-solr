{
  super.setUp();
  fieldInfos=new FieldInfos();
  DocHelper.setupDoc(testDoc);
  fieldInfos.add(testDoc);
  IndexWriterConfig conf=new IndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer());
