{
  if (task instanceof ResetInputsTask) {
    exhausted=false;
    resetExhausted=true;
  }
 else {
    if (task instanceof TaskSequence) {
      TaskSequence t=(TaskSequence)task;
      if (t.resetExhausted) {
        exhausted=false;
        resetExhausted=true;
        t.resetExhausted=false;
      }
 else {
        exhausted|=t.exhausted;
      }
    }
  }
}
