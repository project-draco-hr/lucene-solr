{
  long timeout=System.nanoTime() + TimeUnit.NANOSECONDS.convert(timeoutms,TimeUnit.MILLISECONDS);
  while (true) {
    try {
      cmd.execute();
    }
 catch (    Throwable t) {
      if (clazz.isInstance(t) && System.nanoTime() < timeout) {
        Thread.sleep(intervalms);
        continue;
      }
      throw t;
    }
    break;
  }
}
