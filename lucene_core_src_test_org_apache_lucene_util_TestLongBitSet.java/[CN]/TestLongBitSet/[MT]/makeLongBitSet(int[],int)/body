{
  LongBitSet bs;
  if (random().nextBoolean()) {
    int bits2words=LongBitSet.bits2words(numBits);
    long[] words=new long[bits2words + random().nextInt(100)];
    bs=new LongBitSet(words,numBits);
  }
 else {
    bs=new LongBitSet(numBits);
  }
  for (  int e : a) {
    bs.set(e);
  }
  return bs;
}
