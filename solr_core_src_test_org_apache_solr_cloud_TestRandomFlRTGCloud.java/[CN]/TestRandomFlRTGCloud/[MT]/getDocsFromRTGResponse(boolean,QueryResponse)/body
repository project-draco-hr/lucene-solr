{
  if (null != rsp.getResults()) {
    return rsp.getResults();
  }
  final SolrDocumentList result=new SolrDocumentList();
  NamedList<Object> raw=rsp.getResponse();
  Object doc=raw.get("doc");
  if (null != doc) {
    result.add((SolrDocument)doc);
    result.setNumFound(1);
  }
  return result;
}
