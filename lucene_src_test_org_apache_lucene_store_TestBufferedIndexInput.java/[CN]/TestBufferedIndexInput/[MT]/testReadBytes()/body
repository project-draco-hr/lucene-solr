  runReadBytesAndClose(new SimpleFSIndexInput("SimpleFSIndexInput(path=\"" + tmpInputFile + "\")",tmpInputFile,newIOContext(random),10),inputBufferSize,random);
  runReadBytesAndClose(new NIOFSIndexInput(tmpInputFile,newIOContext(random),10),inputBufferSize,random);
}
