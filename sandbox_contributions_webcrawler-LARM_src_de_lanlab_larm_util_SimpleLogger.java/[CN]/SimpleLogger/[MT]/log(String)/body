{
  try {
    buffer.setLength(0);
    if (includeDate) {
      buffer.append(formatter.format(new Date())).append(": ").append(System.currentTimeMillis() - startTime).append(" ms: ");
    }
    buffer.append(text).append("\n");
    logFile.write(buffer.toString());
    if (flushAtOnce) {
      logFile.flush();
    }
  }
 catch (  IOException e) {
    System.out.println("Couldn't write to logfile");
  }
}
