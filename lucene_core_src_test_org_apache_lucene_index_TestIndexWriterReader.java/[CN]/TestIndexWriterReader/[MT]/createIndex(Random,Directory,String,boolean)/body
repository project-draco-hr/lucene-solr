{
  IndexWriter w=new IndexWriter(dir1,LuceneTestCase.newIndexWriterConfig(random,new MockAnalyzer(random)).setMergePolicy(new LogDocMergePolicy()));
  for (int i=0; i < 100; i++) {
    w.addDocument(DocHelper.createDocument(i,indexName,4));
  }
