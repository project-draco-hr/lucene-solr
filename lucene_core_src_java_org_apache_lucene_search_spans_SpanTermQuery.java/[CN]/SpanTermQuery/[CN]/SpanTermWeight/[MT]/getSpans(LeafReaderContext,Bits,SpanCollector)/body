{
  final TermState state=termContext.get(context.ord);
  if (state == null) {
    return null;
  }
  final Terms terms=context.reader().terms(term.field());
  if (terms == null)   return null;
  if (terms.hasPositions() == false)   throw new IllegalStateException("field \"" + term.field() + "\" was indexed without position data; cannot run SpanTermQuery (term="+ term.text()+ ")");
  final TermsEnum termsEnum=terms.iterator();
  termsEnum.seekExact(term.bytes(),state);
  final PostingsEnum postings=termsEnum.postings(acceptDocs,null,collector.requiredPostings());
  return new TermSpans(postings,term);
}
