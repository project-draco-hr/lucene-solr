{
  for (  IndexSchemaField field : this.schemaFields) {
    if (!field.checkRequieredValues())     throw new RuntimeException("Required Value for field: " + field.getName() + " is missing");
  }
  if (this.defaultSearchField == null)   throw new RuntimeException("DefaulSearchField must not be null");
  if (this.name == null)   throw new RuntimeException("Schema field is not set -- must not be null");
  if (this.indexLocation == null)   throw new RuntimeException("IndexLocation must not be null");
  if (!this.searchableFieldNames.contains(this.defaultSearchField)) {
    throw new RuntimeException("the default search field: " + this.defaultSearchField + " is registered as a field");
  }
}
