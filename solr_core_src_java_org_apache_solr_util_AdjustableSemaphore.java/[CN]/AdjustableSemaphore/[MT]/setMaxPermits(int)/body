{
  if (newMax < 1) {
    throw new IllegalArgumentException("Semaphore size must be at least 1," + " was " + newMax);
  }
  int delta=newMax - this.maxPermits;
  if (delta == 0) {
    return;
  }
 else   if (delta > 0) {
    this.semaphore.release(delta);
  }
 else {
    delta*=-1;
    this.semaphore.reducePermits(delta);
  }
  this.maxPermits=newMax;
}
