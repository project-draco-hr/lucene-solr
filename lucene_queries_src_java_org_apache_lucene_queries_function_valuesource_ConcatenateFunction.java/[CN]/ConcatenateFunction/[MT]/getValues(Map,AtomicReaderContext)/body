{
  return new Values(valsArr(sources,context,readerContext)){
    @Override public String strVal(    int doc){
      StringBuilder stringBuilder=new StringBuilder();
      for (      FunctionValues functionValues : valsArr) {
        if (functionValues.exists(doc)) {
          stringBuilder.append(functionValues.strVal(doc));
        }
      }
      return stringBuilder.toString();
    }
    @Override public Object objectVal(    int doc){
      return strVal(doc);
    }
    @Override public boolean exists(    int doc){
      for (      FunctionValues vals : valsArr) {
        if (vals.exists(doc)) {
          return true;
        }
      }
      return false;
    }
  }
;
}
