{
  MockDirectoryWrapper dir=newDirectory();
  IndexWriter writer=new IndexWriter(dir,newIndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer()).setMaxBufferedDocs(2).setMergeScheduler(new ConcurrentMergeScheduler()));
  final Document doc=new Document();
  doc.add(newField("field","aaa bbb ccc ddd eee fff ggg hhh iii jjj",Field.Store.YES,Field.Index.ANALYZED,Field.TermVector.WITH_POSITIONS_OFFSETS));
  for (int i=0; i < 6; i++)   writer.addDocument(doc);
  dir.failOn(failure);
  failure.setDoFail();
  try {
    writer.addDocument(doc);
    writer.addDocument(doc);
    writer.commit();
    fail("did not hit exception");
  }
 catch (  IOException ioe) {
  }
  failure.clearDoFail();
  writer.addDocument(doc);
  writer.close(false);
  dir.close();
}
