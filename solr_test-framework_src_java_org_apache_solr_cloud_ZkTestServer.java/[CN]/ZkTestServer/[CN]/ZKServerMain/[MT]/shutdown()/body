{
  zooKeeperServer.shutdown();
  ZKDatabase zkDb=zooKeeperServer.getZKDatabase();
  if (zkDb != null) {
    zkDb.close();
  }
  if (cnxnFactory != null && cnxnFactory.getLocalPort() != 0) {
    waitForServerDown(getZkHost() + ":" + getPort(),5000);
  }
  if (cnxnFactory != null) {
    cnxnFactory.shutdown();
  }
}
