{
  final TimeOut timeout=new TimeOut(timeoutMs,TimeUnit.MILLISECONDS);
  while (true) {
    try {
      HostPort hpobj=parseHostPortList(hp).get(0);
      send4LetterWord(hpobj.host,hpobj.port,"stat");
    }
 catch (    IOException e) {
      return true;
    }
    if (timeout.hasTimedOut()) {
      break;
    }
    try {
      Thread.sleep(250);
    }
 catch (    InterruptedException e) {
    }
  }
  return false;
}
