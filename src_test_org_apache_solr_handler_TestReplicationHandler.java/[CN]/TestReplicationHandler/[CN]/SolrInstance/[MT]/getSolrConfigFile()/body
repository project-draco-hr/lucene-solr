{
  String fname="";
  if (type == 1)   fname="." + System.getProperty("file.separator") + "solr"+ System.getProperty("file.separator")+ "conf"+ System.getProperty("file.separator")+ "solrconfig-master.xml";
  if (type == 0)   fname="." + System.getProperty("file.separator") + "solr"+ System.getProperty("file.separator")+ "conf"+ System.getProperty("file.separator")+ "solrconfig-slave.xml";
  return fname;
}
