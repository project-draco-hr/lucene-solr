{
  Statement s=null;
  try {
    s=conn.createStatement();
    s.executeUpdate("create table dual(dual char(1) not null)");
    s.executeUpdate("insert into dual values('Y')");
    conn.commit();
  }
 catch (  Exception e) {
    throw e;
  }
 finally {
    try {
      s.close();
    }
 catch (    Exception ex) {
    }
    try {
      conn.close();
    }
 catch (    Exception ex) {
    }
  }
}
