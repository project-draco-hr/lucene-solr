{
  final BytesReader in=getBytesReader(address);
  arc.flags=in.readByte();
  if (arc.flag(BIT_ARCS_AS_FIXED_ARRAY)) {
    arc.numArcs=in.readVInt();
    arc.bytesPerArc=in.readByte() & 0xFF;
    arc.arcIdx=-1;
    arc.posArcsStart=in.pos;
  }
 else {
    in.pos++;
    arc.bytesPerArc=0;
  }
  arc.nextArc=in.pos;
  arc.label=0;
  return readNextArc(arc);
}
