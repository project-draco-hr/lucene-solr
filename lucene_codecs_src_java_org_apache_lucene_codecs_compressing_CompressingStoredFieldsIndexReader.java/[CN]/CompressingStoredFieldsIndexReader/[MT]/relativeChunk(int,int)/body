{
  int lo=0, hi=docBasesDeltas[block].size() - 1;
  while (lo <= hi) {
    final int mid=(lo + hi) >>> 1;
    final int midValue=relativeDocBase(block,mid);
    if (midValue == relativeDoc) {
      return mid;
    }
 else     if (midValue < relativeDoc) {
      lo=mid + 1;
    }
 else {
      hi=mid - 1;
    }
  }
  return hi;
}
