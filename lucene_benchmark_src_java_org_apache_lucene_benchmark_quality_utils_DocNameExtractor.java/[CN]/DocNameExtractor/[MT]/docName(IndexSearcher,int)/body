{
  final List<String> name=new ArrayList<>();
  searcher.getIndexReader().document(docid,new StoredFieldVisitor(){
    @Override public void stringField(    FieldInfo fieldInfo,    byte[] bytes){
      String value=new String(bytes,StandardCharsets.UTF_8);
      name.add(value);
    }
    @Override public Status needsField(    FieldInfo fieldInfo){
      if (!name.isEmpty()) {
        return Status.STOP;
      }
 else       if (fieldInfo.name.equals(docNameField)) {
        return Status.YES;
      }
 else {
        return Status.NO;
      }
    }
  }
);
  if (name.size() != 0) {
    return name.get(0);
  }
 else {
    return null;
  }
}
