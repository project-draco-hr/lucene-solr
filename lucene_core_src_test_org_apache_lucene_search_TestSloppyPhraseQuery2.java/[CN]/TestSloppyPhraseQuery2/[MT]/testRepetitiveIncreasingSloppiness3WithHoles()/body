{
  Term t=randomTerm();
  int pos1=1 + random().nextInt(3);
  int pos2=pos1 + 1 + random().nextInt(3);
  for (int i=0; i < 10; i++) {
    PhraseQuery.Builder builder=new PhraseQuery.Builder();
    builder.add(t,0);
    builder.add(t,pos1);
    builder.add(t,pos2);
    builder.setSlop(i);
    PhraseQuery q1=builder.build();
    builder.setSlop(i + 1);
    PhraseQuery q2=builder.build();
    assertSubsetOf(q1,q2);
    assertSubsetOf(q1,q2);
  }
}
