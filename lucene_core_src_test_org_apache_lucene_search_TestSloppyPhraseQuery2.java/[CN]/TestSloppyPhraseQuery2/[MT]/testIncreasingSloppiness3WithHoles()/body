{
  Term t1=randomTerm();
  Term t2=randomTerm();
  Term t3=randomTerm();
  int pos1=1 + random().nextInt(3);
  int pos2=pos1 + 1 + random().nextInt(3);
  for (int i=0; i < 10; i++) {
    PhraseQuery q1=new PhraseQuery();
    q1.add(t1);
    q1.add(t2,pos1);
    q1.add(t3,pos2);
    q1.setSlop(i);
    PhraseQuery q2=new PhraseQuery();
    q2.add(t1);
    q2.add(t2,pos1);
    q2.add(t3,pos2);
    q2.setSlop(i + 1);
    assertSubsetOf(q1,q2);
  }
}
