{
  ArrayList<byte[]> data=new ArrayList<>();
  while (howMuchDataInBytes > 0) {
    byte[] current=new byte[random().nextInt(256)];
    random().nextBytes(current);
    data.add(current);
    howMuchDataInBytes-=current.length;
  }
  byte[][] bytes=data.toArray(new byte[data.size()][]);
  return bytes;
}
