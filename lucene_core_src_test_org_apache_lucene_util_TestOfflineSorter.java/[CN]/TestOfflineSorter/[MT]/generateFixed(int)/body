{
  ArrayList<byte[]> data=new ArrayList<>();
  int length=256;
  byte counter=0;
  while (howMuchDataInBytes > 0) {
    byte[] current=new byte[length];
    for (int i=0; i < current.length; i++) {
      current[i]=counter;
      counter++;
    }
    data.add(current);
    howMuchDataInBytes-=current.length;
    length--;
    if (length <= 128) {
      length=256;
    }
  }
  byte[][] bytes=data.toArray(new byte[data.size()][]);
  return bytes;
}
