{
  final Dictionary d;
  try (InputStream affixStream=TestStemmer.class.getResourceAsStream("simple.aff");InputStream dictStream=TestStemmer.class.getResourceAsStream("simple.dic")){
    d=new Dictionary(affixStream,Collections.singletonList(dictStream),true);
  }
   Analyzer a=new Analyzer(){
    @Override protected TokenStreamComponents createComponents(    String fieldName){
      Tokenizer tokenizer=new KeywordTokenizer();
      return new TokenStreamComponents(tokenizer,new HunspellStemFilter(tokenizer,d));
    }
  }
;
