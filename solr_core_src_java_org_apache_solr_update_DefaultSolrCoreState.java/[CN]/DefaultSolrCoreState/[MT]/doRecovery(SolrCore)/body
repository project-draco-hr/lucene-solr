{
  cancelRecovery();
synchronized (recoveryLock) {
    while (recoveryRunning) {
      try {
        recoveryLock.wait(1000);
      }
 catch (      InterruptedException e) {
      }
      if (closed)       return;
    }
    recoveryStrat=new RecoveryStrategy(core);
    recoveryStrat.start();
    recoveryRunning=true;
  }
}
