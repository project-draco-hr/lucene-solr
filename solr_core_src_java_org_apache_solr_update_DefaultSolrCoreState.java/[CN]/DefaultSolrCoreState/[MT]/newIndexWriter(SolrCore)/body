{
  pauseWriter=true;
  while (!writerFree) {
    try {
      wait();
    }
 catch (    InterruptedException e) {
    }
  }
  if (indexWriter != null) {
    try {
      indexWriter.close();
    }
 catch (    Exception e) {
      SolrException.log(log,"Error closing old IndexWriter",e);
    }
  }
  try {
    indexWriter=createMainIndexWriter(core,"DirectUpdateHandler2",false,true);
    refCntWriter=null;
  }
  finally {
    pauseWriter=false;
    notifyAll();
  }
}
