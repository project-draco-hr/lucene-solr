{
  pauseWriter=true;
  while (!writerFree) {
    try {
      wait();
    }
 catch (    InterruptedException e) {
    }
  }
  try {
    if (indexWriter != null) {
      indexWriter.close();
    }
    indexWriter=createMainIndexWriter(core,"DirectUpdateHandler2",false,true);
    refCntWriter=null;
  }
  finally {
    pauseWriter=false;
    notifyAll();
  }
}
