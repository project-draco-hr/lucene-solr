{
  pauseWriter=true;
  while (!writerFree) {
    try {
      wait();
    }
 catch (    InterruptedException e) {
    }
  }
  try {
    if (indexWriter != null) {
      try {
        indexWriter.close();
      }
 catch (      Throwable t) {
        SolrException.log(log,"Error closing old IndexWriter",t);
      }
    }
    indexWriter=createMainIndexWriter(core,"DirectUpdateHandler2",false,true);
    refCntWriter=null;
  }
  finally {
    pauseWriter=false;
    notifyAll();
  }
}
