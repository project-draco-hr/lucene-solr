{
  pauseWriter=true;
  while (!writerFree) {
    try {
      wait();
    }
 catch (    InterruptedException e) {
    }
  }
  if (indexWriter != null) {
    indexWriter.close();
  }
  indexWriter=createMainIndexWriter(core,"DirectUpdateHandler2",false,true);
  refCntWriter=null;
  pauseWriter=false;
  notifyAll();
}
