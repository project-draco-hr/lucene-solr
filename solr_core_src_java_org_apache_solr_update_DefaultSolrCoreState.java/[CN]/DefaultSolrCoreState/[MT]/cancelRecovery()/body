{
synchronized (recoveryLock) {
    if (recoveryStrat != null && recoveryRunning) {
      recoveryStrat.close();
      while (true) {
        try {
          recoveryStrat.join();
        }
 catch (        InterruptedException e) {
          continue;
        }
        break;
      }
      recoveryRunning=false;
      recoveryLock.notifyAll();
    }
  }
}
