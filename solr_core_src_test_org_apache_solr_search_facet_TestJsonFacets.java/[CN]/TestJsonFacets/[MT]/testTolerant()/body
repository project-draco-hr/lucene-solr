{
  initServers();
  Client client=servers.getClient(random().nextInt());
  client.queryDefaults().set("shards",servers.getShards() + ",[ff01::114]:33332:/ignore_exception");
  indexSimple(client);
  try {
    client.testJQ(params("ignore_exception","true","shards.tolerant","false","q","*:*","json.facet","{f:{type:terms, field:cat_s}}"),"facets=={ count:6," + "f:{ buckets:[{val:B,count:3},{val:A,count:2}] }" + "}");
    fail("we should have failed");
  }
 catch (  Exception e) {
  }
  client.testJQ(params("ignore_exception","true","shards.tolerant","true","q","*:*","json.facet","{f:{type:terms, field:cat_s}}"),"facets=={ count:6," + "f:{ buckets:[{val:B,count:3},{val:A,count:2}] }" + "}");
}
