{
  for (int i=0; i < fieldHash.length; i++) {
    DocFieldProcessorPerField field=fieldHash[i];
    while (field != null) {
      final DocFieldProcessorPerField next=field.next;
      field.abort();
      field=next;
    }
  }
  try {
    fieldsWriter.abort();
  }
  finally {
    consumer.abort();
  }
}
