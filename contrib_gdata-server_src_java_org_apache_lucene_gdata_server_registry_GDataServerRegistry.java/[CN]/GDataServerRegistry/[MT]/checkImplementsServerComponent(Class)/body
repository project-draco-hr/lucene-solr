{
  if (type == null)   return false;
  if (type.equals(Object.class))   return false;
  if (type.equals(ServerComponent.class))   return true;
  Class[] compInterfaces=type.getInterfaces();
  for (int i=0; i < compInterfaces.length; i++) {
    if (checkImplementsServerComponent(compInterfaces[i]))     return true;
  }
  return checkImplementsServerComponent(type.getSuperclass());
}
