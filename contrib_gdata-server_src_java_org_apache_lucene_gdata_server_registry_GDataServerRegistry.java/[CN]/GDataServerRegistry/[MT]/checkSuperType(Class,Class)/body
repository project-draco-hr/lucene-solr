{
  if (type.equals(Object.class))   return false;
  if (type.equals(consideredSuperType))   return true;
  Class[] interfaces=type.getInterfaces();
  for (int i=0; i < interfaces.length; i++) {
    if (interfaces[i].equals(consideredSuperType))     return true;
  }
  return checkSuperType(type.getSuperclass(),consideredSuperType);
}
