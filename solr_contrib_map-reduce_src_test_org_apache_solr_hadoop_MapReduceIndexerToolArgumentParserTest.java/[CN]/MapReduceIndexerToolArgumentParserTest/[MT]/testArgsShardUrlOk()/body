{
  String[] args=new String[]{"--input-list","file:///tmp","--morphline-file",MORPHLINE_FILE,"--output-dir","file:/tmp/foo","--solr-home-dir",MINIMR_INSTANCE_DIR.getPath(),"--shard-url","http://localhost:8983/solr/collection1","--shard-url","http://localhost:8983/solr/collection2"};
  assertNull(parser.parseArgs(args,conf,opts));
  assertEquals(Arrays.asList(Collections.singletonList("http://localhost:8983/solr/collection1"),Collections.singletonList("http://localhost:8983/solr/collection2")),opts.shardUrls);
  assertEquals(new Integer(2),opts.shards);
  assertEmptySystemErrAndEmptySystemOut();
}
