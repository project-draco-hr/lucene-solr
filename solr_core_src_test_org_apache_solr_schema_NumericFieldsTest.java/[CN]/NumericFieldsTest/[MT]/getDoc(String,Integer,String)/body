{
  SolrInputDocument doc=new SolrInputDocument();
  doc.addField("id",id);
  for (  String t : types) {
    if ("date".equals(t)) {
      doc.addField(t,date);
      doc.addField(t + "_last",date);
      doc.addField(t + "_first",date);
    }
 else {
      doc.addField(t,number);
      doc.addField(t + "_last",number);
      doc.addField(t + "_first",number);
    }
  }
  return doc;
}
