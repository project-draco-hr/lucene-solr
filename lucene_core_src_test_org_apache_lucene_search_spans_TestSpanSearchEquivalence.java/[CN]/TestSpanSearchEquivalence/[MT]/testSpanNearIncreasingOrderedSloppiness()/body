{
  Term t1=randomTerm();
  Term t2=randomTerm();
  SpanQuery subquery[]=new SpanQuery[]{spanQuery(new SpanTermQuery(t1)),spanQuery(new SpanTermQuery(t2))};
  for (int i=0; i < 10; i++) {
    SpanQuery q1=spanQuery(new SpanNearQuery(subquery,i,false));
    SpanQuery q2=spanQuery(new SpanNearQuery(subquery,i + 1,false));
    assertSubsetOf(q1,q2);
  }
}
