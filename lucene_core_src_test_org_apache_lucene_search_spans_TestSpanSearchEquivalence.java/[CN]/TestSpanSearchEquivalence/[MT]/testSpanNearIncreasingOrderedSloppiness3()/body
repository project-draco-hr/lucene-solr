{
  Term t1=randomTerm();
  Term t2=randomTerm();
  Term t3=randomTerm();
  SpanQuery subquery[]=new SpanQuery[]{span(new SpanTermQuery(t1)),span(new SpanTermQuery(t2)),span(new SpanTermQuery(t3))};
  for (int i=0; i < 10; i++) {
    SpanQuery q1=span(new SpanNearQuery(subquery,i,true));
    SpanQuery q2=span(new SpanNearQuery(subquery,i + 1,true));
    assertSubsetOf(q1,q2);
  }
}
