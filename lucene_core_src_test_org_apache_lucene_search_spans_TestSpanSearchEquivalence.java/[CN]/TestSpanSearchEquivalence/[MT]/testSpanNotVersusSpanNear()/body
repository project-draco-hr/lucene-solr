{
  Term t1=randomTerm();
  Term t2=randomTerm();
  Term t3=randomTerm();
  SpanQuery near=spanQuery(new SpanNearQuery(new SpanQuery[]{spanQuery(new SpanTermQuery(t1)),spanQuery(new SpanTermQuery(t2))},10,random().nextBoolean()));
  assertSubsetOf(spanQuery(new SpanNotQuery(near,spanQuery(new SpanTermQuery(t3)))),near);
}
