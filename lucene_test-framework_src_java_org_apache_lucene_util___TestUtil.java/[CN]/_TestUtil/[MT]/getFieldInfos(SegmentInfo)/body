{
  Directory cfsDir=null;
  try {
    if (info.getUseCompoundFile()) {
      cfsDir=new CompoundFileDirectory(info.dir,IndexFileNames.segmentFileName(info.name,"",IndexFileNames.COMPOUND_FILE_EXTENSION),IOContext.READONCE,false);
    }
 else {
      cfsDir=info.dir;
    }
    return info.getCodec().fieldInfosFormat().getFieldInfosReader().read(cfsDir,info.name,IOContext.READONCE);
  }
  finally {
    if (info.getUseCompoundFile() && cfsDir != null) {
      cfsDir.close();
    }
  }
}
