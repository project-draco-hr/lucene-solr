{
  try {
    if (doc < lastDocRequested) {
      scorer=weight.scorer(reader);
      scorerDoc=scorer.nextDoc();
    }
    lastDocRequested=doc;
    if (scorerDoc < doc) {
      scorerDoc=scorer.nextDoc();
    }
    if (scorerDoc > doc) {
      return defVal;
    }
    return scorer.score();
  }
 catch (  IOException e) {
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"caught exception in QueryDocVals(" + q + ") doc="+ doc,e);
  }
}
