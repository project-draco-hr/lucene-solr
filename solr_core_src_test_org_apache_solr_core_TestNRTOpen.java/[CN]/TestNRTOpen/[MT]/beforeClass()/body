{
  System.setProperty("solr.directoryFactory","solr.StandardDirectoryFactory");
  System.setProperty("solr.test.leavedatadir","true");
  initCore("solrconfig-basic.xml","schema-minimal.xml");
  assertU(adoc("foo","bar"));
  assertU(commit());
  File myDir=dataDir;
  deleteCore();
  dataDir=myDir;
  initCore("solrconfig-basic.xml","schema-minimal.xml");
}
