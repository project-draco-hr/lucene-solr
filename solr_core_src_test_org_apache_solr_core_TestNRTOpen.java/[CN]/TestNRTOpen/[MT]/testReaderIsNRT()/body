{
  String core=h.getCore().getName();
  h.getCoreContainer().reload(core);
  assertNRT(1);
  assertU(adoc("baz","doc"));
  assertU(commit("softCommit","true"));
  assertNRT(2);
  assertU(adoc("bazz","doc"));
  assertU(commit());
  assertNRT(3);
  assertU(adoc("bazzz","doc2"));
  h.getCoreContainer().reload(core);
  assertNRT(4);
}
