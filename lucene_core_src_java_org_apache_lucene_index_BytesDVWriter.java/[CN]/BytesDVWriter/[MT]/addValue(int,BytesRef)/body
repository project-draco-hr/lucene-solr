{
  if (value == null) {
    throw new IllegalArgumentException("null binaryValue not allowed (field=" + fieldInfo.name + ")");
  }
  mergeLength(value.length);
  while (addedValues < docID) {
    addedValues++;
    bytesRefArray.append(emptyBytesRef);
    mergeLength(0);
  }
  addedValues++;
  bytesRefArray.append(value);
}
