{
  int space=buf.length - pos;
  if (len < space) {
    System.arraycopy(cbuf,off,buf,pos,len);
    pos+=len;
  }
 else   if (len < BUFSIZE) {
    System.arraycopy(cbuf,off,buf,pos,space);
    flush(buf,0,buf.length);
    pos=len - space;
    System.arraycopy(cbuf,off + space,buf,0,pos);
  }
 else {
    flush(buf,0,pos);
    pos=0;
    flush(cbuf,off,len);
  }
}
