{
  if (maxArrays == 0) {
    throw new IllegalArgumentException("maxArrays cannot be 0 - don't use this class if you don't intend to pool arrays");
  }
  this.arrayLength=arrayLength;
  this.intsPool=new ArrayBlockingQueue<int[]>(maxArrays);
  this.floatsPool=new ArrayBlockingQueue<float[]>(maxArrays);
}
