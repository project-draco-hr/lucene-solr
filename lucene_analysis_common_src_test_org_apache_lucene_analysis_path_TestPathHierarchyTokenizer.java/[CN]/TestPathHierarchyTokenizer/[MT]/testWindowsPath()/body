{
  String path="c:\\a\\b\\c";
  PathHierarchyTokenizer t=new PathHierarchyTokenizer(newAttributeFactory(),'\\','\\',DEFAULT_SKIP);
  t.setReader(new StringReader(path));
  assertTokenStreamContents(t,new String[]{"c:","c:\\a","c:\\a\\b","c:\\a\\b\\c"},new int[]{0,0,0,0},new int[]{2,4,6,8},new int[]{1,0,0,0},path.length());
}
