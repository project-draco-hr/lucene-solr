{
  List<Explanation> subs=new ArrayList<>();
  Explanation boostExpl=Explanation.match(stats.queryBoost,"boost");
  if (stats.queryBoost != 1.0f)   subs.add(boostExpl);
  subs.add(stats.idf);
  Explanation queryNormExpl=Explanation.match(stats.queryNorm,"queryNorm");
  subs.add(queryNormExpl);
  return Explanation.match(boostExpl.getValue() * stats.idf.getValue() * queryNormExpl.getValue(),"queryWeight, product of:",subs);
}
