{
  String[] params=new String[]{ReplicationService.REPLICATE_SESSION_ID_PARAM,sessionID,ReplicationService.REPLICATE_SOURCE_PARAM,source,ReplicationService.REPLICATE_FILENAME_PARAM,fileName};
  final HttpResponse response=executeGET(ReplicationAction.OBTAIN.name(),params);
  return doAction(response,false,new Callable<InputStream>(){
    @Override public InputStream call() throws Exception {
      return responseInputStream(response,true);
    }
  }
);
}
