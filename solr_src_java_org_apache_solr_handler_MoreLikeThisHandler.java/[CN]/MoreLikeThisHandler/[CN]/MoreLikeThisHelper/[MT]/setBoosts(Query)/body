{
  if (boostFields.size() > 0) {
    List clauses=((BooleanQuery)mltquery).clauses();
    for (    Object o : clauses) {
      TermQuery q=(TermQuery)((BooleanClause)o).getQuery();
      Float b=this.boostFields.get(q.getTerm().field());
      if (b != null) {
        q.setBoost(b * q.getBoost());
      }
    }
  }
}
