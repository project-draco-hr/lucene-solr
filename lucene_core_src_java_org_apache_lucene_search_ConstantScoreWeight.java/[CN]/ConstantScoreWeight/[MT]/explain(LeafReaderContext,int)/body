{
  final Scorer s=scorer(context,context.reader().getLiveDocs());
  final boolean exists=(s != null && s.advance(doc) == doc);
  if (exists) {
    return Explanation.match(queryWeight,getQuery().toString() + ", product of:",Explanation.match(getQuery().getBoost(),"boost"),Explanation.match(queryNorm,"queryNorm"));
  }
 else {
    return Explanation.noMatch(getQuery().toString() + " doesn't match id " + doc);
  }
}
