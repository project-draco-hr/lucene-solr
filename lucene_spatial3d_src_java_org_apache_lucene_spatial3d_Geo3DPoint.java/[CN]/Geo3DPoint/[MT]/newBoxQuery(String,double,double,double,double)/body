{
  checkLatitude(minLatitude);
  checkLongitude(minLongitude);
  checkLatitude(maxLatitude);
  checkLongitude(maxLongitude);
  final GeoShape shape=GeoBBoxFactory.makeGeoBBox(PlanetModel.WGS84,fromDegrees(maxLatitude),fromDegrees(minLatitude),fromDegrees(minLongitude),fromDegrees(maxLongitude));
  return newShapeQuery(field,shape);
}
