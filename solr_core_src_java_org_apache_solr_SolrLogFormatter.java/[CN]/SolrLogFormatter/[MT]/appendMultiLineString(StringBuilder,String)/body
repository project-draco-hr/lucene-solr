{
  int idx=msg.indexOf('\n');
  if (idx < 0) {
    sb.append(msg);
    return;
  }
  int lastIdx=-1;
  for (; ; ) {
    if (idx < 0) {
      sb.append(msg.substring(lastIdx + 1));
      break;
    }
    sb.append(msg.substring(lastIdx + 1,idx));
    sb.append("\n\t");
    lastIdx=idx;
    idx=msg.indexOf('\n',lastIdx + 1);
  }
}
