def block_value_count(bpv, bits=64):
    blocks = bpv
    values = ((blocks * bits) / bpv)
    while (((blocks % 2) == 0) and ((values % 2) == 0)):
        blocks /= 2
        values /= 2
    assert ((values * bpv) == (bits * blocks)), ('%d values, %d blocks, %d bits per value' % (values, blocks, bpv))
    return (blocks, values)
