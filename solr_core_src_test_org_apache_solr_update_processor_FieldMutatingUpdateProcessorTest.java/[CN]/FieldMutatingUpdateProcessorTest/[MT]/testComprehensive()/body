{
  final String countMe="how long is this string?";
  final int count=countMe.length();
  processAdd("comprehensive",doc(f("id","1111"),f("primary_author_s1","XXXX","Adam","Sam"),f("all_authors_s1","XXXX","Adam","Sam"),f("foo_is",countMe,new Integer(42)),f("first_foo_l",countMe,new Integer(-34)),f("max_foo_l",countMe,new Integer(-34)),f("min_foo_l",countMe,new Integer(-34))));
  assertU(commit());
  assertQ(req("id:1111"),"//str[@name='primary_author_s1'][.='XXXX']","//str[@name='all_authors_s1'][.='XXXX; Adam; Sam']","//arr[@name='foo_is']/int[1][.='" + count + "']","//arr[@name='foo_is']/int[2][.='42']","//long[@name='max_foo_l'][.='" + count + "']","//long[@name='first_foo_l'][.='" + count + "']","//long[@name='min_foo_l'][.='-34']");
}
