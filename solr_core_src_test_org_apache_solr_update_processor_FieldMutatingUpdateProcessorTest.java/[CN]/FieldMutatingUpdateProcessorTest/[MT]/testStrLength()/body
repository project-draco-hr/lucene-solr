{
  SolrInputDocument d=null;
  d=processAdd("length-none",doc(f("id","1111"),f("foo_s","string1","string222"),f("bar_dt","string3"),f("yak_t",""),f("foo_d",new Integer(42))));
  assertNotNull(d);
  assertEquals(Arrays.asList("string1","string222"),d.getFieldValues("foo_s"));
  assertEquals("string3",d.getFieldValue("bar_dt"));
  assertEquals("",d.getFieldValue("yak_t"));
  assertEquals("processor borked non string value",new Integer(42),d.getFieldValue("foo_d"));
  d=processAdd("length-some",doc(f("id","1111"),f("foo_s","string1","string222"),f("bar_dt","string3"),f("yak_t",""),f("foo_d",new Integer(42))));
  assertNotNull(d);
  assertEquals(Arrays.asList(new Integer(7),new Integer(9)),d.getFieldValues("foo_s"));
  assertEquals("string3",d.getFieldValue("bar_dt"));
  assertEquals(new Integer(0),d.getFieldValue("yak_t"));
  assertEquals("processor borked non string value",new Integer(42),d.getFieldValue("foo_d"));
}
