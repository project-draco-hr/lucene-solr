{
  float[] innerArray=new float[]{1.0f,2.0f,-1.0f,10.0f};
  DocValuesTestImpl docValues=new DocValuesTestImpl(innerArray);
  assertEquals("10.0f is the max value in the source array",10.0f,docValues.getMaxValue());
  innerArray=new float[]{-3.0f,-1.0f,-100.0f};
  docValues=new DocValuesTestImpl(innerArray);
  assertEquals("-1.0f is the max value in the source array",-1.0f,docValues.getMaxValue());
  innerArray=new float[]{-3.0f,-1.0f,100.0f,Float.MAX_VALUE,Float.MAX_VALUE - 1};
  docValues=new DocValuesTestImpl(innerArray);
  assertEquals(Float.MAX_VALUE + " is the max value in the source array",Float.MAX_VALUE,docValues.getMaxValue());
  innerArray=new float[]{};
  docValues=new DocValuesTestImpl(innerArray);
  assertTrue("max is NaN - no values in inner array",Float.isNaN(docValues.getMaxValue()));
}
