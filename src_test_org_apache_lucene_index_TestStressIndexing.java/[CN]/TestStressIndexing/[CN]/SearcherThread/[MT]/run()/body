{
  long stopTime=System.currentTimeMillis() + 1000 * RUN_TIME_SEC;
  try {
    while (true) {
      for (int i=0; i < 100; i++) {
        (new IndexSearcher(directory)).close();
      }
      count+=100;
      if (System.currentTimeMillis() > stopTime) {
        break;
      }
    }
  }
 catch (  Exception e) {
    System.out.println(e.toString());
    e.printStackTrace();
    failed=true;
  }
}
