{
synchronized (hardRefs) {
    int stillAliveCount=0;
    for (Iterator<Thread> it=hardRefs.keySet().iterator(); it.hasNext(); ) {
      final Thread t=it.next();
      if (!t.isAlive()) {
        it.remove();
      }
 else {
        stillAliveCount++;
      }
    }
    int nextCount=(1 + stillAliveCount) * PURGE_MULTIPLIER;
    if (nextCount <= 0) {
      nextCount=1000000;
    }
    countUntilPurge.set(nextCount);
  }
}
