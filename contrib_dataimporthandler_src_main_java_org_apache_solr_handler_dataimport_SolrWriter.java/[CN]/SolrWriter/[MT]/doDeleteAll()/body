{
  try {
    DeleteUpdateCommand deleteCommand=new DeleteUpdateCommand();
    deleteCommand.query="*:*";
    deleteCommand.fromCommitted=true;
    deleteCommand.fromPending=true;
    updater.deleteByQuery(deleteCommand);
  }
 catch (  IOException e) {
    throw new DataImportHandlerException(DataImportHandlerException.SEVERE,"Exception in full dump while deleting all documents.",e);
  }
}
