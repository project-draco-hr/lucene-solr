{
  int filesPosted=0;
  for (  File srcFile : files) {
    try {
      if (!srcFile.isFile() || srcFile.isHidden())       continue;
      postFile(srcFile,out,type);
      Thread.sleep(delay * 1000);
      filesPosted++;
    }
 catch (    InterruptedException e) {
      throw new RuntimeException();
    }
  }
  return filesPosted;
}
