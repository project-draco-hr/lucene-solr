{
  NodeList nodes=getNodesFromXP(n,xpath);
  StringBuffer sb=new StringBuffer();
  if (nodes.getLength() > 0) {
    for (int i=0; i < nodes.getLength(); i++) {
      sb.append(nodes.item(i).getNodeValue() + " ");
      if (!concatAll)       break;
    }
    return sb.toString().trim();
  }
 else   return "";
}
