{
  if (dir.isHidden() && !dir.getName().equals("."))   return (0);
  info("Indexing directory " + dir.getPath());
  int posted=0;
  posted+=postFiles(dir.listFiles(globFileFilter),out,type);
  if (recursive) {
    for (    File d : dir.listFiles()) {
      if (d.isDirectory())       posted+=postDirectory(d,out,type);
    }
  }
  return posted;
}
