{
  String[] pa=param.split("&");
  for (  String p : pa) {
    if (p.trim().length() == 0)     continue;
    String[] kv=p.split("=");
    if (kv.length == 2) {
      url=url + (url.indexOf('?') > 0 ? "&" : "?") + kv[0]+ "="+ kv[1];
    }
 else {
      warn("Skipping param " + p + " which is not on form key=value");
    }
  }
  return url;
}
