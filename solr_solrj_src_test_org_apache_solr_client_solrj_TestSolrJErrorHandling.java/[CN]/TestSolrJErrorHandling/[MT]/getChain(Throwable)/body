{
  StringBuilder sb=new StringBuilder(40);
  Throwable lastCause=null;
  do {
    if (lastCause != null)     sb.append("->");
    sb.append(th.getClass().getSimpleName());
    lastCause=th;
    th=th.getCause();
  }
 while (th != null);
  sb.append("(" + lastCause.getMessage() + ")");
  return sb.toString();
}
