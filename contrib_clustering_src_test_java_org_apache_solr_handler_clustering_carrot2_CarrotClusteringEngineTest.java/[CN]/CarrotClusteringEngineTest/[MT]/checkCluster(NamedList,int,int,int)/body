{
  checkCluster(cluster,expectedSubclusterCount > 0);
  assertEquals("number of docs in cluster",expectedDocCount,((NamedList)cluster.get("docs")).size());
  assertEquals("number of labels in cluster",expectedLabelCount,((NamedList)cluster.get("labels")).size());
  if (expectedSubclusterCount > 0) {
    NamedList subclusters=(NamedList)cluster.get("clusters");
    assertEquals("numClusters",expectedSubclusterCount,subclusters.size());
    assertEquals("number of subclusters in cluster",expectedSubclusterCount,subclusters.size());
  }
}
