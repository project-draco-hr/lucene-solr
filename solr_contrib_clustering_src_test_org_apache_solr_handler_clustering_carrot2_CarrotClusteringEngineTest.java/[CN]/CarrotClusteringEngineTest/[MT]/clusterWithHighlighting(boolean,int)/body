{
  final TermQuery query=new TermQuery(new Term("snippet","mine"));
  int expectedNumDocuments=numberOfDocs - 2;
  final ModifiableSolrParams summaryParams=new ModifiableSolrParams();
  summaryParams.add(CarrotParams.SNIPPET_FIELD_NAME,"snippet");
  summaryParams.add(CarrotParams.PRODUCE_SUMMARY,Boolean.toString(enableHighlighting));
  summaryParams.add(CarrotParams.SUMMARY_FRAGSIZE,Integer.toString(fragSize));
  final List<NamedList<Object>> summaryClusters=checkEngine(getClusteringEngine("echo"),expectedNumDocuments,expectedNumDocuments,query,summaryParams);
  return summaryClusters;
}
