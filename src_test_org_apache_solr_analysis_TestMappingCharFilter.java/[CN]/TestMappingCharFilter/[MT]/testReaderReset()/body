{
  CharStream cs=new MappingCharFilter(normMap,CharReader.get(new StringReader("x")));
  char[] buf=new char[10];
  int len=cs.read(buf,0,10);
  assertEquals(1,len);
  assertEquals('x',buf[0]);
  len=cs.read(buf,0,10);
  assertEquals(-1,len);
  cs.reset();
  len=cs.read(buf,0,10);
  assertEquals(1,len);
  assertEquals('x',buf[0]);
}
