{
  String text="This is a test. Just a test highlighting without a searcher. Feel free to ignore.";
  Query query=new TermQuery(new Term("body","highlighting"));
  try (Directory directory=newDirectory();RandomIndexWriter indexWriter=new RandomIndexWriter(random(),directory);IndexReader indexReader=indexWriter.getReader()){
    IndexSearcher searcher=newSearcher(indexReader);
    UnifiedHighlighter highlighter=new UnifiedHighlighter(searcher,indexAnalyzer);
    highlighter.highlightWithoutSearcher("body",query,text,1);
  }
 }
