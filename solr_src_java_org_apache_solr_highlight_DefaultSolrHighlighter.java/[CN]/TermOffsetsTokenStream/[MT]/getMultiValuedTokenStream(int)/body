{
  endOffset=startOffset + length;
  return new TokenStream(){
    Token token;
    public Token next() throws IOException {
      while (true) {
        if (bufferedToken == null)         bufferedToken=bufferedTokenStream.next();
        if (bufferedToken == null)         return null;
        if (startOffset <= bufferedToken.startOffset() && bufferedToken.endOffset() <= endOffset) {
          token=bufferedToken;
          bufferedToken=null;
          token.setStartOffset(token.startOffset() - startOffset);
          token.setEndOffset(token.endOffset() - startOffset);
          return token;
        }
 else         if (bufferedToken.endOffset() > endOffset) {
          startOffset+=length + 1;
          return null;
        }
        bufferedToken=null;
      }
    }
  }
;
}
