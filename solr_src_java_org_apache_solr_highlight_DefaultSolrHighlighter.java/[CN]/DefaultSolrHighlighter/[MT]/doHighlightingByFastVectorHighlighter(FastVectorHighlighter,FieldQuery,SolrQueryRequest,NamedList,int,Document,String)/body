{
  SolrParams params=req.getParams();
  String[] snippets=highlighter.getBestFragments(fieldQuery,req.getSearcher().getReader(),docId,fieldName,params.getFieldInt(fieldName,HighlightParams.FRAGSIZE,100),params.getFieldInt(fieldName,HighlightParams.SNIPPETS,1));
  if (snippets != null && snippets.length > 0)   docSummaries.add(fieldName,snippets);
 else   alternateField(docSummaries,params,doc,fieldName);
}
