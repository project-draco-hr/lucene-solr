{
  int result=1;
  currentTerm=currentTerm.createTerm(term);
  try {
    TermEnum termEnum=reader.terms(currentTerm);
    if (termEnum != null && termEnum.term().equals(currentTerm)) {
      result=termEnum.docFreq();
    }
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
  return result;
}
