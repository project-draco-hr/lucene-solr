{
  Automaton result=new Automaton();
  result.createState();
  for (  Automaton a : l) {
    result.copy(a);
  }
  int stateOffset=1;
  for (  Automaton a : l) {
    if (a.getNumStates() == 0) {
      continue;
    }
    result.addEpsilon(0,stateOffset);
    stateOffset+=a.getNumStates();
  }
  result.finishState();
  return removeDeadStates(result);
}
