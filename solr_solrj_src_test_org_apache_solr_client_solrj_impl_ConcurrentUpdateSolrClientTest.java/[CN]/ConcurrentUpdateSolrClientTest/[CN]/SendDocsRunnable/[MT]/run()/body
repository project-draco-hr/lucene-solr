{
  for (int d=0; d < numDocs; d++) {
    SolrInputDocument doc=new SolrInputDocument();
    String docId=id + "_" + d;
    doc.setField("id",docId);
    UpdateRequest req=new UpdateRequest();
    req.add(doc);
    try {
      if (this.collection == null)       cuss.request(req);
 else       cuss.request(req,this.collection);
    }
 catch (    Throwable t) {
      t.printStackTrace();
    }
  }
}
