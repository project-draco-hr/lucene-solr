{
  if (pendingSegnOutput != null) {
    try {
      pendingSegnOutput.close();
    }
 catch (    Throwable t) {
    }
    try {
      final String segmentFileName=IndexFileNames.fileNameFromGeneration(IndexFileNames.SEGMENTS,"",generation);
      dir.deleteFile(segmentFileName);
    }
 catch (    Throwable t) {
    }
    pendingSegnOutput=null;
    if (pendingMapVersion != -1) {
      try {
        final String fieldMapName=getGlobalFieldNumberName(globalFieldMapVersion--);
        dir.deleteFile(fieldMapName);
      }
 catch (      Throwable t) {
      }
      pendingMapVersion=-1;
    }
  }
}
