{
  BitSet result=new BitSet(reader.maxDoc());
  TermDocs td=reader.termDocs();
  try {
    for (Iterator iter=terms.iterator(); iter.hasNext(); ) {
      Term term=(Term)iter.next();
      td.seek(term);
      while (td.next()) {
        result.set(td.doc());
      }
    }
  }
  finally {
    td.close();
  }
  return result;
}
