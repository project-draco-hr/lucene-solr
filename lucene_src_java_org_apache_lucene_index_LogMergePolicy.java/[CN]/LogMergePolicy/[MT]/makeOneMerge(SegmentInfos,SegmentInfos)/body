{
  final boolean doCFS;
  if (!useCompoundFile) {
    doCFS=false;
  }
 else   if (noCFSRatio == 1.0) {
    doCFS=true;
  }
 else {
    long totSize=0;
    for (    SegmentInfo info : infos) {
      totSize+=size(info);
    }
    long mergeSize=0;
    for (    SegmentInfo info : infosToMerge) {
      mergeSize+=size(info);
    }
    doCFS=mergeSize <= noCFSRatio * totSize;
  }
  return new OneMerge(infosToMerge,doCFS);
}
