{
  Iterable<ContentStream> streams=req.getContentStreams();
  if (streams == null) {
    throw new SolrException(SolrException.ErrorCode.BAD_REQUEST,"DocumentAnlysisRequestHandler expects a single content stream with documents to analys");
  }
  Iterator<ContentStream> iter=streams.iterator();
  if (!iter.hasNext()) {
    throw new SolrException(SolrException.ErrorCode.BAD_REQUEST,"DocumentAnlysisRequestHandler expects a single content stream with documents to analys");
  }
  ContentStream stream=iter.next();
  if (iter.hasNext()) {
    throw new SolrException(SolrException.ErrorCode.BAD_REQUEST,"DocumentAnlysisRequestHandler expects a single content stream with documents to analys");
  }
  return stream;
}
