{
  boolean c=false;
  int i, j;
  int nvert=polyLats.length;
  double verty[]=polyLats;
  double vertx[]=polyLons;
  double testy=latitude;
  double testx=longitude;
  for (i=0, j=nvert - 1; i < nvert; j=i++) {
    if (((verty[i] > testy) != (verty[j] > testy)) && (testx < (vertx[j] - vertx[i]) * (testy - verty[i]) / (verty[j] - verty[i]) + vertx[i]))     c=!c;
  }
  return c;
}
