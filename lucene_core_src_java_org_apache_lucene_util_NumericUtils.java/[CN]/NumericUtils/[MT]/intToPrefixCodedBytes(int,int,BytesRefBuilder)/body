{
  if ((shift & ~0x1f) != 0)   throw new IllegalArgumentException("Illegal shift value, must be 0..31");
  int nChars=(((31 - shift) * 37) >> 8) + 1;
  bytes.setLength(nChars + 1);
  bytes.grow(NumericUtils.BUF_SIZE_LONG);
  bytes.setByteAt(0,(byte)(SHIFT_START_INT + shift));
  int sortableBits=val ^ 0x80000000;
  sortableBits>>>=shift;
  while (nChars > 0) {
    bytes.setByteAt(nChars--,(byte)(sortableBits & 0x7f));
    sortableBits>>>=7;
  }
}
