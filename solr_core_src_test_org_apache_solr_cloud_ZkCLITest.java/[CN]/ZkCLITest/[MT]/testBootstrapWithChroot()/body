{
  String chroot="/foo/bar";
  assertFalse(zkClient.exists(chroot,true));
  String[] args=new String[]{"-zkhost",zkServer.getZkAddress() + chroot,"-cmd","bootstrap","-solrhome",this.solrHome};
  ZkCLI.main(args);
  assertTrue(zkClient.exists(chroot + ZkConfigManager.CONFIGS_ZKNODE + "/collection1",true));
}
