{
  if (s.indexOf(">") > -1) {
    s=s.replace(">","&gt;");
  }
  if (s.indexOf("<") > -1) {
    s=s.replace("<","&lt;");
  }
  if (s.indexOf("\"") > -1) {
    s=s.replace("\"","&quot;");
  }
  if (s.indexOf("'") > -1) {
    s=s.replace("'","&apos;");
  }
  if (s.indexOf("&") > -1) {
    s=s.replace("&","&amp;");
  }
  return s;
}
