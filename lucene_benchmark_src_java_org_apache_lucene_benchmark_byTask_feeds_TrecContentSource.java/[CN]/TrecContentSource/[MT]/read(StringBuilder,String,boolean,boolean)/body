{
  String sep="";
  while (true) {
    String line=reader.readLine();
    if (line == null) {
      openNextFile();
      continue;
    }
    if (lineStart != null && line.startsWith(lineStart)) {
      if (collectMatchLine) {
        buf.append(sep).append(line);
        sep=NEW_LINE;
      }
      return;
    }
    if (collectAll) {
      buf.append(sep).append(line);
      sep=NEW_LINE;
    }
  }
}
