{
  Properties props=new Properties();
  if (solrConfigOverride != null)   props.setProperty("solrconfig",solrConfigOverride);
  if (schemaOverride != null)   props.setProperty("schema",schemaOverride);
  props.setProperty("shards",shardList);
  String collection=System.getProperty("collection");
  if (collection == null)   collection="collection1";
  props.setProperty("collection",collection);
  JettySolrRunner jetty=new JettySolrRunner(solrHome.getAbsolutePath(),props,buildJettyConfig(context));
  jetty.start();
  return jetty;
}
