{
  Directory dir=newDirectory();
  MockAnalyzer analyzer=new MockAnalyzer(random());
  analyzer.setEnableChecks(false);
  IndexWriter writer=RandomIndexWriter.mockIndexWriter(dir,newIndexWriterConfig(analyzer).setRAMBufferSizeMB(0.2).setMergeScheduler(new ConcurrentMergeScheduler()),new TestPoint1());
  ((ConcurrentMergeScheduler)writer.getConfig().getMergeScheduler()).setSuppressExceptions();
  writer.commit();
  final int NUM_THREADS=4;
  final IndexerThread[] threads=new IndexerThread[NUM_THREADS];
  for (int i=0; i < NUM_THREADS; i++) {
    threads[i]=new IndexerThread(i,writer);
    threads[i].start();
  }
  for (int i=0; i < NUM_THREADS; i++)   threads[i].join();
  for (int i=0; i < NUM_THREADS; i++)   if (threads[i].failure != null) {
    fail("thread " + threads[i].getName() + ": hit unexpected failure");
  }
  writer.commit();
  try {
    writer.shutdown();
  }
 catch (  Throwable t) {
    System.out.println("exception during close:");
    t.printStackTrace(System.out);
    writer.rollback();
  }
  IndexReader r2=DirectoryReader.open(dir);
  final int count=r2.docFreq(new Term("content4","aaa"));
  final int count2=r2.docFreq(new Term("content4","ddd"));
  assertEquals(count,count2);
  r2.close();
  dir.close();
}
