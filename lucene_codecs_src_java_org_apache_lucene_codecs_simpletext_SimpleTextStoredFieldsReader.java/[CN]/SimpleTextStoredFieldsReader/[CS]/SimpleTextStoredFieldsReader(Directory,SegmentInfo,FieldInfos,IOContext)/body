{
  this.fieldInfos=fn;
  boolean success=false;
  try {
    in=directory.openInput(IndexFileNames.segmentFileName(si.name,"",SimpleTextStoredFieldsWriter.FIELDS_EXTENSION),context);
    success=true;
  }
  finally {
    if (!success) {
      try {
        close();
      }
 catch (      Throwable t) {
      }
    }
  }
  readIndex(si.getDocCount());
}
