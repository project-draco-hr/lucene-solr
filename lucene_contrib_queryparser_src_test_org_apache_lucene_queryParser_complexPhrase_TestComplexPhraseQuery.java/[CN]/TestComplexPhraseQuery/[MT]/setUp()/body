{
  super.setUp();
  rd=newDirectory();
  IndexWriter w=new IndexWriter(rd,newIndexWriterConfig(TEST_VERSION_CURRENT,analyzer));
  for (int i=0; i < docsContent.length; i++) {
    Document doc=new Document();
    doc.add(newField("name",docsContent[i].name,Field.Store.YES,Field.Index.ANALYZED));
    doc.add(newField("id",docsContent[i].id,Field.Store.YES,Field.Index.ANALYZED));
    w.addDocument(doc);
  }
  w.close();
  searcher=new IndexSearcher(rd,true);
}
