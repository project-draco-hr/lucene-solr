{
  for (int newTotal; X >= 2 * minRun + 1; X=newTotal) {
    newTotal=X / 2 + 1;
    if (3 * minRun + 3 <= X && X <= 4 * minRun + 1) {
      newTotal=2 * minRun + 1;
    }
 else     if (5 * minRun + 5 <= X && X <= 6 * minRun + 5) {
      newTotal=3 * minRun + 3;
    }
 else     if (8 * minRun + 9 <= X && X <= 10 * minRun + 9) {
      newTotal=5 * minRun + 5;
    }
 else     if (13 * minRun + 15 <= X && X <= 16 * minRun + 17) {
      newTotal=8 * minRun + 9;
    }
    runs.add(0,X - newTotal);
  }
  runs.add(0,X);
}
