{
  Directory dir=newDirectory();
  DirectoryTaxonomyWriter ltw=new DirectoryTaxonomyWriter(dir);
  ltw.addCategory(new CategoryPath("a"));
  ltw.close();
  DirectoryTaxonomyReader ltr=new DirectoryTaxonomyReader(dir);
  ltr.incRef();
  ltr.close();
  ltr.getSize();
  ltr.decRef();
  dir.close();
}
