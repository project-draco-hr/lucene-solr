{
  if (code < 128) {
    bytes[0].value=code;
    bytes[0].bits=7;
    len=1;
  }
 else   if (code < 2048) {
    bytes[0].value=(6 << 5) | (code >> 6);
    bytes[0].bits=5;
    setRest(code,1);
    len=2;
  }
 else   if (code < 65536) {
    bytes[0].value=(14 << 4) | (code >> 12);
    bytes[0].bits=4;
    setRest(code,2);
    len=3;
  }
 else {
    bytes[0].value=(30 << 3) | (code >> 18);
    bytes[0].bits=3;
    setRest(code,3);
    len=4;
  }
}
