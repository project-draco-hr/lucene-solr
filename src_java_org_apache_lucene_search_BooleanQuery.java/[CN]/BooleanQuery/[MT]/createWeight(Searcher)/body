{
  if (clauses.size() == 1) {
    BooleanClause c=(BooleanClause)clauses.elementAt(0);
    if (!c.prohibited) {
      Query clone=(Query)c.query.clone();
      clone.setBoost(getBoost() * clone.getBoost());
      return clone.createWeight(searcher);
    }
  }
  return new BooleanWeight(searcher);
}
