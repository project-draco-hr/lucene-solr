{
  if (clauses.size() == 1) {
    BooleanClause c=(BooleanClause)clauses.elementAt(0);
    if (!c.prohibited)     return c.query.scorer(reader,similarity);
  }
  BooleanScorer result=new BooleanScorer(similarity);
  for (int i=0; i < clauses.size(); i++) {
    BooleanClause c=(BooleanClause)clauses.elementAt(i);
    Scorer subScorer=c.query.scorer(reader,similarity);
    if (subScorer != null)     result.add(subScorer,c.required,c.prohibited);
 else     if (c.required)     return null;
  }
  return result;
}
