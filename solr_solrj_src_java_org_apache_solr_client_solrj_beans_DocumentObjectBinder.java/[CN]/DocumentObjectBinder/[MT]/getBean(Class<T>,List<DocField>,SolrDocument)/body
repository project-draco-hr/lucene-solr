{
  if (fields == null) {
    fields=getDocFields(clazz);
  }
  try {
    T obj=clazz.newInstance();
    for (    DocField docField : fields) {
      docField.inject(obj,solrDoc);
    }
    return obj;
  }
 catch (  Exception e) {
    throw new BindingException("Could not instantiate object of " + clazz,e);
  }
}
