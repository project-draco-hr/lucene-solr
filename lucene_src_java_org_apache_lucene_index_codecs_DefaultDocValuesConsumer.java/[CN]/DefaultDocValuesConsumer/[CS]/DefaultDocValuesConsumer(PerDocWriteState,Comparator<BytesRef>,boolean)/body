{
  this.segmentName=state.segmentName;
  this.codecId=state.codecId;
  this.bytesUsed=state.bytesUsed;
  this.context=state.context;
  this.directory=useCompoundFile ? state.directory.createCompoundOutput(IndexFileNames.segmentFileName(segmentName,codecId,IndexFileNames.COMPOUND_FILE_EXTENSION),context) : state.directory;
  this.comparator=comparator;
  this.useCompoundFile=useCompoundFile;
}
