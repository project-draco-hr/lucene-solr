{
  int size=leaves.length;
  int lo=0;
  int hi=size - 1;
  while (hi >= lo) {
    int mid=(lo + hi) >>> 1;
    int midValue=leaves[mid].docBase;
    if (n < midValue)     hi=mid - 1;
 else     if (n > midValue)     lo=mid + 1;
 else {
      while (mid + 1 < size && leaves[mid + 1].docBase == midValue) {
        mid++;
      }
      return mid;
    }
  }
  return hi;
}
