{
  byte b=bytes[pos++];
  int i=b & 0x7F;
  if ((b & 0x80) == 0)   return i;
  b=bytes[pos++];
  i|=(b & 0x7F) << 7;
  if ((b & 0x80) == 0)   return i;
  b=bytes[pos++];
  i|=(b & 0x7F) << 14;
  if ((b & 0x80) == 0)   return i;
  b=bytes[pos++];
  i|=(b & 0x7F) << 21;
  if ((b & 0x80) == 0)   return i;
  b=bytes[pos++];
  i|=(b & 0x0F) << 28;
  if ((b & 0xF0) == 0)   return i;
  throw new RuntimeException("Invalid vInt detected (too many bits)");
}
