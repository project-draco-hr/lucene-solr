{
  Object val=value;
  if (val == null) {
    val=(arg == null) ? defaultValue : getObjectFrom(arg);
    if (val == null) {
      throw new SolrException(ErrorCode.BAD_REQUEST,"ValueAugmenter is missing a value -- should be defined in solrconfig or inline");
    }
  }
  return new ValueAugmenter(field,val);
}
