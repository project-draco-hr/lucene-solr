{
  Directory directory=new RAMDirectory();
  IndexWriter writer=new IndexWriter(directory,new IndexWriterConfig(TEST_VERSION_CURRENT));
  for (int i=0; i < 10; i++) {
    Document doc=new Document();
    doc.add(new Field(this.field,"a b",Field.Store.YES,Field.Index.ANALYZED));
    writer.addDocument(doc);
  }
  writer.close();
  IndexReader reader=IndexReader.open(directory,true);
  TermPositions tp=reader.termPositions();
  tp.seek(new Term(this.field,"b"));
  for (int i=0; i < 10; i++) {
    tp.next();
    assertEquals(tp.doc(),i);
    assertEquals(tp.nextPosition(),1);
  }
  tp.seek(new Term(this.field,"a"));
  for (int i=0; i < 10; i++) {
    tp.next();
    assertEquals(tp.doc(),i);
    assertEquals(tp.nextPosition(),0);
  }
}
