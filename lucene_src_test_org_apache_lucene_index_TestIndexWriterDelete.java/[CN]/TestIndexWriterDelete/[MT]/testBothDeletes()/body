{
  Directory dir=newDirectory(random);
  IndexWriter modifier=new IndexWriter(dir,newIndexWriterConfig(random,TEST_VERSION_CURRENT,new MockAnalyzer(MockTokenizer.WHITESPACE,false)).setMaxBufferedDocs(100).setMaxBufferedDeleteTerms(100));
  int id=0;
  int value=100;
  for (int i=0; i < 5; i++) {
    addDoc(modifier,++id,value);
  }
  value=200;
  for (int i=0; i < 5; i++) {
    addDoc(modifier,++id,value);
  }
  modifier.commit();
  for (int i=0; i < 5; i++) {
    addDoc(modifier,++id,value);
  }
  modifier.deleteDocuments(new Term("value",String.valueOf(value)));
  modifier.commit();
  IndexReader reader=IndexReader.open(dir,true);
  assertEquals(5,reader.numDocs());
  modifier.close();
  reader.close();
  dir.close();
}
