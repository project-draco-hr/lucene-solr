{
  Directory dir=newDirectory();
  IndexWriter modifier=new IndexWriter(dir,newIndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer(MockTokenizer.WHITESPACE,false)).setMaxBufferedDocs(2).setMaxBufferedDeleteTerms(2));
  modifier.setInfoStream(VERBOSE ? System.out : null);
  int id=0;
  int value=100;
  for (int i=0; i < 7; i++) {
    addDoc(modifier,++id,value);
  }
  modifier.commit();
  assertEquals(0,modifier.getNumBufferedDocuments());
  assertTrue(0 < modifier.getSegmentCount());
  modifier.commit();
  IndexReader reader=IndexReader.open(dir,true);
  assertEquals(7,reader.numDocs());
  reader.close();
  modifier.deleteDocuments(new Term("value",String.valueOf(value)));
  modifier.commit();
  reader=IndexReader.open(dir,true);
  assertEquals(0,reader.numDocs());
  reader.close();
  modifier.close();
  dir.close();
}
