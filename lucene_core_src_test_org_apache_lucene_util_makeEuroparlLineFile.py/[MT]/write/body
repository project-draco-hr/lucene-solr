def write(date, title, pending, fOut):
    global maxDoc
    body = ' '.join(pending).replace('\t', ' ').strip()
    if (len(body) > 0):
        line = ('%s\t%s\t%s\n' % (title, date, body))
        fOut.write(line)
        maxDoc += 1
        del pending[:]
        if VERBOSE:
            print len(body)
