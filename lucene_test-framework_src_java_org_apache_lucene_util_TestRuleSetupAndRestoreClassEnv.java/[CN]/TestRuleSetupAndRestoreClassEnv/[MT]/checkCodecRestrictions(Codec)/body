{
  assumeFalse("Class not allowed to use codec: " + codec.getName() + ".",shouldAvoidCodec(codec.getName()));
  if (codec instanceof RandomCodec && !avoidCodecs.isEmpty()) {
    for (    String name : ((RandomCodec)codec).formatNames) {
      assumeFalse("Class not allowed to use postings format: " + name + ".",shouldAvoidCodec(name));
    }
  }
  PostingsFormat pf=codec.postingsFormat();
  assumeFalse("Class not allowed to use postings format: " + pf.getName() + ".",shouldAvoidCodec(pf.getName()));
  assumeFalse("Class not allowed to use postings format: " + LuceneTestCase.TEST_POSTINGSFORMAT + ".",shouldAvoidCodec(LuceneTestCase.TEST_POSTINGSFORMAT));
}
