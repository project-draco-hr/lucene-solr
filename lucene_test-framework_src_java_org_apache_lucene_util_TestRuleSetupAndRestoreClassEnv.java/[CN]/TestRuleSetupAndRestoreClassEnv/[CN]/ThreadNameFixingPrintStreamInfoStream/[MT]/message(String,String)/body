{
  if ("TP".equals(component)) {
    return;
  }
  final String name;
  if (Thread.currentThread().getName().startsWith("TEST-")) {
    name="main";
  }
 else {
    name=Thread.currentThread().getName();
  }
  stream.println(component + " " + messageID+ " ["+ dateFormat.format(new Date())+ "; "+ name+ "]: "+ message);
}
