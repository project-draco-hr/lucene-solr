{
  if (params.get(DIRECTORY) != null) {
    configDir=params.get(DIRECTORY);
  }
 else {
    SolrCore core=dataImporter.getCore();
    if (core == null) {
      configDir=SolrResourceLoader.locateSolrHome().toString();
    }
 else {
      configDir=core.getResourceLoader().getConfigDir();
    }
  }
}
