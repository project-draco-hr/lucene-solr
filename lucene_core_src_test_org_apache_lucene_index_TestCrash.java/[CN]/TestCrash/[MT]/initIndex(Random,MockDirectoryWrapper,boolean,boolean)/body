{
  dir.setLockFactory(NoLockFactory.getNoLockFactory());
  IndexWriter writer=new IndexWriter(dir,newIndexWriterConfig(new MockAnalyzer(random)).setMaxBufferedDocs(10).setMergeScheduler(new ConcurrentMergeScheduler()).setCommitOnClose(commitOnClose));
  ((ConcurrentMergeScheduler)writer.getConfig().getMergeScheduler()).setSuppressExceptions();
  if (initialCommit) {
    writer.commit();
  }
  Document doc=new Document();
  doc.add(newTextField("content","aaa",Field.Store.NO));
  doc.add(newTextField("id","0",Field.Store.NO));
  for (int i=0; i < 157; i++)   writer.addDocument(doc);
  return writer;
}
