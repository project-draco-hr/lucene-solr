{
  CloudSolrServer server=new CloudSolrServer("[ff01::114]:33332");
  try {
    server.setZkConnectTimeout(100);
    server.connect();
    fail("Expected exception");
  }
 catch (  RuntimeException e) {
    assertTrue(e.getCause() instanceof TimeoutException);
  }
 finally {
    server.shutdown();
  }
}
