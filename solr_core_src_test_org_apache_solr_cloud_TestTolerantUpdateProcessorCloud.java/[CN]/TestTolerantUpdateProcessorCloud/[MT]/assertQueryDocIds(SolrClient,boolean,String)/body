{
  for (  String id : ids) {
    assertEquals(client.toString() + " should " + (shouldExist ? "" : "not ")+ "find id: "+ id,(shouldExist ? 1 : 0),CLOUD_CLIENT.query(params("q","{!term f=id}" + id)).getResults().getNumFound());
  }
  if (!CLOUD_CLIENT.equals(client)) {
    assertQueryDocIds(CLOUD_CLIENT,shouldExist,ids);
  }
}
