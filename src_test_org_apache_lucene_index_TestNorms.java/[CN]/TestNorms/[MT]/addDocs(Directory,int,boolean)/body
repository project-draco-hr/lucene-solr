{
  IndexWriter iw=new IndexWriter(dir,new IndexWriterConfig(TEST_VERSION_CURRENT).setOpenMode(OpenMode.APPEND).setAnalyzer(anlzr).setMaxBufferedDocs(5).setSimilarity(similarityOne));
  LogMergePolicy lmp=(LogMergePolicy)iw.getMergePolicy();
  lmp.setMergeFactor(3);
  lmp.setUseCompoundFile(compound);
  lmp.setUseCompoundDocStore(compound);
  for (int i=0; i < ndocs; i++) {
    iw.addDocument(newDoc());
  }
  iw.close();
}
