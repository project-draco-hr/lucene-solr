{
  IndexWriter iw=new IndexWriter(dir,new IndexWriterConfig(TEST_VERSION_CURRENT).setOpenMode(OpenMode.CREATE).setAnalyzer(anlzr).setMaxBufferedDocs(5).setSimilarity(similarityOne));
  LogMergePolicy lmp=(LogMergePolicy)iw.getMergePolicy();
  lmp.setMergeFactor(3);
  lmp.setUseCompoundFile(true);
  lmp.setUseCompoundDocStore(true);
  iw.close();
}
