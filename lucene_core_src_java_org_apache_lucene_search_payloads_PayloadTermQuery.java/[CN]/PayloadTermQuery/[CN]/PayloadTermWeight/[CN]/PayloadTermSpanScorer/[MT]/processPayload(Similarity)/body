{
  if (spans.isPayloadAvailable()) {
    final PostingsEnum postings=termSpans.getPostings();
    payload=postings.getPayload();
    if (payload != null) {
      payloadScore=function.currentScore(doc,term.field(),spans.startPosition(),spans.endPosition(),payloadsSeen,payloadScore,docScorer.computePayloadFactor(doc,spans.startPosition(),spans.endPosition(),payload));
    }
 else {
      payloadScore=function.currentScore(doc,term.field(),spans.startPosition(),spans.endPosition(),payloadsSeen,payloadScore,1F);
    }
    payloadsSeen++;
  }
 else {
  }
}
