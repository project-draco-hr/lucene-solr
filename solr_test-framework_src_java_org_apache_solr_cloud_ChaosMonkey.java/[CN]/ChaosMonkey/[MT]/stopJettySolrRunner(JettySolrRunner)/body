{
  monkeyLog("stop shard! " + jetty.getLocalPort());
  FilterHolder fh=jetty.getDispatchFilter();
  if (fh != null) {
    SolrDispatchFilter sdf=(SolrDispatchFilter)fh.getFilter();
    if (sdf != null) {
      sdf.destroy();
    }
  }
  jetty.stop();
  if (!jetty.isStopped()) {
    throw new RuntimeException("could not stop jetty");
  }
}
