{
  if (chunkDocs == 1) {
    final int numFields=pendingDocs.getFirst().numFields;
    vectorsStream.writeVInt(numFields);
    return numFields;
  }
 else {
    writer.reset(vectorsStream);
    int totalFields=0;
    for (    DocData dd : pendingDocs) {
      writer.add(dd.numFields);
      totalFields+=dd.numFields;
    }
    writer.finish();
    return totalFields;
  }
}
