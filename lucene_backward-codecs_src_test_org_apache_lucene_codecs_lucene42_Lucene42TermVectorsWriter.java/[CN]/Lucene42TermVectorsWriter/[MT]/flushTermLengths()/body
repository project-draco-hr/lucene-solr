{
  writer.reset(vectorsStream);
  for (  DocData dd : pendingDocs) {
    for (    FieldData fd : dd.fields) {
      for (int i=0; i < fd.numTerms; ++i) {
        writer.add(fd.prefixLengths[i]);
      }
    }
  }
  writer.finish();
  writer.reset(vectorsStream);
  for (  DocData dd : pendingDocs) {
    for (    FieldData fd : dd.fields) {
      for (int i=0; i < fd.numTerms; ++i) {
        writer.add(fd.suffixLengths[i]);
      }
    }
  }
  writer.finish();
}
