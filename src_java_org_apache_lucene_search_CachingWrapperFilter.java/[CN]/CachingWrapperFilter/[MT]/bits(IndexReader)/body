{
  if (cache == null) {
    cache=new WeakHashMap();
  }
  Object cached=null;
synchronized (cache) {
    cached=cache.get(reader);
  }
  if (cached != null) {
    if (cached instanceof BitSet) {
      return (BitSet)cached;
    }
 else     if (cached instanceof DocIdBitSet)     return ((DocIdBitSet)cached).getBitSet();
  }
  final BitSet bits=filter.bits(reader);
synchronized (cache) {
    cache.put(reader,bits);
  }
  return bits;
}
