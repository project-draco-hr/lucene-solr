{
  super.setUp();
  dir=newDirectory();
  ramDir=newDirectory();
  IndexWriter writer=new IndexWriter(ramDir,newIndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer(MockTokenizer.SIMPLE,true,MockTokenFilter.ENGLISH_STOPSET,true)));
  for (int i=0; i < texts.length; i++) {
    addDoc(writer,texts[i]);
  }
  Document doc=new Document();
  NumericField nfield=new NumericField(NUMERIC_FIELD_NAME,Store.YES,true);
  nfield.setIntValue(1);
  doc.add(nfield);
  writer.addDocument(doc,analyzer);
  nfield=new NumericField(NUMERIC_FIELD_NAME,Store.YES,true);
  nfield.setIntValue(3);
  doc=new Document();
  doc.add(nfield);
  writer.addDocument(doc,analyzer);
  nfield=new NumericField(NUMERIC_FIELD_NAME,Store.YES,true);
  nfield.setIntValue(5);
  doc=new Document();
  doc.add(nfield);
  writer.addDocument(doc,analyzer);
  nfield=new NumericField(NUMERIC_FIELD_NAME,Store.YES,true);
  nfield.setIntValue(7);
  doc=new Document();
  doc.add(nfield);
  writer.addDocument(doc,analyzer);
  writer.optimize();
  writer.close();
  reader=IndexReader.open(ramDir,true);
  numHighlights=0;
}
