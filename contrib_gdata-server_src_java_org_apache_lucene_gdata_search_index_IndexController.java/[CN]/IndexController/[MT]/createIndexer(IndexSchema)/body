{
  GDataIndexer indexer;
  File indexLocation=createIndexLocation(schema.getIndexLocation(),schema.getName());
  boolean create=createIndexDirectory(indexLocation);
  Directory dir=FSDirectory.getDirectory(indexLocation,create);
  if (LOG.isInfoEnabled())   LOG.info("Create new Indexer for IndexSchema: " + schema);
  if (schema.isUseTimedIndexer())   indexer=GDataIndexer.createTimedGdataIndexer(schema,dir,create,schema.getIndexerIdleTime());
 else   indexer=GDataIndexer.createGdataIndexer(schema,dir,create);
  indexer.registerIndexEventListener(this);
  return new ServiceIndex(schema,indexer,dir);
}
