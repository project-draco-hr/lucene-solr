{
  assertU(adoc("id","42","title","w10"));
  assertU(commit());
  loadFeature("description-length2",FieldLengthFeature.class.getCanonicalName(),"{\"field\":\"description\"}");
  loadModel("description-model2",LinearModel.class.getCanonicalName(),new String[]{"description-length2"},"{\"weights\":{\"description-length2\":1.0}}");
  final SolrQuery query=new SolrQuery();
  query.setQuery("title:w10");
  query.add("fl","*, score");
  query.add("rows","4");
  query.add("rq","{!ltr model=description-model2 reRankDocs=8}");
  assertJQ("/query" + query.toQueryString(),"/response/docs/[0]/score==0.0");
}
