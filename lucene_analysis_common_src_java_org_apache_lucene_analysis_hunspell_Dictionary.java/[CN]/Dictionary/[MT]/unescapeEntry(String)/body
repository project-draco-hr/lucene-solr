{
  StringBuilder sb=new StringBuilder();
  for (int i=0; i < entry.length(); i++) {
    char ch=entry.charAt(i);
    if (ch == '\\' && i + 1 < entry.length()) {
      sb.append(entry.charAt(i + 1));
      i++;
    }
 else     if (ch == '/') {
      sb.append(FLAG_SEPARATOR);
    }
 else {
      sb.append(ch);
    }
  }
  return sb.toString();
}
