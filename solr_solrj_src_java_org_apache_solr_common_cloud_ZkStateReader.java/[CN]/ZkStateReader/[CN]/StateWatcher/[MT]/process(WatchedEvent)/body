{
  if (!interestingCollections.contains(coll)) {
    log.info("Uninteresting collection {}",coll);
    return;
  }
  if (EventType.None.equals(event.getType())) {
    return;
  }
  log.info("A cluster state change: {} for collection {} has occurred - updating... (live nodes size: {})",(event),coll,ZkStateReader.this.clusterState == null ? 0 : ZkStateReader.this.clusterState.getLiveNodes().size());
  refreshAndWatch(true);
synchronized (getUpdateLock()) {
    constructState();
  }
}
