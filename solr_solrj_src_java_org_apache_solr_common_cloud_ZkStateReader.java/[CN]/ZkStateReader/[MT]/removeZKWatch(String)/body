{
synchronized (this) {
    watchedCollections.remove(coll);
    try {
      updateClusterState(true);
    }
 catch (    KeeperException e) {
      log.error("Error updating state",e);
    }
catch (    InterruptedException e) {
      log.error("Error updating state",e);
      Thread.currentThread().interrupt();
    }
  }
}
