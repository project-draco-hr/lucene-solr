{
  final MockTokenizer input=new MockTokenizer(MockTokenizer.WHITESPACE,false);
  input.setReader(new StringReader("hello world"));
  PrefixAndSuffixAwareTokenFilter ts=new PrefixAndSuffixAwareTokenFilter(new CannedTokenStream(createToken("^",0,0)),input,new CannedTokenStream(createToken("$",0,0)));
  assertTokenStreamContents(ts,new String[]{"^","hello","world","$"},new int[]{0,0,6,11},new int[]{0,5,11,11});
}
