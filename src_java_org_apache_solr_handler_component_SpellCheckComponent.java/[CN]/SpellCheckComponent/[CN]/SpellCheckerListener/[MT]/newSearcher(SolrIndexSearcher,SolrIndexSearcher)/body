{
  if (firstSearcher) {
    try {
      LOG.info("Loading spell index for spellchecker: " + checker.getDictionaryName());
      checker.reload();
    }
 catch (    IOException e) {
      LOG.log(Level.SEVERE,"Exception in reloading spell check index for spellchecker: " + checker.getDictionaryName(),e);
    }
  }
 else {
    try {
      LOG.info("Building spell index for spell checker: " + checker.getDictionaryName());
      checker.build(core,newSearcher);
    }
 catch (    Exception e) {
      LOG.log(Level.SEVERE,"Exception in building spell check index for spellchecker: " + checker.getDictionaryName(),e);
    }
  }
}
