{
  while (true) {
    final boolean gotOne=input.incrementToken();
    if (!gotOne) {
      return false;
    }
 else     if (termAtt.toString().equals("a")) {
      pendingPosInc+=posIncAtt.getPositionIncrement();
    }
 else {
      posIncAtt.setPositionIncrement(pendingPosInc + posIncAtt.getPositionIncrement());
      pendingPosInc=0;
      return true;
    }
  }
}
