{
  final TokenStream ts=new CannedTokenStream(new Token[]{token("xyz",1,1),token("abc",0,3),token("def",2,1)});
  final LightAutomaton actual=(new TokenStreamToAutomaton()).toAutomaton(ts);
  final LightAutomaton expected=BasicOperations.unionLight(join(s2a("xyz"),SEP_A,HOLE_A,SEP_A,s2a("def")),s2a("abc"));
  assertTrue(BasicOperations.sameLanguage(BasicOperations.determinize(expected),BasicOperations.determinize(actual)));
}
