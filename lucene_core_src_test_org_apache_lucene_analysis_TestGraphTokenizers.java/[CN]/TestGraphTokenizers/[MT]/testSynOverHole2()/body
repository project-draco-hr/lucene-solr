{
  final TokenStream ts=new CannedTokenStream(new Token[]{token("xyz",1,1),token("abc",0,3),token("def",2,1)});
  final Automaton actual=(new TokenStreamToAutomaton()).toAutomaton(ts);
  final Automaton expected=Operations.union(join(s2a("xyz"),SEP_A,HOLE_A,SEP_A,s2a("def")),s2a("abc"));
  assertTrue(Operations.sameLanguage(Operations.determinize(Operations.removeDeadStates(expected)),Operations.determinize(Operations.removeDeadStates(actual))));
}
