{
  final String f="name";
  for (  String n : new String[]{"2","3","100","99999"}) {
    assertQ(req("qt","/admin/luke","fl",f,"numTerms",n),field(f) + "lst[@name='topTerms']/int[@name='Apache']",field(f) + "lst[@name='topTerms']/int[@name='Solr']","count(" + field(f) + "lst[@name='topTerms']/int)=2");
  }
  assertQ(req("qt","/admin/luke","fl",f,"numTerms","1"),"count(" + field(f) + "lst[@name='topTerms']/int)=1");
  assertQ(req("qt","/admin/luke","fl",f,"numTerms","0"),"count(" + field(f) + "lst[@name='topTerms']/int)=0");
  for (  String n : new String[]{"0","1","2","100","99999"}) {
    assertQ(req("qt","/admin/luke","fl","bogus_s","numTerms",n),"count(" + field(f) + "lst[@name='topTerms']/int)=0");
  }
}
