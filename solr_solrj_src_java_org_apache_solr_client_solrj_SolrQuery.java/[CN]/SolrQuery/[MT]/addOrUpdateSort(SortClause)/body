{
  if (sortClauses != null) {
    for (int index=0; index < sortClauses.size(); index++) {
      SortClause existing=sortClauses.get(index);
      if (existing.getItem().equals(sortClause.getItem())) {
        sortClauses.set(index,sortClause);
        serializeSorts();
        return this;
      }
    }
  }
  return addSort(sortClause);
}
