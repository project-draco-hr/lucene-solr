{
  if (sortClauses != null) {
    for (    SortClause existing : sortClauses) {
      if (existing.getItem().equals(itemName)) {
        sortClauses.remove(existing);
        if (sortClauses.isEmpty())         sortClauses=null;
        serializeSorts();
        break;
      }
    }
  }
  return this;
}
