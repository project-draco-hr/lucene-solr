{
  String[] data=new String[]{"A 1 2 3 4 5 6","Z       4 5 6",null,"B   2   4 5 6","Y     3   5 6",null,"C     3     6","X       4 5 6"};
  small=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random(),small,newIndexWriterConfig(new MockAnalyzer(random(),MockTokenizer.WHITESPACE,false)).setMergePolicy(newLogMergePolicy()));
  FieldType customType=new FieldType(TextField.TYPE_STORED);
  customType.setTokenized(false);
  for (int i=0; i < data.length; i++) {
    Document doc=new Document();
    doc.add(newField("id",String.valueOf(i),customType));
    doc.add(newField("all","all",customType));
    if (null != data[i]) {
      doc.add(newTextField("data",data[i],Field.Store.YES));
    }
    writer.addDocument(doc);
  }
  reader=writer.getReader();
  writer.close();
}
