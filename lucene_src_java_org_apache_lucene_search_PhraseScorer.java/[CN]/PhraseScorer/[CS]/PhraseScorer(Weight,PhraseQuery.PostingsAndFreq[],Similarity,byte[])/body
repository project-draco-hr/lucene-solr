{
  super(weight);
  this.similarity=similarity;
  this.norms=norms;
  this.value=weight.getValue();
  for (int i=0; i < postings.length; i++) {
    PhrasePositions pp=new PhrasePositions(postings[i].postings,postings[i].position,i);
    if (last != null) {
      last.next=pp;
    }
 else {
      first=pp;
    }
    last=pp;
  }
  pq=new PhraseQueue(postings.length);
  first.doc=-1;
}
