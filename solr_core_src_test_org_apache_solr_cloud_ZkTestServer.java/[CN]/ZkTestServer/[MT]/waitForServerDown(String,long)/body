{
  long start=System.currentTimeMillis();
  while (true) {
    try {
      HostPort hpobj=parseHostPortList(hp).get(0);
      send4LetterWord(hpobj.host,hpobj.port,"stat");
    }
 catch (    IOException e) {
      return true;
    }
    if (System.currentTimeMillis() > start + timeout) {
      break;
    }
    try {
      Thread.sleep(250);
    }
 catch (    InterruptedException e) {
    }
  }
  return false;
}
