{
  final StringBuilder buffer=new StringBuilder();
  if (hasChanges) {
    buffer.append("*");
  }
  buffer.append(getClass().getSimpleName());
  buffer.append('(');
  for (int i=0; i < subReaders.length; i++) {
    if (i > 0) {
      buffer.append(' ');
    }
    buffer.append(subReaders[i]);
    buffer.append(' ');
  }
  buffer.append(')');
  return buffer.toString();
}
