{
  assertQ("/schema/fields?indent=on&wt=xml&fl=id,_version_,price_i&includeDynamic=on","count(/response/arr[@name='fields']/lst/str[@name='name']) = 3","(/response/arr[@name='fields']/lst/str[@name='name'])[1] = 'id'","(/response/arr[@name='fields']/lst/str[@name='name'])[2] = '_version_'","(/response/arr[@name='fields']/lst/str[@name='name'])[3] = 'price_i'","/response/arr[@name='fields']/lst[    str[@name='name']='price_i'    " + "                                  and str[@name='dynamicBase']='*_i']");
}
