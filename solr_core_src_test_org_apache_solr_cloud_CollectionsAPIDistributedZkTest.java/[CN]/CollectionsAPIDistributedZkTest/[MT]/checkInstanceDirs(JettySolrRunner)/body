{
  CoreContainer cores=((SolrDispatchFilter)jetty.getDispatchFilter().getFilter()).getCores();
  Collection<SolrCore> theCores=cores.getCores();
  for (  SolrCore core : theCores) {
    if (!oldStyleSolrXml) {
      assertTrue("Could not find expected core.properties file",new File((String)core.getStatistics().get("instanceDir"),"core.properties").exists());
    }
    assertEquals(new File(SolrResourceLoader.normalizeDir(jetty.getSolrHome() + File.separator + core.getName())).getAbsolutePath(),new File(SolrResourceLoader.normalizeDir((String)core.getStatistics().get("instanceDir"))).getAbsolutePath());
  }
}
