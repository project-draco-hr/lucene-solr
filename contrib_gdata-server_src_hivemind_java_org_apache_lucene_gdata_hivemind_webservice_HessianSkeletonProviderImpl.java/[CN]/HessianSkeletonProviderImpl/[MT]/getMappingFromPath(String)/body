{
  if (path.endsWith("/"))   path=path.substring(0,path.length() - 1);
  String requestedService=path.substring(path.lastIndexOf("/") + 1);
  HessianSkeleton retVal=this.skeletonCache.get(requestedService);
  if (retVal == null) {
    WebserviceMappingBean wsBean=this.mapping.get(requestedService);
    if (wsBean == null)     throw new NoSuchServiceException();
    if (!checkInterface(wsBean))     throw new RuntimeException("The configured webservice interface is not assignable from the corresponding service");
    retVal=new HessianSkeleton(wsBean.getServiceImpl(),wsBean.getServiceInterface());
    this.skeletonCache.putIfAbsent(requestedService,retVal);
  }
  return retVal;
}
