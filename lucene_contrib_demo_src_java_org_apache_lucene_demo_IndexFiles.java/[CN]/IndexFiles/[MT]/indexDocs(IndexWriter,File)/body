{
  if (file.canRead()) {
    if (file.isDirectory()) {
      String[] files=file.list();
      if (files != null) {
        for (int i=0; i < files.length; i++) {
          indexDocs(writer,new File(file,files[i]));
        }
      }
    }
 else {
      System.out.println("adding " + file);
      try {
        writer.addDocument(FileDocument.Document(file));
      }
 catch (      FileNotFoundException fnfe) {
      }
    }
  }
}
