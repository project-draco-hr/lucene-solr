{
  RateLimiter limiter=mergeWriteRateLimiter;
  if (mbPerSec == null) {
    if (limiter != null) {
      limiter.setMbPerSec(Double.MAX_VALUE);
      mergeWriteRateLimiter=null;
    }
  }
 else   if (limiter != null) {
    limiter.setMbPerSec(mbPerSec);
  }
 else {
    mergeWriteRateLimiter=new RateLimiter(mbPerSec);
  }
}
