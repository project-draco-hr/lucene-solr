{
  super.setUp();
  dir=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random(),dir,newIndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer(random(),MockTokenizer.KEYWORD,false)).setMaxBufferedDocs(_TestUtil.nextInt(random(),50,1000)));
  Document doc=new Document();
  Field field=newField("field","",StringField.TYPE_UNSTORED);
  doc.add(field);
  final String codec=Codec.getDefault().getName();
  int num=codec.equals("Lucene3x") ? 200 * RANDOM_MULTIPLIER : atLeast(1000);
  for (int i=0; i < num; i++) {
    field.setStringValue(_TestUtil.randomUnicodeString(random(),10));
    writer.addDocument(doc);
  }
  reader=writer.getReader();
  searcher=newSearcher(reader);
  writer.close();
}
