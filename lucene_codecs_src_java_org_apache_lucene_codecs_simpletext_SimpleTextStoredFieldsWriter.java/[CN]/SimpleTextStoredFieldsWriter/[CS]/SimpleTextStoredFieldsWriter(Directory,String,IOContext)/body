{
  this.directory=directory;
  this.segment=segment;
  boolean success=false;
  try {
    out=directory.createOutput(IndexFileNames.segmentFileName(segment,"",FIELDS_EXTENSION),context);
    success=true;
  }
  finally {
    if (!success) {
      IOUtils.closeWhileHandlingException(this);
    }
  }
}
