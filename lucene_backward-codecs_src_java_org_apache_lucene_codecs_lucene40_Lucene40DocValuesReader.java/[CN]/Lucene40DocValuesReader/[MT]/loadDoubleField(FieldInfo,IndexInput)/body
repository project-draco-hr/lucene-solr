{
  CodecUtil.checkHeader(input,Lucene40DocValuesFormat.FLOATS_CODEC_NAME,Lucene40DocValuesFormat.FLOATS_VERSION_START,Lucene40DocValuesFormat.FLOATS_VERSION_CURRENT);
  int valueSize=input.readInt();
  if (valueSize != 8) {
    throw new CorruptIndexException("invalid valueSize: " + valueSize,input);
  }
  int maxDoc=state.segmentInfo.getDocCount();
  final long values[]=new long[maxDoc];
  for (int i=0; i < values.length; i++) {
    values[i]=input.readLong();
  }
  long bytesUsed=RamUsageEstimator.sizeOf(values);
  if (!merging) {
    instanceInfo.put(field.name,Accountables.namedAccountable("double array",bytesUsed));
    ramBytesUsed.addAndGet(bytesUsed);
  }
  return new NumericDocValues(){
    @Override public long get(    int docID){
      return values[docID];
    }
  }
;
}
