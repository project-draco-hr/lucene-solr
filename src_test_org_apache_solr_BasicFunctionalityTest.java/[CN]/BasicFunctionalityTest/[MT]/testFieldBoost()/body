{
  String res=h.update("<add>" + "<doc><field name=\"id\">1</field>" + "<field name=\"text\">hello</field></doc>"+ "<doc><field name=\"id\">2</field>"+ "<field boost=\"2.0\" name=\"text\">hello</field></doc>"+ "</add>");
  assertEquals("<result status=\"0\"></result>",res);
  assertU("<commit/>");
  assertQ(req("text:hello"),"//*[@numFound='2']");
  String resp=h.query(lrf.makeRequest("q","text:hello","debugQuery","true"));
  assertTrue(resp.indexOf("id=2") < resp.indexOf("id=1"));
}
