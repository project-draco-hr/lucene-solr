{
  int startOff=orig.startOffset();
  int endOff=orig.endOffset();
  if (orig.termLength() == endOff - startOff) {
    endOff=startOff + end;
    startOff+=start;
  }
  Token newTok=new Token(startOff,endOff,orig.type());
  newTok.setTermBuffer(orig.termBuffer(),start,(end - start));
  return newTok;
}
