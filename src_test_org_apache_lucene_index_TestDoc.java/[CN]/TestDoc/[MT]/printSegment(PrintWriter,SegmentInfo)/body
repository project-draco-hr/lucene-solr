{
  SegmentReader reader=SegmentReader.get(si);
  for (int i=0; i < reader.numDocs(); i++)   out.println(reader.document(i));
  TermEnum tis=reader.terms();
  while (tis.next()) {
    out.print(tis.term());
    out.println(" DF=" + tis.docFreq());
    TermPositions positions=reader.termPositions(tis.term());
    try {
      while (positions.next()) {
        out.print(" doc=" + positions.doc());
        out.print(" TF=" + positions.freq());
        out.print(" pos=");
        out.print(positions.nextPosition());
        for (int j=1; j < positions.freq(); j++)         out.print("," + positions.nextPosition());
        out.println("");
      }
    }
  finally {
      positions.close();
    }
  }
  tis.close();
  reader.close();
}
