{
  if (answer >= 0)   return answer;
  answer=values == null ? 0 : values.size();
  if (answer == 0) {
    answer=shardsMissingSum;
    return answer;
  }
  double factor=((double)values.size()) / sumAdded;
  long estimate=(long)(shardsMissingSum * factor);
  answer=values.size() + estimate;
  return answer;
}
