{
  ensureOpen();
  File file=new File(getDirectory(),name);
  try (FileChannel c=FileChannel.open(file.toPath(),StandardOpenOption.READ)){
    final String resourceDescription="MMapIndexInput(path=\"" + file.toString() + "\")";
    final boolean useUnmap=getUseUnmap();
    return ByteBufferIndexInput.newInstance(resourceDescription,map(resourceDescription,c,0,c.size()),c.size(),chunkSizePower,useUnmap ? CLEANER : null,useUnmap);
  }
 }
