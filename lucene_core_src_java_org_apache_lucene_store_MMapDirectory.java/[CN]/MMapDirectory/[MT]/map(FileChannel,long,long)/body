{
  if ((length >>> chunkSizePower) >= Integer.MAX_VALUE)   throw new IllegalArgumentException("RandomAccessFile too big for chunk size: " + fc.toString());
  final long chunkSize=1L << chunkSizePower;
  final int nrBuffers=(int)(length >>> chunkSizePower) + 1;
  ByteBuffer buffers[]=new ByteBuffer[nrBuffers];
  long bufferStart=0L;
  for (int bufNr=0; bufNr < nrBuffers; bufNr++) {
    int bufSize=(int)((length > (bufferStart + chunkSize)) ? chunkSize : (length - bufferStart));
    buffers[bufNr]=fc.map(MapMode.READ_ONLY,offset + bufferStart,bufSize);
    bufferStart+=bufSize;
  }
  return buffers;
}
