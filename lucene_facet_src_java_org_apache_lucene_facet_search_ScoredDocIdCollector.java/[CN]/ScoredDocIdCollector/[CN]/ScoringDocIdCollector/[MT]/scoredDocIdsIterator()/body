{
  return new ScoredDocIDsIterator(){
    private DocIdSetIterator docIdsIter=docIds.iterator();
    private int nextDoc;
    private int scoresIdx=-1;
    @Override public int getDocID(){
      return nextDoc;
    }
    @Override public float getScore(){
      return scores[scoresIdx];
    }
    @Override public boolean next(){
      try {
        nextDoc=docIdsIter.nextDoc();
        if (nextDoc == DocIdSetIterator.NO_MORE_DOCS) {
          return false;
        }
        ++scoresIdx;
        return true;
      }
 catch (      IOException e) {
        nextDoc=DocIdSetIterator.NO_MORE_DOCS;
        return false;
      }
    }
  }
;
}
