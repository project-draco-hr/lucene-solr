{
  String cred=credentials.get(username);
  if (cred == null || cred.isEmpty())   return false;
  cred=cred.trim();
  String salt=null;
  if (cred.contains(" ")) {
    String[] ss=cred.split(" ");
    if (ss.length > 1 && !ss[1].isEmpty()) {
      salt=ss[1];
      cred=ss[0];
    }
  }
  return cred.equals(sha256(password,salt));
}
