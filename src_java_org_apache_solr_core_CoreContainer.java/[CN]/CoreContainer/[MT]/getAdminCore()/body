{
synchronized (cores) {
    SolrCore core=adminCore != null ? adminCore.get() : null;
    if (core == null) {
      for (      CoreDescriptor descr : this.cores.values()) {
        core=descr.getCore();
        if (core != null) {
          break;
        }
      }
      setAdminCore(core);
    }
    return core;
  }
}
