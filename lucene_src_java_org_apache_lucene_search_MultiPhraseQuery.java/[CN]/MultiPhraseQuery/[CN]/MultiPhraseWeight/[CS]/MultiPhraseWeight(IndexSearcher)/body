{
  this.similarity=searcher.getSimilarityProvider().get(field);
  ArrayList<Term> allTerms=new ArrayList<Term>();
  for (  final Term[] terms : termArrays) {
    for (    Term term : terms) {
      allTerms.add(term);
    }
  }
  idfExp=similarity.idfExplain(allTerms,searcher);
  idf=idfExp.getIdf();
}
