{
  this.similarity=searcher.getSimilarityProvider().get(field);
  final IndexReaderContext context=searcher.getTopReaderContext();
  ArrayList<TermStatistics> allTermStats=new ArrayList<TermStatistics>();
  for (  final Term[] terms : termArrays) {
    for (    Term term : terms) {
      TermContext termContext=termContexts.get(term);
      if (termContext == null) {
        termContext=TermContext.build(context,term,true);
        termContexts.put(term,termContext);
      }
      allTermStats.add(searcher.termStatistics(term,termContext));
    }
  }
  stats=similarity.computeWeight(getBoost(),searcher.collectionStatistics(field),allTermStats.toArray(new TermStatistics[allTermStats.size()]));
}
