{
  Object fieldName=args.get("field");
  if (fieldName == null) {
    fieldName=args.get("f");
  }
  if (fieldName == null) {
    throw err("Missing 'field'");
  }
  if (!(fieldName instanceof String)) {
    throw err("Expected string for 'field', got" + fieldName);
  }
  return (String)fieldName;
}
