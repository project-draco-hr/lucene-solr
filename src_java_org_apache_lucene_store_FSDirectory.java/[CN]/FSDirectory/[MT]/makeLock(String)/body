{
  StringBuffer buf=getLockPrefix();
  buf.append("-");
  buf.append(name);
  final File lockFile=new File(lockDir,buf.toString());
  return new Lock(){
    public boolean obtain() throws IOException {
      if (disableLocks)       return true;
      if (!lockDir.exists()) {
        if (!lockDir.mkdirs()) {
          throw new IOException("Cannot create lock directory: " + lockDir);
        }
      }
      return lockFile.createNewFile();
    }
    public void release(){
      if (disableLocks)       return;
      lockFile.delete();
    }
    public boolean isLocked(){
      if (disableLocks)       return false;
      return lockFile.exists();
    }
    public String toString(){
      return "Lock@" + lockFile;
    }
  }
;
}
