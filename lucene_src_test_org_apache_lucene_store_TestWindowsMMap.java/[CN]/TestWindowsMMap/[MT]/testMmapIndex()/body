{
  File dirPath=new File(storePathname);
  rmDir(dirPath);
  MMapDirectory dir=new MMapDirectory(dirPath,null);
  StandardAnalyzer analyzer=new StandardAnalyzer(TEST_VERSION_CURRENT,Collections.emptySet());
  IndexWriter writer=new IndexWriter(dir,new IndexWriterConfig(TEST_VERSION_CURRENT,analyzer).setOpenMode(OpenMode.CREATE));
  writer.commit();
  IndexSearcher searcher=new IndexSearcher(dir,true);
  for (int dx=0; dx < 1000 * _TestUtil.getRandomMultiplier(); dx++) {
    String f=randomField();
    Document doc=new Document();
    doc.add(new Field("data",f,Field.Store.YES,Field.Index.ANALYZED));
    writer.addDocument(doc);
  }
  searcher.close();
  writer.close();
  rmDir(dirPath);
}
