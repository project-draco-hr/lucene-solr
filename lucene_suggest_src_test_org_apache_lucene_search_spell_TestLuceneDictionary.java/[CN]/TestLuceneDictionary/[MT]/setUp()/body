{
  super.setUp();
  store=newDirectory();
  IndexWriter writer=new IndexWriter(store,newIndexWriterConfig(new MockAnalyzer(random(),MockTokenizer.WHITESPACE,false)));
  Document doc;
  doc=new Document();
  doc.add(newTextField("aaa","foo",Field.Store.YES));
  writer.addDocument(doc);
  doc=new Document();
  doc.add(newTextField("aaa","foo",Field.Store.YES));
  writer.addDocument(doc);
  doc=new Document();
  doc.add(newTextField("contents","Tom",Field.Store.YES));
  writer.addDocument(doc);
  doc=new Document();
  doc.add(newTextField("contents","Jerry",Field.Store.YES));
  writer.addDocument(doc);
  doc=new Document();
  doc.add(newTextField("zzz","bar",Field.Store.YES));
  writer.addDocument(doc);
  writer.forceMerge(1);
  writer.shutdown();
}
