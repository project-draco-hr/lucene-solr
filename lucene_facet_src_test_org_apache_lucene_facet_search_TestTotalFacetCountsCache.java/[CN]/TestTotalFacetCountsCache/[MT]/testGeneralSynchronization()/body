{
  int numIters=atLeast(4);
  Random random=random();
  for (int i=0; i < numIters; i++) {
    int numThreads=random.nextInt(3) + 2;
    int sleepMillis=random.nextBoolean() ? -1 : random.nextInt(10) + 1;
    int cacheSize=random.nextInt(4);
    doTestGeneralSynchronization(numThreads,sleepMillis,cacheSize);
  }
}
