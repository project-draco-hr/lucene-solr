{
  final InputStream stream=BulgarianAnalyzer.class.getResourceAsStream(DEFAULT_STOPWORD_FILE);
  try {
    InputStreamReader reader=new InputStreamReader(stream,"UTF-8");
    return Collections.unmodifiableSet(WordlistLoader.getWordSet(reader,STOPWORDS_COMMENT));
  }
  finally {
    if (stream != null)     stream.close();
  }
}
