{
  try {
    directory.deleteFile(file);
  }
 catch (  IOException e) {
    if (directory.fileExists(file)) {
      if (infoStream != null)       infoStream.println("IndexFileDeleter: unable to remove file \"" + file + "\": "+ e.toString()+ "; Will re-try later.");
      addDeletableFile(file);
    }
  }
}
