{
  try {
    if (doc < lastDocRequested) {
      if (noMatches)       return false;
      scorer=weight.scorer(readerContext);
      scorerDoc=-1;
      if (scorer == null) {
        noMatches=true;
        return false;
      }
      it=scorer.iterator();
    }
    lastDocRequested=doc;
    if (scorerDoc < doc) {
      scorerDoc=it.advance(doc);
    }
    if (scorerDoc > doc) {
      return false;
    }
    return true;
  }
 catch (  IOException e) {
    throw new RuntimeException("caught exception in QueryDocVals(" + q + ") doc="+ doc,e);
  }
}
