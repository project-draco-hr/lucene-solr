{
  assertU(adoc("id","1"));
  assertU(adoc("id","2"));
  assertU(commit());
  assertU(adoc("id","3"));
  assertU(adoc("id","2"));
  assertU(adoc("id","4"));
  assertU(commit());
  SolrQueryRequest sr=req("q","foo");
  DirectoryReader r=sr.getSearcher().getIndexReader();
  assertTrue("maxDoc !> numDocs ... expected some deletions",r.maxDoc() > r.numDocs());
  sr.close();
  assertU(commit("expungeDeletes","true"));
  sr=req("q","foo");
  r=r=sr.getSearcher().getIndexReader();
  assertEquals(r.maxDoc(),r.numDocs());
  assertEquals(4,r.maxDoc());
  sr.close();
}
