{
  assertU(adoc("id","5"));
  assertQ(req("qt","standard","q","id:5"),"//*[@numFound='0']");
  assertU(commit());
  assertQ(req("q","id:5"),"//*[@numFound='1']");
  assertU(delI("5"));
  assertQ(req("q","id:5"),"//*[@numFound='1']");
  assertU(commit());
  assertQ(req("q","id:5"),"//*[@numFound='0']");
}
