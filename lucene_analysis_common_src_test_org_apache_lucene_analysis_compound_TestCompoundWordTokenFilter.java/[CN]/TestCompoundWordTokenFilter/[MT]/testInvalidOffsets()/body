{
  final CharArraySet dict=makeDictionary("fall");
  final NormalizeCharMap.Builder builder=new NormalizeCharMap.Builder();
  builder.add("??","ue");
  final NormalizeCharMap normMap=builder.build();
  Analyzer analyzer=new Analyzer(){
    @Override protected TokenStreamComponents createComponents(    String fieldName){
      Tokenizer tokenizer=new MockTokenizer(MockTokenizer.WHITESPACE,false);
      TokenFilter filter=new DictionaryCompoundWordTokenFilter(tokenizer,dict);
      return new TokenStreamComponents(tokenizer,filter);
    }
    @Override protected Reader initReader(    String fieldName,    Reader reader){
      return new MappingCharFilter(normMap,reader);
    }
  }
;
  assertAnalyzesTo(analyzer,"bank??berfall",new String[]{"bankueberfall","fall"},new int[]{0,0},new int[]{12,12});
}
