{
  CategoryPath p=new CategoryPath(0,0);
  p.add("this");
  p.add("message");
  p.add("will");
  p.add("self");
  p.add("destruct");
  p.add("in");
  p.add("five");
  p.add("seconds");
  assertEquals(8,p.length());
  p.trim(3);
  assertEquals(5,p.length());
  p.trim(0);
  assertEquals(5,p.length());
  p.trim(-3);
  assertEquals(5,p.length());
  p.trim(1);
  assertEquals(4,p.length());
  p.trim(8);
  assertEquals(0,p.length());
  p.add("yo!");
  assertEquals(1,p.length());
  p.trim(1);
  assertEquals(0,p.length());
}
