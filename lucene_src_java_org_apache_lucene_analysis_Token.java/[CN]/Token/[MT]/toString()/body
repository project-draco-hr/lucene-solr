{
  final StringBuilder sb=new StringBuilder();
  sb.append('(').append(term()).append(',').append(startOffset).append(',').append(endOffset);
  if (!"word".equals(type))   sb.append(",type=").append(type);
  if (positionIncrement != 1)   sb.append(",posIncr=").append(positionIncrement);
  sb.append(')');
  return sb.toString();
}
