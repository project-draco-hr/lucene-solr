{
  BooleanQuery.Builder expected=new BooleanQuery.Builder();
  expected.add(new TermQuery(new Term("field","foo")),Occur.MUST_NOT);
  expected.add(new MatchAllDocsQuery(),Occur.SHOULD);
  assertEquals(expected.build(),parse("-foo"));
  assertEquals(expected.build(),parse("-(foo)"));
  assertEquals(expected.build(),parse("---foo"));
}
