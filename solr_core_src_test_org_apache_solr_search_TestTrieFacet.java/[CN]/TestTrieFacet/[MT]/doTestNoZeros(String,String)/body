{
  assertQ("sanity check # docs in index: " + NUM_DOCS,req("q","*:*","rows","0"),"//result[@numFound=" + NUM_DOCS + "]");
  assertQ("sanity check that no docs match 0 failed",req("q",field + ":0","rows","0"),"//result[@numFound=0]");
  assertQ("sanity check that no docs match [0 TO 0] failed",req("q",field + ":[0 TO 0]","rows","0"),"//result[@numFound=0]");
  assertQ("*:* facet with mincount 0 found unexpected 0 value",req("q","*:*","rows","0","indent","true","facet","true","facet.field",field,"facet.limit","-1","facet.mincount","0","facet.method",method),"*[count(//lst[@name='facet_fields']/lst[@name='" + field + "']/int)!=0]","*[count(//lst[@name='facet_fields']/lst[@name='" + field + "']/int[@name='0'])=0]");
}
