{
  assertU(adoc("id","1","test_s","dog"));
  assertU(adoc("id","2","test_s","cat"));
  assertU(adoc("id","3","test_s","bird"));
  assertU(adoc("id","4","test_s","cat"));
  assertU(commit());
  assertQ(req("q","*:*","facet","true","facet.interval","test_s_dv","facet.interval","test_s_dv","f.test_s_dv.facet.interval.set","[cat,dog]"),"//lst[@name='facet_intervals']/lst[@name='test_s_dv']/int[@name='[cat,dog]'][.=3]");
  assertQEx("Interval Faceting only on fields with doc values",req("q","*:*","facet","true","facet.interval","test_s","f.test_s.facet.interval.set","[cat,dog]"),SolrException.ErrorCode.BAD_REQUEST);
}
