{
  int space=buf.length - pos;
  if (len < space) {
    System.arraycopy(arr,off,buf,pos,len);
    pos+=len;
  }
 else   if (len < buf.length) {
    System.arraycopy(arr,off,buf,pos,space);
    flush(buf,0,buf.length);
    written+=buf.length;
    pos=len - space;
    System.arraycopy(arr,off + space,buf,0,pos);
  }
 else {
    if (pos > 0) {
      flush(buf,0,pos);
      written+=pos;
      pos=0;
    }
    flush(arr,off,len);
    written+=len;
  }
}
