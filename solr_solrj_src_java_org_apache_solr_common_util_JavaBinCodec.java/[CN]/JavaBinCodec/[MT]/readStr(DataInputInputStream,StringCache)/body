{
  int sz=readSize(dis);
  if (bytes == null || bytes.length < sz)   bytes=new byte[sz];
  dis.readFully(bytes,0,sz);
  if (stringCache != null) {
    return stringCache.get(bytesRef.reset(bytes,0,sz));
  }
 else {
    arr.reset();
    ByteUtils.UTF8toUTF16(bytes,0,sz,arr);
    return arr.toString();
  }
}
