def commit(self, message, authorName, authorEmail, authorDate, committerName, committerEmail, committerDate):
    author = ''.join((authorName, ' <', authorEmail, '>'))
    os.environ['GIT_COMMITTER_NAME'] = committerName
    os.environ['GIT_COMMITTER_EMAIL'] = committerEmail
    os.environ['GIT_COMMITTER_DATE'] = committerDate
    self.checkCall((self.gitCmd, 'commit', '--allow-empty', ('--message=' + message), ('--author=' + author), ('--date=' + authorDate)))
