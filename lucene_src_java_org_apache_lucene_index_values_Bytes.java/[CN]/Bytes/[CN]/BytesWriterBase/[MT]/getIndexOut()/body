{
  boolean success=false;
  try {
    if (idxOut == null) {
      idxOut=dir.createOutput(IndexFileNames.segmentFileName(id,"",INDEX_EXTENSION));
      CodecUtil.writeHeader(idxOut,codecName,version);
    }
    success=true;
  }
  finally {
    if (!success) {
      IOUtils.closeSafely(true,idxOut);
    }
  }
  return idxOut;
}
