{
  super(bytesUsed);
  this.id=id;
  this.pool=pool;
  datOut=dir.createOutput(IndexFileNames.segmentFileName(id,"",DATA_EXTENSION),context);
  boolean success=false;
  try {
    CodecUtil.writeHeader(datOut,codecName,version);
    if (initIndex) {
      idxOut=dir.createOutput(IndexFileNames.segmentFileName(id,"",INDEX_EXTENSION),context);
      CodecUtil.writeHeader(idxOut,codecName,version);
    }
 else {
      idxOut=null;
    }
    success=true;
  }
  finally {
    if (!success) {
      IOUtils.closeSafely(true,datOut,idxOut);
    }
  }
}
