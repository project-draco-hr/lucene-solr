{
  if (schema == null)   throw new IllegalArgumentException("IndexServiceConfiguration must not be null");
  if (dir == null)   throw new IllegalArgumentException("IndexDirectory must not be null");
  this.serviceConfiguration=schema;
  this.dir=dir;
  openWriter(create);
  this.indexTaskExecutor=Executors.newSingleThreadExecutor();
  this.action=new HashMap<IndexDocument,Integer>(128);
}
