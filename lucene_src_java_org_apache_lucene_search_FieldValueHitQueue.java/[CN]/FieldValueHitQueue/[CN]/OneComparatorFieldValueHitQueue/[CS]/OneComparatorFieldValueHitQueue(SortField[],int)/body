{
  super(fields);
  if (fields.length == 0) {
    throw new IllegalArgumentException("Sort must contain at least one field");
  }
  SortField field=fields[0];
  setComparator(0,field.getComparator(size,0));
  oneReverseMul=field.reverse ? -1 : 1;
  reverseMul[0]=oneReverseMul;
  initialize(size);
}
