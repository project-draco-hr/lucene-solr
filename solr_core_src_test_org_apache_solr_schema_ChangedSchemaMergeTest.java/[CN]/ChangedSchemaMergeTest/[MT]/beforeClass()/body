{
  simfac1=LMJelinekMercerSimilarityFactory.class;
  simfac2=SchemaSimilarityFactory.class;
  assertTrue("Effectiveness of tets depends on SchemaSimilarityFactory being SolrCoreAware " + "something changed in the impl and now major portions of this test are useless",SolrCoreAware.class.isAssignableFrom(simfac2));
  if (random().nextBoolean()) {
    Class<? extends SimilarityFactory> tmp=simfac1;
    simfac1=simfac2;
    simfac2=tmp;
  }
  System.setProperty("solr.test.simfac1",simfac1.getName());
  System.setProperty("solr.test.simfac2",simfac2.getName());
  initCore();
}
