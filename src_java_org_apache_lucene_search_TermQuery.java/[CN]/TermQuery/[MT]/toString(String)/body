{
  StringBuffer buffer=new StringBuffer();
  if (!term.field().equals(field)) {
    buffer.append(term.field());
    buffer.append(":");
  }
  buffer.append(term.text());
  if (getBoost() != 1.0f) {
    buffer.append("^");
    buffer.append(Float.toString(getBoost()));
  }
  return buffer.toString();
}
