{
  Query q=getQuery();
  Explanation result=new Explanation();
  result.setDescription("weight(" + getQuery() + "), product of:");
  Explanation boostExpl=new Explanation(getBoost(),"boost");
  if (getBoost() != 1.0f)   result.addDetail(boostExpl);
  Explanation idfExpl=new Explanation(idf,"idf(docFreq=" + searcher.docFreq(term) + ")");
  result.addDetail(idfExpl);
  Explanation normExpl=new Explanation(queryNorm,"queryNorm");
  result.addDetail(normExpl);
  result.setValue(boostExpl.getValue() * idfExpl.getValue() * normExpl.getValue());
  return result;
}
