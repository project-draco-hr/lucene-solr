{
  try {
    ExecutorUtil.shutdownAndAwaitTermination(commExecutor);
  }
 catch (  Throwable e) {
    SolrException.log(log,e);
  }
  try {
    if (defaultClient != null) {
      defaultClient.getConnectionManager().shutdown();
    }
  }
 catch (  Throwable e) {
    SolrException.log(log,e);
  }
  try {
    if (loadbalancer != null) {
      loadbalancer.shutdown();
    }
  }
 catch (  Throwable e) {
    SolrException.log(log,e);
  }
}
