{
  super.setUp();
  dir=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random,dir,newIndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer(MockTokenizer.KEYWORD,false)).setMaxBufferedDocs(_TestUtil.nextInt(random,50,1000)));
  Document doc=new Document();
  Field field=newField("field","",Field.Store.NO,Field.Index.NOT_ANALYZED);
  doc.add(field);
  final String codec=CodecProvider.getDefault().getFieldCodec("field");
  int num=codec.equals("PreFlex") ? 200 * RANDOM_MULTIPLIER : 2000 * RANDOM_MULTIPLIER;
  for (int i=0; i < num; i++) {
    field.setValue(_TestUtil.randomUnicodeString(random,10));
    writer.addDocument(doc);
  }
  reader=writer.getReader();
  searcher=newSearcher(reader);
  writer.close();
}
