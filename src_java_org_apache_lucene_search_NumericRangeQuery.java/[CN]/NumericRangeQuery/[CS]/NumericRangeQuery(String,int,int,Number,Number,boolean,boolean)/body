{
  assert(valSize == 32 || valSize == 64);
  if (min == null && max == null)   throw new IllegalArgumentException("At least one value must be non-null");
  if (precisionStep < 1 || precisionStep > valSize)   throw new IllegalArgumentException("precisionStep may only be 1.." + valSize);
  this.field=field.intern();
  this.precisionStep=precisionStep;
  this.valSize=valSize;
  this.min=min;
  this.max=max;
  this.minInclusive=minInclusive;
  this.maxInclusive=maxInclusive;
  setConstantScoreRewrite(true);
}
