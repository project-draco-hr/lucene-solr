{
  docIndex.mark();
  if (indexOptions != IndexOptions.DOCS_ONLY) {
    freqIndex.mark();
  }
  if (indexOptions == IndexOptions.DOCS_AND_FREQS_AND_POSITIONS) {
    posIndex.mark();
    payloadStart=payloadOut.getFilePointer();
    lastPayloadLength=-1;
  }
  skipListWriter.resetSkip(docIndex,freqIndex,posIndex);
}
