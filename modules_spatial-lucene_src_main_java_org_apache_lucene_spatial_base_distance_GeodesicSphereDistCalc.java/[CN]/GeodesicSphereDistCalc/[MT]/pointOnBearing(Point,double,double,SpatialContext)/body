{
  if (dist == 0)   return from;
  double[] latLon=DistanceUtils.pointOnBearingRAD(toRadians(from.getY()),toRadians(from.getX()),DistanceUtils.dist2Radians(dist,ctx.getUnits().earthRadius()),toRadians(bearingDEG),null);
  return ctx.makePoint(Math.toDegrees(latLon[1]),Math.toDegrees(latLon[0]));
}
