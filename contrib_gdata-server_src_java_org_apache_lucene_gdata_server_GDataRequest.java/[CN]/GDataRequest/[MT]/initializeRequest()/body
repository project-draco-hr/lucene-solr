{
  generateIdentificationProperties();
  setOutputFormat();
  try {
    this.configurator=GDataServerRegistry.getRegistry().getProvidedService(this.service);
    if (this.configurator == null)     throw new GDataRequestException("no Provided Service found for service id: " + this.service,GDataResponse.NOT_FOUND);
    applyRequestParameter();
    if (this.translatedSearchQuery != null)     this.isSearchRequest=true;
  }
 catch (  GDataRequestException ex) {
    throw ex;
  }
catch (  Exception e) {
    throw new GDataRequestException("failed to initialize GDataRequest -- " + e.getMessage(),e,GDataResponse.SERVER_ERROR);
  }
}
