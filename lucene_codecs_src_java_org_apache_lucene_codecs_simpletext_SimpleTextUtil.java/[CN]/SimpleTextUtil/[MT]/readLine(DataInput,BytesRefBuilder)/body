{
  int upto=0;
  while (true) {
    byte b=in.readByte();
    scratch.grow(1 + upto);
    if (b == ESCAPE) {
      scratch.setByteAt(upto++,in.readByte());
    }
 else {
      if (b == NEWLINE) {
        break;
      }
 else {
        scratch.setByteAt(upto++,b);
      }
    }
  }
  scratch.setLength(upto);
}
