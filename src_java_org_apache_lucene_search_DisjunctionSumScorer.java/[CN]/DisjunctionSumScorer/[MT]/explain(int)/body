{
  Explanation res=new Explanation();
  float sumScore=0.0f;
  int nrMatches=0;
  for (  Scorer se : subScorers) {
    Explanation es=se.explain(doc);
    if (es.getValue() > 0.0f) {
      sumScore+=es.getValue();
      nrMatches++;
    }
    res.addDetail(es);
  }
  if (nrMatchers >= minimumNrMatchers) {
    res.setValue(sumScore);
    res.setDescription("sum over at least " + minimumNrMatchers + " of "+ subScorers.size()+ ":");
  }
 else {
    res.setValue(0.0f);
    res.setDescription(nrMatches + " match(es) but at least " + minimumNrMatchers+ " of "+ subScorers.size()+ " needed");
  }
  return res;
}
