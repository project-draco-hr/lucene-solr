{
  String s="how now brown cow";
  TokenStream ts;
  ts=new WhitespaceTokenizer(new StringReader(s));
  ts=new BuffTokenFilter(ts);
  ts=new PayloadSetter(ts);
  verifyPayload(ts);
  ts=new WhitespaceTokenizer(new StringReader(s));
  ts=new PayloadSetter(ts);
  ts=new BuffTokenFilter(ts);
  verifyPayload(ts);
}
