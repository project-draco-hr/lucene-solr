  assertEquals("",h.query(req("q","*:*","wt","velocityWithCustomTools",VelocityResponseWriter.TEMPLATE,"t",SolrParamResourceLoader.TEMPLATE_PARAM_PREFIX + "t","$!response.star(\"response overridden??\")")));
}
