{
  Random random=newRandom();
  final Directory dir1=newDirectory(random);
  createIndex(random,dir1,true);
  final Directory dir2=newDirectory(random);
  createIndex(random,dir2,true);
  performDefaultTests(new TestReopen(){
    @Override protected void modifyIndex(    int i) throws IOException {
      TestIndexReaderReopen.modifyIndex(i,dir1);
      TestIndexReaderReopen.modifyIndex(i,dir2);
    }
    @Override protected IndexReader openReader() throws IOException {
      return new MultiReader(new IndexReader[]{IndexReader.open(dir1,false),IndexReader.open(dir2,false)});
    }
  }
);
  dir1.close();
  dir2.close();
  final Directory dir3=newDirectory(random);
  createIndex(random,dir3,true);
  final Directory dir4=newDirectory(random);
  createIndex(random,dir4,true);
  performTestsWithExceptionInReopen(new TestReopen(){
    @Override protected void modifyIndex(    int i) throws IOException {
      TestIndexReaderReopen.modifyIndex(i,dir3);
      TestIndexReaderReopen.modifyIndex(i,dir4);
    }
    @Override protected IndexReader openReader() throws IOException {
      return new MultiReader(new IndexReader[]{IndexReader.open(dir3,false),IndexReader.open(dir4,false),new FilterIndexReader(IndexReader.open(dir3,false))});
    }
  }
);
  dir3.close();
  dir4.close();
}
