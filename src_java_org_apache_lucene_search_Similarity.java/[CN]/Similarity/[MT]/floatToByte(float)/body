{
  if (f < 0.0f)   f=0.0f;
  if (f == 0.0f)   return 0;
  int bits=Float.floatToIntBits(f);
  int mantissa=(bits & 0xffffff) >> 21;
  int exponent=(((bits >> 24) & 0x7f) - 63) + 15;
  if (exponent > 31) {
    exponent=31;
    mantissa=7;
  }
  if (exponent < 1) {
    exponent=1;
    mantissa=0;
  }
  return (byte)((exponent << 3) | mantissa);
}
