{
  if (pos != getFilePointer()) {
    final long alignedPos=pos & ALIGN_NOT_MASK;
    filePos=alignedPos - bufferSize;
    final int delta=(int)(pos - alignedPos);
    if (delta != 0) {
      refill();
      buffer.position(delta);
      bufferPos=delta;
    }
 else {
      bufferPos=bufferSize;
    }
  }
}
