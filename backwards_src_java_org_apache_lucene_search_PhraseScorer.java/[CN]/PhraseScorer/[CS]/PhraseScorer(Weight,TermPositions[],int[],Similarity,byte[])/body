{
  super(similarity);
  this.norms=norms;
  this.weight=weight;
  this.value=weight.getValue();
  for (int i=0; i < tps.length; i++) {
    PhrasePositions pp=new PhrasePositions(tps[i],offsets[i]);
    if (last != null) {
      last.next=pp;
    }
 else {
      first=pp;
    }
    last=pp;
  }
  pq=new PhraseQueue(tps.length);
  first.doc=-1;
}
