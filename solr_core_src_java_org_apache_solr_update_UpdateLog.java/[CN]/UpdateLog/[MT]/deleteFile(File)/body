{
  boolean success=false;
  try {
    Files.deleteIfExists(file.toPath());
    success=true;
  }
 catch (  Exception e) {
    log.error("Error deleting file: " + file,e);
  }
  if (!success) {
    try {
      file.deleteOnExit();
    }
 catch (    Exception e) {
      log.error("Error deleting file on exit: " + file,e);
    }
  }
}
