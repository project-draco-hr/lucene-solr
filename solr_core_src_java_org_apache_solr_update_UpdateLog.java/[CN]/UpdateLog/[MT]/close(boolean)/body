{
synchronized (this) {
    try {
      recoveryExecutor.shutdownNow();
    }
 catch (    Exception e) {
      SolrException.log(log,e);
    }
    doClose(prevTlog,committed);
    doClose(tlog,committed);
    for (    TransactionLog log : logs) {
      if (log == prevTlog || log == tlog)       continue;
      log.deleteOnClose=false;
      log.decref();
      log.forceClose();
    }
  }
}
