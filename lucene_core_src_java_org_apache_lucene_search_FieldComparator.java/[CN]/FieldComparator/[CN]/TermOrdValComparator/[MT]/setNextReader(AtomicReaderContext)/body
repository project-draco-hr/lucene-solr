{
  docBase=context.docBase;
  termsIndex=FieldCache.DEFAULT.getTermsIndex(context.reader(),field);
  currentReaderGen++;
  if (topValue != null) {
    int ord=termsIndex.lookupTerm(topValue);
    if (ord >= 0) {
      topSameReader=true;
      topOrd=ord;
    }
 else {
      topSameReader=false;
      topOrd=-ord - 2;
    }
  }
 else {
    topOrd=missingOrd;
    topSameReader=true;
  }
  if (bottomSlot != -1) {
    setBottom(bottomSlot);
  }
  return this;
}
