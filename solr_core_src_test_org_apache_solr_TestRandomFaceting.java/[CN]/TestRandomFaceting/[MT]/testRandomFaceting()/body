{
  try {
    Random rand=random();
    int iter=atLeast(100);
    init();
    addMoreDocs(0);
    for (int i=0; i < iter; i++) {
      doFacetTests();
      if (rand.nextInt(100) < 5) {
        init();
      }
      addMoreDocs(rand.nextInt(indexSize) + 1);
      if (rand.nextInt(100) < 50) {
        deleteSomeDocs();
      }
    }
  }
  finally {
    purgeFieldCache(FieldCache.DEFAULT);
  }
}
