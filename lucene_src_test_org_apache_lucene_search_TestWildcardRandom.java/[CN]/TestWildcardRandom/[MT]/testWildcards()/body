{
  ;
  int num=(TEST_NIGHTLY ? 100 : 1) * RANDOM_MULTIPLIER;
  for (int i=0; i < num; i++) {
    assertPatternHits("NNN",1);
    assertPatternHits("?NN",10);
    assertPatternHits("N?N",10);
    assertPatternHits("NN?",10);
  }
  num=(TEST_NIGHTLY ? 10 : 1) * RANDOM_MULTIPLIER;
  for (int i=0; i < num; i++) {
    assertPatternHits("??N",100);
    assertPatternHits("N??",100);
    assertPatternHits("???",1000);
    assertPatternHits("NN*",10);
    assertPatternHits("N*",100);
    assertPatternHits("*",1000);
    assertPatternHits("*NN",10);
    assertPatternHits("*N",100);
    assertPatternHits("N*N",10);
    assertPatternHits("?N*",100);
    assertPatternHits("N?*",100);
    assertPatternHits("*N?",100);
    assertPatternHits("*??",1000);
    assertPatternHits("*?N",100);
  }
}
