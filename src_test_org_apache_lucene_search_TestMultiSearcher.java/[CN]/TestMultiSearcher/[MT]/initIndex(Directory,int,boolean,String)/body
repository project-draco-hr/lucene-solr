{
  IndexWriter indexWriter=null;
  try {
    indexWriter=new IndexWriter(directory,new IndexWriterConfig(TEST_VERSION_CURRENT).setAnalyzer(new KeywordAnalyzer()).setOpenMode(create ? OpenMode.CREATE : OpenMode.APPEND));
    for (int i=0; i < nDocs; i++) {
      indexWriter.addDocument(createDocument("doc" + i,contents2));
    }
  }
  finally {
    if (indexWriter != null) {
      indexWriter.close();
    }
  }
}
