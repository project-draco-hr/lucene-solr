{
  SolrPing ping=new SolrPing();
  SolrPingResponse rsp=null;
  ping.setActionDisable();
  try {
    ping.process(getSolrClient());
  }
 catch (  Exception e) {
    throw new Exception("disable action failed!");
  }
  ping.setActionPing();
  rsp=ping.process(getSolrClient());
  Assert.assertNotNull(rsp);
}
