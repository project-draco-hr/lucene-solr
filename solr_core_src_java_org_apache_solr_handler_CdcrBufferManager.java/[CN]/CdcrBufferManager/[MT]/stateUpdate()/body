{
  CdcrUpdateLog ulog=(CdcrUpdateLog)core.getUpdateHandler().getUpdateLog();
  if (!leaderStateManager.amILeader()) {
    ulog.enableBuffer();
    return;
  }
 else   if (bufferStateManager.getState().equals(CdcrParams.BufferState.ENABLED)) {
    ulog.enableBuffer();
    return;
  }
  ulog.disableBuffer();
}
