{
  RAMDirectory directory=new MockRAMDirectory();
  Random random=newRandom();
  IndexWriter writer=new IndexWriter(directory,newIndexWriterConfig(random,TEST_VERSION_CURRENT,new MockAnalyzer()).setMaxBufferedDocs(2));
  for (int iter=0; iter < 7; iter++) {
    for (int j=0; j < 21; j++) {
      Document doc=new Document();
      doc.add(new Field("content","a b c",Field.Store.NO,Field.Index.ANALYZED));
      writer.addDocument(doc);
    }
    writer.close();
    TestIndexWriter.assertNoUnreferencedFiles(directory,"testNoExtraFiles");
    writer=new IndexWriter(directory,newIndexWriterConfig(random,TEST_VERSION_CURRENT,new MockAnalyzer()).setOpenMode(OpenMode.APPEND).setMaxBufferedDocs(2));
  }
  writer.close();
  directory.close();
}
