{
  configureCluster(nodeCount).addConfig("conf",configset("cloud-dynamic")).configure();
  CollectionAdminRequest.createCollection(COLLECTION,"conf",numShards,numReplicas).setMaxShardsPerNode(maxShardsPerNode).process(cluster.getSolrClient());
  final SolrInputDocument doc1=sdoc(id,"1","title_s","Here comes the sun","artist_s","The Beatles","popularity_i","123");
  new UpdateRequest().add(doc1).commit(cluster.getSolrClient(),COLLECTION);
}
