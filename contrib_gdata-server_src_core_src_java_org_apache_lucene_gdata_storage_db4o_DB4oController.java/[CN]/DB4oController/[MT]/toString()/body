{
  StringBuilder builder=new StringBuilder(this.getClass().getName()).append(" ");
  builder.append("host: ").append(this.host).append(" ");
  builder.append("port: ").append(this.port).append(" ");
  builder.append("pool size: ").append(this.containerPoolSize).append(" ");
  builder.append("runs as server: ").append(this.runAsServer).append(" ");
  builder.append("use weak references: ").append(this.weakReferences).append(" ");
  builder.append("user: ").append(this.user).append(" ");
  builder.append("password length: ").append(this.password == null ? "no password" : this.password.length()).append(" ");
  return builder.toString();
}
