{
  super(args);
  inject=getBoolean(args,INJECT,true);
  name=args.remove(ENCODER);
  if (name == null) {
    throw new IllegalArgumentException("Missing required parameter: " + ENCODER + " ["+ registry.keySet()+ "]");
  }
  String v=args.remove(MAX_CODE_LENGTH);
  if (v != null) {
    maxCodeLength=Integer.valueOf(v);
  }
 else {
    maxCodeLength=null;
  }
  if (!args.isEmpty()) {
    throw new IllegalArgumentException("Unknown parameters: " + args);
  }
}
