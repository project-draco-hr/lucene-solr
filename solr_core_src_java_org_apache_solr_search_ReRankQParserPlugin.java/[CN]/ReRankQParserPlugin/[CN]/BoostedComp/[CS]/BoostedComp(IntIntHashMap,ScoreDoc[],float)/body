{
  this.boostedMap=new IntFloatHashMap(boostedDocs.size() * 2);
  for (int i=0; i < scoreDocs.length; i++) {
    final int idx;
    if ((idx=boostedDocs.indexOf(scoreDocs[i].doc)) >= 0) {
      boostedMap.put(scoreDocs[i].doc,maxScore + boostedDocs.indexGet(idx));
    }
 else {
      break;
    }
  }
}
