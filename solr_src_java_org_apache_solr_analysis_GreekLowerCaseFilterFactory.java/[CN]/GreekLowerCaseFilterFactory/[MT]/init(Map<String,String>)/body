{
  super.init(args);
  String charsetName=args.get("charset");
  if (null != charsetName) {
    charset=CHARSETS.get(charsetName);
    if (charset.equals(GreekCharsets.UnicodeGreek))     logger.warn("Specifying UnicodeGreek is no longer required (default).  " + "Use of the charset parameter will cause an error in Solr 1.5");
 else     logger.warn("Support for this custom encoding is deprecated.  " + "Use of the charset parameter will cause an error in Solr 1.5");
  }
 else {
    charset=GreekCharsets.UnicodeGreek;
  }
  if (null == charset) {
    throw new SolrException(ErrorCode.SERVER_ERROR,"Don't understand charset: " + charsetName);
  }
}
