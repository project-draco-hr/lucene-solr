def readSolrOutput(p, startupEvent, logFile):
    f = open(logFile, 'wb')
    try:
        while True:
            line = p.readline()
            if (line == ''):
                break
            f.write(line)
            f.flush()
            if (line.find('Started SocketConnector@0.0.0.0:8983') != (-1)):
                startupEvent.set()
    finally:
        f.close()
