def javaExe(version):
    if (version == '1.5'):
        path = JAVA5_HOME
    elif (version == '1.6'):
        path = JAVA6_HOME
    elif (version == '1.7'):
        path = JAVA7_HOME
    else:
        raise RuntimeError(("unknown Java version '%s'" % version))
    return ('export JAVA_HOME=%s PATH=%s/bin:$PATH' % (path, path))
