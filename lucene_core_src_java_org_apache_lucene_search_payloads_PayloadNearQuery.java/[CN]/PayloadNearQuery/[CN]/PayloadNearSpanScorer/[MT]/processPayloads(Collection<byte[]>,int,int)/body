{
  for (  final byte[] thePayload : payLoads) {
    scratch.bytes=thePayload;
    scratch.offset=0;
    scratch.length=thePayload.length;
    payloadScore=function.currentScore(docID(),fieldName,start,end,payloadsSeen,payloadScore,docScorer.computePayloadFactor(docID(),spans.startPosition(),spans.endPosition(),scratch));
    ++payloadsSeen;
  }
}
