{
  Connection conn=null;
  try {
    conn=getConnection();
    Statement delDoc=conn.createStatement();
    delDoc.executeUpdate("if exists (select * from sysobjects where id = object_id(N'[dbo].[Document]') and OBJECTPROPERTY(id, N'IsUserTable') = 1)drop table [dbo].[Document]");
    delDoc.executeUpdate("CREATE TABLE [dbo].[Document] ([DO_ID] [int] IDENTITY (1, 1) NOT NULL ,	[DA_CrawlPass] [int] NULL ,	[DO_URL] [varchar] (255) NULL ,	[DO_ContentType] [varchar] (50) NULL ,	[DO_Data] [text] NULL ,	[DO_Hashcode] [int] NULL ,	[DO_ContentLength] [int] NULL ,	[DO_ContentEncoding] [varchar] (20) NULL ,	[DO_Data2] [image] NULL, [DO_MimeType] [varchar] (255) NULL) ON [PRIMARY] TEXTIMAGE_ON [PRIMARY]");
  }
 catch (  SQLException e) {
    System.out.println("SQLException: " + e.getMessage());
    System.err.println("       SQLState:     " + e.getSQLState());
    System.err.println("       VendorError:  " + e.getErrorCode());
  }
 finally {
    if (conn != null) {
      releaseConnection(conn);
    }
  }
}
