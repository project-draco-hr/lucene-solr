{
  long byteSize=info.sizeInBytes();
  if (calibrateSizeByDeletes) {
    float delRatio=(info.docCount <= 0 ? 0.0f : ((float)info.getDelCount() / (float)info.docCount));
    return (info.docCount <= 0 ? byteSize : (long)((float)byteSize * (1.0f - delRatio)));
  }
 else {
    return byteSize;
  }
}
