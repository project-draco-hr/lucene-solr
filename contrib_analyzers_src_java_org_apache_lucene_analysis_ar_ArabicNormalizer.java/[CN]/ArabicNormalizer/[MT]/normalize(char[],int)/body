{
  for (int i=0; i < len; i++) {
    if (s[i] == ALEF_MADDA || s[i] == ALEF_HAMZA_ABOVE || s[i] == ALEF_HAMZA_BELOW)     s[i]=ALEF;
    if (s[i] == DOTLESS_YEH)     s[i]=YEH;
    if (s[i] == TEH_MARBUTA)     s[i]=HEH;
    if (s[i] == TATWEEL || s[i] == KASRATAN || s[i] == DAMMATAN || s[i] == FATHATAN || s[i] == FATHA || s[i] == DAMMA || s[i] == KASRA || s[i] == SHADDA || s[i] == SUKUN) {
      len=delete(s,i,len);
      i--;
    }
  }
  return len;
}
