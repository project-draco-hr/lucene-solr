{
  StringBuffer buffer=new StringBuffer();
  if (!prefix.field().equals(field)) {
    buffer.append(prefix.field());
    buffer.append(":");
  }
  buffer.append(prefix.text());
  buffer.append('*');
  if (boost != 1.0f) {
    buffer.append("^");
    buffer.append(Float.toString(boost));
  }
  return buffer.toString();
}
