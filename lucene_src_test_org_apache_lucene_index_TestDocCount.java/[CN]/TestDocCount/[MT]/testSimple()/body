{
  assumeFalse("PreFlex codec does not support docCount statistic!","Lucene3x".equals(Codec.getDefault().getName()));
  Directory dir=newDirectory();
  RandomIndexWriter iw=new RandomIndexWriter(random,dir);
  int numDocs=atLeast(100);
  for (int i=0; i < numDocs; i++) {
    iw.addDocument(doc());
  }
  IndexReader ir=iw.getReader();
  verifyCount(ir);
  ir.close();
  iw.optimize();
  ir=iw.getReader();
  verifyCount(ir);
  ir.close();
  iw.close();
  dir.close();
}
