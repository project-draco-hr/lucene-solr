{
  Document doc=new Document();
  doc.add(new NumericField("id").setIntValue(id));
  if (VERBOSE) {
    System.out.println("TEST: addDoc id:" + id + " terms="+ terms);
  }
  for (  String s2 : terms) {
    doc.add(newField("f",s2,Field.Index.NOT_ANALYZED));
    termToID.put(new BytesRef(s2),id);
  }
  w.addDocument(doc);
  terms.clear();
}
