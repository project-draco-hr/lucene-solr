{
  String file=getFile("mailing_lists.pdf").toURI().toASCIIString();
  String xml="<?xml version=\"1.0\"?>" + "<!DOCTYPE foo [<!ENTITY bar SYSTEM \"" + file + "\">]>"+ "<add>"+ "  &bar;"+ "  <doc>"+ "    <field name=\"id\">12345</field>"+ "    <field name=\"name\">kitten</field>"+ "  </doc>"+ "</add>";
  SolrQueryRequest req=req();
  SolrQueryResponse rsp=new SolrQueryResponse();
  BufferingRequestProcessor p=new BufferingRequestProcessor(null);
  XMLLoader loader=new XMLLoader().init(null);
  loader.load(req,rsp,new ContentStreamBase.StringStream(xml),p);
  AddUpdateCommand add=p.addCommands.get(0);
  assertEquals("12345",add.solrDoc.getField("id").getFirstValue());
  req.close();
}
