{
  SpanNearQuery q=new SpanNearQuery(new SpanQuery[]{new SpanOrQuery(new SpanTermQuery(new Term(FIELD,"w1")),new SpanTermQuery(new Term(FIELD,"w2"))),new SpanTermQuery(new Term(FIELD,"w4"))},10,true);
  Spans spans=MultiSpansWrapper.wrap(reader,q);
  assertNext(spans,0,0,4);
  assertNext(spans,0,1,4);
  assertFinished(spans);
}
