{
  SpanQuery q=SpanNearQuery.newOrderedNearQuery(FIELD).addClause(new SpanTermQuery(new Term(FIELD,"g"))).addGap(2).addClause(new SpanTermQuery(new Term(FIELD,"g"))).build();
  Spans spans=MultiSpansWrapper.wrap(reader,q);
  assertNext(spans,5,0,4);
  assertNext(spans,5,9,13);
  assertFinished(spans);
}
