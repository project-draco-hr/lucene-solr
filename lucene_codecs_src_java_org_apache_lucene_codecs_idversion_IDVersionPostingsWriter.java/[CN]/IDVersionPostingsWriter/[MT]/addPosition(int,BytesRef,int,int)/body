{
  if (lastPosition != -1) {
    throw new IllegalArgumentException("term appears more than once in document");
  }
  lastPosition=position;
  if (payload == null) {
    throw new IllegalArgumentException("missing payload");
  }
  if (payload.length == 0) {
    throw new IllegalArgumentException("payload.length == 0");
  }
  lastVersion=0;
}
