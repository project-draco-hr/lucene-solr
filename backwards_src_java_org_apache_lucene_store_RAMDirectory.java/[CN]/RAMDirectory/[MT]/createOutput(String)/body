{
  ensureOpen();
  RAMFile file=new RAMFile(this);
synchronized (this) {
    RAMFile existing=fileMap.get(name);
    if (existing != null) {
      sizeInBytes.addAndGet(existing.sizeInBytes);
      existing.directory=null;
    }
    fileMap.put(name,file);
  }
  return new RAMOutputStream(file);
}
