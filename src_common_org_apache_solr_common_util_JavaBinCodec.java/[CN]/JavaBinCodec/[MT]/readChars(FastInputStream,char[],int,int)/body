{
  final int end=start + length;
  for (int i=start; i < end; i++) {
    int b=in.read();
    if ((b & 0x80) == 0)     buffer[i]=(char)b;
 else     if ((b & 0xE0) != 0xE0) {
      buffer[i]=(char)(((b & 0x1F) << 6) | (in.read() & 0x3F));
    }
 else     buffer[i]=(char)(((b & 0x0F) << 12) | ((in.read() & 0x3F) << 6) | (in.read() & 0x3F));
  }
}
