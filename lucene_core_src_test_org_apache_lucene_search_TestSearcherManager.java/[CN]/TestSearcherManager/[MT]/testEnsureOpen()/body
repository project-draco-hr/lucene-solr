{
  Directory dir=newDirectory();
  new IndexWriter(dir,new IndexWriterConfig(null)).close();
  SearcherManager sm=new SearcherManager(dir,null);
  IndexSearcher s=sm.acquire();
  sm.close();
  sm.release(s);
  try {
    sm.acquire();
  }
 catch (  AlreadyClosedException e) {
  }
  try {
    sm.maybeRefresh();
  }
 catch (  AlreadyClosedException e) {
  }
  dir.close();
}
