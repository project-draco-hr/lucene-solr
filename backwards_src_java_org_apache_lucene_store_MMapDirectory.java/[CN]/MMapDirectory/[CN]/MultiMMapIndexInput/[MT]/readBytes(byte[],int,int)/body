{
  while (len > curAvail) {
    curBuf.get(b,offset,curAvail);
    len-=curAvail;
    offset+=curAvail;
    curBufIndex++;
    if (curBufIndex >= buffers.length)     throw new IOException("read past EOF");
    curBuf=buffers[curBufIndex];
    curBuf.position(0);
    curAvail=bufSizes[curBufIndex];
  }
  curBuf.get(b,offset,len);
  curAvail-=len;
}
