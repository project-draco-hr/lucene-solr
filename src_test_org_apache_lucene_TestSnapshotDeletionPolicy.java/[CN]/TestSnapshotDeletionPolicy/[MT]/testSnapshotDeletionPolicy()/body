{
  File dir=new File(System.getProperty("tempDir"),INDEX_PATH);
  try {
    _TestUtil.rmDir(dir);
    Directory fsDir=FSDirectory.getDirectory(dir);
    runTest(fsDir);
    fsDir.close();
  }
  finally {
    _TestUtil.rmDir(dir);
  }
  MockRAMDirectory dir2=new MockRAMDirectory();
  runTest(dir2);
  dir2.close();
}
