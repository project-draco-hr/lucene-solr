{
  Directory dir=new MockRAMDirectory();
  SnapshotDeletionPolicy dp=new SnapshotDeletionPolicy(new KeepOnlyLastCommitDeletionPolicy());
  IndexWriter writer=new IndexWriter(dir,true,new StandardAnalyzer(),dp,IndexWriter.MaxFieldLength.LIMITED);
  writer.setMaxBufferedDocs(2);
  Document doc=new Document();
  doc.add(new Field("content","aaa",Field.Store.YES,Field.Index.TOKENIZED,Field.TermVector.WITH_POSITIONS_OFFSETS));
  for (int i=0; i < 7; i++)   writer.addDocument(doc);
  IndexCommitPoint cp=dp.snapshot();
  copyFiles(dir,dp,cp);
  writer.close();
  copyFiles(dir,dp,cp);
  writer=new IndexWriter(dir,true,new StandardAnalyzer(),dp,IndexWriter.MaxFieldLength.LIMITED);
  copyFiles(dir,dp,cp);
  for (int i=0; i < 7; i++)   writer.addDocument(doc);
  copyFiles(dir,dp,cp);
  writer.close();
  copyFiles(dir,dp,cp);
  dp.release();
  writer=new IndexWriter(dir,true,new StandardAnalyzer(),dp,IndexWriter.MaxFieldLength.LIMITED);
  writer.close();
  try {
    copyFiles(dir,dp,cp);
    fail("did not hit expected IOException");
  }
 catch (  IOException ioe) {
  }
  dir.close();
}
