{
  StringBuilder sb=new StringBuilder(items.size() << 3);
  boolean first=true;
  for (  Object o : items) {
    String item=o.toString();
    if (first) {
      first=false;
    }
 else {
      sb.append(separator);
    }
    for (int i=0; i < item.length(); i++) {
      char ch=item.charAt(i);
      if (ch == '\\' || ch == separator) {
        sb.append('\\');
      }
      sb.append(ch);
    }
  }
  return sb.toString();
}
