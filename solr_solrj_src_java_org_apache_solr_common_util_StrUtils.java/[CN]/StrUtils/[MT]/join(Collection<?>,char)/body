{
  if (items == null)   return "";
  StringBuilder sb=new StringBuilder(items.size() << 3);
  boolean first=true;
  for (  Object o : items) {
    String item=String.valueOf(o);
    if (first) {
      first=false;
    }
 else {
      sb.append(separator);
    }
    appendEscapedTextToBuilder(sb,item,separator);
  }
  return sb.toString();
}
