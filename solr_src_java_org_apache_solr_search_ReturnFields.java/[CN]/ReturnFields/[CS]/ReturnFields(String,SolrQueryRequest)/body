{
  if (fl == null) {
    parseFieldList((String[])null,req);
  }
 else {
    if (fl.trim().length() == 0) {
      _wantsScore=true;
      _wantsAllFields=true;
      transformer=new ScoreAugmenter(SCORE);
    }
 else {
      parseFieldList(new String[]{fl},req);
    }
  }
  req.getCore().log.info("fields=" + fields + "\t globs="+ globs+ "\t transformer="+ transformer);
}
