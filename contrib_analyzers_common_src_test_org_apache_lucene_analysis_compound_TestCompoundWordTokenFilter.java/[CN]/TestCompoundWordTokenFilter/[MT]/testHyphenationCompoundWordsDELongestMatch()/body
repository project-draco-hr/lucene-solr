{
  String[] dict={"basketball","basket","ball","kurv"};
  Reader reader=getHyphenationReader();
  HyphenationTree hyphenator=HyphenationCompoundWordTokenFilter.getHyphenationTree(reader);
  HyphenationCompoundWordTokenFilter tf=new HyphenationCompoundWordTokenFilter(Version.LUCENE_CURRENT,new WhitespaceTokenizer(Version.LUCENE_CURRENT,new StringReader("basketballkurv")),hyphenator,dict,CompoundWordTokenFilterBase.DEFAULT_MIN_WORD_SIZE,CompoundWordTokenFilterBase.DEFAULT_MIN_SUBWORD_SIZE,40,true);
  assertTokenStreamContents(tf,new String[]{"basketballkurv","basketball","ball","kurv"},new int[]{1,0,0,0});
}
