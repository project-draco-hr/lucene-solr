{
  if (required.size() == 1) {
    Scorer req=required.get(0);
    if (needsScores == false || (requiredScoring.size() == 1 && (disableCoord || maxCoord == 1))) {
      return req;
    }
 else {
      return new BooleanTopLevelScorers.BoostedScorer(req,coord(requiredScoring.size(),maxCoord));
    }
  }
 else {
    return new ConjunctionScorer(this,required,requiredScoring,disableCoord ? 1.0F : coord(requiredScoring.size(),maxCoord));
  }
}
