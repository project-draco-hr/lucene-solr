{
  final Vector planeNormal=new Vector(new Vector(point1.x - point2.x,point1.y - point2.y,point1.z - point2.z),new Vector(point2.x - point3.x,point2.y - point3.y,point2.z - point3.z)).normalize();
  if (planeNormal == null)   return null;
  return new SidedPlane(insidePoint,planeNormal,-planeNormal.dotProduct(point2));
}
