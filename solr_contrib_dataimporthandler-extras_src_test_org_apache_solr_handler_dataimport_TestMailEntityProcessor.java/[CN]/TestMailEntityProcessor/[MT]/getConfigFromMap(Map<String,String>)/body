{
  String conf="<dataConfig>" + "<document>" + "<entity processor=\"org.apache.solr.handler.dataimport.MailEntityProcessor\" "+ "someconfig"+ "/>"+ "</document>"+ "</dataConfig>";
  params.put("user",user);
  params.put("password",password);
  params.put("host",host);
  params.put("protocol",protocol);
  StringBuilder attribs=new StringBuilder("");
  for (  String key : params.keySet())   attribs.append(" ").append(key).append("=" + "\"").append(params.get(key)).append("\"");
  attribs.append(" ");
  return conf.replace("someconfig",attribs.toString());
}
