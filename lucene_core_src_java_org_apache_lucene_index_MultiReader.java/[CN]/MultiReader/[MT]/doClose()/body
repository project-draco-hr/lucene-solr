{
  IOException ioe=null;
  for (  final IndexReader r : getSequentialSubReaders()) {
    try {
      if (closeSubReaders) {
        r.close();
      }
 else {
        r.decRef();
      }
    }
 catch (    IOException e) {
      if (ioe == null)       ioe=e;
    }
  }
  if (ioe != null)   throw ioe;
}
