{
  return new Runnable(){
    @Override public void run(){
      LBHttpSolrClient lb=lbRef.get();
      if (lb != null && lb.zombieServers != null) {
        for (        ServerWrapper zombieServer : lb.zombieServers.values()) {
          lb.checkAZombieServer(zombieServer);
        }
      }
    }
  }
;
}
