{
  if (r.nextBoolean()) {
    log.info("Turning on auto soft commit");
    for (    CloudJettyRunner jetty : shardToJetty.get("shard1")) {
      SolrCore core=((SolrDispatchFilter)jetty.jetty.getDispatchFilter().getFilter()).getCores().getCore("collection1");
      try {
        ((DirectUpdateHandler2)core.getUpdateHandler()).getCommitTracker().setTimeUpperBound(5000);
      }
  finally {
        core.close();
      }
    }
  }
 else {
    log.info("Not turning on auto soft commit");
  }
}
