{
  sb=(sb == null ? new StringBuffer() : sb);
  String sep="";
  while (true) {
    String line=reader.readLine();
    if (line == null) {
      return null;
    }
    if (line.startsWith(prefix)) {
      if (collectMatchLine) {
        sb.append(sep + line);
        sep=newline;
      }
      break;
    }
    if (collectAll) {
      sb.append(sep + line);
      sep=newline;
    }
  }
  return sb;
}
