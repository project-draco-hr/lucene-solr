{
  if (field.isPolyField()) {
    StorableField[] farr=field.getType().createFields(field,val,boost);
    for (    StorableField f : farr) {
      if (f != null)       doc.add((Field)f);
    }
  }
 else {
    StorableField f=field.createField(val,boost);
    if (f != null)     doc.add((Field)f);
  }
}
