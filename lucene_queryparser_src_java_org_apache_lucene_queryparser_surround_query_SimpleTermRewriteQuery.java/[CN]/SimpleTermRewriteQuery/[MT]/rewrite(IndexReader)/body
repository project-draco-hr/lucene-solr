{
  final List<Query> luceneSubQueries=new ArrayList<>();
  srndQuery.visitMatchingTerms(reader,fieldName,new SimpleTerm.MatchingTermVisitor(){
    @Override public void visitMatchingTerm(    Term term) throws IOException {
      luceneSubQueries.add(qf.newTermQuery(term));
    }
  }
);
  return (luceneSubQueries.size() == 0) ? SrndQuery.theEmptyLcnQuery : (luceneSubQueries.size() == 1) ? luceneSubQueries.get(0) : SrndBooleanQuery.makeBooleanQuery(luceneSubQueries,BooleanClause.Occur.SHOULD);
}
