{
  if (path == null) {
    return "<null>";
  }
  if (path.length == 0) {
    return "<empty>";
  }
  if (path.length == 1 && path[0].length() == 0) {
    return "<\"\">";
  }
  StringBuilder sb=new StringBuilder(path[0]);
  for (int i=1; i < path.length; i++) {
    sb.append('/');
    sb.append(path[i]);
  }
  return sb.toString();
}
