{
  String message="Text: " + text;
  bi.setText(text);
  int idx=bi.last();
  while (true) {
    idx=boundaries.lastIndexOf('^',idx - 1);
    if (idx == -1) {
      assertEquals(message,BreakIterator.DONE,bi.previous());
      break;
    }
    assertEquals(message,idx,bi.previous());
  }
  assertEquals(message,boundaries.indexOf('^'),bi.current());
}
