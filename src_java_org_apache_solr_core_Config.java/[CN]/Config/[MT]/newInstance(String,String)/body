{
  Class clazz=findClass(cname,subpackages);
  if (clazz == null) {
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"Can not find class: " + cname + " in "+ getClassLoader(),false);
  }
  try {
    return clazz.newInstance();
  }
 catch (  Exception e) {
    e.printStackTrace();
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"Error instantiating class: '" + clazz.getName() + "'",e,false);
  }
}
