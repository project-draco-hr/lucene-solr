{
  if (instanceDir == null) {
    String prop=project + ".solr.home";
    instanceDir=normalizeDir(System.getProperty(prop));
    if (instanceDir == null) {
      instanceDir=project + '/';
      log.info("Solr home defaulted to '" + instanceDir + "'");
    }
 else {
      log.info("Solr home set to '" + instanceDir + "' from system property "+ prop);
    }
  }
  return instanceDir;
}
