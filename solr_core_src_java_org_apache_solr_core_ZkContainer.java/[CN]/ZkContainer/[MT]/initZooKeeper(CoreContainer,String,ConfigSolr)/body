{
  if (config.getCoreLoadThreadCount() <= 1) {
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"SolrCloud requires a value of at least 2 in solr.xml for coreLoadThreads");
  }
  initZooKeeper(cc,solrHome,config.getZkHost(),config.getZkClientTimeout(),config.getSolrHostPort(),config.getZkHostContext(),config.getHost(),config.getLeaderVoteWait(),config.getLeaderConflictResolveWait(),config.getGenericCoreNodeNames());
}
