{
  if (config.getCoreLoadThreadCount() <= 1) {
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"SolrCloud requires a value of at least 2 in solr.xml for coreLoadThreads");
  }
  initZooKeeper(cc,solrHome,config.getZkHost(),config.getZkClientTimeout(),config.getZkHostPort(),config.getZkHostContext(),config.getHost(),config.getLeaderVoteWait(),config.getGenericCoreNodeNames(),config.getDistributedConnectionTimeout(),config.getDistributedSocketTimeout());
}
