{
  if (leafOrd >= leaves.length) {
    return false;
  }
  if (current == null) {
    current=query.getSpans(leaves[leafOrd],leaves[leafOrd].reader().getLiveDocs(),termContexts);
  }
  while (true) {
    if (current.next()) {
      return true;
    }
    if (++leafOrd < leaves.length) {
      current=query.getSpans(leaves[leafOrd],leaves[leafOrd].reader().getLiveDocs(),termContexts);
    }
 else {
      current=null;
      break;
    }
  }
  return false;
}
