{
  Writer fw=null;
  PrintWriter pw=null;
  try {
    Path path=workDir.resolve(name);
    Files.deleteIfExists(path);
    fw=new OutputStreamWriter(Files.newOutputStream(path),StandardCharsets.UTF_8);
    pw=new PrintWriter(fw);
    pw.println(text);
    return path;
  }
  finally {
    if (pw != null)     pw.close();
    if (fw != null)     fw.close();
  }
}
