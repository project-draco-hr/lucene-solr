{
  Writer fw=null;
  PrintWriter pw=null;
  try {
    File f=new File(workDir,name);
    Files.deleteIfExists(f.toPath());
    fw=new OutputStreamWriter(new FileOutputStream(f),StandardCharsets.UTF_8);
    pw=new PrintWriter(fw);
    pw.println(text);
    return f;
  }
  finally {
    if (pw != null)     pw.close();
    if (fw != null)     fw.close();
  }
}
