{
  Writer fw=null;
  PrintWriter pw=null;
  try {
    File f=new File(workDir,name);
    if (f.exists())     f.delete();
    fw=new OutputStreamWriter(new FileOutputStream(f),"UTF-8");
    pw=new PrintWriter(fw);
    pw.println(text);
    return f;
  }
  finally {
    if (pw != null)     pw.close();
    if (fw != null)     fw.close();
  }
}
