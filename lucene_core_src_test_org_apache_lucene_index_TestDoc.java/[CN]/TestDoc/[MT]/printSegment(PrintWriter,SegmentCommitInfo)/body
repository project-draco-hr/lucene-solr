{
  SegmentReader reader=new SegmentReader(si,newIOContext(random()));
  for (int i=0; i < reader.numDocs(); i++)   out.println(reader.document(i));
  Fields fields=reader.fields();
  for (  String field : fields) {
    Terms terms=fields.terms(field);
    assertNotNull(terms);
    TermsEnum tis=terms.iterator();
    while (tis.next() != null) {
      out.print("  term=" + field + ":"+ tis.term());
      out.println("    DF=" + tis.docFreq());
      PostingsEnum positions=tis.postings(reader.getLiveDocs(),null,PostingsEnum.POSITIONS);
      while (positions.nextDoc() != DocIdSetIterator.NO_MORE_DOCS) {
        out.print(" doc=" + positions.docID());
        out.print(" TF=" + positions.freq());
        out.print(" pos=");
        out.print(positions.nextPosition());
        for (int j=1; j < positions.freq(); j++)         out.print("," + positions.nextPosition());
        out.println("");
      }
    }
  }
  reader.close();
}
