{
  assertQ(req("q","text_fr:auberge"),"//result[@numFound='2']");
  assertQ(req("q","text_fr:Auberge"),"//result[@numFound='2']");
  assertQ(req("q","text_fr:l'auberge"),"//result[@numFound='2']");
  assertQ(req("q","text_fr:l'Auberge"),"//result[@numFound='2']");
  assertQ(req("q","text_fr:aub*"),"//result[@numFound='2']");
  assertQ(req("q","text_fr:Aub*"),"//result[@numFound='2']");
  assertQ(req("q","text_fr:l'aub*"),"//result[@numFound='2']");
  assertQ(req("q","text_fr:l'Aub*"),"//result[@numFound='2']");
}
