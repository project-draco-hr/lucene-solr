{
  File dirFile=_TestUtil.getTempDir("deletetest");
  Directory dir=newFSDirectory(dirFile);
  try {
    DirectoryReader.open(dir);
    fail("expected FileNotFoundException");
  }
 catch (  FileNotFoundException e) {
  }
  dirFile.delete();
  try {
    DirectoryReader.open(dir);
    fail("expected FileNotFoundException");
  }
 catch (  FileNotFoundException e) {
  }
  dir.close();
}
