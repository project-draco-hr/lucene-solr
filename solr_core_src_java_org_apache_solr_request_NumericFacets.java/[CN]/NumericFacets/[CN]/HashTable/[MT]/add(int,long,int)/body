{
  if (size >= threshold) {
    rehash();
  }
  final int h=hash(value);
  for (int slot=h; ; slot=(slot + 1) & mask) {
    if (counts[slot] == 0) {
      bits[slot]=value;
      docIDs[slot]=docID;
      ++size;
    }
 else     if (bits[slot] != value) {
      continue;
    }
    counts[slot]+=count;
    break;
  }
}
