{
  Thread t=new Thread(){
    @Override public void run(){
      try {
        byte[] buffer=new byte[1024];
        int len;
        while ((len=from.read(buffer)) != -1) {
          if (verbose) {
            to.write(buffer,0,len);
          }
        }
      }
 catch (      IOException e) {
        System.err.println("Couldn't pipe from the forked process: " + e.toString());
      }
    }
  }
;
  t.start();
  return t;
}
