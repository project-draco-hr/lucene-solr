{
  CharSequence c=new CharsRef("abc");
  assertEquals("a",c.subSequence(0,1).toString());
  assertEquals("",c.subSequence(0,0).toString());
  try {
    c.subSequence(-1,1);
    fail();
  }
 catch (  IndexOutOfBoundsException expected) {
  }
  try {
    c.subSequence(0,-1);
    fail();
  }
 catch (  IndexOutOfBoundsException expected) {
  }
  try {
    c.subSequence(0,4);
    fail();
  }
 catch (  IndexOutOfBoundsException expected) {
  }
  try {
    c.subSequence(2,1);
    fail();
  }
 catch (  IndexOutOfBoundsException expected) {
  }
}
