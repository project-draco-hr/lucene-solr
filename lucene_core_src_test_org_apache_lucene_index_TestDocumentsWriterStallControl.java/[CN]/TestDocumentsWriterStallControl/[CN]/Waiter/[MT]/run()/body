{
  try {
    while (!stop.get()) {
      ctrl.waitIfStalled();
      if (checkPoint.get()) {
        CountDownLatch join=latches[2];
        CountDownLatch wait=latches[1];
        join.countDown();
        try {
          wait.await();
        }
 catch (        InterruptedException e) {
          throw new RuntimeException(e);
        }
      }
    }
  }
 catch (  Throwable e) {
    e.printStackTrace();
    exceptions.add(e);
  }
}
