{
  try {
    log=LoggerFactory.getLogger(SolrDispatchFilter.class);
  }
 catch (  NoClassDefFoundError e) {
    throw new SolrException(ErrorCode.SERVER_ERROR,"Could not find necessary SLF4j logging jars. If using Jetty, the SLF4j logging jars need to go in " + "the jetty lib/ext directory. For other containers, the corresponding directory should be used. " + "For more information, see: http://wiki.apache.org/solr/SolrLogging",e);
  }
}
