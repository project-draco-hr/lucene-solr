{
  IndexWriter writer=new IndexWriter(dir,new IndexWriterConfig(TEST_VERSION_CURRENT,analyzer).setOpenMode(OpenMode.CREATE));
  Document doc=new Document();
  for (  String value : values)   doc.add(new Field(F,value,Store.YES,Index.ANALYZED,TermVector.WITH_POSITIONS_OFFSETS));
  writer.addDocument(doc);
  writer.close();
  if (reader != null)   reader.close();
  reader=IndexReader.open(dir,true);
}
