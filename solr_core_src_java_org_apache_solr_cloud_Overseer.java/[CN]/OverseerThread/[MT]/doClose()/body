{
  if (updaterThread != null) {
    IOUtils.closeQuietly(updaterThread);
    updaterThread.interrupt();
  }
  if (ccThread != null) {
    IOUtils.closeQuietly(ccThread);
    ccThread.interrupt();
  }
  if (arfoThread != null) {
    IOUtils.closeQuietly(arfoThread);
    arfoThread.interrupt();
  }
  updaterThread=null;
  ccThread=null;
  arfoThread=null;
}
