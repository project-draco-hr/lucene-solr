{
  if (shards == null)   throw new SolrException(SolrException.ErrorCode.BAD_REQUEST,"shards" + " is a required param");
  for (  String s : shards.split(",")) {
    if (s == null || s.trim().isEmpty())     continue;
    shardNames.add(s.trim());
  }
  if (shardNames.isEmpty())   throw new SolrException(SolrException.ErrorCode.BAD_REQUEST,"shards" + " is a required param");
}
