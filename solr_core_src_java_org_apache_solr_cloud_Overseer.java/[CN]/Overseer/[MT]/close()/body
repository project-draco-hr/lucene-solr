{
  isClosed=true;
  if (updaterThread != null) {
    try {
      updaterThread.close();
      updaterThread.interrupt();
    }
 catch (    Throwable t) {
      log.error("Error closing updaterThread",t);
    }
  }
  if (ccThread != null) {
    try {
      ccThread.close();
      ccThread.interrupt();
    }
 catch (    Throwable t) {
      log.error("Error closing ccThread",t);
    }
  }
  try {
    reader.close();
  }
 catch (  Throwable t) {
    log.error("Error closing zkStateReader",t);
  }
}
