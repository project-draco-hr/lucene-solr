{
  if (updaterThread != null) {
    try {
      updaterThread.close();
      updaterThread.interrupt();
    }
 catch (    Throwable t) {
      log.error("Error closing updaterThread",t);
    }
  }
  if (ccThread != null) {
    try {
      ccThread.close();
      ccThread.interrupt();
    }
 catch (    Throwable t) {
      log.error("Error closing ccThread",t);
    }
  }
  updaterThread=null;
  ccThread=null;
}
