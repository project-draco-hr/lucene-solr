{
  try {
    if (updaterThread != null) {
      try {
        updaterThread.close();
        updaterThread.interrupt();
      }
 catch (      Exception e) {
        log.error("Error closing updaterThread",e);
      }
    }
  }
  finally {
    if (ccThread != null) {
      try {
        ccThread.close();
        ccThread.interrupt();
      }
 catch (      Exception e) {
        log.error("Error closing ccThread",e);
      }
    }
  }
  updaterThread=null;
  ccThread=null;
}
