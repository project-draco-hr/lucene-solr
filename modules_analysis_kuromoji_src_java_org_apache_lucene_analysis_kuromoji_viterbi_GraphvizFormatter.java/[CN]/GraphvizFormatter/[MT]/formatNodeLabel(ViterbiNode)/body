{
  StringBuilder sb=new StringBuilder();
  sb.append("<<table border=\"0\" cellborder=\"0\">");
  sb.append("<tr><td>");
  sb.append(getNodeLabel(node));
  sb.append("</td></tr>");
  sb.append("<tr><td>");
