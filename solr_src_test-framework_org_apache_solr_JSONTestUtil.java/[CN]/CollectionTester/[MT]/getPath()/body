{
  StringBuilder sb=new StringBuilder();
  boolean first=true;
  for (  Object seg : path) {
    if (seg == null)     break;
    if (!first)     sb.append('/');
 else     first=false;
    if (seg instanceof Integer) {
      sb.append('[');
      sb.append(seg);
      sb.append(']');
    }
 else {
      sb.append(seg.toString());
    }
  }
  return sb.toString();
}
