{
  buildSpellCheckIndex();
  lrf=h.getRequestFactory("spellchecker",0,20);
  lrf.args.put("version","2.0");
  lrf.args.put("sp.query.accuracy",".9");
  assertQ("Failed to spell check",req("cat"),"//str[@name='words'][.='cat']","//str[@name='exist'][.='true']");
  lrf.args.put("sp.query.accuracy",".4");
  assertQ("Failed to spell check",req("cat"),"//str[@name='words'][.='cat']","//str[@name='exist'][.='true']","//arr/str[.='cot']","//arr/str[.='cart']");
  lrf.args.put("sp.query.accuracy",".0");
  assertQ("Failed to spell check",req("cat"),"//str[@name='words'][.='cat']","//str[@name='exist'][.='true']","//arr/str[.='cart']","//arr/str[.='cot']","//arr/str[.='carp']","//arr/str[.='cod']","//arr/str[.='corn']");
}
