{
  if (!backupRepo.exists(baseSnapDirPath)) {
    throw new SolrException(SolrException.ErrorCode.BAD_REQUEST," Directory does not exist: " + snapshotDirPath);
  }
  if (backupRepo.exists(snapshotDirPath)) {
    throw new SolrException(SolrException.ErrorCode.BAD_REQUEST,"Snapshot directory already exists: " + snapshotDirPath);
  }
}
