{
  if (core == null) {
    throw new NullPointerException("SolrCore instance required");
  }
  CoreDescriptor dcore=core.getCoreDescriptor();
  if (dcore == null)   throw new NullPointerException("CoreDescriptor required");
  CoreContainer cores=dcore.getCoreContainer();
  if (cores == null)   throw new NullPointerException("CoreContainer required");
  coreName=dcore.getName();
  coreContainer=cores;
  _parser=new SolrRequestParsers(null);
}
