{
  IndexOutput os=null;
  IndexInput is=null;
  IOException priorException=null;
  try {
    os=to.createOutput(dest,context);
    is=openInput(src,context);
    is.copyBytes(os,is.length());
  }
 catch (  IOException ioe) {
    priorException=ioe;
  }
 finally {
    IOUtils.closeWhileHandlingException(priorException,os,is);
  }
}
