{
  subDv.setDocument(doc);
  int segOrd=(int)subDv.nextOrd();
  if (segOrd < 0)   return;
  FixedBitSet bits=arr[slotNum];
  if (bits == null) {
    bits=new FixedBitSet(nTerms);
    arr[slotNum]=bits;
  }
  do {
    int ord=toGlobal == null ? segOrd : (int)toGlobal.get(segOrd);
    bits.set(ord);
    segOrd=(int)subDv.nextOrd();
  }
 while (segOrd >= 0);
}
