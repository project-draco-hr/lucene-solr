{
  if (argv == null || argv.length < 1)   TestRunner.run(suite());
 else   if ("server".equals(argv[0])) {
    TestRemoteSort test=new TestRemoteSort(null);
    try {
      test.startServer();
      Thread.sleep(500000);
    }
 catch (    Exception e) {
      System.out.println(e);
      e.printStackTrace();
    }
  }
}
