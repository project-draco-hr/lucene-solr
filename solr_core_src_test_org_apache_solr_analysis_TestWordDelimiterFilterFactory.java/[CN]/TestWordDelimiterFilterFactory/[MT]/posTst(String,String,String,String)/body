{
  assertU(adoc("id","42","subword",v1,"subword",v2));
  assertU(commit());
  assertQ("position increment lost",req("+id:42 +subword:\"" + s1 + ' '+ s2+ "\"~90"),"//result[@numFound=0]");
  assertQ("position increment lost",req("+id:42 +subword:\"" + s1 + ' '+ s2+ "\"~110"),"//result[@numFound=1]");
  clearIndex();
}
