{
  File dirPath=_TestUtil.getTempDir("testLuceneMmap");
  rmDir(dirPath);
  MMapDirectory dir=new MMapDirectory(dirPath,null);
  MockAnalyzer analyzer=new MockAnalyzer(random());
  IndexWriter writer=new IndexWriter(dir,new IndexWriterConfig(TEST_VERSION_CURRENT,analyzer).setOpenMode(OpenMode.CREATE));
  writer.commit();
  IndexReader reader=IndexReader.open(dir);
  IndexSearcher searcher=new IndexSearcher(reader);
  int num=atLeast(1000);
  for (int dx=0; dx < num; dx++) {
    String f=randomField();
    Document doc=new Document();
    doc.add(newField("data",f,TextField.TYPE_STORED));
    writer.addDocument(doc);
  }
  reader.close();
  writer.close();
  rmDir(dirPath);
}
