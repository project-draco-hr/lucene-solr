{
  if (mergeReader == null) {
    if (reader != null) {
      reader.incRef();
      mergeReader=reader;
    }
 else {
      mergeReader=new SegmentReader(info,-1,context);
      if (liveDocs == null) {
        liveDocs=mergeReader.getLiveDocs();
      }
    }
  }
  mergeReader.incRef();
  return mergeReader;
}
