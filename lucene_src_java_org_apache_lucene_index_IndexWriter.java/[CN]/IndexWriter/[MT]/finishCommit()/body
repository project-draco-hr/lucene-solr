{
  if (pendingCommit != null) {
    try {
      if (infoStream != null)       infoStream.message("IW","commit: pendingCommit != null");
      pendingCommit.finishCommit(directory,codec);
      if (infoStream != null)       infoStream.message("IW","commit: wrote segments file \"" + pendingCommit.getCurrentSegmentFileName() + "\"");
      lastCommitChangeCount=pendingCommitChangeCount;
      segmentInfos.updateGeneration(pendingCommit);
      segmentInfos.setUserData(pendingCommit.getUserData());
      rollbackSegments=pendingCommit.createBackupSegmentInfos(true);
      deleter.checkpoint(pendingCommit,true);
    }
  finally {
      deleter.decRef(filesToCommit);
      filesToCommit=null;
      pendingCommit=null;
      notifyAll();
    }
  }
 else   if (infoStream != null) {
    infoStream.message("IW","commit: pendingCommit == null; skip");
  }
  if (infoStream != null) {
    infoStream.message("IW","commit: done");
  }
}
