{
  boolean success=false;
  try {
    if (bufferedDeletes.applyDeletes(readerPool,segmentInfos,merge.segments)) {
      checkpoint();
    }
    _mergeInit(merge);
    success=true;
  }
  finally {
    if (!success) {
      if (infoStream != null) {
        message("hit exception in mergeInit");
      }
      mergeFinish(merge);
    }
  }
}
