{
  ensureOpen();
  try {
    boolean success=false;
    try {
      docWriter.updateDocument(doc,analyzer,term);
      success=true;
    }
  finally {
      if (!success && infoStream != null)       message("hit exception updating document");
    }
  }
 catch (  OutOfMemoryError oom) {
    handleOOM(oom,"updateDocument");
  }
}
