{
  boolean success=false;
  final long t0=System.currentTimeMillis();
  try {
    try {
      try {
        mergeInit(merge);
        if (infoStream != null)         infoStream.message("IW","now merge\n  merge=" + merge.segString(directory) + "\n  index="+ segString());
        mergeMiddle(merge);
        mergeSuccess(merge);
        success=true;
      }
 catch (      Throwable t) {
        handleMergeException(t,merge);
      }
    }
  finally {
synchronized (this) {
        mergeFinish(merge);
        if (!success) {
          if (infoStream != null)           infoStream.message("IW","hit exception during merge");
          if (merge.info != null && !segmentInfos.contains(merge.info))           deleter.refresh(merge.info.name);
        }
        if (success && !merge.isAborted() && (merge.optimize || (!closed && !closing))) {
          updatePendingMerges(merge.maxNumSegmentsOptimize,merge.optimize);
        }
      }
    }
  }
 catch (  OutOfMemoryError oom) {
    handleOOM(oom,"merge");
  }
  if (infoStream != null && merge.info != null) {
    infoStream.message("IW","merge time " + (System.currentTimeMillis() - t0) + " msec for "+ merge.info.docCount+ " docs");
  }
}
