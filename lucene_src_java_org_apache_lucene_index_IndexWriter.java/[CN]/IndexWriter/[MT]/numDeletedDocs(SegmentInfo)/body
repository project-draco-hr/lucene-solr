{
  ensureOpen(false);
  SegmentReader reader=readerPool.getIfExists(info);
  try {
    if (reader != null) {
      return Math.max(info.getDelCount(),reader.numDeletedDocs());
    }
 else {
      return info.getDelCount();
    }
  }
  finally {
    if (reader != null) {
      readerPool.release(reader,false);
    }
  }
}
