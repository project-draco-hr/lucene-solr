{
  if (root >= nrInHeap)   return true;
  int lchild=(root << 1) + 1;
  int rchild=(root << 1) + 2;
  if (lchild < nrInHeap && subScorers[root].docID() > subScorers[lchild].docID())   return false;
  if (rchild < nrInHeap && subScorers[root].docID() > subScorers[rchild].docID())   return false;
  return minheapCheck(lchild) && minheapCheck(rchild);
}
