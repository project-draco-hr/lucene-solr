{
  final IndexReader topReader=ReaderUtil.getTopLevelContext(readerContext).reader();
  final AtomicReader r=topReader instanceof CompositeReader ? new SlowCompositeReaderWrapper((CompositeReader)topReader) : (AtomicReader)topReader;
  final int off=readerContext.docBase;
  final FieldCache.DocTermsIndex sindex=FieldCache.DEFAULT.getTermsIndex(r,field);
  final int end=sindex.numOrd();
  return new IntDocValues(this){
    @Override public int intVal(    int doc){
      return (end - sindex.getOrd(doc + off) - 1);
    }
  }
;
}
