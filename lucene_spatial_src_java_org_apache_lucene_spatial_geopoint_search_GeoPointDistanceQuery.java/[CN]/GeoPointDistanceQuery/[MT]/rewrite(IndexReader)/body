{
  if (maxLon < minLon) {
    BooleanQuery.Builder bqb=new BooleanQuery.Builder();
    double unwrappedLon=centerLon;
    if (unwrappedLon > maxLon) {
      unwrappedLon+=-360.0D;
    }
    GeoPointDistanceQueryImpl left=new GeoPointDistanceQueryImpl(field,termEncoding,this,unwrappedLon,new Rectangle(minLat,maxLat,GeoUtils.MIN_LON_INCL,maxLon));
    bqb.add(new BooleanClause(left,BooleanClause.Occur.SHOULD));
    if (unwrappedLon < maxLon) {
      unwrappedLon+=360.0D;
    }
    GeoPointDistanceQueryImpl right=new GeoPointDistanceQueryImpl(field,termEncoding,this,unwrappedLon,new Rectangle(minLat,maxLat,minLon,GeoUtils.MAX_LON_INCL));
    bqb.add(new BooleanClause(right,BooleanClause.Occur.SHOULD));
    return bqb.build();
  }
  return new GeoPointDistanceQueryImpl(field,termEncoding,this,centerLon,new Rectangle(this.minLat,this.maxLat,this.minLon,this.maxLon));
}
