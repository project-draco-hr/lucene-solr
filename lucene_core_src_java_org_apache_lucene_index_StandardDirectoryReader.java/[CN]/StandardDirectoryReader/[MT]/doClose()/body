{
  Throwable firstExc=null;
  for (  final AtomicReader r : getSequentialSubReaders()) {
    try {
      r.decRef();
    }
 catch (    Throwable t) {
      if (firstExc == null) {
        firstExc=t;
      }
    }
  }
  if (writer != null) {
    writer.decRefDeleter(segmentInfos);
    writer.deletePendingFiles();
  }
  IOUtils.reThrow(firstExc);
}
