{
  if (!(indexed() || hasDocValues())) {
    throw new SolrException(SolrException.ErrorCode.BAD_REQUEST,"can not sort on a field which is neither indexed nor has doc values: " + getName());
  }
  if (multiValued()) {
    throw new SolrException(SolrException.ErrorCode.BAD_REQUEST,"can not sort on multivalued field: " + getName());
  }
}
