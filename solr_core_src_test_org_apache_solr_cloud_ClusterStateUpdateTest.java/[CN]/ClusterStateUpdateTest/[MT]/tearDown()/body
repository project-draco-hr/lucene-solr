{
  if (VERBOSE) {
    printLayout(zkServer.getZkHost());
  }
  container1.shutdown();
  container2.shutdown();
  container3.shutdown();
  zkServer.shutdown();
  super.tearDown();
  System.clearProperty("zkClientTimeout");
  System.clearProperty("zkHost");
  System.clearProperty("hostPort");
  System.clearProperty("solrcloud.update.delay");
  System.clearProperty("solr.data.dir");
}
