{
  TempPostingsWriterBase postingsWriter=new TempPostingsWriter(state);
  boolean success=false;
  try {
    FieldsConsumer ret=new TempBlockTermsWriter(state,postingsWriter,minTermBlockSize,maxTermBlockSize);
    success=true;
    return ret;
  }
  finally {
    if (!success) {
      IOUtils.closeWhileHandlingException(postingsWriter);
    }
  }
}
