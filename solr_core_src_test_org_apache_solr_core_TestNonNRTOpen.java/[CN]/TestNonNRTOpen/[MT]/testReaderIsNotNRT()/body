{
  assertNotNRT(1);
  String core=h.getCore().getName();
  log.info("Reloading core: " + h.getCore().toString());
  h.getCoreContainer().reload(core);
  assertNotNRT(1);
  assertU(adoc("baz","doc"));
  assertU(commit());
  assertNotNRT(2);
  assertU(adoc("bazz","doc2"));
  log.info("Reloading core: " + h.getCore().toString());
  h.getCoreContainer().reload(core);
  assertNotNRT(3);
}
