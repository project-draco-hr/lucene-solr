{
  PostingsWriterBase docs=new StandardPostingsWriter(state);
  TermsIndexWriterBase indexWriter;
  boolean success=false;
  try {
    indexWriter=new VariableGapTermsIndexWriter(state,new VariableGapTermsIndexWriter.EveryNTermSelector(state.termIndexInterval));
    success=true;
  }
  finally {
    if (!success) {
      docs.close();
    }
  }
  success=false;
  try {
    FieldsConsumer ret=new PrefixCodedTermsWriter(indexWriter,state,docs,BytesRef.getUTF8SortedAsUnicodeComparator());
    success=true;
    return ret;
  }
  finally {
    if (!success) {
      try {
        docs.close();
      }
  finally {
        indexWriter.close();
      }
    }
  }
}
