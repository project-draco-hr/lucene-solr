{
  PostingsReaderBase postings=new StandardPostingsReader(state.dir,state.segmentInfo,state.context,state.codecId);
  boolean success=false;
  try {
    FieldsProducer ret=new BlockTreeTermsReader(state.dir,state.fieldInfos,state.segmentInfo.name,postings,state.context,state.codecId,state.termsIndexDivisor);
    success=true;
    return ret;
  }
  finally {
    if (!success) {
      postings.close();
    }
  }
}
