{
  lrf=h.getRequestFactory("spellchecker",0,20);
  lrf.args.put("version","2.0");
  lrf.args.put("sp.query.accuracy",".9");
  assertU("Add some words to the Spell Check Index:",adoc("id","100","spell","solr cat cart"));
  assertU(adoc("id","101","spell","cat cart"));
  assertU(adoc("id","102","spell","cat cart"));
  assertU(adoc("id","103","spell","cat cart carp"));
  assertU(adoc("id","104","spell","cat car cant"));
  assertU(adoc("id","105","spell","cat catnip"));
  assertU(adoc("id","106","spell","cat cattails"));
  assertU(adoc("id","107","spell","cat cod"));
  assertU(adoc("id","108","spell","cat corn"));
  assertU(adoc("id","109","spell","cat cot"));
  assertU(commit());
  assertU(optimize());
  lrf.args.put("sp.dictionary.threshold","0.20");
  lrf.args.put("cmd","rebuild");
  assertQ("Need to first build the index:",req("cat"),"//str[@name='cmdExecuted'][.='rebuild']","//str[@name='words'][.='cat']","//str[@name='exist'][.='true']");
  lrf.args.clear();
  lrf.args.put("version","2.0");
  lrf.args.put("sp.query.accuracy",".9");
  assertQ("Confirm index contains only words above threshold",req("cat"),"//str[@name='words'][.='cat']","//str[@name='exist'][.='true']");
  assertQ("Confirm index contains only words above threshold",req("cart"),"//str[@name='words'][.='cart']","//str[@name='exist'][.='true']");
  assertQ("Confirm index contains only words above threshold",req("cod"),"//str[@name='words'][.='cod']","//str[@name='exist'][.='false']");
  assertQ("Confirm index contains only words above threshold",req("corn"),"//str[@name='words'][.='corn']","//str[@name='exist'][.='false']");
  lrf.args.clear();
}
