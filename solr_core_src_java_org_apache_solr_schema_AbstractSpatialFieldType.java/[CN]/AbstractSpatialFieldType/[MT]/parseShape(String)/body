{
  str=str.trim();
  if (str.length() == 0)   throw new SolrException(SolrException.ErrorCode.BAD_REQUEST,"empty string shape");
  char firstChar=str.charAt(0);
  if (firstChar == '+' || firstChar == '-' || (firstChar >= '0' && firstChar <= '9')) {
    try {
      return SpatialUtils.parsePoint(str,ctx);
    }
 catch (    Exception e) {
    }
  }
  try {
    return shapeReader.read(str);
  }
 catch (  Exception e) {
    String msg="Unable to parse shape given formats" + " \"lat,lon\", \"x y\" or as " + shapeReader.getFormatName() + " because "+ e;
    if (!msg.contains(str)) {
      msg+=" input: " + str;
    }
    throw new SolrException(SolrException.ErrorCode.BAD_REQUEST,msg,e);
  }
}
