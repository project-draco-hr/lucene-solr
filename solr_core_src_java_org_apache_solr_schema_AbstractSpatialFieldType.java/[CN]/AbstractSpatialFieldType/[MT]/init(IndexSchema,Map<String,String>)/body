{
  super.init(schema,args);
  String units=args.remove("units");
  if (!"degrees".equals(units))   throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"Must specify units=\"degrees\" on field types with class " + getClass().getSimpleName());
  MapListener<String,String> argsWrap=new MapListener<String,String>(args);
  ctx=SpatialContextFactory.makeSpatialContext(argsWrap,schema.getResourceLoader().getClassLoader());
  args.keySet().removeAll(argsWrap.getSeenKeys());
  argsParser=new SpatialArgsParser();
}
