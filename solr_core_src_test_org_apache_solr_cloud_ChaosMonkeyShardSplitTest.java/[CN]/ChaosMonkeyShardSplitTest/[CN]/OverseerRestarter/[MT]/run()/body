{
  try {
    overseerClient=electNewOverseer(zkAddress);
    while (run) {
      if (killCounter.get() > 0) {
        try {
          killCounter.decrementAndGet();
          log.info("Killing overseer after 800ms");
          Thread.sleep(800);
          overseerClient.close();
          overseerClient=electNewOverseer(zkAddress);
        }
 catch (        Throwable e) {
        }
      }
      try {
        Thread.sleep(100);
      }
 catch (      Throwable e) {
      }
    }
  }
 catch (  Throwable t) {
  }
 finally {
    if (overseerClient != null) {
      try {
        overseerClient.close();
      }
 catch (      Throwable t) {
      }
    }
  }
}
