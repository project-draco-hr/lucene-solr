{
  String[] data=new String[]{"A 1 2 3 4 5 6","Z       4 5 6",null,"B   2   4 5 6","Y     3   5 6",null,"C     3     6","X       4 5 6"};
  index=new RAMDirectory();
  IndexWriter writer=new IndexWriter(index,new WhitespaceAnalyzer(),true);
  for (int i=0; i < data.length; i++) {
    Document doc=new Document();
    doc.add(Field.Keyword("id",String.valueOf(i)));
    doc.add(Field.Keyword("all","all"));
    if (null != data[i]) {
      doc.add(Field.Text("data",data[i]));
    }
    writer.addDocument(doc);
  }
  writer.optimize();
  writer.close();
  r=IndexReader.open(index);
  s=new IndexSearcher(r);
}
