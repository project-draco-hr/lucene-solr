{
  final String chain="error-on-add";
  try {
    SolrInputDocument d=processAdd(chain,doc(f("id","5"),f("name"," foo "),f("subject","bar")));
  }
 catch (  SolrException e) {
    assertTrue("Exception doesn't contain script error string: " + e.getMessage(),0 < e.getMessage().indexOf("no-soup-fo-you"));
    return;
  }
  fail("Did not get exception from script");
}
