{
  pool.shutdown();
  pool.shutdownNow();
  boolean shutdown=false;
  while (!shutdown) {
    try {
      shutdown=pool.awaitTermination(1,TimeUnit.SECONDS);
    }
 catch (    InterruptedException ie) {
      Thread.currentThread().interrupt();
    }
    if (!shutdown) {
      pool.shutdownNow();
    }
  }
}
