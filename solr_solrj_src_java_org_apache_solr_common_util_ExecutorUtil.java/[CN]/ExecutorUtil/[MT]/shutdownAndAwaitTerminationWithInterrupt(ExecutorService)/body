{
  pool.shutdown();
  boolean shutdown=false;
  boolean interrupted=false;
  while (!shutdown) {
    try {
      shutdown=pool.awaitTermination(60,TimeUnit.SECONDS);
    }
 catch (    InterruptedException ie) {
      Thread.currentThread().interrupt();
    }
    if (!shutdown && !interrupted) {
      pool.shutdownNow();
      interrupted=true;
    }
  }
}
