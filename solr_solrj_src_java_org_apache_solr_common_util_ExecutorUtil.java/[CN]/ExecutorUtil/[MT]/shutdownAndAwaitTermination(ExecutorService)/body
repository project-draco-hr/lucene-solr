{
  pool.shutdown();
  pool.shutdownNow();
  try {
    if (!pool.awaitTermination(60,TimeUnit.SECONDS))     SolrException.log(log,"Executor still has running tasks.");
  }
 catch (  InterruptedException ie) {
    pool.shutdownNow();
    try {
      if (!pool.awaitTermination(60,TimeUnit.SECONDS))       SolrException.log(log,"Executor still has running tasks.");
    }
 catch (    InterruptedException e) {
    }
    Thread.currentThread().interrupt();
  }
}
