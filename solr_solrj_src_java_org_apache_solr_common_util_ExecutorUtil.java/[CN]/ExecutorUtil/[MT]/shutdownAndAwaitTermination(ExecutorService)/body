{
  pool.shutdown();
  try {
    if (!pool.awaitTermination(60,TimeUnit.SECONDS)) {
      pool.shutdownNow();
      if (!pool.awaitTermination(60,TimeUnit.SECONDS))       SolrException.log(log,"Executor still has running tasks.");
    }
  }
 catch (  InterruptedException ie) {
    pool.shutdownNow();
    Thread.currentThread().interrupt();
  }
}
