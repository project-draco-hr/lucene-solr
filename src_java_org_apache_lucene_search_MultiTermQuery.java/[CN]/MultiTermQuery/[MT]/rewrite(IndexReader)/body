{
  FilteredTermEnum enum=getEnum(reader);
  BooleanQuery query=new BooleanQuery();
  try {
    do {
      Term t=enum.term();
      if (t != null) {
        TermQuery tq=new TermQuery(t);
        tq.setBoost(getBoost() * enum.difference());
        query.add(tq,false,false);
      }
    }
 while (enum.next());
  }
  finally {
    enum.close();
  }
  return query;
}
