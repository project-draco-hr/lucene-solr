{
  if (query == null) {
    BooleanQuery q=new BooleanQuery();
    try {
      do {
        Term t=enum.term();
        if (t != null) {
          TermQuery tq=new TermQuery(t);
          tq.setBoost(boost * enum.difference());
          q.add(tq,false,false);
        }
      }
 while (enum.next());
    }
  finally {
      enum.close();
    }
    query=q;
  }
  return query;
}
