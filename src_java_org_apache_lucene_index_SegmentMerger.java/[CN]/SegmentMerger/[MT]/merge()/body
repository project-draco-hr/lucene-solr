{
  int value;
  try {
    value=mergeFields();
    mergeTerms();
    mergeNorms();
    if (fieldInfos.hasVectors())     mergeVectors();
  }
  finally {
    for (int i=0; i < readers.size(); i++) {
      IndexReader reader=(IndexReader)readers.elementAt(i);
      reader.close();
    }
  }
  if (useCompoundFile)   createCompoundFile();
  return value;
}
