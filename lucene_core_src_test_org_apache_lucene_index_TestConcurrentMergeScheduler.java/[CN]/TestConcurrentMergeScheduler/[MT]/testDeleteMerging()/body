{
  Directory directory=newDirectory();
  LogDocMergePolicy mp=new LogDocMergePolicy();
  mp.setMinMergeDocs(1000);
  IndexWriter writer=new IndexWriter(directory,newIndexWriterConfig(new MockAnalyzer(random())).setMergePolicy(mp));
  Document doc=new Document();
  Field idField=newStringField("id","",Field.Store.YES);
  doc.add(idField);
  for (int i=0; i < 10; i++) {
    if (VERBOSE) {
      System.out.println("\nTEST: cycle");
    }
    for (int j=0; j < 100; j++) {
      idField.setStringValue(Integer.toString(i * 100 + j));
      writer.addDocument(doc);
    }
    int delID=i;
    while (delID < 100 * (1 + i)) {
      if (VERBOSE) {
        System.out.println("TEST: del " + delID);
      }
      writer.deleteDocuments(new Term("id","" + delID));
      delID+=10;
    }
    writer.commit();
  }
  writer.shutdown();
  IndexReader reader=DirectoryReader.open(directory);
  assertEquals(450,reader.numDocs());
  reader.close();
  directory.close();
}
