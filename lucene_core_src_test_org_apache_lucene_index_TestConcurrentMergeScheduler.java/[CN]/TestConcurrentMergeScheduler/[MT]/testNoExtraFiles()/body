{
  Directory directory=newDirectory();
  IndexWriter writer=new IndexWriter(directory,newIndexWriterConfig(new MockAnalyzer(random())).setMaxBufferedDocs(2));
  for (int iter=0; iter < 7; iter++) {
    if (VERBOSE) {
      System.out.println("TEST: iter=" + iter);
    }
    for (int j=0; j < 21; j++) {
      Document doc=new Document();
      doc.add(newTextField("content","a b c",Field.Store.NO));
      writer.addDocument(doc);
    }
    writer.close();
    TestIndexWriter.assertNoUnreferencedFiles(directory,"testNoExtraFiles");
    writer=new IndexWriter(directory,newIndexWriterConfig(new MockAnalyzer(random())).setOpenMode(OpenMode.APPEND).setMaxBufferedDocs(2));
  }
  writer.close();
  directory.close();
}
