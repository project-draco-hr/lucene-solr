{
  final String BLOCK="  aa bb cc --- aa bb aa   bb   cc";
  CharStream cs=new PatternReplaceCharFilter(pattern("(aa)\\s+(bb)\\s+(cc)"),"$1  $2  $3",CharReader.get(new StringReader(BLOCK)));
  TokenStream ts=new MockTokenizer(cs,MockTokenizer.WHITESPACE,false);
  assertTokenStreamContents(ts,new String[]{"aa","bb","cc","---","aa","bb","aa","bb","cc"},new int[]{2,6,9,11,15,18,21,25,29},new int[]{4,8,10,14,17,20,23,27,33});
}
