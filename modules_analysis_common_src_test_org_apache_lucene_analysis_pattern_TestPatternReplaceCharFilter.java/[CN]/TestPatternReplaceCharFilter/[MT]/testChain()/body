{
  final String BLOCK=" a bb - ccc . --- bb a . ccc ccc bb";
  CharStream cs=new PatternReplaceCharFilter(pattern("a"),"aa",".",CharReader.get(new StringReader(BLOCK)));
  cs=new PatternReplaceCharFilter(pattern("bb"),"b",".",cs);
  cs=new PatternReplaceCharFilter(pattern("ccc"),"c",".",cs);
  TokenStream ts=new WhitespaceTokenizer(TEST_VERSION_CURRENT,cs);
  assertTokenStreamContents(ts,new String[]{"aa","b","-","c",".","---","b","aa",".","c","c","b"},new int[]{1,3,6,8,12,14,18,21,23,25,29,33},new int[]{2,5,7,11,13,17,20,22,24,28,32,35});
}
