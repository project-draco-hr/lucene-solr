{
  boolean stopAtShutdown=true;
  JettySolrRunner jetty=new JettySolrRunner(solrHome.getAbsolutePath(),context,0,solrConfigOverride,schemaOverride,stopAtShutdown,getExtraServlets(),null,getExtraRequestFilters());
  jetty.setShards(shardList);
  jetty.setDataDir(dataDir);
  if (explicitCoreNodeName) {
    jetty.setCoreNodeName(Integer.toString(nodeCnt.incrementAndGet()));
  }
  jetty.start();
  return jetty;
}
