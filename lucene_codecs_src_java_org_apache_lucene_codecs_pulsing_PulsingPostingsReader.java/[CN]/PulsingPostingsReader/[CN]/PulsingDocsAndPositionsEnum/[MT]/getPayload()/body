{
  if (payloadRetrieved) {
    return payload.get();
  }
 else   if (storePayloads && payloadLength > 0) {
    payloadRetrieved=true;
    if (payload == null) {
      payload=new BytesRefBuilder();
    }
    payload.grow(payloadLength);
    postings.readBytes(payload.bytes(),0,payloadLength);
    payload.setLength(payloadLength);
    return payload.get();
  }
 else {
    return null;
  }
}
