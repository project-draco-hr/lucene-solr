{
  flushAdds(1);
  flushDeletes(1);
  checkResponses(true);
  UpdateRequest ureq=new UpdateRequest();
  ureq.setParams(params);
  addCommit(ureq,cmd);
  log.info("Distrib commit to:" + nodes + " params:"+ params);
  for (  Node node : nodes) {
    submit(ureq,node);
  }
  if (cmd.waitSearcher) {
    checkResponses(true);
  }
}
