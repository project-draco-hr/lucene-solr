{
  log.info("SYNCADD on {} : {}",node,cmd.getPrintableId());
  checkResponses(false);
  flushDeletes(1);
  flushAdds(1);
  checkResponses(false);
  UpdateRequestExt ureq=new UpdateRequestExt();
  ureq.add(cmd.solrDoc,cmd.commitWithin,cmd.overwrite);
  ureq.setParams(params);
  syncRequest(node,ureq);
}
