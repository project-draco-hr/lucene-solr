{
  long indexFP=indexStream.getFilePointer();
  if (HEADER_LENGTH_IDX + ((long)numDocs) * 8 != indexFP)   throw new RuntimeException("fdx size mismatch: docCount is " + numDocs + " but fdx file size is "+ indexFP+ " (wrote numDocs="+ ((indexFP - HEADER_LENGTH_IDX) / 8.0)+ " file="+ indexStream.toString()+ "; now aborting this merge to prevent index corruption");
}
