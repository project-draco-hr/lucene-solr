{
  if (!started) {
    started=true;
    gramSize=minGram;
    char[] chars=new char[1024];
    input.read(chars);
    inStr=new String(chars).trim();
    inLen=inStr.length();
  }
  if (pos + gramSize > inLen) {
    pos=0;
    gramSize++;
    if (gramSize > maxGram)     return null;
    if (pos + gramSize > inLen)     return null;
  }
  String gram=inStr.substring(pos,pos + gramSize);
  int oldPos=pos;
  pos++;
  return new Token(gram,oldPos,oldPos + gramSize);
}
