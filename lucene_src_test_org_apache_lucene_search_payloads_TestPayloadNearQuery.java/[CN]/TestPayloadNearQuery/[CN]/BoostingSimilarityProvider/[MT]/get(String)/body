{
  return new DefaultSimilarity(){
    @Override public float scorePayload(    int docId,    int start,    int end,    BytesRef payload){
      return payload.bytes[payload.offset];
    }
    @Override public void computeNorm(    FieldInvertState state,    Norm norm){
      norm.setByte(encodeNormValue(state.getBoost()));
    }
    @Override public float sloppyFreq(    int distance){
      return 1.0f;
    }
    @Override public float tf(    float freq){
      return 1.0f;
    }
    @Override public Explanation idfExplain(    CollectionStatistics collectionStats,    TermStatistics[] termStats){
      return new Explanation(1.0f,"Inexplicable");
    }
  }
;
}
