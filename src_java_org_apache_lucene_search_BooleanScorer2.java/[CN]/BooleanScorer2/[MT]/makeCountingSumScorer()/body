{
  if (requiredScorers.size() == 0) {
    if (optionalScorers.size() == 0) {
      return new NonMatchingScorer();
    }
 else     if (optionalScorers.size() == 1) {
      return makeCountingSumScorer2(new SingleMatchScorer((Scorer)optionalScorers.get(0)),new ArrayList());
    }
 else {
      return makeCountingSumScorer2(countingDisjunctionSumScorer(optionalScorers),new ArrayList());
    }
  }
 else   if (requiredScorers.size() == 1) {
    return makeCountingSumScorer2(new SingleMatchScorer((Scorer)requiredScorers.get(0)),optionalScorers);
  }
 else {
    return makeCountingSumScorer2(countingConjunctionSumScorer(requiredScorers),optionalScorers);
  }
}
