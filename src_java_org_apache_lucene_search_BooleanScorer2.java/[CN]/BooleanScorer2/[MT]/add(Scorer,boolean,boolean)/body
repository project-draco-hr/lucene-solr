{
  if (!prohibited) {
    coordinator.maxCoord++;
  }
  if (required) {
    if (prohibited) {
      throw new IllegalArgumentException("scorer cannot be required and prohibited");
    }
    requiredScorers.add(scorer);
  }
 else   if (prohibited) {
    prohibitedScorers.add(scorer);
  }
 else {
    optionalScorers.add(scorer);
  }
}
