{
  if (optionalScorers.size() == 0) {
    if (prohibitedScorers.size() == 0) {
      return requiredCountingSumScorer;
    }
 else     if (prohibitedScorers.size() == 1) {
      return new ReqExclScorer(requiredCountingSumScorer,(Scorer)prohibitedScorers.get(0));
    }
 else {
      return new ReqExclScorer(requiredCountingSumScorer,new DisjunctionSumScorer(prohibitedScorers));
    }
  }
 else   if (optionalScorers.size() == 1) {
    return makeCountingSumScorer3(requiredCountingSumScorer,new SingleMatchScorer((Scorer)optionalScorers.get(0)));
  }
 else {
    return makeCountingSumScorer3(requiredCountingSumScorer,countingDisjunctionSumScorer(optionalScorers));
  }
}
