{
  final Iterator<PerDocValues> it=codecs.values().iterator();
  IOException err=null;
  while (it.hasNext()) {
    try {
      PerDocValues next=it.next();
      if (next != null) {
        next.close();
      }
    }
 catch (    Exception ioe) {
      if (err == null) {
        err=new IOException(ioe);
      }
    }
  }
  if (err != null) {
    throw err;
  }
}
