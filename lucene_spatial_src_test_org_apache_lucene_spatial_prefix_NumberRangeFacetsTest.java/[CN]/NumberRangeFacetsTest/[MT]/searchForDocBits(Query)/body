{
  FixedBitSet bitSet=new FixedBitSet(indexSearcher.getIndexReader().maxDoc());
  indexSearcher.search(query,new SimpleCollector(){
    int leafDocBase;
    @Override public void collect(    int doc) throws IOException {
      bitSet.set(leafDocBase + doc);
    }
    @Override protected void doSetNextReader(    LeafReaderContext context) throws IOException {
      leafDocBase=context.docBase;
    }
    @Override public boolean needsScores(){
      return false;
    }
  }
);
  return bitSet;
}
