{
  for (  String id : Arrays.asList("42","99")) {
    for (    SolrParams p : Arrays.asList(params("fl","[shard],[explain],x_alias:[value v=10 t=int],abs(val_i)"),params("fl","[shard],abs(val_i)","fl","[explain],x_alias:[value v=10 t=int]"),params("fl","[shard]","fl","[explain],x_alias:[value v=10 t=int]","fl","abs(val_i)"),params("fl","[shard]","fl","[explain]","fl","x_alias:[value v=10 t=int]","fl","abs(val_i)"))) {
      assertQ(id + ": " + p,req(p,"qt","/get","id",id,"wt","xml"),"count(//doc)=1","//doc/float[@name='abs(val_i)'][.='1.0']","//doc/str[@name='[shard]'][.='[not a shard request]']","//doc/int[@name='x_alias'][.=10]","//doc[count(*)=3]");
    }
  }
}
