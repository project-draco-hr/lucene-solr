{
  assertQ("fl=[docid]",req("q","*:*","rows","1","fl","[docid]"),"//result[@numFound='5']","//result/doc/int[@name='[docid]']","//result/doc[count(*)=1]");
  for (  SolrParams p : Arrays.asList(params("fl","[docid],[shard],[explain],x_alias:[value v=10 t=int]"),params("fl","[docid],[shard]","fl","[explain],x_alias:[value v=10 t=int]"),params("fl","[docid]","fl","[shard]","fl","[explain]","fl","x_alias:[value v=10 t=int]"))) {
    assertQ("" + p,req(p,"q","*:*","rows","1"),"//result[@numFound='5']","//result/doc/int[@name='[docid]']","//result/doc/str[@name='[shard]'][.='[not a shard request]']","//result/doc/str[@name='[explain]']","//result/doc/int[@name='x_alias'][.=10]","//result/doc[count(*)=4]");
  }
}
