{
  assertQ("fl=val_*,id",req("q","*:*","rows","1","fl","val_*,id"),"//result[@numFound='5']","//result/doc/int[@name='val_i']","//result/doc/str[@name='id']","//result/doc[count(*)=2]");
  for (  SolrParams p : Arrays.asList(params("fl","val_*,subj*,id"),params("fl","val_*","fl","subj*","fl","id"),params("fl","val_*","fl","subj*,id"))) {
    assertQ("" + p,req(p,"q","*:*","rows","1"),"//result[@numFound='5']","//result/doc/int[@name='val_i']","//result/doc/str[@name='subject']","//result/doc/str[@name='id']","//result/doc[count(*)=3]");
  }
}
