{
  assertQ("fl=val_*,id",req("q","*:*","rows","1","fl","val_*,id"),"//result[@numFound='5']","//result/doc/int[@name='val_i']","//result/doc/str[@name='id']","//result/doc[count(*)=2]");
  assertQ("fl=val_*,subj*,id",req("q","*:*","rows","1","fl","val_*,subj*,id"),"//result[@numFound='5']","//result/doc/int[@name='val_i']","//result/doc/str[@name='subject']","//result/doc/str[@name='id']","//result/doc[count(*)=3]");
  assertQ("fl=val_*&fl=subj*&fl=id",req("q","*:*","rows","1","fl","val_*","fl","subj*","fl","id"),"//result[@numFound='5']","//result/doc/int[@name='val_i']","//result/doc/str[@name='subject']","//result/doc/str[@name='id']","//result/doc[count(*)=3]");
}
