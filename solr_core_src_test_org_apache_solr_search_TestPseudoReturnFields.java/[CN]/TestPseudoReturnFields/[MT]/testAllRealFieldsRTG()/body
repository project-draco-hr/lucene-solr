{
  for (  String fl : ALL_REAL_FIELDS) {
    for (    String id : Arrays.asList("42","99")) {
      assertQ("id=" + id + ", fl="+ fl+ " ... all real fields",req("qt","/get","id",id,"wt","xml","fl",fl),"count(//doc)=1","//doc/str[@name='id']","//doc/int[@name='val_i']","//doc/str[@name='ssto']","//doc/str[@name='subject']","//doc[count(*)=4]");
    }
  }
}
