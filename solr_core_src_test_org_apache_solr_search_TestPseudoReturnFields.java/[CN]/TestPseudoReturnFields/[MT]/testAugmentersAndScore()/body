{
  assertQ("fl=[docid],score",req("q","*:*","rows","1","fl","[docid],score"),"//result[@numFound='5']","//result/doc/float[@name='score']","//result/doc/int[@name='[docid]']","//result/doc[count(*)=2]");
  assertQ("fl=[docid],[explain],score",req("q","*:*","rows","1","fl","[docid],[explain],score"),"//result[@numFound='5']","//result/doc/float[@name='score']","//result/doc/int[@name='[docid]']","//result/doc/str[@name='[explain]']","//result/doc[count(*)=3]");
  assertQ("fl=[docid]&fl=[explain]&fl=score",req("q","*:*","rows","1","fl","[docid]","fl","[explain]","fl","score"),"//result[@numFound='5']","//result/doc/float[@name='score']","//result/doc/int[@name='[docid]']","//result/doc/str[@name='[explain]']","//result/doc[count(*)=3]");
}
