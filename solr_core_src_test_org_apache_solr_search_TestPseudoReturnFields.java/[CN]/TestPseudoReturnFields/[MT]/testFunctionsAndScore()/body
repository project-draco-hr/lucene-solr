{
  assertQ("fl=log(val_i),score",req("q","*:*","rows","1","fl","log(val_i),score"),"//result[@numFound='5']","//result/doc/float[@name='score']","//result/doc/double[@name='log(val_i)']","//result/doc[count(*)=2]");
  assertQ("fl=log(val_i)&fl=score",req("q","*:*","rows","1","fl","log(val_i)","fl","score"),"//result[@numFound='5']","//result/doc/float[@name='score']","//result/doc/double[@name='log(val_i)']","//result/doc[count(*)=2]");
  assertQ("fl=score,log(val_i),abs(val_i)",req("q","*:*","rows","1","fl","score,log(val_i),abs(val_i)"),"//result[@numFound='5']","//result/doc/float[@name='score']","//result/doc/double[@name='log(val_i)']","//result/doc/float[@name='abs(val_i)']","//result/doc[count(*)=3]");
  assertQ("fl=score&fl=log(val_i)&fl=abs(val_i)",req("q","*:*","rows","1","fl","score","fl","log(val_i)","fl","abs(val_i)"),"//result[@numFound='5']","//result/doc/float[@name='score']","//result/doc/double[@name='log(val_i)']","//result/doc/float[@name='abs(val_i)']","//result/doc[count(*)=3]");
}
