{
  for (  String id : Arrays.asList("42","99")) {
    assertQ(id + ": fl=val_*,score",req("qt","/get","id",id,"wt","xml","fl","val_*,score"),"count(//doc)=1","//doc/int[@name='val_i']","//doc[count(*)=1]");
    for (    SolrParams p : Arrays.asList(params("fl","val_*,subj*,score"),params("fl","val_*","fl","subj*","fl","score"),params("fl","val_*","fl","subj*,score"))) {
      assertQ("" + p,req(p,"qt","/get","id",id,"wt","xml"),"count(//doc)=1","//doc/int[@name='val_i']","//doc/str[@name='subject']","//doc[count(*)=2]");
    }
  }
}
