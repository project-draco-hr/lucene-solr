{
  for (  String id : Arrays.asList("42","99")) {
    for (    SolrParams p : Arrays.asList(params("fl","score","fl","log(val_i)","fl","abs(val_i)"),params("fl","score","fl","log(val_i),abs(val_i)"),params("fl","score,log(val_i)","fl","abs(val_i)"),params("fl","score,log(val_i),abs(val_i)"))) {
      assertQ("id=" + id + ", p="+ p,req(p,"qt","/get","id",id,"wt","xml"),"count(//doc)=1","//doc/double[@name='log(val_i)']","//doc/float[@name='abs(val_i)']","//doc[count(*)=2]");
    }
  }
}
