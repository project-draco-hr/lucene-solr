{
  Random random=random();
  final List<String> fl=Arrays.asList("id","[explain]","score","val_*","subj*","abs(val_i)");
  final int iters=atLeast(random,10);
  for (int i=0; i < iters; i++) {
    Collections.shuffle(fl,random);
    final SolrParams singleFl=params("fl",StringUtils.join(fl.toArray(),','));
    final ModifiableSolrParams multiFl=params();
    for (    String item : fl) {
      multiFl.add("fl",item);
    }
    for (    String id : Arrays.asList("42","99")) {
      for (      SolrParams p : Arrays.asList(singleFl,multiFl)) {
        assertQ(id + ": " + p,req(p,"qt","/get","id",id,"wt","xml"),"count(//doc)=1","//doc/str[@name='id']","//doc/float[@name='abs(val_i)'][.='1.0']","//doc/int[@name='val_i'][.=1]","//doc/str[@name='subject']","//doc[count(*)=4]");
      }
    }
  }
}
