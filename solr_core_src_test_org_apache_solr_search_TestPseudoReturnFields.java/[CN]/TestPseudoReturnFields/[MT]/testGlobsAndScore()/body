{
  assertQ("fl=val_*,score",req("q","*:*","rows","1","fl","val_*,score","indent","true"),"//result[@numFound='5']","//result/doc/float[@name='score']","//result/doc/int[@name='val_i']","//result/doc[count(*)=2]");
  for (  SolrParams p : Arrays.asList(params("fl","val_*,subj*,score"),params("fl","val_*","fl","subj*","fl","score"),params("fl","val_*","fl","subj*,score"))) {
    assertQ("" + p,req(p,"q","*:*","rows","1"),"//result[@numFound='5']","//result/doc/float[@name='score']","//result/doc/int[@name='val_i']","//result/doc/str[@name='subject']","//result/doc[count(*)=3]");
  }
}
