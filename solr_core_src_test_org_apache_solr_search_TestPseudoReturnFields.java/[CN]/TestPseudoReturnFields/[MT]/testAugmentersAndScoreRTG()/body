{
  for (  String id : Arrays.asList("42","99")) {
    assertQ(id,req("qt","/get","id",id,"wt","xml","fl","x_alias:[value v=10 t=int],score"),"//doc/int[@name='x_alias'][.=10]","//doc[count(*)=1]");
    for (    SolrParams p : Arrays.asList(params("fl","x_alias:[value v=10 t=int],[explain],score"),params("fl","x_alias:[value v=10 t=int],[explain]","fl","score"),params("fl","x_alias:[value v=10 t=int]","fl","[explain]","fl","score"))) {
      assertQ(p.toString(),req(p,"qt","/get","id",id,"wt","xml"),"//doc/int[@name='x_alias'][.=10]","//doc[count(*)=1]");
    }
  }
}
