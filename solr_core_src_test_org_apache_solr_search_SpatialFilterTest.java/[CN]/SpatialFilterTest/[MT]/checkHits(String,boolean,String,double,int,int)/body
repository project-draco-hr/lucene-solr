{
  String[] tests=new String[docIds != null && docIds.length > 0 ? docIds.length + 1 : 1];
  tests[0]="*[count(//doc)=" + count + "]";
  if (docIds != null && docIds.length > 0) {
    int i=1;
    for (    int docId : docIds) {
      tests[i++]="//result/doc/int[@name='id'][.='" + docId + "']";
    }
  }
  String method=exact ? "geofilt" : "bbox";
  int postFilterCount=DelegatingCollector.setLastDelegateCount;
  assertQ(req("fl","id","q","*:* OR foo_i:" + random.nextInt(100),"rows","1000","fq","{!" + method + " sfield="+ fieldName+ "}","pt",pt,"d",String.valueOf(distance)),tests);
  assertEquals(postFilterCount,DelegatingCollector.setLastDelegateCount);
  assertQ(req("fl","id","q","*:* OR foo_i:" + random.nextInt(100),"rows","1000","fq","{!" + method + " sfield="+ fieldName+ " cache=false"+ "}","pt",pt,"d",String.valueOf(distance)),tests);
  assertEquals(postFilterCount,DelegatingCollector.setLastDelegateCount);
  if (fieldName.endsWith("ll")) {
    assertQ(req("fl","id","q","*:* OR foo_i:" + random.nextInt(100) + 100,"rows","1000","fq","{!" + method + " sfield="+ fieldName+ " cache=false cost=150"+ "}","pt",pt,"d",String.valueOf(distance)),tests);
    assertEquals(postFilterCount + 1,DelegatingCollector.setLastDelegateCount);
  }
}
