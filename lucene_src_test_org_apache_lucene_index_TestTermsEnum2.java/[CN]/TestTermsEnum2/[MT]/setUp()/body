{
  super.setUp();
  numIterations=CodecProvider.getDefault().getFieldCodec("field").equals("PreFlex") ? 10 * RANDOM_MULTIPLIER : atLeast(50);
  dir=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random,dir,newIndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer(random,MockTokenizer.KEYWORD,false)).setMaxBufferedDocs(_TestUtil.nextInt(random,50,1000)));
  Document doc=new Document();
  Field field=newField("field","",StringField.TYPE_STORED);
  doc.add(field);
  terms=new TreeSet<BytesRef>();
  int num=atLeast(200);
  for (int i=0; i < num; i++) {
    String s=_TestUtil.randomUnicodeString(random);
    field.setValue(s);
    terms.add(new BytesRef(s));
    writer.addDocument(doc);
  }
  termsAutomaton=DaciukMihovAutomatonBuilder.build(terms);
  reader=writer.getReader();
  searcher=newSearcher(reader);
  writer.close();
}
