{
  if (feed == null)   throw new ServiceException("Can not update null feed");
  if (account == null)   throw new ServiceException("Can not update feed -- account is null");
  if (feed.getId() == null)   throw new ServiceException("Feed ID is null can not update feed");
  if (account.getName() == null)   throw new ServiceException("Account name is null -- can't update feed");
  try {
    feed.setAccount(account);
    this.storage.updateFeed(feed,account.getName());
  }
 catch (  StorageException e) {
    if (LOG.isInfoEnabled())     LOG.info("Can not update feed -- " + e.getMessage(),e);
    throw new ServiceException("Can not update feed",e);
  }
}
