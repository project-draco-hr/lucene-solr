{
  IndexWriter iw=new IndexWriter(ramDir1,new IndexWriterConfig(TEST_VERSION_CURRENT,new StandardAnalyzer(TEST_VERSION_CURRENT)).setOpenMode(create ? OpenMode.CREATE : OpenMode.APPEND));
  Document doc=new Document();
  doc.add(new Field("body",s,Field.Store.YES,Field.Index.ANALYZED));
  iw.addDocument(doc);
  iw.close();
}
