{
  if (distance == 0)   return lat;
  double lat_rad=toRadians(lat);
  double dist_rad=distance / radius;
  double result_rad=Math.asin(Math.sin(lat_rad) / Math.cos(dist_rad));
  if (!Double.isNaN(result_rad))   return Math.toDegrees(result_rad);
  if (lat > 0)   return 90;
  if (lat < 0)   return -90;
  return lat;
}
