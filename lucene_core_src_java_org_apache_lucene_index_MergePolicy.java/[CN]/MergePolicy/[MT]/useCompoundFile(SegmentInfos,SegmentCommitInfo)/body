{
  if (getNoCFSRatio() == 0.0) {
    return false;
  }
  long mergedInfoSize=size(mergedInfo);
  if (mergedInfoSize > maxCFSSegmentSize) {
    return false;
  }
  if (getNoCFSRatio() >= 1.0) {
    return true;
  }
  long totalSize=0;
  for (  SegmentCommitInfo info : infos) {
    totalSize+=size(info);
  }
  return mergedInfoSize <= getNoCFSRatio() * totalSize;
}
