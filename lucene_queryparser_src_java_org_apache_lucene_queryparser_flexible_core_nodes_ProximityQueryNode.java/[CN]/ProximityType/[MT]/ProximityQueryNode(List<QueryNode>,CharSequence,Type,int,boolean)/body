{
  super(clauses);
  setLeaf(false);
  this.proximityType=type;
  this.inorder=inorder;
  this.field=field;
  if (type == Type.NUMBER) {
    if (distance <= 0) {
      throw new QueryNodeError(new MessageImpl(QueryParserMessages.PARAMETER_VALUE_NOT_SUPPORTED,"distance",distance));
    }
 else {
      this.distance=distance;
    }
  }
  clearFields(clauses,field);
}
