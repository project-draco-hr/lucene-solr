{
  IndexSchemaField f=new IndexSchemaField();
  assertFalse(f.checkRequieredValues());
  f.setName("someName");
  assertFalse(f.checkRequieredValues());
  f.setPath("somePath");
  assertFalse(f.checkRequieredValues());
  f.setType("text");
  assertTrue(f.checkRequieredValues());
  f.setType("mixed");
  assertFalse(f.checkRequieredValues());
  f.setTypePath("sometypepath");
  assertTrue(f.checkRequieredValues());
  f.setType("custom");
  assertFalse(f.checkRequieredValues());
  f.setFieldClass(TestContentStragtegy.class);
  assertTrue(f.checkRequieredValues());
}
