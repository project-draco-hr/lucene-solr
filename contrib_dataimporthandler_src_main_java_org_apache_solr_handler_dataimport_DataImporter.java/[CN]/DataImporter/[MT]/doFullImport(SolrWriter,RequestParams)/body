{
  LOG.info("Starting Full Import");
  setStatus(Status.RUNNING_FULL_DUMP);
  if (requestParams.commit)   setIndexStartTime(new Date());
  try {
    if (requestParams.clean)     writer.doDeleteAll();
    docBuilder=new DocBuilder(this,writer,requestParams);
    docBuilder.execute();
    if (!requestParams.debug)     cumulativeStatistics.add(docBuilder.importStatistics);
  }
 catch (  Throwable t) {
    LOG.error("Full Import failed",t);
    docBuilder.rollback();
  }
 finally {
    setStatus(Status.IDLE);
    config.clearCaches();
    DocBuilder.INSTANCE.set(null);
  }
}
