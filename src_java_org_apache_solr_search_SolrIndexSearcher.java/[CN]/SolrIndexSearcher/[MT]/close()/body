{
  if (cachingEnabled) {
    StringBuilder sb=new StringBuilder();
    sb.append("Closing ").append(name);
    for (    SolrCache cache : cacheList) {
      sb.append("\n\t");
      sb.append(cache);
    }
    log.info(sb.toString());
  }
 else {
    log.debug("Closing " + name);
  }
  core.getInfoRegistry().remove(name);
  try {
    searcher.close();
  }
  finally {
    if (closeReader)     reader.close();
    for (    SolrCache cache : cacheList) {
      cache.close();
    }
  }
}
