{
  makeIndexLongMV();
  FieldQuery fq=new FieldQuery(pqF("search","engines"),true,true);
  FieldTermStack stack=new FieldTermStack(reader,0,F,fq);
  FieldPhraseList fpl=new FieldPhraseList(stack,fq);
