{
  FileInputStream fis=null;
  FileOutputStream fos=null;
  try {
    fis=new FileInputStream(source);
    fos=new FileOutputStream(target);
    final byte[] buffer=new byte[1024 * 8];
    int len;
    while ((len=fis.read(buffer)) > 0) {
      fos.write(buffer,0,len);
    }
  }
  finally {
    close(fis,fos);
  }
}
