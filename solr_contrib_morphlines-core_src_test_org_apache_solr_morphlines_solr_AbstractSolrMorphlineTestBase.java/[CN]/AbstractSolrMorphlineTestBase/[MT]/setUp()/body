    }
  }
  int batchSize=SEQ_NUM2.incrementAndGet() % 2 == 0 ? 100 : 1;
  testServer=new SolrServerDocumentLoader(solrServer,batchSize);
  deleteAllDocuments();
  tempDir=createTempDir().toFile().getAbsolutePath();
}
