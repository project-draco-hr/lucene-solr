{
  char buff[]=input.toCharArray();
  StringBuilder str=new StringBuilder(buff.length + 5);
  for (  char c : buff) {
switch (c) {
case '+':
case '-':
case '&':
case '|':
case '(':
case ')':
case '{':
case '}':
case '[':
case ']':
case '^':
case '"':
case '*':
case ':':
case '~':
case '!':
case '\\':
      str.append('\\');
  }
  str.append(c);
}
return str.toString();
}
