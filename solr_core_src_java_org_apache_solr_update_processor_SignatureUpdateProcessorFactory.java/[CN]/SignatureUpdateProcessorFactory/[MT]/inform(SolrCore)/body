{
  final SchemaField field=core.getLatestSchema().getFieldOrNull(getSignatureField());
  if (null == field) {
    throw new SolrException(ErrorCode.SERVER_ERROR,"Can't use signatureField which does not exist in schema: " + getSignatureField());
  }
  if (getOverwriteDupes() && (!field.indexed())) {
    throw new SolrException(ErrorCode.SERVER_ERROR,"Can't set overwriteDupes when signatureField is not indexed: " + getSignatureField());
  }
}
