{
  FieldDocSortedHitQueue hq=null;
  int totalHits=0;
  for (int i=0; i < searchables.length; i++) {
    TopFieldDocs docs=searchables[i].search(weight,filter,n,sort);
    if (hq == null)     hq=new FieldDocSortedHitQueue(docs.fields,n);
    totalHits+=docs.totalHits;
    ScoreDoc[] scoreDocs=docs.scoreDocs;
    for (int j=0; j < scoreDocs.length; j++) {
      ScoreDoc scoreDoc=scoreDocs[j];
      scoreDoc.doc+=starts[i];
      if (!hq.insert(scoreDoc))       break;
    }
  }
  ScoreDoc[] scoreDocs=new ScoreDoc[hq.size()];
  for (int i=hq.size() - 1; i >= 0; i--)   scoreDocs[i]=(ScoreDoc)hq.pop();
  return new TopFieldDocs(totalHits,scoreDocs,hq.getFields());
}
