{
  int valuesPerBlock=Long.SIZE / bpv;
  long[] writeMasks=new long[valuesPerBlock];
  int[] shifts=new int[valuesPerBlock];
  long bits=(1L << bpv) - 1;
  for (int i=0; i < valuesPerBlock; ++i) {
    shifts[i]=bpv * i;
    writeMasks[i]=~(bits << shifts[i]);
  }
  WRITE_MASKS[bpv]=writeMasks;
  SHIFTS[bpv]=shifts;
}
