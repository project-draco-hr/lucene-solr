{
  final String BLOCK="  aa bb cc --- aa bb aa. bb aa   bb cc";
  CharStream cs=new PatternReplaceCharFilter("(aa)\\s+(bb)","$1##$2",".",CharReader.get(new StringReader(BLOCK)));
  TokenStream ts=new WhitespaceTokenizer(cs);
  assertTokenStreamContents(ts,new String[]{"aa##bb","cc","---","aa##bb","aa.","bb","aa##bb","cc"},new int[]{2,8,11,15,21,25,28,36},new int[]{7,10,14,20,24,27,35,38},new int[]{1,1,1,1,1,1,1,1});
}
