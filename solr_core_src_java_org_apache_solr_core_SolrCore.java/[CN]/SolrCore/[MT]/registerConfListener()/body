{
  if (!(resourceLoader instanceof ZkSolrResourceLoader))   return;
  final ZkSolrResourceLoader zkSolrResourceLoader=(ZkSolrResourceLoader)resourceLoader;
  if (zkSolrResourceLoader != null)   zkSolrResourceLoader.getZkController().registerConfListenerForCore(zkSolrResourceLoader.getConfigSetZkPath(),this,getConfListener(this,zkSolrResourceLoader));
}
