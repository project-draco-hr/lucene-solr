{
  if (deleteDataDir) {
    File dataDir=new File(cd.getDataDir());
    try {
      FileUtils.deleteDirectory(dataDir);
    }
 catch (    IOException e) {
      SolrException.log(log,"Failed to delete data dir for unloaded core:" + cd.getName() + " dir:"+ dataDir.getAbsolutePath());
    }
  }
  if (deleteInstanceDir) {
    try {
      FileUtils.deleteDirectory(cd.getInstanceDir().toFile());
    }
 catch (    IOException e) {
      SolrException.log(log,"Failed to delete instance dir for unloaded core:" + cd.getName() + " dir:"+ cd.getInstanceDir());
    }
  }
}
