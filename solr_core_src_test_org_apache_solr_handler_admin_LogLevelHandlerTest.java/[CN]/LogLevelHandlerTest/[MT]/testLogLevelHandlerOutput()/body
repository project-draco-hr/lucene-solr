{
  Logger log=Logger.getLogger("org.apache.solr.SolrTestCaseJ4");
  LogLevelHandler.LoggerWrapperJUL wrap=new LogLevelHandler.LoggerWrapperJUL(log.getName(),log);
  assertQ("Show Log Levels OK",req(CommonParams.QT,"/admin/loglevel"),"//arr[@name='loggers']/lst/str[.='" + wrap.getName() + "']/../str[@name='level'][.='"+ wrap.getLevel()+ "']","//arr[@name='loggers']/lst/str[.='org.apache']/../null[@name='level']");
  assertQ("Set and remove a level",req(CommonParams.QT,"/admin/loglevel","set","org.xxx.yyy.abc:null","set","org.xxx.yyy.zzz:FINEST"),"//arr[@name='loggers']/lst/str[.='org.xxx.yyy.zzz']/../str[@name='level'][.='FINEST']");
}
