{
  Document doc=new Document();
  doc.add(new StringField("id",id,Field.Store.YES));
  if (shape != null) {
    for (    Field f : strategy.createIndexableFields(shape)) {
      doc.add(f);
    }
    if (storeShape)     doc.add(new StoredField(strategy.getFieldName(),shape.toString()));
  }
  return doc;
}
