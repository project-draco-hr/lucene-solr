{
  Directory dir=newDirectory();
  IndexWriterConfig iwconf=newIndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer(random)).setOpenMode(OpenMode.CREATE).setCodec(new MockCodec());
  IndexWriter writer=newWriter(dir,iwconf);
  addDocs(writer,10);
  writer.commit();
  addDocs3(writer,10);
  writer.commit();
  addDocs2(writer,10);
  writer.commit();
  assertEquals(30,writer.maxDoc());
  _TestUtil.checkIndex(dir);
  writer.forceMerge(1);
  assertEquals(30,writer.maxDoc());
  writer.close();
  dir.close();
}
