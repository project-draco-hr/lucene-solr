{
  CloudSolrClient client=new CloudSolrClient("[ff01::114]:33332");
  try {
    client.setZkConnectTimeout(100);
    client.connect();
    fail("Expected exception");
  }
 catch (  SolrException e) {
    assertTrue(e.getCause() instanceof TimeoutException);
  }
 finally {
    client.shutdown();
  }
}
