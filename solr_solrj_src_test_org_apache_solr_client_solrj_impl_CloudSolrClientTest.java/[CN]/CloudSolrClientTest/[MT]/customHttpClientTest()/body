{
  ModifiableSolrParams params=new ModifiableSolrParams();
  params.set(HttpClientUtil.PROP_SO_TIMEOUT,1000);
  try (CloseableHttpClient client=HttpClientUtil.createClient(params);CloudSolrClient solrClient=new CloudSolrClient(zkServer.getZkAddress(),client)){
    assertTrue(solrClient.getLbClient().getHttpClient() == client);
  }
