{
  NGramTokenizer tokenizer=new NGramTokenizer(input,1,3);
  Token token=null;
  do {
    token=tokenizer.next();
    if (token != null) {
      tokens.add(token.toString());
    }
  }
 while (token != null);
  assertEquals(12,tokens.size());
  ArrayList exp=new ArrayList();
  exp.add("(a,0,1)");
  exp.add("(b,1,2)");
  exp.add("(c,2,3)");
  exp.add("(d,3,4)");
  exp.add("(e,4,5)");
  exp.add("(ab,0,2)");
  exp.add("(bc,1,3)");
  exp.add("(cd,2,4)");
  exp.add("(de,3,5)");
  exp.add("(abc,0,3)");
  exp.add("(bcd,1,4)");
  exp.add("(cde,2,5)");
  assertEquals(exp,tokens);
}
