{
  try {
    Method m=clob.getClass().getDeclaredMethod("getCharacterStream");
    if (Modifier.isPublic(m.getModifiers())) {
      return (Reader)m.invoke(clob);
    }
 else {
      m.setAccessible(true);
      return (Reader)m.invoke(clob);
    }
  }
 catch (  Exception e) {
    wrapAndThrow(SEVERE,e,"Unable to get reader from clob");
    return null;
  }
}
