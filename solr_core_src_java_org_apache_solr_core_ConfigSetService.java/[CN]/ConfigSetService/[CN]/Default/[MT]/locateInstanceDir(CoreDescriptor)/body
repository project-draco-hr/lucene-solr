{
  String configSet=cd.getConfigSet();
  if (configSet == null)   return Paths.get(cd.getInstanceDir());
  Path configSetDirectory=configSetBase.resolve(configSet);
  if (!Files.isDirectory(configSetDirectory))   throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"Could not load configuration from directory " + configSetDirectory);
  return configSetDirectory;
}
