{
  addSimpleDoc("A");
  addSimpleDoc("B");
  SolrCore core=h.getCore();
  UpdateHandler updater=core.getUpdateHandler();
  CommitUpdateCommand cmtCmd=new CommitUpdateCommand(false);
  cmtCmd.waitSearcher=true;
  updater.commit(cmtCmd);
  Map<String,String> args=new HashMap<String,String>();
  args.put(CommonParams.Q,"id:A OR id:B");
  args.put("indent","true");
  SolrQueryRequest req=new LocalSolrQueryRequest(core,new MapSolrParams(args));
  assertQ("\"A\" and \"B\" should be found.",req,"//*[@numFound='2']","//result/doc[1]/str[@name='id'][.='A']","//result/doc[2]/str[@name='id'][.='B']");
  deleteSimpleDoc("B");
  assertQ("\"A\" and \"B\" should be found.",req,"//*[@numFound='2']","//result/doc[1]/str[@name='id'][.='A']","//result/doc[2]/str[@name='id'][.='B']");
  updater.commit(cmtCmd);
  assertQ("\"B\" should not be found.",req,"//*[@numFound='1']","//result/doc[1]/str[@name='id'][.='A']");
}
