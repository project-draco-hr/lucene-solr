{
  if (this.fileWriter != null) {
    this.lock.lock();
    try {
      this.fileWriter.flush();
      this.fileWriter.close();
      if (!this.keepRecoverFiles && this.currentRecoverFile != null)       this.currentRecoverFile.delete();
    }
 catch (    IOException e) {
      throw new RecoverException("Can't close recover writer ",e);
    }
 finally {
      this.lock.unlock();
    }
  }
}
