{
  String val=solrProperties.getProperty(path,defVal);
  if (StringUtils.isNotBlank(val)) {
    log.debug(name + ' ' + path+ val);
    return val;
  }
  if (!errIfMissing) {
    log.debug(name + "missing optional " + path);
    return null;
  }
  throw new RuntimeException(name + " missing " + path);
}
