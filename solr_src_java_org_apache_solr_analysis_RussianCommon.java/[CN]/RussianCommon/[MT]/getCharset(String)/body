{
  if (null == name)   return RussianCharsets.UnicodeRussian;
  char[] charset=CHARSETS.get(name);
  if (charset.equals(RussianCharsets.UnicodeRussian))   logger.warn("Specifying UnicodeRussian is no longer required (default).  " + "Use of the charset parameter will cause an error in Solr 1.5");
 else   logger.warn("Support for this custom encoding is deprecated.  " + "Use of the charset parameter will cause an error in Solr 1.5");
  if (null == charset) {
    throw new SolrException(ErrorCode.SERVER_ERROR,"Don't understand charset: " + name);
  }
  return charset;
}
