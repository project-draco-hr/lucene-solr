{
  int blockIndex=pos >> blockBits;
  int upto=pos & blockMask;
  byte[] block=blocks.get(blockIndex);
  int shift=24;
  for (int i=0; i < 4; i++) {
    block[upto++]=(byte)(value >> shift);
    shift-=8;
    if (upto == blockSize) {
      upto=0;
      blockIndex++;
      block=blocks.get(blockIndex);
    }
  }
}
