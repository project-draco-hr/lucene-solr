{
  while (len > 0) {
    int chunk=blockSize - nextWrite;
    if (len <= chunk) {
      System.arraycopy(b,offset,current,nextWrite,len);
      nextWrite+=len;
      break;
    }
 else {
      if (chunk > 0) {
        System.arraycopy(b,offset,current,nextWrite,chunk);
        offset+=chunk;
        len-=chunk;
      }
      current=new byte[blockSize];
      blocks.add(current);
      nextWrite=0;
    }
  }
}
