{
  try {
    for (int i=0; i < 512 * ITERATIONS; i++) {
      searchFor(RANDOM.nextInt(),(searcher == null) ? SEARCHER : searcher);
      if (i % reopenInterval == 0) {
        if (searcher == null) {
          SEARCHER=new IndexSearcher("index");
        }
 else {
          searcher.close();
          searcher=new IndexSearcher("index");
        }
      }
    }
  }
 catch (  Exception e) {
    System.out.println(e.toString());
    e.printStackTrace();
    System.exit(0);
  }
}
