{
  if (e instanceof ConnectException) {
    clientIndex++;
    if (clientIndex > clients.size() - 1) {
      clientIndex=0;
    }
    try {
      suss.shutdownNow();
      suss=new ConcurrentUpdateSolrServer(((HttpSolrServer)clients.get(clientIndex)).getBaseURL(),httpClient,30,3){
        public void handleError(        Throwable ex){
          log.warn("suss error",ex);
        }
      }
;
    }
 catch (    MalformedURLException e1) {
      e1.printStackTrace();
    }
  }
}
