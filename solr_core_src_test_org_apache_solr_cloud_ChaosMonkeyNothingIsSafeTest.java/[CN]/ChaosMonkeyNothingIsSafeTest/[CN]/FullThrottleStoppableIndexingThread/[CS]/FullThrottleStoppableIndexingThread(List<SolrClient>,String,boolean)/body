{
  super(controlClient,cloudClient,id,doDeletes);
  setName("FullThrottleStopableIndexingThread");
  setDaemon(true);
  this.clients=clients;
  cusc=new ConcurrentUpdateSolrClient(((HttpSolrClient)clients.get(0)).getBaseURL(),httpClient,8,2){
    @Override public void handleError(    Throwable ex){
      log.warn("cusc error",ex);
    }
  }
;
  cusc.setConnectionTimeout(10000);
  cusc.setSoTimeout(clientSoTimeout);
}
