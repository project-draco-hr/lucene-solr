{
  if (e instanceof ConnectException) {
    clientIndex++;
    if (clientIndex > clients.size() - 1) {
      clientIndex=0;
    }
    cusc.shutdownNow();
    cusc=new ConcurrentUpdateSolrClient(((HttpSolrClient)clients.get(clientIndex)).getBaseURL(),httpClient,30,3){
      @Override public void handleError(      Throwable ex){
        log.warn("cusc error",ex);
      }
    }
;
  }
}
