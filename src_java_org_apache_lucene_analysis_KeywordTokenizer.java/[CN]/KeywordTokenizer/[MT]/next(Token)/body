{
  if (!done) {
    done=true;
    int upto=0;
    char[] buffer=result.termBuffer();
    while (true) {
      final int length=input.read(buffer,upto,buffer.length - upto);
      if (length == -1)       break;
      upto+=length;
      if (upto == buffer.length)       buffer=result.resizeTermBuffer(1 + buffer.length);
    }
    result.termLength=upto;
    return result;
  }
  return null;
}
