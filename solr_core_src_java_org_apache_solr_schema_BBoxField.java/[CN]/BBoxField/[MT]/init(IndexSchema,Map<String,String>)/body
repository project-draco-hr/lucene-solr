{
  super.init(schema,args);
  String v=args.remove("numberType");
  if (v == null) {
    throw new SolrException(SolrException.ErrorCode.SERVER_ERROR,"The field type: " + typeName + " must specify the numberType attribute.");
  }
  numberTypeName=v;
  v=args.remove("booleanType");
  if (v != null) {
    booleanTypeName=v;
  }
  v=args.remove("storeSubFields");
  if (v != null) {
    storeSubFields=Boolean.valueOf(v);
  }
}
