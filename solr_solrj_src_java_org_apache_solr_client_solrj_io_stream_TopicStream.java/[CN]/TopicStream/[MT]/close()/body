{
  try {
    if (initialRun || runCount > 0) {
      persistCheckpoints();
      initialRun=false;
      runCount=0;
    }
  }
  finally {
    if (solrStreams != null) {
      for (      TupleStream solrStream : solrStreams) {
        solrStream.close();
      }
    }
    if (streamContext.getSolrClientCache() == null) {
      cloudSolrClient.close();
    }
  }
}
