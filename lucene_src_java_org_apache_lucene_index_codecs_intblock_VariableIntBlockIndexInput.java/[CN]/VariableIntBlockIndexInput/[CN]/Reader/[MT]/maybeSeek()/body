{
  if (seekPending) {
    if (pendingFP != lastBlockFP) {
      in.seek(pendingFP);
      blockReader.seek(pendingFP);
      lastBlockFP=pendingFP;
      blockSize=blockReader.readBlock();
    }
    upto=pendingUpto;
    while (upto >= blockSize) {
      upto-=blockSize;
      lastBlockFP=in.getFilePointer();
      blockSize=blockReader.readBlock();
    }
    seekPending=false;
  }
}
