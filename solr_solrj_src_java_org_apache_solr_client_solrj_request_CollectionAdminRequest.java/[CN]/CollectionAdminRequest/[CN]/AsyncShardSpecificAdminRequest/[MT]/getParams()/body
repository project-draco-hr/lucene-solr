{
  ModifiableSolrParams params=new ModifiableSolrParams(super.getParams());
  if (collection == null)   throw new IllegalArgumentException("You must call setCollectionName() on this request");
  if (shard == null)   throw new IllegalArgumentException("You must call setShardName() on this request");
  params.set(CoreAdminParams.COLLECTION,collection);
  params.set(CoreAdminParams.SHARD,shard);
  return params;
}
