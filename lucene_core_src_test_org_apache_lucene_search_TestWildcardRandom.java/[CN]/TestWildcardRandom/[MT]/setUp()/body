{
  super.setUp();
  dir=newDirectory();
  RandomIndexWriter writer=new RandomIndexWriter(random(),dir,newIndexWriterConfig(new MockAnalyzer(random())).setMaxBufferedDocs(TestUtil.nextInt(random(),50,1000)));
  Document doc=new Document();
  Field field=newStringField("field","",Field.Store.NO);
  doc.add(field);
  NumberFormat df=new DecimalFormat("000",new DecimalFormatSymbols(Locale.ROOT));
  for (int i=0; i < 1000; i++) {
    field.setStringValue(df.format(i));
    writer.addDocument(doc);
  }
  reader=writer.getReader();
  searcher=newSearcher(reader);
  writer.shutdown();
  if (VERBOSE) {
    System.out.println("TEST: setUp searcher=" + searcher);
  }
}
