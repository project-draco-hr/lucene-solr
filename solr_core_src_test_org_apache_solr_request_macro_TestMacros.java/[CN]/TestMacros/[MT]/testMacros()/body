{
  assertU(add(doc("id","1","val_s","aaa","val_i","123")));
  assertU(add(doc("id","2","val_s","bbb","val_i","456")));
  assertU(commit());
  assertJQ(req("fl","id","q","id:${id}","id","1"),"/response/docs==[{'id':'1'}]");
  assertJQ(req("fl","id","q","${idquery}","idquery","id:1"),"/response/docs==[{'id':'1'}]");
  assertJQ(req("fl","id","q","${fname}:${fval}","fname","id","fval","2"),"/response/docs==[{'id':'2'}]");
  assertJQ(req("fl","id","q","{!term f=$fieldparam v=$valueparam}","field${p}","val_s","value${p}","aaa","p","param","echoParams","ALL"),"/response/docs==[{'id':'1'}]");
  assertJQ(req("fl","id","q","id:\"${id}\"","id","1","expandMacros","false"),"/response/docs==[]");
  assertJQ(req("fl","id","q","${idquery}","idquery","${a}${b}","a","val${fieldpostfix}:","b","${fieldval}","fieldpostfix","_s","fieldval","bbb"),"/response/docs==[{'id':'2'}]");
  assertJQ(req("fl","id","q","val_s:${val:aaa}"),"/response/docs==[{'id':'1'}]");
  assertJQ(req("fl","id","q","val_s:${val:aaa}","val","bbb"),"/response/docs==[{'id':'2'}]");
  assertJQ(req("fl","id","q","val_s:${missing:}aaa"),"/response/docs==[{'id':'1'}]");
  assertJQ(req("fl","id","q","val_s:${missing}aaa"),"/response/docs==[{'id':'1'}]");
}
