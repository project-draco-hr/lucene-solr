{
  QueryParsing.SortSpec sort=super.getSort(useGlobal);
  if (sortStr != null && sortStr.length() > 0 && sort.getSort() == null) {
    QueryParsing.SortSpec oldSort=QueryParsing.parseSort(sortStr,getReq().getSchema());
    if (oldSort != null) {
      sort.sort=oldSort.sort;
    }
  }
  return sort;
}
