{
  base=b;
  reader=r;
  termEnum=te;
  term=te.term();
  postings=reader.termPositions();
  if (reader.hasDeletions()) {
    int maxDoc=reader.maxDoc();
    docMap=new int[maxDoc];
    int j=0;
    for (int i=0; i < maxDoc; i++) {
      if (reader.isDeleted(i))       docMap[i]=-1;
 else       docMap[i]=j++;
    }
  }
}
