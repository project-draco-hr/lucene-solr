{
  if (dir == null || !dir.exists())   return false;
  File contents[]=dir.listFiles();
  if (contents != null) {
    for (    File file : contents) {
      if (file.isDirectory()) {
        boolean success=delTree(file);
        if (!success)         return false;
      }
 else {
        boolean success=file.delete();
        if (!success)         return false;
      }
    }
  }
  return dir.delete();
}
