{
  return new Query(){
    @Override public String toString(    String fn){
      return getClass().toString() + " " + fieldName+ " ("+ fn+ "?)";
    }
    @Override public Query rewrite(    IndexReader reader) throws IOException {
      final List<Query> luceneSubQueries=new ArrayList<Query>();
      visitMatchingTerms(reader,fieldName,new MatchingTermVisitor(){
        public void visitMatchingTerm(        Term term) throws IOException {
          luceneSubQueries.add(qf.newTermQuery(term));
        }
      }
);
      return (luceneSubQueries.size() == 0) ? SrndQuery.theEmptyLcnQuery : (luceneSubQueries.size() == 1) ? luceneSubQueries.get(0) : SrndBooleanQuery.makeBooleanQuery(luceneSubQueries,BooleanClause.Occur.SHOULD);
    }
  }
;
}
