{
  DirectoryIndexReader newReader;
  if (infos.size() == 1) {
    SegmentInfo si=infos.info(0);
    if (segment.equals(si.name) && si.getUseCompoundFile() == SegmentReader.this.si.getUseCompoundFile()) {
      newReader=reopenSegment(si);
    }
 else {
      newReader=SegmentReader.get(readOnly,infos,infos.info(0),false);
    }
  }
 else {
    if (readOnly)     return new ReadOnlyMultiSegmentReader(directory,infos,closeDirectory,new SegmentReader[]{this},null,null);
 else     return new MultiSegmentReader(directory,infos,closeDirectory,new SegmentReader[]{this},null,null,false);
  }
  return newReader;
}
