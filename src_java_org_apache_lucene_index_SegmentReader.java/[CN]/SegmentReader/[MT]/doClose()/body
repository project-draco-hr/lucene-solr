{
  boolean hasReferencedReader=(referencedSegmentReader != null);
  termVectorsLocal.close();
  fieldsReaderLocal.close();
  if (hasReferencedReader) {
    referencedSegmentReader.decRefReaderNotNorms();
    referencedSegmentReader=null;
  }
  deletedDocs=null;
  if (singleNormStream != null) {
    singleNormStream.close();
    singleNormStream=null;
  }
  if (!hasReferencedReader) {
    if (tis != null) {
      tis.close();
    }
    if (freqStream != null)     freqStream.close();
    if (proxStream != null)     proxStream.close();
    if (termVectorsReaderOrig != null)     termVectorsReaderOrig.close();
    if (fieldsReaderOrig != null)     fieldsReaderOrig.close();
    if (cfsReader != null)     cfsReader.close();
    if (storeCFSReader != null)     storeCFSReader.close();
  }
  super.doClose();
}
