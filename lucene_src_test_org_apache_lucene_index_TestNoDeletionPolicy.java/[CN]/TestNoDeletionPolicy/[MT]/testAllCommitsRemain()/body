{
  Directory dir=newDirectory();
  IndexWriter writer=new IndexWriter(dir,newIndexWriterConfig(TEST_VERSION_CURRENT,new MockAnalyzer()).setIndexDeletionPolicy(NoDeletionPolicy.INSTANCE));
  for (int i=0; i < 10; i++) {
    Document doc=new Document();
    doc.add(new Field("c","a" + i,Store.YES,Index.ANALYZED));
    writer.addDocument(doc);
    writer.commit();
    assertEquals("wrong number of commits !",i + 1,IndexReader.listCommits(dir).size());
  }
  writer.close();
  dir.close();
}
