{
  this.isDestroyed.set(true);
  if (!this.indexTask.isStopped())   this.indexTask.stop();
  this.futurQueue.add(new FinishingFuture());
  this.indexTaskExecutor.shutdown();
  closeWriter();
  closeSearcher();
  if (LOG.isInfoEnabled())   LOG.info("Destroying GdataIndexer for service -- " + this.serviceConfiguration.getName());
}
