{
  try {
    if (infoStream != null) {
      message("docWriter: now abort");
    }
    try {
      consumer.abort();
    }
 catch (    Throwable t) {
    }
    docStoreSegment=null;
    numDocsInStore=0;
    docStoreOffset=0;
    doAfterFlush();
  }
  finally {
    aborting=false;
    if (infoStream != null) {
      message("docWriter: done abort");
    }
  }
}
