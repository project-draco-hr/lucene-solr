{
  this.writeLock.lock();
  try {
    if (this.isClosed.get())     throw new IllegalStateException("Lock has been closed");
    this.isClosed.set(true);
    this.locks.clear();
    this.threads.clear();
    INSTANCE=new SingleHostConcurrentStorageLock();
  }
  finally {
    this.writeLock.unlock();
  }
}
