{
  try {
    zkClient.makePath(leaderPath,leaderProps == null ? null : ZkStateReader.toJSON(leaderProps),CreateMode.EPHEMERAL,true);
  }
 catch (  NodeExistsException e) {
    zkClient.delete(leaderPath,-1,true);
    zkClient.makePath(leaderPath,leaderProps == null ? null : ZkStateReader.toJSON(leaderProps),CreateMode.EPHEMERAL,true);
  }
  ZkNodeProps m=new ZkNodeProps(Overseer.QUEUE_OPERATION,"leader",ZkStateReader.SHARD_ID_PROP,shardId,ZkStateReader.COLLECTION_PROP,collection,ZkStateReader.BASE_URL_PROP,leaderProps.getProperties().get(ZkStateReader.BASE_URL_PROP),ZkStateReader.CORE_NAME_PROP,leaderProps.getProperties().get(ZkStateReader.CORE_NAME_PROP));
  Overseer.getInQueue(zkClient).offer(ZkStateReader.toJSON(m));
}
