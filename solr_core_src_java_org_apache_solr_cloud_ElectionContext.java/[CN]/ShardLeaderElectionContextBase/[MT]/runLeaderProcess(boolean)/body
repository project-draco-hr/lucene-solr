{
  zkClient.makePath(leaderPath,ZkStateReader.toJSON(leaderProps),CreateMode.EPHEMERAL,true);
  ZkNodeProps m=ZkNodeProps.fromKeyVals(Overseer.QUEUE_OPERATION,"leader",ZkStateReader.SHARD_ID_PROP,shardId,ZkStateReader.COLLECTION_PROP,collection,ZkStateReader.BASE_URL_PROP,leaderProps.getProperties().get(ZkStateReader.BASE_URL_PROP),ZkStateReader.CORE_NAME_PROP,leaderProps.getProperties().get(ZkStateReader.CORE_NAME_PROP),ZkStateReader.STATE_PROP,ZkStateReader.ACTIVE);
  Overseer.getInQueue(zkClient).offer(ZkStateReader.toJSON(m));
}
