{
  ClusterState clusterState=zkController.getZkStateReader().getClusterState();
  Map<String,Slice> slices=clusterState.getSlices(collection);
  Slice slice=slices.get(shardId);
  Map<String,Replica> replicasMap=slice.getReplicasMap();
  for (  Map.Entry<String,Replica> shard : replicasMap.entrySet()) {
    String state=shard.getValue().getStr(ZkStateReader.STATE_PROP);
    if (state.equals(ZkStateReader.ACTIVE) && clusterState.liveNodesContain(shard.getValue().getStr(ZkStateReader.NODE_NAME_PROP)) && !new ZkCoreNodeProps(shard.getValue()).getCoreUrl().equals(new ZkCoreNodeProps(leaderProps).getCoreUrl())) {
      return true;
    }
  }
  return false;
}
