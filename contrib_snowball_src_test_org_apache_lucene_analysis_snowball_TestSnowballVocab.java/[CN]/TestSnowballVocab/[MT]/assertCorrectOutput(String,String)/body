{
  System.err.println("checking snowball language: " + snowballLanguage);
  TokenStream filter=new SnowballFilter(tokenizer,snowballLanguage);
  InputStream vocFile=new FileInputStream(new File(dataRoot,dataDirectory + "/voc.txt"));
  InputStream outputFile=new FileInputStream(new File(dataRoot,dataDirectory + "/output.txt"));
  BufferedReader vocReader=new BufferedReader(new InputStreamReader(vocFile,"UTF-8"));
  BufferedReader outputReader=new BufferedReader(new InputStreamReader(outputFile,"UTF-8"));
  String inputWord=null;
  while ((inputWord=vocReader.readLine()) != null) {
    String expectedWord=outputReader.readLine();
    assertNotNull(expectedWord);
    tokenizer.reset(new StringReader(inputWord));
    filter.reset();
    assertTokenStreamContents(filter,new String[]{expectedWord});
  }
  vocReader.close();
  outputReader.close();
}
