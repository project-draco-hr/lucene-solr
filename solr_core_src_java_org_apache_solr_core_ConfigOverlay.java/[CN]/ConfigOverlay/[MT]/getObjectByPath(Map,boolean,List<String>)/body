{
  Map obj=root;
  for (int i=0; i < hierarchy.size(); i++) {
    String s=hierarchy.get(i);
    if (i < hierarchy.size() - 1) {
      obj=(Map)obj.get(s);
      if (obj == null)       return null;
    }
 else {
      Object val=obj.get(s);
      if (onlyPrimitive && val instanceof Map) {
        return null;
      }
      return val;
    }
  }
  return false;
}
