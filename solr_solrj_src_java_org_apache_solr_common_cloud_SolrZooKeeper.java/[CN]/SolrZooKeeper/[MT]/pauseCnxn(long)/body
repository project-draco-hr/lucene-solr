{
  final Thread t=new Thread(){
    public void run(){
      try {
synchronized (cnxn) {
          try {
            getSendThreadChannel().close();
          }
 catch (          Exception e) {
            throw new RuntimeException("Closing Zookeeper send channel failed.",e);
          }
          Thread.sleep(ms);
        }
      }
 catch (      InterruptedException e) {
      }
 finally {
        spawnedThreads.remove(this);
      }
    }
  }
;
  spawnedThreads.add(t);
  t.start();
}
