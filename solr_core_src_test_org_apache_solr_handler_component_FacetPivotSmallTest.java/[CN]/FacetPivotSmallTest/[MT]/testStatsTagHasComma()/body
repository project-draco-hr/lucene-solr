{
  if (random().nextBoolean()) {
    index();
  }
  assertQEx("Can't use multiple tags in stats local param until SOLR-6663 is decided",req("q","*:*","facet","true","stats","true","stats.field","{!tag=foo}price_ti","stats.field","{!tag=bar}id","facet.pivot","{!stats=foo,bar}place_t,company_t"),400);
