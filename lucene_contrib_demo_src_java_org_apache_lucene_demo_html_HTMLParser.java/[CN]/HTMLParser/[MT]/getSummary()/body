{
  if (pipeIn == null)   getReader();
  while (true) {
synchronized (this) {
      if (summary.length() >= SUMMARY_LENGTH || pipeInStream.full())       break;
      wait(10);
    }
  }
  if (summary.length() > SUMMARY_LENGTH)   summary.setLength(SUMMARY_LENGTH);
  String sum=summary.toString().trim();
  String tit=getTitle();
  if (sum.equals(""))   return tit;
 else   return sum;
}
