{
  Norms instance=instances.get(field.name);
  if (instance == null) {
    instance=loadNorms(norms.get(field.name));
    if (!merging) {
      instances.put(field.name,instance);
      activeCount.incrementAndGet();
      ramBytesUsed.addAndGet(instance.ramBytesUsed());
    }
  }
  return instance;
}
