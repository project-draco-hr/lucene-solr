{
  IndexWriter indexWriter=new IndexWriter(indexName,new IndexWriterConfig(Version.LUCENE_CURRENT).setAnalyzer(createAnalyzer()).setOpenMode(OpenMode.APPEND));
  message("Starting to optimize index.");
  long start=System.currentTimeMillis();
  indexWriter.optimize();
  message("Done optimizing index. Took " + (System.currentTimeMillis() - start) + " msecs");
  indexWriter.close();
}
