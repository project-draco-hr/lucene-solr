{
  System.setProperty("enable.update.log",useUpdateLog ? "true" : "false");
  initCore("solrconfig.xml","schema.xml",TEST_HOME());
  assertEquals("UpdateLog existence doesn't match sys prop (test config changed?)",useUpdateLog,null != h.getCore().getUpdateHandler().getUpdateLog());
  h.reload();
  assertU("<delete><query>*:*</query></delete>");
}
