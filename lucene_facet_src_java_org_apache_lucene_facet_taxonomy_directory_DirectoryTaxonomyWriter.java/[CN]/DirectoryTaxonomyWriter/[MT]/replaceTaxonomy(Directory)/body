{
  indexWriter.deleteAll();
  indexWriter.addIndexes(taxoDir);
  shouldRefreshReaderManager=true;
  initReaderManager();
  refreshReaderManager();
  nextID=indexWriter.maxDoc();
  taxoArrays=null;
  cache.clear();
  cacheIsComplete=false;
  shouldFillCache=true;
  cacheMisses.set(0);
  ++indexEpoch;
}
